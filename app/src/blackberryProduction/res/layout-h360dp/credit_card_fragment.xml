<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:src="@color/black"
            android:id="@+id/credit_card_top"
            android:layout_alignParentTop="true"
            tools:ignore="ContentDescription" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/credit_card_top"
            android:fillViewport="true"
            android:layout_above="@+id/credit_card_transaction_action">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_above="@+id/store_card_bottom_bar">


                    <za.co.woolworths.financial.services.android.ui.views.WBalanceView
                        android:padding="8dp"
                        android:id="@+id/credit_card_balance"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        app:SpentFullColor="@color/black"
                        app:SpentEmptyColor="@color/credit_card"
                        app:OuterCircleColor="@color/gray_circle"
                        app:Font="fonts/WFutura-Medium.ttf"
                        app:LabelTextSize="@dimen/text_micro"
                        app:AmountTextSize="@dimen/text_large" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3">
                </FrameLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/store_card_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/light_gray"
                    android:gravity="bottom"
                    android:layout_above="@+id/credit_card_transaction_action"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="16dp"
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:src="@color/gray_circle"
                                tools:ignore="ContentDescription" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_marginLeft="8dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    android:textSize="@dimen/text_micro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/credit_limit" />

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    android:textSize="@dimen/text_large"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/credit_card_limit" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="@dimen/accounts_divider_width"
                            android:layout_height="match_parent"
                            android:src="@color/white"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="16dp"
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:src="@color/credit_card"
                                tools:ignore="ContentDescription" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_marginLeft="8dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    android:textSize="@dimen/text_micro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/available_funds" />

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    android:textSize="@dimen/text_large"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/credit_card_available_funds" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/accounts_divider_width"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@color/white"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="28dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:textSize="@dimen/text_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/next_payment_date" />

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:textSize="@dimen/text_large"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/credit_card_payment_date" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/accounts_divider_width"
                            android:layout_marginBottom="4dp"
                            android:layout_height="match_parent"
                            android:src="@color/white"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="28dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:textSize="@dimen/text_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/minimum_payment" />

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:textSize="@dimen/text_large"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/credit_card_minimum_payment" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/credit_card_transaction_action"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            android:background="@drawable/credit_card_selector"
            android:text="@string/last_transactions" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/credit_card_loading">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:src="@color/black"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>