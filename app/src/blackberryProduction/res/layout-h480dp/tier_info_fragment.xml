<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tier_info_hack"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:src="@color/black"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/tier_info_vip"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/tier_info_hack"
            android:background="@drawable/terms_selector"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/login_font_color"
                    app:WTextView_font="medium_bold"
                    app:WTextView_spannable_text="@string/get_vip_status" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_caret" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/rewards" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tier_info_bottom_bar"
            android:layout_below="@+id/tier_info_vip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="@string/current_status" />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tier_info_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:WTextView_font="medium_bold"
                            tools:text="Loyal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tier_info_image"
                        android:layout_width="300dp"
                        android:layout_height="70dp"
                        tools:background="@drawable/tier1">

                        <ImageView
                            android:id="@+id/tier_info_tier_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tier1_selector"
                            android:clickable="true" />

                        <ImageView
                            android:id="@+id/tier_info_tier_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tier2_selector"
                            android:clickable="true" />

                        <ImageView
                            android:id="@+id/tier_info_tier_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/tier3_selector"
                            android:clickable="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/tier_info_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginLeft="@dimen/grey_block_margin"
                android:layout_marginRight="@dimen/grey_block_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tier_info_saved_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/saved"
                        android:textSize="@dimen/text_micro"
                        app:WTextView_font="medium" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tier_info_saved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        tools:text="R100.00" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tier_info_since"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_micro"
                        tools:text="SINCE 30/06/2014" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/tier_info_non_vip_divider"
                    android:layout_width="@dimen/accounts_divider_width"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:src="@color/white"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/tier_info_non_vip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/grey_block_margin"
                    tools:visibility="visible">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spend"
                        android:textSize="@dimen/text_micro"
                        app:WTextView_font="medium" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/credit_card_minimum_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tier_info_next_tier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/get_vip"
                        android:textSize="@dimen/text_micro" />
                </LinearLayout>
            </LinearLayout>

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/tier_info_bottom_bar_action"
                style="@style/Button.Rewards"
                app:WButton_spannable_text="@string/rewards_saving" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tier_info_no_statements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:src="@color/black"
            tools:ignore="ContentDescription" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="NO TIER HISTORY TO DISPLAY"
            android:textColor="@color/login_font_color"
            android:textSize="16sp"
            app:WTextView_font="medium" />
    </LinearLayout>
</FrameLayout>