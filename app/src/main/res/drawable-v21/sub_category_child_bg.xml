<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/bg_light_overlay">

    <!-- Use this to define the shape of the ripple effect (rectangle, oval, ring or line). The color specified here isn't used anyway -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <!-- This color is needed to be set - doesn't affect anything -->
            <solid android:color="#000"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="360"
                android:centerColor="@color/expandable_gradient_color"
                android:centerY="0.2"
                android:endColor="@color/expandable_gradient_color"
                android:startColor="@color/expandable_gradient_color"
                android:type="linear"
                />
        </shape>
    </item>
</ripple>
