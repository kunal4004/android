<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_preferences_nav_host.xml"
    app:startDestination="@id/myPreferencesFragment">

    <include app:graph="@navigation/graph_link_device_otp" />

    <fragment
        android:id="@+id/myPreferencesFragment"
        android:name="za.co.woolworths.financial.services.android.ui.fragments.mypreferences.MyPreferencesFragment"
        android:label="fragment_my_preferences"
        tools:layout="@layout/fragment_my_preferences" >
        <action
            android:id="@+id/action_myPreferencesFragment_to_unlinkDeviceBottomSheetFragment"
            app:destination="@id/unlinkDeviceBottomSheetFragment" />

        <action
            android:id="@+id/action_myPreferencesFragment_to_navigation"
            app:destination="@id/graph_otp_navigation" />
        <action
            android:id="@+id/action_myPreferencesFragment_to_viewAllLinkedDevicesFragment"
            app:destination="@id/viewAllLinkedDevicesFragment" />
    </fragment>

    <dialog
        android:id="@+id/unlinkDeviceBottomSheetFragment"
        android:name="za.co.woolworths.financial.services.android.ui.fragments.mypreferences.UnlinkDeviceBottomSheetFragment"
        android:label="UnlinkDeviceBottomSheetFragment" />
    <fragment
        android:id="@+id/viewAllLinkedDevicesFragment"
        android:name="za.co.woolworths.financial.services.android.ui.fragments.mypreferences.ViewAllLinkedDevicesFragment"
        android:label="fragment_view_all_linked_devices"
        tools:layout="@layout/fragment_view_all_linked_devices" >
        <action
            android:id="@+id/action_viewAllLinkedDevicesFragment_to_unlinkDeviceBottomSheetFragment"
            app:destination="@id/unlinkDeviceBottomSheetFragment" />
    </fragment>
</navigation>