<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oc_chat_nav_graph"
    app:startDestination="@id/initializerFragment">

    <fragment
        android:id="@+id/initializerFragment"
        android:name="za.co.woolworths.financial.services.android.onecartgetstream.InitializerFragment"
        android:label="fragment_get_stream_initializer"
        tools:layout="@layout/fragment_get_stream_initializer" >
        <action
            android:id="@+id/action_initializerFragment_to_channelListFragment"
            app:destination="@id/channelListFragment"/>
    </fragment>

    <fragment
        android:id="@+id/channelListFragment"
        android:name="za.co.woolworths.financial.services.android.onecartgetstream.channel.ChannelListFragment"
        android:label="ChannelListFragment" >
        <action
            android:id="@+id/action_channelListFragment_to_chatFragment"
            app:destination="@id/chatFragment"

            app:popUpTo="@id/initializerFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="za.co.woolworths.financial.services.android.onecartgetstream.chat.ChatFragment"
        android:label="ChatFragment">
    </fragment>
</navigation>