<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/content_below_toolbar_height">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />


    <TextView
        android:id="@+id/gotItButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty_two_dp"
        android:background="@color/black"
        android:contentDescription="@string/button_thanks_for_letting_us_know"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:stateListAnimator="@null"
        android:text="@string/cli_got_it"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        CircleProgressView:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomView"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_64sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        CircleProgressView:layout_constraintGuide_percent="0.25" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/circularProgress"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="@dimen/_67sdp"
        android:layout_height="@dimen/_67sdp"
        CircleProgressView:layout_constraintStart_toStartOf="@+id/start_guideline"
        app:layout_constraintBottom_toTopOf="@+id/centerGuide"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:navGraph="@navigation/nav_circular_progress" />

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:contentDescription="@string/title_text_thanks_for_letting_us_know"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center"
        android:letterSpacing="0.07"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/vtsc_card_not_arrived_notified_title"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        app:layout_constraintTop_toTopOf="@+id/centerGuide"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/opensans_regular_14_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:contentDescription="@string/copy_text_thanks_for_letting_us_know"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_4sdp"
        android:text="@string/vtsc_card_not_arrived_notified_desc"
        android:textColor="@color/description_color"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/headerTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>