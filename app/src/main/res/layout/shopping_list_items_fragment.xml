<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relEmptyStateHandler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvShoppingListItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/incConfirmButtonLayout"
            android:animateLayoutChanges="false" />

        <LinearLayout
            android:id="@+id/rlEmptyListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/incConfirmButtonLayout"
            android:layout_below="@+id/headerLayout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rlShoppingListSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clickable="false"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/imProductSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignBottom="@+id/textProductSearch"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="18dp"
                        android:clickable="false"
                        android:src="@drawable/ic_search" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/textProductSearch"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="start|center"
                        android:hint="@string/shopping_search_hint"
                        android:inputType="textNoSuggestions"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/fifty_dp"
                        android:paddingRight="@dimen/default_margin"
                        android:textColor="@color/black"
                        android:textColorHint="@color/product_search_hint"
                        android:textSize="16sp"
                        app:WTextView_font="myriadpro_regular" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relEmptyView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/recent_search_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgEmpyStateIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:alpha="0.4" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/txtEmptyStateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgEmpyStateIcon"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/bank_spacing_width"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2sp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:WTextView_font="medium_bold" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/txtEmptyStateDesc"
                    style="@style/TableLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtEmptyStateTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:gravity="center"
                    android:textColor="@color/semi_transparent_black"
                    app:WTextView_font="myriadpro_regular" />


                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/btnGoToProduct"
                    style="@style/whiteButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtEmptyStateDesc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/fourty_five_dp"
                    android:layout_marginEnd="@dimen/fourty_five_dp"
                    android:layout_marginBottom="18dp"
                    android:clickable="true"
                    android:letterSpacing="0.15"
                    android:paddingStart="@dimen/thirty_two_dp"
                    android:paddingEnd="@dimen/thirty_two_dp"
                    android:text="@string/go_to_products"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:WButton_font="medium_bold" />


            </RelativeLayout>

        </LinearLayout>

        <include
            layout="@layout/no_connection_handler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/incConfirmButtonLayout"
            android:layout_below="@+id/headerLayout" />

    </LinearLayout>

    <include
        android:id="@+id/incConfirmButtonLayout"
        layout="@layout/confirm_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone" />
</RelativeLayout>