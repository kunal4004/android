<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="handler"
            type="za.co.woolworths.financial.services.android.ui.fragments.shoppinglist.listitems.ShoppingListItemsFragment"/>
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/default_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlShoppingListSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imProductSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/textProductSearch"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="18dp"
                android:src="@drawable/ic_search"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textProductSearch"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:hint="@string/shopping_search_hint"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/default_margin"
                android:textColor="@color/black"
                android:textColorHint="@color/product_search_hint"
                android:textSize="16sp"
                app:WTextView_font="myriadpro_regular"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvShoppingListItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlShoppingListSearch"
            android:layout_above="@+id/addToCartLayout"
            />
        <RelativeLayout
            android:id="@+id/addToCartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center">

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/btnAddToCart"
                style="@style/blackButtonStyle"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:letterSpacing="0.2"
                android:text="@string/add_to_cart"
                android:visibility="gone"
                app:WButton_font="medium_bold"
                />

        </RelativeLayout>
    </RelativeLayout>
</layout>