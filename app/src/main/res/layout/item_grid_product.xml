<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:id="@+id/root_view"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/card_shadow"
             android:orientation="vertical">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_image_height"
            android:gravity="center">

            <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
                android:id="@+id/imProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                fresco:fadeDuration="50"
                fresco:placeholderImage="@drawable/woolworth_logo_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="16dp"
            android:background="@color/horizontal_line"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:ellipsize="end"
            android:gravity="top|start"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="1.6dp"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="@color/black_desc_opacity_light"
            android:textSize="14sp"
            app:WTextView_font="medium"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvSaveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:ellipsize="end"
            android:letterSpacing="0.08"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/promo_text_color"
            android:textSize="12sp"
            app:WTextView_font="medium"
            />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/linPriceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="bottom|start"
                android:letterSpacing="0.03"
                android:paddingRight="1dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium_bold"
                app:layout_alignSelf="flex_start"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textWasPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textAmount"
                android:gravity="bottom|start"
                android:letterSpacing="0.03"
                android:textColor="@color/red"
                android:textSize="14sp"
                app:WTextView_font="medium_bold"
                app:layout_alignSelf="flex_end"/>
        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
                android:id="@+id/imNewImage"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.0"/>

            <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
                android:id="@+id/imSave"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.0"/>

            <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
                android:id="@+id/imReward"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.0"/>

            <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
                android:id="@+id/imVitality"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.0"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>