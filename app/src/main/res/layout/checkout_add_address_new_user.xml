<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/whereWeDeliveringTitle"
                style="@style/futura_semi_bold_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/two_dp"
                android:paddingBottom="@dimen/two_dp"
                android:text="@string/where_are_we_delivering"
                android:textSize="@dimen/twenty_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/whereWeDeliveringTitle">

                <LinearLayout
                    android:id="@+id/delivering_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/twenty_dp"
                    android:paddingEnd="@dimen/twelve_dp" />
            </HorizontalScrollView>

            <View
                android:id="@+id/deliveringPartition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/six_dp"
                android:layout_marginTop="@dimen/six_dp"
                android:background="@color/color_D8D8D8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView" />

            <include
                android:id="@+id/recipientAddressLayout"
                layout="@layout/checkout_new_user_address_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/recipientDetailsLayout"
                app:layout_constraintTop_toBottomOf="@+id/deliveringPartition" />

            <View
                android:id="@+id/addressDetailsPartition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/six_dp"
                android:layout_marginTop="@dimen/six_dp"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@+id/recipientAddressLayout" />

            <include
                android:id="@+id/recipientDetailsLayout"
                layout="@layout/checkout_new_user_recipient_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addressDetailsPartition" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>