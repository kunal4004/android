<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/newUserNestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:src="@drawable/back24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/left_guideline" />
            <TextView
                android:id="@+id/whereWeDeliveringTitle"
                style="@style/futura_semi_bold_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/two_dp"
                android:paddingBottom="@dimen/two_dp"
                android:layout_marginTop="@dimen/nineteen_dp"
                android:text="@string/where_are_we_delivering"
                android:textSize="@dimen/text_size_18sp"
                android:lineSpacingExtra="@dimen/seven_sp"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/backButton"/>

            <TextView
                android:id="@+id/streetAddressPlaceHolder"
                style="@style/add_address_screen_placeholders_style"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:text="@string/street_address_lbl"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/whereWeDeliveringTitle" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                style="@style/add_address_auto_complete_edittext_style"
                android:layout_marginTop="@dimen/four_dp"
                android:drawablePadding="@dimen/eight_dp"
                android:hint="@string/places_autocomplete_tv_hint"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/streetAddressPlaceHolder" />

            <TextView
                android:id="@+id/autocompletePlaceErrorMsg"
                style="@style/add_address_screen_error_msg_style"
                android:text="@string/places_address_error_msg"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/autoCompleteTextView" />

            <TextView
                android:id="@+id/suburbPlaceHolder"
                style="@style/add_address_screen_placeholders_style"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@color/white"
                android:contentDescription="@string/cd_ccd_labelsuburb"
                android:text="@string/suburb_colon_text_view"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/autocompletePlaceErrorMsg" />

            <EditText
                android:id="@+id/suburbEditText"
                style="@style/checkout_edittext_style"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/input_box_inactive_bg"
                android:enabled="false"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@id/suburbPlaceHolder" />

            <TextView
                android:id="@+id/provincePlaceHolder"
                style="@style/add_address_screen_placeholders_style"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@color/white"
                android:contentDescription="@string/cd_ccd_labelprovince"
                android:text="@string/province_colon_text_view"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/suburbEditText" />

            <EditText
                android:id="@+id/provinceAutocompleteEditText"
                style="@style/checkout_edittext_style"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/input_box_inactive_bg"
                android:enabled="false"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@id/provincePlaceHolder" />


            <TextView
                android:id="@+id/postalCodePlaceHolder"
                style="@style/add_address_screen_placeholders_style"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@color/white"
                android:contentDescription="@string/cd_ccd_labelpostalcode"
                android:text="@string/postal_code_colon_text_view"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/provinceAutocompleteEditText" />


            <EditText
                android:id="@+id/postalCode"
                style="@style/checkout_edittext_style"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/input_box_inactive_bg"
                android:contentDescription="@string/cd_ccd_txtpostalcode"
                android:enabled="false"
                android:imeOptions="actionDone"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/postalCodePlaceHolder" />


            <include
                android:id="@+id/recipientAddressLayout"
                layout="@layout/checkout_new_user_address_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postalCode" />

            <View
                android:id="@+id/addressDetailsPartition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eight_dp"
                android:layout_marginTop="@dimen/six_dp"
                android:background="@color/color_F3F3F3"
                app:layout_constraintTop_toBottomOf="@+id/recipientAddressLayout" />

            <include
                android:id="@+id/recipientDetailsLayout"
                layout="@layout/checkout_new_user_recipient_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/recipientDetailsPartition"
                app:layout_constraintTop_toBottomOf="@+id/addressDetailsPartition" />

            <View
                android:id="@+id/recipientDetailsPartition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eight_dp"
                android:layout_marginTop="@dimen/six_dp"
                android:background="@color/color_F3F3F3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipientDetailsLayout" />

            <Button
                android:id="@+id/saveAddress"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@drawable/order_add_to_cart_button_bg"
                android:fontFamily="@font/futura_semi_bold"
                android:letterSpacing="0.13"
                android:text="@string/save_address"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintBottom_toTopOf="@+id/deleteTextView"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/recipientDetailsPartition" />

            <TextView
                android:id="@+id/deleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/twenty_six_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:layout_marginEnd="@dimen/twenty_six_dp"
                android:fontFamily="@font/futura_medium"
                android:gravity="center"
                android:letterSpacing="@integer/point_one"
                android:paddingTop="@dimen/two_dp"
                android:paddingBottom="@dimen/two_dp"
                android:text="@string/delete_address"
                android:textAllCaps="true"
                android:textColor="@color/text_description_color"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/saveAddress" />

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/twenty_four_dp"
                android:layout_height="@dimen/twenty_four_dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:indeterminateTint="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/twenty_dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>