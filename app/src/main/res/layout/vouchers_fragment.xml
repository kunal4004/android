<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:src="@color/black"
        tools:ignore="ContentDescription" />


    <ListView
        android:id="@+id/w_rewards_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/light_gray"
        android:dividerHeight="1dp" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/voucher_fragment_empty_list"
        android:gravity="center"
        app:WTextView_font="medium"
        android:textColor="@color/login_font_color"
        android:textSize="16sp"
        android:visibility="gone"
        android:text="@string/loyalty_list_empty_string"/>

</LinearLayout>
