<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/delivery_location_layout"/>

                <TextView
                    android:id="@+id/upSellMessageTextView"
                    style="@style/upSellMessageStyle"
                    android:text="upSellMessage"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cartList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="134dp"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    android:visibility="visible"/>

                <include
                    layout="@layout/empty_state_template"/>

                <include
                    layout="@layout/no_connection_handler"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/rlCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/twenty_four_dp"
            android:paddingRight="@dimen/twenty_four_dp"
            android:paddingBottom="@dimen/twenty_four_dp">

            <RelativeLayout
                android:id="@+id/orderTotalLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_dp">

                <TextView
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:letterSpacing="0.1"
                    android:text="ORDER TOTAL"
                    android:textAllCaps="true" />

                <TextView
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:letterSpacing="0.1"
                    android:text=" R 872.96"
                    android:textAllCaps="true"
                    android:textColor="@color/offer_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/outside_border" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/white"
                android:gravity="center">

                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/btnCheckOut"
                    style="@style/blackButtonStyle"
                    android:layout_weight="1"
                    android:background="@drawable/black_button_drawable_state"
                    android:letterSpacing="0.2"
                    android:text="@string/checkout"
                    android:visibility="visible"
                    app:WButton_font="medium_bold" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"/>

    <include layout="@layout/no_connection_handler"/>
</FrameLayout>