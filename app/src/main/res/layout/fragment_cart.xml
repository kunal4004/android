<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cartToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            app:popupTheme="@style/Cart"
            app:theme="@style/Cart">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/btnEditCart"
                    style="@style/futura_semi_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    android:textColor="@color/black_tv_color_toolbar"
                    android:textSize="@dimen/twelve_sp" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/toolbarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:letterSpacing="0.2"
                    android:text="@string/bottom_title_cart"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:WTextView_font="medium_bold" />

                <ProgressBar
                    android:id="@+id/pbRemoveAllItem"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/btnClearCart"
                    style="@style/futura_semi_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:letterSpacing="0.2"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:text="@string/remove_all"
                    android:textAllCaps="true"
                    android:textColor="@color/black_tv_color_toolbar"
                    android:textSize="@dimen/twelve_sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/toolbarSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/cartToolbar"
            android:background="#1a000000" />

        <za.co.woolworths.financial.services.android.ui.views.LockableNestedScrollViewV2
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarSeparator"
            android:layout_above="@id/rlCheckOut"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/fulfilmentAndLocationLayout"
                    layout="@layout/layout_fulfilment_and_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include
                    android:id="@+id/cart_item_limits_banner"
                    layout="@layout/cart_item_limits_banner" />

                <TextView
                    android:id="@+id/upSellMessageTextView"
                    style="@style/upSellMessageStyle"
                    android:text="upSellMessage"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none" />

                <include
                    android:id="@+id/empty_state_template"
                    layout="@layout/layout_dash_set_address_fragment"
                    android:visibility="gone" />

                <include layout="@layout/no_connection_handler" />

                <include
                    android:id="@+id/liquorComplianceMain"
                    layout="@layout/liquor_compliance_banner"/>

                <View
                    android:id="@+id/viewRecommendationDivider"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/eight_dp"
                    android:background="@color/color_F5F5F5"/>

                <include
                        android:id="@+id/layoutRecommendationContainer"
                        layout="@layout/recommendation_fragment_container_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <include
                        android:id="@+id/includedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/cart_product_basket_prices"/>
            </LinearLayout>
        </za.co.woolworths.financial.services.android.ui.views.LockableNestedScrollViewV2>

        <LinearLayout
            android:id="@+id/rlCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/twenty_four_dp"
            android:paddingRight="@dimen/twenty_four_dp"
            android:paddingBottom="@dimen/twenty_four_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/white"
                android:gravity="center">

                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/btnCheckOut"
                    style="@style/blackButtonStyle"
                    android:background="@drawable/black_button_drawable_state"
                    android:letterSpacing="0.2"
                    android:text="@string/checkout"
                    app:WButton_font="medium_bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtMinSpendErrorMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:lineHeight="@dimen/fourteen_sp"
                style="@style/opensans_regular_12_text_style"
                android:textColor="@color/red"
                android:visibility="gone"
                tools:text="A minimum spend of R150 is required to checkout." />
        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/cartProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone" />

    <include
        android:id="@+id/no_connection_handler"
        layout="@layout/no_connection_handler" />
</FrameLayout>