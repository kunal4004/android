<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/locationSelectedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_dp"
                    android:background="@drawable/white_bg_pressed"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingRight="@dimen/nineteen_dp">

                    <ImageView
                        android:id="@+id/truckIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_delivery_truck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_toLeftOf="@+id/iconCaretRight"
                        android:layout_toRightOf="@+id/truckIcon"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvDeliveringTo"
                            style="@style/style_cart_delivery_to_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginRight="4dp"
                            android:text="@string/set_your_delivery_location"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvDeliveryLocation"
                            style="@style/style_cart_delivery_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawablePadding="16dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:visibility="gone"
                            />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconCaretRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_caret_black" />

                </RelativeLayout>


                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvFreeDeliveryFirstOrder"
                    style="@style/style_cart_delivery_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.27"
                    android:padding="@dimen/fifteen_sp"
                    android:text="@string/cart_free_delivery_first_order"
                    app:WTextView_font="myriadpro_regular"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cartList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/fifty_two_dp"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    android:visibility="visible"/>

                <include
                    layout="@layout/empty_state_template"/>

                <include
                    layout="@layout/no_connection_handler"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/rlCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center">

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/btnCheckOut"
                style="@style/blackButtonStyle"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/black_button_drawable_state"
                android:letterSpacing="0.2"
                android:text="@string/checkout"
                android:visibility="visible"
                app:WButton_font="medium_bold"
                />

        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"/>

    <include layout="@layout/no_connection_handler"/>
</FrameLayout>