<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cartToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            app:popupTheme="@style/Cart"
            app:theme="@style/Cart">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/btnEditCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    android:textColor="@color/black_tv_color_toolbar"
                    android:textSize="12sp"
                    app:WTextView_font="medium" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/toolbarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:letterSpacing="0.2"
                    android:text="@string/bottom_title_cart"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:WTextView_font="medium_bold" />

                <ProgressBar
                    android:id="@+id/pbRemoveAllItem"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/btnClearCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:letterSpacing="0.2"
                    android:text="@string/remove_all"
                    android:textAllCaps="true"
                    android:textColor="@color/black_tv_color_toolbar"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:WTextView_font="medium" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/toolbarSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/cartToolbar"
            android:background="#1a000000" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarSeparator"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/deliveryLocationConstLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/eight_dp"
                    android:layout_marginStart="@dimen/seven_dp">

                    <ImageView
                        android:id="@+id/imgCartDelivery"
                        android:layout_width="@dimen/thirty_two_dp"
                        android:layout_height="@dimen/thirty_two_dp"
                        android:layout_margin="@dimen/five_dp"
                        android:layout_marginStart="@dimen/twenty_six_dp"
                        android:layout_marginTop="@dimen/eighteen_dp"
                        android:layout_marginBottom="@dimen/eighteen_dp"
                        android:src="@drawable/ic_delivery_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvDeliveryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="top"
                        android:text="@string/standard_delivery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvDeliverySubtitle"
                        app:layout_constraintStart_toEndOf="@id/imgCartDelivery"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tvDeliverySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/two_dp"
                        android:fontFamily="@font/myriad_pro_semi_bold"
                        android:gravity="center"
                        android:lineHeight="@dimen/sixteen_dp"
                        android:text="@string/cart_default_location"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgCartDelivery"
                        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryTitle" />

                    <ImageView
                        android:id="@+id/iconLocationRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/eighteen_dp"
                        android:layout_marginEnd="@dimen/twenty_six_dp"
                        android:layout_marginBottom="@dimen/eighteen_dp"
                        android:src="@drawable/ic_caret_black"
                        app:layout_constraintBottom_toBottomOf="@id/tvDeliveryTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvDeliverySubtitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include layout="@layout/cart_item_limits_banner" />

                <TextView
                    android:id="@+id/upSellMessageTextView"
                    style="@style/upSellMessageStyle"
                    android:text="upSellMessage"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/one_thirty_four"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none" />

                <include
                    android:id="@+id/empty_state_template"
                    layout="@layout/layout_dash_set_address_fragment"
                    android:visibility="gone" />

                <include layout="@layout/no_connection_handler" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/rlCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/twenty_four_dp"
            android:paddingRight="@dimen/twenty_four_dp"
            android:paddingBottom="@dimen/twenty_four_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/white"
                android:gravity="center">

                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/btnCheckOut"
                    style="@style/blackButtonStyle"
                    android:background="@drawable/black_button_drawable_state"
                    android:letterSpacing="0.2"
                    android:text="@string/checkout"
                    app:WButton_font="medium_bold" />

            </RelativeLayout>
            <TextView
                android:id="@+id/txt_min_spend_error_msg"
                android:fontFamily="@font/myriad_pro_semi_bold"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                android:lineHeight="@dimen/fourteen_sp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:textColor="@color/red"
                tools:text="A minimum spend of R150 is required to checkout."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/cartProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone" />

    <include layout="@layout/no_connection_handler" />
</FrameLayout>