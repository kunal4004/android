<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/thirty_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toTopOf="@id/sizeColorSelectorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/confirm_your_product_details" />

    <RelativeLayout
        android:id="@+id/rlConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/twenty_four_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:fontFamily="@font/futura_semi_bold"
            android:gravity="center"
            android:letterSpacing=".2"
            android:minHeight="@dimen/fifty_dp"
            android:text="@string/confirm"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />
    </RelativeLayout>

    <include
        android:id="@+id/sizeColorSelectorLayout"
        layout="@layout/product_details_size_and_color_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_four_dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rlConfirmation" />

</androidx.constraintlayout.widget.ConstraintLayout>