<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:nestedScrollingEnabled="true"
              android:fillViewport="true"
              android:scrollbars="none"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_on_wrewards"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp"

        >

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoHeaderText"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:WTextView_font="medium_bold"
            android:textAllCaps="true"
            android:letterSpacing="-0.02"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/statusImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrewardsbenefitsactive"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/statusText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="@string/reward_status_info_1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.02"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/statusImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrewardsbenefitsactive"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/statusText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="@string/reward_status_info_2"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.02"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/statusImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrewardsbenefitsactive"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/statusText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="@string/reward_status_info_3"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.02"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/statusImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrewardsbenefitsactive"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/statusText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="@string/reward_status_info_4"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.02"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/statusImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrewardsbenefitsactive"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/statusText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="@string/reward_status_info_5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.02"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/statusImage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wrewardsbenefitsactive"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/statusText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="@string/reward_status_info_6"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.02"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1a000000"
        android:paddingLeft="-32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        >

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/w_reward_line_1"
            android:textColor="#80000000"
            android:textSize="12sp"
            android:lineSpacingExtra="3sp"
            android:letterSpacing="-0.02"
            app:WTextView_font="myriadpro_regular"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/w_reward_line_2"
            android:textColor="#80000000"
            android:textSize="12sp"
            android:lineSpacingExtra="3sp"
            android:letterSpacing="-0.02"
            app:WTextView_font="myriadpro_regular"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/w_reward_line_3"
            android:textColor="#80000000"
            android:textSize="12sp"
            android:lineSpacingExtra="3sp"
            android:letterSpacing="-0.02"
            app:WTextView_font="myriadpro_regular"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>