<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        android:layout_marginTop="@dimen/twenty_four_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/colorPlaceholder"
        style="@style/futura_medium_black_12_text_style"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:letterSpacing="0.05"
        android:text="@string/select_colour"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <include
        android:id="@+id/layoutLowStockColor"
        layout="@layout/low_stock_product_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/twenty_nine_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"/>

    <TextView
        android:id="@+id/selectedColor"
        style="@style/futura_semi_bold_black_12_text_style"
        android:letterSpacing="0.05"
        android:textAllCaps="true"
        app:layout_constraintLeft_toRightOf="@+id/colorPlaceholder"
        app:layout_constraintTop_toTopOf="@id/colorPlaceholder" />

    <TextView
        android:id="@+id/moreColor"
        style="@style/opensans_regular_13_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/colorPlaceholder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/colorPlaceholder" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colorSelectorRecycleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreColor" />

    <TextView
        android:id="@+id/colourUnavailableError"
        style="@style/opensens_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/vto_color_selected_error"
        android:textColor="@color/promo_text_color"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/colorSelectorRecycleView" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:background="#1A000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colourUnavailableError" />

    <TextView
        android:id="@+id/selectedSizePlaceholder"
        style="@style/futura_medium_black_12_text_style"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:letterSpacing="0.05"
        android:text="@string/product_placeholder_select_size"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />


    <include
        android:id="@+id/layoutLowStockIndicator"
        layout="@layout/low_stock_product_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_nine_dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <TextView
        android:id="@+id/selectedSize"
        style="@style/futura_semi_bold_black_14_text_style"
        android:letterSpacing="0.05"
        android:textAllCaps="true"
        app:layout_constraintLeft_toRightOf="@+id/selectedSizePlaceholder"
        app:layout_constraintTop_toTopOf="@id/selectedSizePlaceholder" />

    <TextView
        android:id="@+id/sizeGuide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fourteen_sp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_regular"
        android:contentDescription="@string/cd_lnksizeguide"
        android:letterSpacing="0.05"
        android:text="@string/size_guide"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/selectedSizePlaceholder"
        app:layout_constraintTop_toTopOf="@id/selectedSizePlaceholder" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sizeSelectorRecycleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedSizePlaceholder" />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/sizeSelectorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="sizeSelectorRecycleView,selectedSize,selectedSizePlaceholder,divider2"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/colorSelectorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="colorSelectorRecycleView,selectedColor,colorPlaceholder,divider1"/>

</androidx.constraintlayout.widget.ConstraintLayout>