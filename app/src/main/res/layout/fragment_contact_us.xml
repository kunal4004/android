<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="true"
        android:focusable="true"
        tools:context="za.co.woolworths.financial.services.android.ui.fragments.contact_us.main_list.ContactUsFragment">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.contact_us.main_list.ContactUsFragment"/>

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.contact_us.main_list.ContactUsViewModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:id="@+id/financialService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/contact_us_item_bg"
            android:minHeight="70dp"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img1"
                android:orientation="vertical"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/contact_us_item_header_textview"
                    android:text="@string/contact_us_financial_services"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/contact_us_item_desc_textview"
                    android:layout_marginTop="5dp"
                    android:text="@string/contact_us_financial_services_desc"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/customerService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_us_item_bg"
            android:minHeight="70dp"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img2"
                android:orientation="vertical"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/contact_us_item_header_textview"
                    android:text="@string/contact_us_customer_service"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/contact_us_item_desc_textview"
                    android:layout_marginTop="5dp"
                    android:text="@string/contact_us_customer_service_desc"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"
            />

    </LinearLayout>
</layout>
