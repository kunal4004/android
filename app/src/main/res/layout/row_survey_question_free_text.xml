<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitleFreeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/line_spacing_4sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp"
        tools:text="Lorem ipsum sit dolor" />

    <EditText
        android:id="@+id/etValueFreeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/input_box_inactive_bg"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="top|left"
        android:hint="@string/voc_question_freetext_hint"
        android:lines="5"
        android:paddingStart="13dp"
        android:paddingTop="12dp"
        android:paddingEnd="14dp"
        android:paddingBottom="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/unavailable"
        android:textCursorDrawable="@drawable/cursor_custom_color"
        android:textSize="15sp" />

</LinearLayout>