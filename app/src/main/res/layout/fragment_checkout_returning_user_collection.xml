<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F3F3F3"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutReturningUserCollectionFragment">

    <ScrollView
        android:id="@+id/checkoutReturningCollectionScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/continueToPaymentButtonBackgroundView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/checkoutCollectingFromLayout"
                layout="@layout/layout_fulfilment_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                android:id="@+id/checkoutCollectingUserInfoLayout"
                layout="@layout/layout_collection_user_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkoutCollectingFromLayout" />

            <include
                android:id="@+id/checkoutCollectingTimeDetailsLayout"
                layout="@layout/layout_collection_time_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkoutCollectingUserInfoLayout" />

            <include
                android:id="@+id/nativeCheckoutFoodSubstitutionLayout"
                layout="@layout/layout_native_checkout_delivery_food_substitution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@id/checkoutCollectingTimeDetailsLayout" />

            <include
                android:id="@+id/ageConfirmationLayoutCollection"
                layout="@layout/layout_native_checkout_age_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nativeCheckoutFoodSubstitutionLayout"
                tools:visibility="visible" />

            <include
                android:id="@+id/layoutCollectionInstructions"
                layout="@layout/layout_native_checkout_delivery_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@+id/ageConfirmationLayoutCollection" />

            <include
                android:id="@+id/layoutCheckoutDeliveryOrderSummary"
                layout="@layout/layout_native_checkout_delivery_order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/eight_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutCollectionInstructions" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/continueToPaymentButtonBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/continuePaymentTxtCollectionShimmerFrameLayout" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:translationZ="@dimen/twenty_four_dp"
        android:id="@+id/continuePaymentTxtCollectionShimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        android:minHeight="@dimen/fifty_dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_margin="@dimen/twenty_four_dp"
            android:id="@+id/txtContinueToPaymentCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/futura_semi_bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:minHeight="@dimen/fifty_dp"
            android:text="@string/native_checkout_continue_to_payment"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>