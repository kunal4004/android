<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutReturningUserCollectionFragment">

    <ScrollView
        android:id="@+id/checkoutReturningCollectionScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/nativeCheckoutFoodSubstitutionLayout"
            layout="@layout/layout_native_checkout_delivery_food_substitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/layoutDeliveryInstructions"
            layout="@layout/layout_native_checkout_delivery_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@+id/nativeCheckoutFoodSubstitutionLayout" />

        <include
            android:id="@+id/layoutCheckoutDeliveryOrderSummary"
            layout="@layout/layout_native_checkout_delivery_order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutDeliveryInstructions" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>