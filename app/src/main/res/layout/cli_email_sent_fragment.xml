<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constEmailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imEmailSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cli_send_to_title"
        android:src="@drawable/process_complete_email_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="2dp"/>

    <LinearLayout
        android:id="@+id/llEmailSentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="33dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/relProcessCompleteButtonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imEmailSent">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvDocumentSentTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cli_email_sent_document_title"
            android:textAllCaps="true"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/twelve_sp"
            app:WTextView_font="medium"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvEmailAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="matt@emailaddress.com"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/sixteen_sp"
            app:WTextView_font="medium_bold"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvClearDocumentPhoto"
            style="@style/take_photo_document_desc_style"
            android:gravity="center"
            android:text="@string/cli_email_sent_description"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relProcessCompleteButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnProcessComplete"
            style="@style/whiteWButtonStyle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/back_to_my_account"
            android:textColor="@color/black"
            app:WButton_font="medium_bold"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>