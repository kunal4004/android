<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/hundred_dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/email_bottom_margin"
                android:contentDescription="@string/cli_send_to_title"
                android:src="@drawable/process_complete_email_logo"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="@string/cli_email_sent_document_title"
                android:textAllCaps="true"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/email_text_size_12sp"
                app:WTextView_font="medium"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvEmailAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/email_bottom_margin_18"
                android:gravity="center"
                android:text="matt@emailaddress.com"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/email_text_size_16sp"
                app:WTextView_font="medium_bold"
                />


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvClearDocumentPhoto"
                style="@style/take_photo_document_desc_style"
                android:layout_marginBottom="@dimen/email_bottom_margin_48"
                android:layout_marginEnd="@dimen/email_bottom_margin_8"
                android:layout_marginStart="@dimen/email_bottom_margin_8"
                android:gravity="center"
                android:text="@string/cli_email_sent_description"
                android:textSize="@dimen/email_text_size_15sp"
                />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/relProcessCompleteButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollContent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        >

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnProcessComplete"
            style="@style/whiteWButtonStyle"
            android:layout_height="@dimen/email_height_50"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/email_bottom_margin_32"
            android:layout_marginEnd="@dimen/email_bottom_margin_32"
            android:layout_marginStart="@dimen/email_bottom_margin_32"
            android:gravity="center"
            android:text="@string/back_to_my_account"
            android:textColor="@color/black"
            android:textSize="@dimen/email_text_size_12sp"
            app:WButton_font="medium_bold"/>

    </RelativeLayout>
</FrameLayout>