<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/cardViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@color/grey_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCreditCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/cd_ccd_imgdeliverycard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_cc_envelope" />

    <View
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:background="@color/grey_bg"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/callTheCallCenter" />

    <RelativeLayout
        android:id="@+id/manageDelivery"
        style="@style/card_item_click_no_pad_style"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:contentDescription="@string/cd_ccd_btnmanagedelivery"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/space">

        <ImageView
            android:id="@+id/imLogoIncreaseLimit"
            style="@style/style_loan_logo_img"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delivery_truck" />

        <ImageView
            android:id="@+id/imgFindOutMoreArrow"
            style="@style/style_loan_img"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_caret_black" />

        <TextView
            android:id="@+id/tvIncreaseMyLimit"
            style="@style/style_loan_title"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imLogoIncreaseLimit"
            android:text="@string/manage_delivery" />

    </RelativeLayout>

    <TextView
        android:id="@+id/deliveryStatusTitle"
        style="@style/futura_medium_black"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:contentDescription="@string/cd_ccd_lableconfirmeddeliverytitle"
        android:letterSpacing="0.1"
        android:text="DELIVERY CONFIRMATION"
        android:textAllCaps="true"
        android:textColor="@color/black_50"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/imgCreditCard" />

    <TextView
        android:id="@+id/deliveryDate"
        style="@style/futura_medium_black"
        android:contentDescription="@string/cd_ccd_labelconfirmedtimeslot"
        android:letterSpacing="0.1"
        android:text="30 Apr"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="@id/progressIcon" />

    <TextView
        android:id="@+id/deliveryDayAndTime"
        style="@style/futura_medium_black"
        android:layout_marginTop="@dimen/eight_dp"
        android:letterSpacing="0.05"
        android:text="Tuesday, 12pm - 2pm"
        android:textSize="@dimen/eighteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/progressIcon"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/deliveryDate" />

    <ImageView
        android:id="@+id/progressIcon"
        android:layout_width="@dimen/sixty_four_dp"
        android:layout_height="@dimen/sixty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@drawable/circle_amber"
        android:contentDescription="@string/cd_ccd_imgdelivery"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/deliveryStatusTitle" />


    <TextView
        android:id="@+id/deliveryStatusDescription"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:contentDescription="@string/cd_ccd_labelconfirmeddeliverydescription"
        android:lineSpacingMultiplier="1.33"
        android:text="@string/documet_requied_at_delivery"
        android:textColor="#50333333"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/progressIcon" />

    <Button
        android:id="@+id/callTheCallCenter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/thirty_seven_dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:fontFamily="@font/futura_semi_bold"
        android:letterSpacing="0.13"
        android:text="@string/call_the_call_centre"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/deliveryStatusDescription" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />


</androidx.constraintlayout.widget.ConstraintLayout>