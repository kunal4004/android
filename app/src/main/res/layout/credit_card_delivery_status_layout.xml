<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/cardViewBackground"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/one_twenty_dp"
                android:background="@color/grey_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:contentDescription="@string/cd_ccd_imgdeliverycard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/black_cc_envelope" />

            <View
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/thirty_seven_dp"
                android:background="@color/grey_bg"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deliveryStatusDescription" />

            <RelativeLayout
                android:id="@+id/manageDeliveryLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:layout_marginTop="@dimen/twenty_nine_dp"
                android:background="@drawable/bottom_light_divider_list"
                android:contentDescription="@string/cd_ccd_btnmanagedelivery"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/space">

                <View
                    android:id="@+id/layoutDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/twenty_five_dp"
                    android:background="@color/color_e1e1e1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/manageDeliveryText"
                    style="@style/opensans_semi_bold_13_black_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:drawablePadding="@dimen/fifteen_dp"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/fifteen_dp"
                    android:text="@string/manage_delivery"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutDivider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trackDeliveryLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:background="@drawable/bottom_light_divider_list"
                android:contentDescription="@string/cd_ccd_btntrackdelivery"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/manageDeliveryLayout">

                <View
                    android:id="@+id/TrackDeliveryDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/twenty_five_dp"
                    android:background="@color/color_e1e1e1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/trackDeliveryText"
                    style="@style/opensans_semi_bold_13_black_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:drawablePadding="@dimen/fifteen_dp"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/fifteen_dp"
                    android:text="@string/track_my_delivery"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TrackDeliveryDivider" />

            </RelativeLayout>

            <TextView
                android:id="@+id/deliveryStatusTitle"
                style="@style/futura_medium_black"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:contentDescription="@string/cd_ccd_lableconfirmeddeliverytitle"
                android:letterSpacing="0.1"
                android:text="@string/delivery_confirmation"
                android:textAllCaps="true"
                android:textColor="@color/black_50"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/imgCreditCard" />

            <TextView
                android:id="@+id/deliveryDate"
                style="@style/futura_medium_black"
                android:contentDescription="@string/cd_ccd_labelconfirmedtimeslot"
                android:letterSpacing="0.1"
                android:textSize="@dimen/thirty_five_sp"
                app:layout_constraintEnd_toStartOf="@id/progressIcon"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toTopOf="@id/progressIcon" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/deliveryDayAndTime"
                style="@style/futura_medium_black"
                android:layout_marginTop="@dimen/eight_dp"
                android:letterSpacing="0.05"
                android:textSize="@dimen/eighteen_sp"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/deliveryDate" />

            <ImageView
                android:id="@+id/progressIcon"
                android:layout_width="@dimen/sixty_four_dp"
                android:layout_height="@dimen/sixty_four_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@drawable/circle_amber"
                android:contentDescription="@string/cd_ccd_imgdelivery"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@id/deliveryStatusTitle" />


            <TextView
                android:id="@+id/deliveryStatusDescription"
                style="@style/ccd_opensans_regular"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:contentDescription="@string/cd_ccd_labelconfirmeddeliverydescription"
                android:lineSpacingMultiplier="1.33"
                android:text="@string/documet_requied_at_delivery"
                android:textColor="#50333333"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/deliveryDayAndTime" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/callTheCallCenter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:fontFamily="@font/futura_semi_bold"
        android:letterSpacing="0.13"
        android:text="@string/call_the_call_centre"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="@+id/rightguideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>