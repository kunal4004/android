<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xxx"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="top"
    android:layout_marginTop="0dp">
        <ImageView
            android:id="@+id/imProductCategory"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="200dp" />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textProduct"
            android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="bottom|start"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:WTextView_font="medium_bold"
            android:layout_marginBottom="@dimen/bank_spacing_width"
            android:layout_marginLeft="@dimen/bank_spacing_width"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imProductCategory"/>
</FrameLayout>
