<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/frameRootCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="16dp"
    android:paddingLeft="@dimen/default_margin"
    android:paddingRight="@dimen/default_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imProductCategory"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        fresco:fadeDuration="100"
        fresco:placeholderImage="@drawble/card_shadow"
        fresco:placeholderImageScaleType="fitXY"
        fresco:viewAspectRatio="1.33" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="@dimen/bank_spacing_width"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:WTextView_font="medium_bold" />
</FrameLayout>
