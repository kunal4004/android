<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="za.co.woolworths.financial.services.android.ui.activities.MyPreferencesActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/appbar_background"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/StoreSearch"
            app:theme="@style/StoreSearch">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/toolbarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:letterSpacing="0.2"
                android:text="@string/acc_my_preferences"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:WTextView_font="medium_bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/cli_permission_title_text"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fourteen_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:text="@string/favourite_delivery_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                style="@style/bottom_line"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@+id/tvProofIncomeDocument" />


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/take_photo_document_desc_style"
                android:text="@string/favourite_delivery_location_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />


            <View
                style="@style/bottom_line"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/twenty_two_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/locationSelectedLayout"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/deliverLocationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_delivery_truck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_toLeftOf="@+id/iconCaretRight"
                    android:layout_toRightOf="@+id/deliverLocationIcon"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tvDeliveryLocation"
                        style="@style/style_cart_delivery_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        app:WTextView_font="myriadpro_regular"
                        android:text="@string/set_your_delivery_location"
                        />
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tvDeliveringTo"
                        style="@style/style_cart_delivery_to_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/semi_transparent_black"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iconCaretRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_caret_black" />
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/editLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:WTextView_font="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:letterSpacing="0.1"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/biometricsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvProofIncomeDocument"
                style="@style/cli_permission_title_text"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fourteen_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:text="@string/biometrics_authentication"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vBottomLine"
                style="@style/bottom_line"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@+id/tvProofIncomeDocument" />


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvDescription"
                style="@style/take_photo_document_desc_style"
                android:text="@string/biometrics_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />


            <View
                android:id="@+id/vBottomLineDescription"
                style="@style/bottom_line"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/twenty_two_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="visible">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvMyDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:lineSpacingExtra="0.4sp"
                    android:text="@string/authenticate_with_touch_id"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_regular"
                    android:drawableLeft="@drawable/ic_touch_id"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    />

                <Switch
                    android:id="@+id/auSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:theme="@style/SwitchTheme" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
