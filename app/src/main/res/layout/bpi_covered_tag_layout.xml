<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bpiCoveredTextView"
        style="@style/tag_badge_style"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:text="@string/bpi_covered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/bpiNotCoveredTextView"
        style="@style/tag_badge_style"
        android:gravity="start"
        android:layout_width="0dp"
        android:text="@string/bpi_not_covered"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpiCoveredTextView"
        tools:targetApi="lollipop" />

    <ImageView
        android:id="@+id/notCoveredImageView"
        style="@style/style_loan_img"
        android:src="@drawable/ic_caret_black"
        app:layout_constraintBottom_toBottomOf="@+id/bpiNotCoveredTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bpiNotCoveredTextView"
        tools:ignore="UnusedAttribute" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/bpiNotCoveredGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="notCoveredImageView,bpiNotCoveredTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>