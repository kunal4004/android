<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.woolworths.financial.services.android.geolocation.view.ClickAndCollectStoresFragment">

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/menu_close_page" />

    <TextView
        android:id="@+id/tv_selectStoreLabel"
        style="@style/futura_semi_bold_black_20_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:text="@string/please_select_the_store_you_are_collecting_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCross" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_enter_new_address"
        style="@style/myriad_pro_regular_black_15_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourty_dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_one_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:background="@drawable/round_corner_grey_background"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/fifteen_dp"
        android:enabled="false"
        android:gravity="center_vertical"
        android:hint="@string/search_by_store_or_location"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingEnd="@dimen/fifteen_dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_selectStoreLabel" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_ten_dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        app:cardCornerRadius="@dimen/five_dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_new_address">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>