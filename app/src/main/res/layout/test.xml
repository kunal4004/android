<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linProductContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/default_margin"
    android:paddingRight="@dimen/default_margin"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/linColour"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textSelectColour"
            style="@style/colorSizeStyle"
            android:text="medium"
            android:textColor="@color/white"
            app:WTextView_font="medium" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textColour"
            style="@style/colorSizeStyle"

            android:layout_alignParentStart="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text="@string/product_colour" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imSelectedColor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/imColorArrow"
            android:layout_alignTop="@+id/imColorArrow"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginRight="@dimen/default_margin"
            android:src="@drawable/path_3"
            fresco:roundAsCircle="true" />

        <ImageView
            android:id="@+id/imColorArrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/default_margin"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:src="@drawable/path_3" />

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/linSize"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textProductSize"
            style="@style/colorSizeStyle"
            android:layout_alignParentStart="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text="@string/product_size" />

        <ImageView
            android:id="@+id/mColorArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/default_margin"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/path_3" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textSelectSize"
            style="@style/colorSizeStyle"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/mColorArrow"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="medium"
            android:textColor="@color/white"
            app:WTextView_font="medium" />

    </RelativeLayout>

</LinearLayout>