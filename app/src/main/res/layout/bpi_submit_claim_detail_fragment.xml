<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/recent_search_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/twenty_dp">

            <TextView
                android:id="@+id/applyLoanInfoTextView"
                style="@style/insurance_claim_detail_style"
                android:layout_marginBottom="@dimen/default_margin"
                android:textColor="@color/black_50" />

            <TextView
                android:id="@+id/requiredFormTextView"
                style="@style/insurance_claim_title_style" />

            <View
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/one_dp"
                android:background="@color/outside_border" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlRequiredForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:nestedScrollingEnabled="false" />

            <View
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/one_dp"
                android:background="@color/outside_border" />

            <TextView
                android:id="@+id/youWillAlsoNeedToSubmitTextView"
                style="@style/insurance_claim_title_style" />

            <View
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/one_dp"
                android:background="@color/outside_border" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlAdditionalSubmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eighteen_dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="false" />

            <View
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/one_dp"
                android:background="@color/outside_border" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:background="@color/white">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnGetDocument"
            style="@style/blackButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/two_dp"
            android:layout_marginEnd="@dimen/two_dp"
            android:layout_marginBottom="@dimen/two_dp" />

    </LinearLayout>
</FrameLayout>