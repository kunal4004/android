<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:clipToPadding="false"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/sent_message_text"
        style="@style/chat_text_style"
        android:background="@drawable/sent_message_bubble_bg"
        android:textColor="@color/chat_sent_message_text_color"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:elevation="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/sent_message_text"
        app:layout_constraintRight_toLeftOf="@+id/sent_message_text" />

</androidx.constraintlayout.widget.ConstraintLayout>