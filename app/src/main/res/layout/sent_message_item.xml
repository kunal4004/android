<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:clipToPadding="false"
    android:paddingTop="@dimen/four_dp"
    android:paddingBottom="@dimen/four_dp">

    <TextView
        android:id="@+id/sent_message_text"
        style="@style/chat_text_style"
        android:background="@drawable/sent_message_bubble_bg"
        android:paddingStart="@dimen/twelve_dp"
        android:paddingTop="@dimen/ten_dp"
        android:paddingEnd="@dimen/twelve_dp"
        android:paddingBottom="@dimen/fourteen_dp"
        android:textColor="@color/chat_sent_message_text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/four_dp"
        android:textSize="@dimen/ten_sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/sent_message_text"
        app:layout_constraintRight_toLeftOf="@+id/sent_message_text" />

</androidx.constraintlayout.widget.ConstraintLayout>