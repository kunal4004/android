<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <za.co.woolworths.financial.services.android.ui.views.LockableNestedScrollViewV2
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/toCartAndFindInStoreLayout"
            android:paddingBottom="@dimen/twenty_four_dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/brand_view"
                    layout="@layout/layout_product_details_chanel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/default_margin"
                    android:elevation="@dimen/two_dp"
                    android:src="@drawable/back24"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/brand_view" />

                <include
                    android:id="@+id/vtoLayout"
                    layout="@layout/vto_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vto_preview_size"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/relViewPager"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/vto_preview_size"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/brand_view">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/vto_preview_size">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/productImagesViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/products_image_overlay" />

                    </FrameLayout>

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/productImagesViewPagerIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        app:ci_drawable="@drawable/selected_dot"
                        app:ci_drawable_unselected="@drawable/unselected_dot"
                        app:ci_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/sixteen_dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_share_circle" />

                    <ImageView
                        android:id="@+id/imgVTOOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/four_dp"
                        android:padding="@dimen/six_dp" />

                </RelativeLayout>

                <androidx.legacy.widget.Space
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/twenty_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relViewPager" />

                <TextView
                    android:id="@+id/styleBy"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/space" />

                <TextView
                    android:id="@+id/brandName"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/styleBy" />

                <TextView
                    android:id="@+id/rangeName"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/brandName" />

                <TextView
                    android:id="@+id/productName"
                    style="@style/futura_semi_bold_black_24_text_style"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.33"
                    android:text="@string/product_information"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/rangeName" />

                <include
                    android:id="@+id/ratingLayout"
                    layout="@layout/pdp_rating_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toStartOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/productName" />


                <include
                    android:id="@+id/priceLayout"
                    layout="@layout/product_details_price_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toStartOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/ratingLayout" />

                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/wfsShoptimiserComposable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/priceLayout"
                    app:layout_constraintTop_toTopOf="@+id/onlinePromotionalTextView3"
                    />


                <TextView
                    android:id="@+id/onlinePromotionalTextView1"
                    style="@style/futura_medium"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/labelPromotionOne"
                    android:letterSpacing="0.1"
                    android:textAllCaps="true"
                    android:textColor="@color/two_line_promo_text_color_plp"
                    android:textSize="@dimen/thirteen_sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/priceLayout" />


                <TextView
                    android:id="@+id/onlinePromotionalTextView2"
                    style="@style/futura_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:contentDescription="@string/labelPromotionTwo"
                    android:letterSpacing="0.1"
                    android:textAllCaps="true"
                    android:textColor="@color/two_line_promo_text_color_plp"
                    android:textSize="@dimen/thirteen_sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/onlinePromotionalTextView1" />

                <TextView
                    android:id="@+id/onlinePromotionalTextView3"
                    style="@style/futura_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:contentDescription="@string/labelPromotionThree"
                    android:letterSpacing="0.1"
                    android:textAllCaps="true"
                    android:textColor="@color/two_line_promo_text_color_plp"
                    android:textSize="@dimen/thirteen_sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/onlinePromotionalTextView2" />

                <include
                    android:id="@+id/freeGiftWithPurchaseLayout"
                    layout="@layout/product_details_gift_with_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/onlinePromotionalTextView3"
                    />

                <include
                    android:id="@+id/sizeColorSelectorLayout"
                    layout="@layout/product_details_size_and_color_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toStartOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/freeGiftWithPurchaseLayout" />

                <include
                    android:id="@+id/outOfStockLayout"
                    layout="@layout/product_details_out_of_stock_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    app:layout_constraintTop_toBottomOf="@id/sizeColorSelectorLayout" />

                <include
                    android:id="@+id/deliveryLocationLayout"
                    layout="@layout/product_details_delivery_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    app:layout_constraintTop_toBottomOf="@id/outOfStockLayout" />

                <include
                    android:id="@+id/productDetailOptionsAndInformation"
                    layout="@layout/product_details_options_and_information_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/deliveryLocationLayout" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/viewsToHideOnProductLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="productDetailOptionsAndInformation,sizeColorSelectorLayout" />

                <include
                    android:id="@+id/openCart"
                    layout="@layout/pdp_cart_counter_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </za.co.woolworths.financial.services.android.ui.views.LockableNestedScrollViewV2>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_above="@+id/toCartAndFindInStoreLayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/hundred_dp"
            android:elevation="@dimen/two_dp"
            android:indeterminateTint="@color/black"
            android:visibility="gone" />

        <include
            android:id="@+id/toCartAndFindInStoreLayout"
            layout="@layout/product_details_add_to_cart_and_find_in_store_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>