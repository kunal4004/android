<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/mProductDetailPager"
                    android:layout_width="0dp"
                    android:layout_height="353dp"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/styleBy"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_marginTop="@dimen/thirty_two_dp"
                    android:text="style by sa"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/mProductDetailPager" />

                <TextView
                    android:id="@+id/brandName"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:text="MMUSOMAXWELL"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/styleBy" />

                <TextView
                    android:id="@+id/productName"
                    style="@style/futura_semi_bold_black_24_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:lineSpacingMultiplier="1.33"
                    android:text="Asymmetric Buttons Melton Coat"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/brandName" />

                <!--<TextView
                    android:id="@+id/price"
                    style="@style/futura_medium_black_22_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:text="R 1 050.00"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/productName" />

                <TextView
                    android:id="@+id/saveText"
                    style="@style/futura_medium_black_12_text_style"
                    android:layout_marginTop="@dimen/thirty_two_dp"
                    android:letterSpacing="0.1"
                    android:text="BUy any three and pay for two0"
                    android:textAllCaps="true"
                    android:textColor="@color/promo_text_color"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/productName" />-->

                <include
                    android:id="@+id/priceLayout"
                    layout="@layout/product_details_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/thirty_two_dp"
                    android:layout_marginRight="@dimen/twelve_dp"
                    app:layout_constraintTop_toBottomOf="@id/productName" />

                <include
                    android:id="@+id/sizeColorSelectorLayout"
                    layout="@layout/product_details_size_and_color_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/priceLayout" />

                <include
                    android:id="@+id/productDetailOptionsAndInformation"
                    layout="@layout/product_details_options_and_information_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sizeColorSelectorLayout" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>