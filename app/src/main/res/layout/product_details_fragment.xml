<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/productLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_above="@id/toCartAndFindInStoreLayout"
            android:paddingBottom="@dimen/twenty_four_dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/closePage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/default_margin"
                    android:src="@drawable/icon_close_circle"
                    app:layout_constraintRight_toRightOf="parent"
                    android:elevation="@dimen/two_dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/relViewPager"
                    android:layout_width="0dp"
                    android:layout_height="353dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/productImagesViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="353dp" />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/productImagesViewPagerIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        app:ci_drawable="@drawable/selected_dot"
                        app:ci_drawable_unselected="@drawable/unselected_dot"
                        app:ci_gravity="center_horizontal" />

                </RelativeLayout>

                <Space
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty_dp"
                    app:layout_constraintTop_toBottomOf="@+id/relViewPager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/styleBy"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/space" />

                <TextView
                    android:id="@+id/brandName"
                    style="@style/futura_semi_bold_black_12_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/styleBy" />

                <TextView
                    android:id="@+id/productName"
                    style="@style/futura_semi_bold_black_24_text_style"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:lineSpacingMultiplier="1.33"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/brandName" />

                <!-- <TextView
                     android:id="@+id/price"
                     style="@style/futura_medium_black_22_text_style"
                     android:layout_marginTop="@dimen/twelve_dp"
                     android:text="R 1 050.00"
                     app:layout_constraintEnd_toEndOf="@id/right_guideline"
                     app:layout_constraintStart_toStartOf="@id/left_guideline"
                     app:layout_constraintTop_toBottomOf="@id/productName" />-->


                <include
                    android:id="@+id/priceLayout"
                    layout="@layout/product_details_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/thirty_two_dp"
                    android:layout_marginRight="@dimen/twelve_dp"
                    app:layout_constraintTop_toBottomOf="@id/productName" />

                <TextView
                    android:id="@+id/promotionText"
                    style="@style/futura_medium_black_12_text_style"
                    android:layout_marginTop="@dimen/thirty_two_dp"
                    android:letterSpacing="0.1"
                    android:textAllCaps="true"
                    android:textColor="@color/promo_text_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@id/priceLayout" />

                <include
                    android:id="@+id/freeGiftWithPurchaseLayout"
                    layout="@layout/product_details_gift_with_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/thirty_dp"
                    app:layout_constraintTop_toBottomOf="@id/promotionText" />

                <include
                    android:id="@+id/sizeColorSelectorLayout"
                    layout="@layout/product_details_size_and_color_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/freeGiftWithPurchaseLayout" />

                <include
                    android:id="@+id/deliveryLocationLayout"
                    layout="@layout/product_deatils_delivery_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/sizeColorSelectorLayout" />

                <include
                    android:id="@+id/productDetailOptionsAndInformation"
                    layout="@layout/product_details_options_and_information_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/deliveryLocationLayout" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/viewsToHideOnProductLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="productDetailOptionsAndInformation,sizeColorSelectorLayout" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:elevation="@dimen/two_dp"
            android:layout_above="@+id/toCartAndFindInStoreLayout"
            android:layout_marginBottom="@dimen/hundred_dp"
            android:indeterminateTint="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />
        <include
            android:id="@+id/toCartAndFindInStoreLayout"
            layout="@layout/product_details_add_to_cart_and_find_in_store_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>