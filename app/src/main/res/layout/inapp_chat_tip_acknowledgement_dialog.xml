<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_dialog_corner_layout"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/greetingTextView"
            style="@style/chatWithUsTipStyle"
            android:layout_marginEnd="8dp"
            android:text="@string/chat_greeting_label"
            app:layout_constraintBottom_toBottomOf="@+id/dismissChatTipImageView"
            app:layout_constraintEnd_toStartOf="@+id/dismissChatTipImageView"
            app:layout_constraintStart_toStartOf="@+id/marginStart"
            app:layout_constraintTop_toTopOf="@+id/dismissChatTipImageView" />

        <ImageButton
            android:id="@+id/dismissChatTipImageView"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            app:layout_constraintEnd_toStartOf="@+id/marginEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/close_24" />

        <TextView
            android:id="@+id/greetingDescriptionTextView"
            style="@style/chatWithUsTipStyle"
            android:text="@string/chat_greeting_description"
            app:layout_constraintEnd_toStartOf="@+id/marginEnd"
            app:layout_constraintStart_toStartOf="@+id/marginStart"
            app:layout_constraintTop_toBottomOf="@+id/dismissChatTipImageView" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp" />

        <TextView
            android:id="@+id/chatToUsNowTextView"
            style="@style/chatToUsNowButtonStyle"
            android:paddingStart="7.5dp"
            android:paddingEnd="7dp"
            android:text="@string/chat_to_us_now_label"
            app:layout_constraintStart_toStartOf="@+id/marginStart"
            app:layout_constraintTop_toBottomOf="@+id/greetingDescriptionTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>