<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/statement_line_drawable"
    android:paddingBottom="@dimen/twenty_nine_dp"
    android:paddingTop="@dimen/thirty_one_dp">

    <ImageView
        android:id="@+id/imCheckItem"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ticker_inactive"
        />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvStatementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imCheckItem"
        android:layout_alignTop="@+id/imCheckItem"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_toEndOf="@+id/imCheckItem"
        android:gravity="center_vertical"
        android:letterSpacing="0.17"
        android:text="june 2016"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/twelve_sp"
        app:WTextView_font="medium_bold"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvViewStatement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvStatementName"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvStatementName"
        android:gravity="center_vertical"
        android:letterSpacing="0.17"
        android:text="@string/view"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:WTextView_font="medium"/>

</RelativeLayout>