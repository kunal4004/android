<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@color/default_background"
    android:id="@+id/scrollView"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.CLIEligibilityAndPermissionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_background"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:paddingTop="16dp"
            >
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/cli_permission_title_text"
                android:text="@string/cli_eligibility_check_title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_description_text"
                    android:text="@string/cli_eligibility_check_description"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/cli_yes_no_button_background"
                    android:layout_margin="30dp"
                    >
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/cli_yes_no_button"
                        android:text="@string/cli_yes"
                        android:id="@+id/eligibilityYes"
                         />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#19000000"
                        />
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/cli_yes_no_button"
                        android:text="@string/cli_no"
                        android:id="@+id/eligibilityNo"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_background"
            android:orientation="vertical"
            android:id="@+id/permissionView"
            android:visibility="gone"
            android:paddingBottom="250dp"
            >
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/cli_permission_title_text"
                android:text="@string/cli_permission_check_title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_description_text"
                    android:text="@string/cli_permission_check_description"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/cli_yes_no_button_background"
                    android:layout_margin="30dp"
                    >
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/cli_yes_no_button"
                        android:text="@string/cli_yes"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#19000000"
                        />
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/cli_yes_no_button"
                        android:text="@string/cli_no"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
