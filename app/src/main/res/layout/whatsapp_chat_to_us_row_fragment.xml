<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatToUsOnWhatsAppConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/whatsapp_chat_with_us_row"
    android:paddingTop="28dp"
    android:paddingBottom="27dp">

    <ImageView
        android:id="@+id/whatsAppIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_whatsapp_green"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/whatsappNextIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_caret_black" />

    <TextView
        style="@style/chatToUsOnWhatsAppStyle"
        android:text="@string/whatsapp_chat_with_us_row_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/whatsappNextIconImageView"
        app:layout_constraintStart_toEndOf="@+id/whatsAppIconImageView"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>