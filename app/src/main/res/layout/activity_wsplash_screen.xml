<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/videoViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:visibility="gone"
        tools:context="za.co.woolworths.financial.services.android.ui.activities.splash.WSplashScreenActivity">

        <za.co.woolworths.financial.services.android.ui.views.WVideoView
            android:id="@+id/activity_wsplash_screen_videoview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <include
        android:visibility="gone"
        android:id="@+id/splashNoVideoView"
        layout="@layout/activity_wsplash_screen_without_video"/>
</FrameLayout>