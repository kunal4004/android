<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/twenty_four_dp"
    android:paddingEnd="@dimen/twenty_four_dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/cli_eight_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="start|center"
        android:letterSpacing="0.07"
        android:text="@string/loan_withdrawal_popup_error"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_sp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="start|center"
        android:lineSpacingExtra="@dimen/four_dp"
        android:text="@string/loan_request_high_desc"
        android:textColor="@color/description_color"
        android:textSize="@dimen/fifteen_sp" />

    <View style="@style/bottom_line" />

</LinearLayout>