<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linkNewCardConstraintLayout"
    android:layout_width="0dp"
    android:layout_height="@dimen/seventy_dp"
    android:background="@drawable/card_header_background">

    <ImageView
        android:id="@+id/imLogoIncreaseLimit"
        style="@style/style_loan_logo_img"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:alpha="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/link_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linkNewCardTextView"
        style="@style/style_loan_title"
        android:layout_width="0dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imLogoIncreaseLimit"
        android:text="@string/link_new_card"
        app:layout_constraintBottom_toBottomOf="@+id/imLogoIncreaseLimit"
        app:layout_constraintEnd_toStartOf="@+id/linkNewCardImageView"
        app:layout_constraintStart_toEndOf="@+id/imLogoIncreaseLimit"
        app:layout_constraintTop_toTopOf="@+id/imLogoIncreaseLimit" />

    <ImageView
        android:id="@+id/linkNewCardImageView"
        style="@style/style_loan_img"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_caret_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>