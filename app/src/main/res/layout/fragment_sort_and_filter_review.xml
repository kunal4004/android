<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.woolworths.financial.services.android.ui.activities.rating_and_review.view.SortAndFilterReviewFragment"
    android:layout_marginEnd="@dimen/twenty_four_dp"
    android:paddingBottom="@dimen/twenty_four_dp"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/fourty_seven_dp"
        android:layout_marginStart="@dimen/eight_dp"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/eight_dp"
        android:background="#e4e4e4"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/twenty_four_dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sortOptionsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/plp_sortOptionList"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:clipToPadding="true"
        android:paddingBottom="@dimen/twenty_four_dp"
        app:layout_constraintBottom_toTopOf="@+id/refinementSeeResult"
        />
    <RelativeLayout
        android:id="@+id/refinementSeeResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/thirty_dp"
        android:background="@color/black"
        android:paddingLeft="@dimen/twenty_four_dp"
        android:paddingRight="@dimen/twenty_four_dp"
        android:contentDescription="@string/plp_seeResultsButtonLayout"
        app:layout_constraintBottom_toTopOf="@+id/clearAndResetFilter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/twenty_four_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/seeResultCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_bold"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:letterSpacing="0.1"
            android:singleLine="true"
            android:text="@string/see_results"
            android:contentDescription="@string/plp_textViewSeeResults"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/clearAndResetFilter"
        style="@style/futura_medium_black_12_text_style"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:letterSpacing=".15"
        android:text="@string/clear_filter"
        android:textAllCaps="true"
        android:textColor="@drawable/refine_toolbar_menu_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/twenty_four_dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>