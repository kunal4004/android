<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F3F3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:elevation="@dimen/zero_dp"
            android:tabStripEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/shop_tab_color_selector"
            app:tabGravity="fill"
            app:tabIndicatorColor="@null"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="@dimen/two_dp"
            app:tabPaddingStart="@dimen/two_dp"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/drawer_color" />

        <TextView
            android:id="@+id/foodOnlyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_dp"
            android:layout_marginEnd="@dimen/fourty_dp"
            android:background="@color/color_yellow_FEE600"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:paddingStart="@dimen/eight_dp"
            android:paddingTop="@dimen/three_dp"
            android:paddingEnd="@dimen/eight_dp"
            android:paddingBottom="@dimen/three_dp"
            android:text="@string/food_only"
            android:textSize="@dimen/seven_sp"
            app:layout_constraintRight_toRightOf="@+id/tabs_main"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clickCollectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eighty_five_dp"
            android:layout_marginTop="@dimen/six_dp"
            android:background="#4A9521"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:paddingStart="@dimen/eight_dp"
            android:paddingTop="@dimen/three_dp"
            android:paddingEnd="@dimen/eight_dp"
            android:paddingBottom="@dimen/three_dp"
            android:text="@string/food_only"
            android:textAlignment="center"
            android:textSize="@dimen/seven_sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/foodOnlyText"
            app:layout_constraintStart_toStartOf="@+id/tvSearchProduct"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSearchProduct"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:layout_toStartOf="@+id/imBarcodeScanner"
            android:background="@color/shop_search_color"
            android:drawablePadding="@dimen/twelve_dp"
            android:fontFamily="@font/myriad_pro_regular"
            android:gravity="center_vertical"
            android:hint="@string/dash_product_search"
            android:padding="@dimen/twelve_dp"
            android:textColor="@color/color_9D9D9D"
            android:textColorHint="@color/product_search_hint"
            android:textSize="@dimen/fourteen_sp"
            app:drawableStartCompat="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imBarcodeScanner"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_main" />

        <ImageView
            android:id="@+id/imBarcodeScanner"
            android:layout_width="@dimen/fourty_dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:background="@drawable/rectangle_grey_bg"
            android:contentDescription="@string/enter_barcode_desc"
            android:padding="@dimen/four_dp"
            android:src="@drawable/barcode"
            app:layout_constraintBottom_toBottomOf="@+id/tvSearchProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvSearchProduct"
            app:layout_constraintTop_toTopOf="@+id/tvSearchProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <za.co.woolworths.financial.services.android.ui.views.ShopViewPager
        android:id="@+id/viewpager_main"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_top"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>