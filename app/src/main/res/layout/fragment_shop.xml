<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.shop.ShopFragment">

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingTop="@dimen/five_dp"
        android:paddingRight="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/five_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_toLeftOf="@+id/imBarcodeScanner"
            android:background="#10000000"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/sixteen_dp"
            android:gravity="center_vertical"
            android:hint="@string/product_search_hint"
            android:paddingLeft="@dimen/sixteen_dp"
            android:textColor="@color/black"
            android:textColorHint="@color/product_search_hint"
            android:textSize="16sp"
            app:WTextView_font="myriadpro_regular" />

        <ImageView
            android:id="@+id/imBarcodeScanner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/barcode" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/appbar_background"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/black"
        app:tabMode="fixed"
        app:tabPaddingEnd="2dp"
        app:tabPaddingStart="2dp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="#40000000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tabs_main" />

</android.support.constraint.ConstraintLayout>