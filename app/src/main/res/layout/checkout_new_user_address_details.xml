<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/twenty_four_dp">

    <TextView
        android:id="@+id/myAddressTitle"
        style="@style/futura_semi_bold_black"
        android:contentDescription="@string/cd_ccd_labledeliverydetailstitle"
        android:paddingTop="@dimen/two_dp"
        android:paddingBottom="@dimen/two_dp"
        android:text="@string/my_address_details"
        android:textSize="@dimen/eighteen_sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="@id/top_guideline" />

    <TextView
        android:id="@+id/myAddressType"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="@string/address_type"
        android:textSize="@dimen/fourteen_sp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/myAddressTitle"/>

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/four_dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myAddressType">

        <LinearLayout
            android:id="@+id/delivering_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/twenty_dp"
            android:paddingEnd="@dimen/twelve_dp" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/deliveringAddressTypesErrorMsg"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/delivering_address_types_error_msg"
        android:textColor="@color/input_error_color_code"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/scrollView" />

    <TextView
        android:id="@+id/addressNicknamePlaceHolder"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:contentDescription="@string/cd_ccd_labelsuburb"
        android:text="@string/address_nickname_text_view"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/deliveringAddressTypesErrorMsg" />

    <EditText
        android:id="@+id/addressNicknameEditText"
        style="@style/checkout_edittext_style"
        android:layout_width="0dp"
        android:inputType="textEmailAddress"
        android:maxLength="@integer/forty"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/addressNicknamePlaceHolder" />

    <TextView
        android:id="@+id/addressNicknameErrorMsg"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/address_nickname_error_msg"
        android:textColor="@color/input_error_color_code"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/addressNicknameEditText" />

    <TextView
        android:id="@+id/unitComplexFloorPlaceHolder"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:contentDescription="@string/cd_ccd_labelstreetaddress"
        android:text="@string/unit_complex_floor_text_view"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/addressNicknameErrorMsg" />


    <EditText
        android:id="@+id/unitComplexFloorEditText"
        style="@style/checkout_edittext_style"
        android:layout_width="0dp"
        android:background="@drawable/input_box_inactive_bg"
        android:clickable="false"
        android:enabled="false"
        android:hint="@string/optional_hint"
        android:maxLength="@integer/fifty"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/unitComplexFloorPlaceHolder" />

    <TextView
        android:id="@+id/suburbPlaceHolder"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:contentDescription="@string/cd_ccd_labelsuburb"
        android:text="@string/suburb_colon_text_view"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/unitComplexFloorEditText" />

    <EditText
        android:id="@+id/suburbEditText"
        style="@style/checkout_edittext_style"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/thirty_two_dp"
        android:background="@drawable/input_box_inactive_bg"
        android:textColor="@color/non_editable_edit_text_text_color"
        android:textSize="@dimen/sixteen_sp"
        android:enabled="false"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/suburbPlaceHolder" />

    <TextView
        android:id="@+id/provincePlaceHolder"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:contentDescription="@string/cd_ccd_labelprovince"
        android:text="@string/province_colon_text_view"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/suburbEditText" />

        <EditText
            android:id="@+id/provinceAutocompleteEditText"
            style="@style/checkout_edittext_style"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/provincePlaceHolder"
            android:paddingStart="@dimen/sixteen_dp"
            android:paddingEnd="@dimen/thirty_two_dp"
            android:enabled="false"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/input_box_inactive_bg"
            android:textColor="@color/non_editable_edit_text_text_color"
            android:textSize="@dimen/sixteen_sp" />


    <TextView
        android:id="@+id/postalCodePlaceHolder"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:contentDescription="@string/cd_ccd_labelpostalcode"
        android:text="@string/postal_code_colon_text_view"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/provinceAutocompleteEditText" />


    <EditText
        android:id="@+id/postalCode"
        style="@style/checkout_edittext_style"
        android:contentDescription="@string/cd_ccd_txtpostalcode"
        android:imeOptions="actionDone"
        android:layout_marginTop="@dimen/_3sdp"
        android:inputType="number"
        android:enabled="false"
        android:background="@drawable/input_box_inactive_bg"
        android:textColor="@color/non_editable_edit_text_text_color"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/postalCodePlaceHolder" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
