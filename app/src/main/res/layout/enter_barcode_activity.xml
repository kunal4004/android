<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:sothree="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
    </data>

    <za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout
        android:id="@+id/slideUpPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="0dp"
        app:umanoParallaxOffset="0dp"
        app:umanoScrollableView="@+id/scrollProduct"
        sothree:umanoDragView="@+id/detailsView"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoOverlay="false"
        sothree:umanoShadowHeight="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:gravity="center_horizontal">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/mToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/black"
                    android:minHeight="?attr/actionBarSize">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/toolbarText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:letterSpacing="0.2"
                        android:text="@string/enter_barcode"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:WTextView_font="medium_bold"/>
                </android.support.v7.widget.Toolbar>


                <LinearLayout
                    android:id="@+id/linProgressInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/bank_spacing_width"
                    android:paddingRight="@dimen/bank_spacing_width">

                    <ProgressBar
                        android:id="@+id/mProgressBar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"/>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/textInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mToolbar"
                        android:gravity="center"
                        android:letterSpacing="0.2"
                        android:lineSpacingExtra="1.6dp"
                        android:text="@string/enter_barcode_desc"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:WTextView_font="medium"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgBarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linProgressInfo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="27dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/barcode_img"/>

                <za.co.woolworths.financial.services.android.ui.views.WLoanEditTextView
                    android:id="@+id/editBarcodeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imgBarcode"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/bank_spacing_width"
                    android:layout_marginRight="@dimen/bank_spacing_width"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:letterSpacing="0.25"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/recent_search_bg"
                    android:textCursorDrawable="@drawable/colorcursor"
                    android:textSize="20sp"
                    app:WEditTextView_font="medium">

                    <requestFocus/>

                </za.co.woolworths.financial.services.android.ui.views.WLoanEditTextView>

                <View
                    android:id="@+id/horizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/editBarcodeNumber"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="75dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/barcode_button_light"/>

                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/btnBarcodeConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalLine"
                    android:layout_marginBottom="@dimen/bank_spacing_width"
                    android:layout_marginLeft="@dimen/bank_spacing_width"
                    android:layout_marginRight="@dimen/bank_spacing_width"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/barcode_btn_border"
                    android:letterSpacing="0.15"
                    android:text="@string/confirm"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:WButton_font="medium"/>

            </RelativeLayout>

            <include layout="@layout/no_connection_handler"/>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/barcode_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout>
</layout>