<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/twenty_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_title_text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/fourteen_dp"
                    android:text="@string/favourite_delivery_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    style="@style/bottom_line"
                    android:layout_marginTop="@dimen/eight_dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvProofIncomeDocument" />


                <TextView
                    style="@style/take_photo_document_desc_style"
                    android:text="@string/favourite_delivery_location_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />


                <View
                    style="@style/bottom_line"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_two_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                <RelativeLayout
                    android:id="@+id/locationSelectedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy_dp"
                    android:paddingStart="@dimen/twenty_four_dp"
                    android:paddingEnd="@dimen/sixteen_dp">

                    <ImageView
                        android:id="@+id/deliverLocationIcon"
                        android:layout_width="@dimen/twenty_four_dp"
                        android:layout_height="@dimen/twenty_four_dp"
                        android:contentDescription="@string/delivery_location"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_delivery_truck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/sixteen_dp"
                        android:layout_toStartOf="@+id/editLocation"
                        android:layout_toEndOf="@+id/deliverLocationIcon"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDeliveringTo"
                            style="@style/style_cart_delivery_to_text"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/opensans_semi_bold"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/four_dp"
                            android:gravity="center_vertical"
                            android:text="@string/delivery_or_collection" />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvDeliveryLocation"
                            style="@style/style_cart_delivery_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/sixteen_dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconCaretEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/close_icon_tapped"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:src="@drawable/ic_caret_black" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/editLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:letterSpacing="0.1"
                        android:text="@string/edit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp"
                        android:visibility="invisible"
                        app:WTextView_font="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/biometricsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:background="@color/white"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvProofIncomeDocument"
                    style="@style/cli_permission_title_text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/fourteen_dp"
                    android:text="@string/biometrics_authentication"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/vBottomLine"
                    style="@style/bottom_line"
                    android:layout_marginTop="@dimen/eight_dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvProofIncomeDocument" />


                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/take_photo_document_desc_style"
                    android:text="@string/biometrics_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />


                <View
                    android:id="@+id/vBottomLineDescription"
                    style="@style/bottom_line"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_two_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/opensans_semi_bold_13_black_text_style"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/twenty_four_dp"
                        android:drawablePadding="@dimen/sixteen_dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="0.4sp"
                        android:text="@string/authenticate_with_touch_id"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_touch_id" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/biometricAuthenticationSwitchCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/sixteen_dp"
                        android:theme="@style/SwitchTheme" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkDeviceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvLinkedDevices"
                    style="@style/cli_permission_title_text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/fourteen_dp"
                    android:text="@string/my_preferences_linked_devices_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/vLinkedDevicesSeparator"
                    style="@style/bottom_line"
                    android:layout_marginTop="@dimen/eight_dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvProofIncomeDocument" />


                <TextView
                    android:id="@+id/tvLinkedDevicesDesc"
                    style="@style/take_photo_document_desc_style"
                    android:text="@string/my_preferences_linked_devices_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />


                <View
                    android:id="@+id/vLinkedDevicesDescSeparator"
                    style="@style/bottom_line"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_two_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy_dp">

                    <TextView
                        android:id="@+id/linkThisDeviceTextView"
                        style="@style/opensans_semi_bold_13_black_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/twenty_four_dp"
                        app:drawableStartCompat="@drawable/ic_device_link"
                        android:drawablePadding="@dimen/sixteen_dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="0.4sp"
                        android:text="@string/my_preferences_link_this_device"
                        android:textColor="@color/black"
                       />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/linkDeviceSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/sixteen_dp"
                        android:theme="@style/SwitchTheme" />

                    <LinearLayout
                        android:id="@+id/retryLinkDeviceLinearLayout"
                        style="@style/retryAccountLandingStyle"
                        android:paddingEnd="@dimen/twenty_five_dp"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/retryLinkDeviceTextView"
                            style="@style/retryAccountLandingTextViewStyle"
                            android:text="@string/retry" />

                        <ImageView
                            android:id="@+id/retryLinkDeviceImageView"
                            style="@style/retryImageViewStyle"
                            app:srcCompat="@drawable/refresh_account_drawable_icon"
                            android:contentDescription="@string/link_device_confirm_button" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/bottom_line"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp" />

                <RelativeLayout
                    android:id="@+id/viewAllLinkedDevicesRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy_dp">

                    <TextView
                        android:id="@+id/tvMyPrefManageDevicesTitle"
                        style="@style/opensans_semi_bold_13_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/twenty_four_dp"
                        android:drawableStart="@drawable/ic_linked_devices"
                        android:drawablePadding="@dimen/sixteen_dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="0.4sp"
                        android:text="@string/my_preferences_linked_devices"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/twenty_dp"
                        android:src="@drawable/ic_caret_black" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_title_text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/fourteen_dp"
                    android:text="@string/delete_your_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    style="@style/bottom_line"
                    android:layout_marginTop="@dimen/eight_dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvProofIncomeDocument" />


                <TextView
                    style="@style/take_photo_document_desc_style"
                    android:text="@string/delete_account_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vBottomLine" />


                <View
                    style="@style/bottom_line"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_two_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                <RelativeLayout
                    android:id="@+id/deleteAccountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy_dp"
                    android:paddingStart="@dimen/twenty_four_dp"
                    android:paddingEnd="@dimen/sixteen_dp">

                    <ImageView
                        android:id="@+id/deleteAccountIcon"
                        android:layout_width="@dimen/twenty_four_dp"
                        android:layout_height="@dimen/twenty_four_dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_delete_account" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/sixteen_dp"
                        android:layout_toEndOf="@+id/deleteAccountIcon"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDeleteAccount"
                            style="@style/style_cart_delivery_to_text"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/opensans_semi_bold"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/four_dp"
                            android:gravity="center_vertical"
                            android:text="@string/start_the_process" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconDeleteAccountEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:src="@drawable/ic_caret_black" />


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myPreProgressLayout"
        android:gravity="center"
       >
    <include
        android:id="@+id/incCenteredProgress"
        layout="@layout/progress_layout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
