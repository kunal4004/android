<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four_dp"
        android:background="@drawable/refine_item_background">

        <RadioButton
            android:id="@+id/sortSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:button="@drawable/shopping_list_item_selector"
            android:clickable="false" />

        <TextView
            android:id="@+id/sortOptionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/fourteen_sp"
            android:textColor="@color/color_222222"
            android:layout_toEndOf="@+id/sortSelector"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            />

    </RelativeLayout>
</LinearLayout>