<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/twenty_four_dp">

    <include
        android:id="@+id/newShoppingBagsLayout"
        layout="@layout/new_shopping_bags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/viewHorizontalSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eight_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/color_F3F3F3"
        app:layout_constraintTop_toBottomOf="@id/newShoppingBagsLayout" />

    <TextView
        android:id="@+id/txtNeedBags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:fontFamily="@font/myriad_pro_regular"
        android:text="@string/native_checkout_delivery_instructions_need_bags"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHorizontalSeparator" />

    <Switch
        android:id="@+id/switchNeedBags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="@id/txtNeedBags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtNeedBags" />

    <View
        android:id="@+id/shoppingBagSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        app:layout_goneMarginTop="@dimen/_minus2sdp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/txtNeedBags" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/instructionTxtShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shoppingBagSeparator">

        <TextView
            android:id="@+id/txtSpecialDeliveryInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/myriad_pro_regular"
            android:text="@string/native_checkout_delivery_special_instructions"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/specialInstructionSwitchShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintTop_toBottomOf="@id/shoppingBagSeparator"
        app:layout_constraintEnd_toEndOf="parent">

        <Switch
            android:id="@+id/switchSpecialDeliveryInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/SwitchTheme" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtTxtInputLayoutSpecialDeliveryInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:visibility="gone"
        app:counterMaxLength="240"
        app:hintEnabled="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructionTxtShimmerFrameLayout">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTxtSpecialDeliveryInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_edittext"
            android:fontFamily="@font/myriad_pro_regular"
            android:gravity="start|top"
            android:hint="@string/native_checkout_delivery_special_instructions_hint"
            android:maxLength="240"
            android:minHeight="@dimen/hundred_and_twenty_dp"
            android:padding="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/fifteen_sp"
            android:visibility="gone" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/viewHorizontalSeparator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/edtTxtInputLayoutSpecialDeliveryInstruction" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/giftInstructionTxtShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator2">

        <TextView
            android:id="@+id/txtGiftInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/myriad_pro_regular"
            android:text="@string/native_checkout_delivery_gift_instructions"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/giftInstructionSwitchShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator2"
        app:layout_constraintEnd_toEndOf="parent">

        <Switch
            android:id="@+id/switchGiftInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/SwitchTheme" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtTxtInputLayoutGiftInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:visibility="gone"
        app:counterEnabled="false"
        app:counterMaxLength="240"
        app:hintEnabled="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/giftInstructionTxtShimmerFrameLayout">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTxtGiftInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_edittext"
            android:fontFamily="@font/myriad_pro_regular"
            android:gravity="start|top"
            android:hint="@string/native_checkout_delivery_gift_instructions_hint"
            android:maxLength="240"
            android:minHeight="@dimen/hundred_and_twenty_dp"
            android:padding="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/fifteen_sp"
            android:visibility="gone"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtGiftInstructions" />

    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>