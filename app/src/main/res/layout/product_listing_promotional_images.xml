<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="0dp"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/imReducedImage"
        style="@style/promotionLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minHeight="24dp"
        android:layout_marginBottom="2dp"
        android:scaleType="fitStart"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imFreeGiftImage"
        style="@style/promotionLayoutStyle" />

    <ImageView
        android:id="@+id/imNewImage"
        style="@style/promotionLayoutStyle" />

    <ImageView
        android:id="@+id/imSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/four_dp"
        android:contentDescription="@string/plp_newPromotionalImage" />

    <ImageView
        android:id="@+id/imReward"
        style="@style/promotionLayoutStyle" />

    <ImageView
        android:id="@+id/imVitality"
        style="@style/promotionLayoutStyle" />

</androidx.appcompat.widget.LinearLayoutCompat>