<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/twelve_dp"
    android:paddingTop="@dimen/twelve_dp"
    android:paddingEnd="@dimen/zero_dp"
    android:paddingBottom="@dimen/zero_dp">

    <ImageView
        android:id="@+id/imReducedImage"
        style="@style/promotionLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/two_dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/twenty_four_dp"
        android:scaleType="fitStart"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imFreeGiftImage"
        style="@style/promotionLayoutStyle" />

    <ImageView
        android:id="@+id/imNewImage"
        style="@style/promotionLayoutStyle" />

    <ImageView
        android:id="@+id/imSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/four_dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plp_newPromotionalImage"
        android:maxHeight="@dimen/twenty_four_dp"
        android:scaleType="fitStart" />

    <ImageView
        android:id="@+id/imReward"
        style="@style/promotionLayoutStyle" />

    <ImageView
        android:id="@+id/imVitality"
        style="@style/promotionLayoutStyle" />

</androidx.appcompat.widget.LinearLayoutCompat>