<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="0dp"
    android:paddingEnd="0dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imFreeGiftImage"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plp_newPromotionalImage"
        android:minWidth="24dp" />

    <ImageView
        android:id="@+id/imNewImage"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plp_newPromotionalImage"
        android:minWidth="24dp" />

    <ImageView
        android:id="@+id/imSave"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plp_savePromotionalImage"
        android:minWidth="24dp" />

    <ImageView
        android:id="@+id/imReward"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plp_rewardsPromotionalImage"
        android:minWidth="24dp" />


    <ImageView
        android:id="@+id/imVitality"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plp_vitalityPromotionalImage"
        android:minWidth="24dp" />


</androidx.appcompat.widget.LinearLayoutCompat>