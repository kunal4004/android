<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/twelve_dp"
    android:paddingRight="@dimen/twelve_dp"
    android:paddingBottom="@dimen/eight_dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toastView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_six_dp"
        android:contentDescription="@string/cd_layouttoastmessage"
        android:background="@drawable/items_limits_toast_background"
        android:minHeight="@dimen/fifty_six_dp"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/sixteen_dp">

        <TextView
            android:id="@+id/notificationLogoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_white"
            android:contentDescription="@string/cd_indcartitems"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:textColor="#6C9BD6"
            android:textSize="@dimen/eleven_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notificationTitleTextView"
            style="@style/futura_semi_bold_black_12_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:contentDescription="@string/cd_labelitemadded"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/notificationDescTextView"
            app:layout_constraintStart_toEndOf="@id/notificationLogoTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/notificationDescTextView"
            style="@style/myriad_pro_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/three_dp"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/notificationTitleTextView"
            app:layout_constraintTop_toBottomOf="@id/notificationTitleTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>