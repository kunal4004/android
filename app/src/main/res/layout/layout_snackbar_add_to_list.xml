<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_four_dp"
        android:background="@color/color_CC030303"
        android:paddingHorizontal="@dimen/eighteen_dp"
        android:paddingVertical="@dimen/sixteen_dp">

        <TextView
            android:id="@+id/snackbarTitle"
            style="@style/futura_semi_bold_white_12_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_light"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/snackbarDesc"
            app:layout_constraintEnd_toStartOf="@id/snackbarAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="3 ITEMS ADDED TO FAVOURITES" />

        <TextView
            android:id="@+id/snackbarDesc"
            style="@style/futura_semi_bold_white_12_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_dp"
            android:fontFamily="@font/futura_light"
            android:visibility="gone"
            android:textAllCaps="true"
            android:textSize="@dimen/eight_sp"
            android:letterSpacing="0.1"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/snackbarAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snackbarTitle"
            tools:text="THIS EXCLUDES FREE GIFT ITEMS" />

        <TextView
            android:id="@+id/snackbarAction"
            style="@style/futura_semi_bold_white_12_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="@string/view"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>