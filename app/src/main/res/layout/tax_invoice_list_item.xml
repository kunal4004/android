<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/my_orders_textview_style_2"
            android:layout_alignParentLeft="true"
            android:letterSpacing="0.08"
            android:text="@string/invoice_number"
            android:textAllCaps="true"
            android:textColor="@color/offer_title_50"
            android:textSize="15sp"
            app:WTextView_font="medium" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/taxNumber"
            style="@style/my_orders_textview_style_3"
            android:letterSpacing="0.08"
            android:textColor="@color/offer_title" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_light_overlay" />

</LinearLayout>