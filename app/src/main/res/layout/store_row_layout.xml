<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixty_five_dp"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CollectionDatesBottomSheetDialog">


    <ImageView
        android:src="@drawable/oval"
        android:id="@+id/imgAddressSelector"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@drawable/shopping_list_item_selector"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:id="@+id/tvAddressNickName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/myriad_pro_semi_bold_black_15_text_style"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintBottom_toTopOf="@+id/tvAddress"
        app:layout_constraintStart_toEndOf="@+id/imgAddressSelector"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="@integer/thirty"
        android:maxWidth="@dimen/two_hundred_ten_dp"
        android:text="Constantia Emporium"
        />


    <TextView
        android:id="@+id/tvAddress"
        android:layout_height="@dimen/thirty_five_dp"
        android:layout_width="@dimen/two_hundred_and_fifty_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAddressSelector"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressNickName"
        android:textColor="@color/color_444444"
        style="@style/myriad_pro_regular_black_14_text_style"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Constantia Emporium, Ladies Mile Rd, Constantia, Cape Town, 7806"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/twelve_dp"
        app:layout_constraintVertical_bias="0.31"
        >
    <TextView
        android:id="@+id/txtStoreDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="400 m"
        style="@style/futura_semi_bold_white_12_text_style"
        android:background="@color/light_blue"
        android:paddingStart="@dimen/twelve_dp"
        android:paddingEnd="@dimen/twelve_dp"
        android:paddingTop="@dimen/seven_dp"
        android:paddingBottom="@dimen/seven_dp"
        />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>