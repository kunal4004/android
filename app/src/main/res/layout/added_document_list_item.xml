<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relDeaBank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_divider_list"
    android:gravity="center"
    android:paddingBottom="@dimen/twenty_five_dp"
    android:paddingTop="@dimen/twenty_five_dp">

    <ImageView
        android:id="@+id/imgDocument"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/transactions"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvDocumentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/two_dp"
        android:layout_marginStart="@dimen/thirteen_dp"
        android:layout_toEndOf="@+id/imgDocument"
        android:letterSpacing="0.2"
        android:text="Standard Bank"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:WTextView_font="medium_bold"/>

    <ImageView
        android:id="@+id/imgRemoveDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/signout_24"/>

</RelativeLayout>