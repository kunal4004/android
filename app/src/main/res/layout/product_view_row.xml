<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    app:alignContent="stretch"
    app:alignItems="stretch"
    app:flexWrap="wrap">

   <include layout="@layout/product_promo"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/horizontal_line" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:ellipsize="end"
        android:gravity="top|start"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="1.6dp"
        android:maxLines="3"
        android:minLines="3"
        android:textColor="@color/black_desc_opacity_light"
        android:textSize="14sp"
        app:WTextView_font="medium" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/linPriceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="bottom|start"
            android:letterSpacing="0.03"
            android:maxLines="2"
            android:text="10e0djdjdhfh"
            android:paddingRight="2dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:WTextView_font="medium_bold"
            app:layout_alignSelf="flex_start" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textWasPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textAmount"
            android:gravity="bottom|start"
            android:letterSpacing="0.03"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:WTextView_font="medium_bold"
            app:layout_alignSelf="flex_end" />
    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>