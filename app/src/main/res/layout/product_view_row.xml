<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:background="@drawable/card_shadow"
                                          app:alignContent="stretch"
                                          app:alignItems="stretch"
                                          app:flexWrap="wrap">

    <include
        layout="@layout/product_promo"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:maxHeight="204dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/horizontal_line"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:ellipsize="end"
        android:gravity="top|start"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="2sp"
        android:maxLines="3"
        android:minLines="3"
        android:textColor="@color/product_text_color"
        android:textSize="14sp"
        app:WTextView_font="medium"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/linPriceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="bottom|start"
                android:letterSpacing="0.03"
                android:paddingRight="1dp"
                android:text="R1200"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium_bold"
                app:layout_alignSelf="flex_start"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textWasPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textAmount"
                android:gravity="bottom|start"
                android:letterSpacing="0.03"
                android:textColor="@color/red"
                android:textSize="14sp"
                app:WTextView_font="medium_bold"
                app:layout_alignSelf="flex_end"/>
        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>
</com.google.android.flexbox.FlexboxLayout>