<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/product_promo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/horizontal_line" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:ellipsize="end"
        android:gravity="top|start"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="1.6dp"
        android:maxLines="3"
        android:minLines="3"
        android:textColor="@color/black_desc_opacity_light"
        android:textSize="14sp"
        app:WTextView_font="medium" />

    <LinearLayout
        android:id="@+id/linPriceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:gravity="bottom"
        android:orientation="horizontal">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textLabelAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="bottom|start"
            android:letterSpacing="0.03"
            android:text="@string/product_from"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            app:WTextView_font="medium_bold" />


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textWasPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/textAmount"
            android:gravity="bottom|start"
            android:letterSpacing="0.03"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:WTextView_font="medium_bold" />
    </LinearLayout>

</LinearLayout>