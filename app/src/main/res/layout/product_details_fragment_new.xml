<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.product.detail.updated.ProductDetailsFragmentNew">

    <data>

        <import type="android.view.View" />

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.detail.updated.ProductDetailsFragmentNew" />

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.detail.updated.ProductDetailsViewModelNew" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollProductDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="500dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/mProductDetailPager"
                            android:layout_width="match_parent"
                            android:layout_height="500dp" />

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            app:ci_drawable="@drawable/page_control_active"
                            app:ci_drawable_unselected="@drawable/page_control_inactive"
                            app:ci_gravity="center_horizontal"
                            />

                    </RelativeLayout>

                    <include
                        layout="@layout/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="0dp"
                        android:visibility="visible" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tvSubCategoryTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:ellipsize="end"
                        android:gravity="top|start"
                        android:letterSpacing="0.1"
                        android:text="new arrivals"
                        android:textAllCaps="true"
                        android:textColor="@color/black_desc_opacity"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:WTextView_font="medium" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sixteen_dp"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginStart="@dimen/default_margin"
                        android:gravity="top|start"
                        android:letterSpacing="0"
                        android:text="Navy Blue Polka Dot Cotton Shirt"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:WTextView_font="bold" />

                    <include
                        android:id="@+id/lineBelowProductName"
                        layout="@layout/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginStart="@dimen/default_margin" />

                    <include
                        android:id="@+id/priceLayout"
                        layout="@layout/product_details_price_layout" />

                    <include
                        android:id="@+id/incProductColorTopLine"
                        layout="@layout/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin" />

                    <include
                        android:id="@+id/incProductColor"
                        layout="@layout/product_color_row"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/colorSizeLayout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/llColorSize"
                            layout="@layout/color_size_picker" />
                    </LinearLayout>

                    <include
                        android:id="@+id/incProductColorBottomLine"
                        layout="@layout/line" />

                    <LinearLayout
                        android:id="@+id/llLoadingColorSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="@dimen/default_margin"
                        android:gravity="start|bottom"
                        android:orientation="horizontal">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvLoadingColorSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="start"
                            android:text="@string/product_loading_color_size"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="15sp"
                            app:WTextView_font="myriadpro_regular" />

                        <za.co.woolworths.financial.services.android.ui.views.LoadingDots
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="6dp"
                            app:LoadingDots_dots_color="@color/black_desc_opacity"
                            app:LoadingDots_dots_count="3"
                            app:LoadingDots_dots_size="2dp"
                            app:LoadingDots_dots_space="2dp"
                            app:LoadingDots_jump_height="2dp"
                            app:LoadingDots_loop_start_delay="50" />

                    </LinearLayout>

                    <za.co.woolworths.financial.services.android.ui.views.WButton
                        android:id="@+id/btnAddShoppingList"
                        style="@style/whiteWButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginStart="@dimen/default_margin"
                        android:letterSpacing="0.15"
                        android:enabled="false"
                        app:WButton_font="medium_bold"
                        android:text="@string/add_to_shopping_list" />

                    <za.co.woolworths.financial.services.android.ui.views.WrapContentWebView
                        android:id="@+id/webDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:nestedScrollingEnabled="false">

                    </za.co.woolworths.financial.services.android.ui.views.WrapContentWebView>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/productCode"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginTop="@dimen/default_margin"
                        android:gravity="start"
                        android:textColor="@color/black_desc_opacity"
                        android:textSize="15sp"
                        app:WTextView_font="myriadpro_regular" />

                    <LinearLayout
                        android:id="@+id/loadingInfoView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginTop="@dimen/default_margin"
                        android:gravity="start|bottom"
                        android:orientation="horizontal">
                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="start"
                            android:text="@string/loading_product_info"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="15sp"
                            app:WTextView_font="myriadpro_regular" />
                        <za.co.woolworths.financial.services.android.ui.views.LoadingDots
                            android:id="@+id/product_load_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="6dp"
                            android:visibility="visible"
                            app:LoadingDots_dots_color="@color/black_desc_opacity"
                            app:LoadingDots_dots_count="-3"
                            app:LoadingDots_dots_size="2dp"
                            app:LoadingDots_dots_space="1dp"
                            app:LoadingDots_jump_height="1dp"
                            app:LoadingDots_loop_start_delay="50" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linIngredient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <include
                            android:id="@+id/ingredientLine"
                            layout="@layout/line" />
                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin"
                            android:gravity="start|top"
                            android:letterSpacing="0.2"
                            android:text="@string/ingredients"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:WTextView_font="medium_bold" />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/ingredientList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginTop="17dp"
                            android:gravity="start|top"
                            android:lineSpacingExtra="2dp"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="15sp"
                            app:WTextView_font="myriadpro_regular" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <include
                android:id="@+id/llAddToCartFindInStore"
                layout="@layout/product_details_addtocart_findinstore_buttons" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/icon_close_circle" />

    </FrameLayout>
</layout>