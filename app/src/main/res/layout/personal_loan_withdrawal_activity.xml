<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_above="@+id/personal_loan_withdrawal_activity_gray_wrapper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_micro"
                android:text="@string/withdraw_amount"
                android:id="@+id/personal_loan_withdrawal_activity_amount_label"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/personal_loan_withdrawal_activity_amount_minus"
                    android:background="@drawable/minus_selector"
                    tools:ignore="ContentDescription" />

                <za.co.woolworths.financial.services.android.ui.views.WSeekBar
                    android:id="@+id/personal_loan_withdrawal_activity_amount_seek"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/personal_loan_withdrawal_activity_amount_plus"
                    android:background="@drawable/plus_selector"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                tools:text="R 10 000.00"
                android:gravity="center"
                android:id="@+id/personal_loan_withdrawal_activity_amount_text"
                app:WTextView_font="medium"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/light_gray"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_micro"
                android:text="@string/withdraw_repayment_period" />


            <SeekBar
                android:id="@+id/personal_loan_withdrawal_activity_months_seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp" />


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/personal_loan_withdrawal_activity_months_text"
                app:WTextView_font="medium"
                android:textSize="@dimen/text_large" />

            <LinearLayout

                android:layout_marginTop="16dp"
                android:id="@+id/personal_loan_withdrawal_activity_months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_loan_withdrawal_activity_gray_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:layout_above="@+id/bottomButton"
        android:background="@color/light_gray">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:textSize="@dimen/text_micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available_funds" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:textSize="@dimen/text_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_loan_withdrawal_activity_available_funds" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="match_parent"
            android:src="@color/white"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:textSize="@dimen/text_micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_balance" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:textSize="@dimen/text_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_loan_withdrawal_activity_current_balance" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/personal_loan_selector"
        android:orientation="vertical">
    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/personal_loan_withdrawal_activity_action"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/next"
        android:textSize="@dimen/text_small"
        android:textColor="@color/white"
        android:background="@drawable/personal_loan_selector"
        android:drawableRight="@drawable/ic_caret_white"/>
    </LinearLayout>
</RelativeLayout>