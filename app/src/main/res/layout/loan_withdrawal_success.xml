<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/relLoanWithdrawalSuccess"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/purple"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personalLoanSuccessful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/personalloansuccessful"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    
    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="296dp"
        android:layout_height="38dp"
        android:layout_below="@+id/personalLoanSuccessful"
        android:text="@string/your_cash_will_be_in_your_account"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:letterSpacing="0.4"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:lineSpacingExtra="7sp"
        app:WTextView_font="medium_bold"
        android:layout_marginTop="24dp"
        />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="296dp"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:text="Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed Lorum ipsum lodor sit ahmed "
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:letterSpacing="0.4"
        android:gravity="center"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:lineSpacingExtra="4sp"
        app:WTextView_font="myriadpro_regular"
        android:layout_gravity="center"
        android:id="@+id/WTextView2" />


    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:text="Ok"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"/>



</LinearLayout>