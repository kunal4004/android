<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addressSelectionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/sixty_four_dp"
    android:paddingStart="@dimen/ten_dp"
    android:paddingEnd="@dimen/ten_dp"
    app:layout_constraintTop_toTopOf="parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/selectorShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline">

        <CheckBox
            android:id="@+id/selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/shopping_list_item_selector"
            android:clickable="false"
            tools:ignore="MissingConstraints" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/titleShimmerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:layout_marginEnd="@dimen/twenty_eight_dp"
        android:background="@color/shimmer_view_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/editAddressImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/selectorShimmerFrameLayout"
        app:layout_constraintTop_toBottomOf="@+id/top__title_guideline">

        <TextView
            android:id="@+id/title"
            style="@style/myriad_pro_semi_bold_black_15_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:text="@string/title_text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/subtitleShimmerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/two_dp"
        android:layout_marginEnd="@dimen/twenty_eight_dp"
        android:background="@color/shimmer_view_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/editAddressImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/selectorShimmerFrameLayout"
        app:layout_constraintTop_toBottomOf="@+id/titleShimmerLayout">

        <TextView
            android:id="@+id/subTitle"
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:text="@string/subtitle_text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/checkout_delivering_title"
            android:textSize="@dimen/fourteen_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ImageView
        android:id="@+id/editAddressImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/four_dp_"
        android:contentDescription="@string/edit_address"
        android:minWidth="@dimen/sixteen_dp"
        android:minHeight="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline"
        app:srcCompat="@drawable/icon_edit_row"
        tools:ignore="MissingConstraints" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/slotPriceButtonShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline">

        <TextView
            android:id="@+id/slotPriceButton"
            style="@style/futura_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_dp_"
            android:background="@drawable/slot_price_button"
            android:paddingStart="@dimen/seven_dp"
            android:paddingTop="@dimen/four_dp_"
            android:paddingEnd="@dimen/seven_dp"
            android:paddingBottom="@dimen/four_dp_"
            android:text="@string/dummy_currency"
            android:textColor="@color/white"
            android:textSize="@dimen/eleven_sp"
            android:visibility="gone" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/eighteen_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top__title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/ten_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>