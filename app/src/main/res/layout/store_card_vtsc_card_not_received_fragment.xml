<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/content_below_toolbar_height">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:contentDescription="@string/has_your_card_not_arrived_in_the_post"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center|start"
        android:letterSpacing="0.07"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/vtsc_card_not_arrived_title"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionTextView"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_44sdp"
        android:contentDescription="@string/copy_text_has_your_card_not_arrived_in_the_post"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:gravity="center|start"
        android:lineSpacingExtra="@dimen/_4sdp"
        android:text="@string/vtsc_card_not_arrived_desc"
        android:textColor="@color/description_color"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintBottom_toTopOf="@+id/cardHasNotArrivedTextView"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start_guideline" />

    <TextView
        android:id="@+id/cardHasNotArrivedTextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty_two_dp"
        android:background="@color/black"
        android:contentDescription="@string/button_my_card_hasnt_arrived"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:stateListAnimator="@null"
        android:text="@string/vtsc_card_not_arrived_button_caption"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintBottom_toTopOf="@+id/myCardHasArrivedTextView"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/notifyCardNotReceivedProgressbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/white"
        android:padding="@dimen/four_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/cardHasNotArrivedTextView"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        app:layout_constraintTop_toTopOf="@+id/cardHasNotArrivedTextView" />

    <TextView
        android:id="@+id/myCardHasArrivedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/button_my_card_has_arrived"
        android:gravity="center"
        android:paddingTop="@dimen/_16sdp"
        android:text="@string/my_card_has_arrived"
        android:textAllCaps="true"
        android:textColor="@color/chat_offline_banner_bg_color"
        app:layout_constraintBottom_toTopOf="@+id/bottomView"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline" />

    <ImageView
        android:id="@+id/envelopIconImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/envelope_image"
        app:layout_constraintBottom_toTopOf="@+id/headerTextView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        app:srcCompat="@drawable/store_card_not_delivered_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>