<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/eighteen_dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/actualPriceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textActualPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_medium_ttf"
            android:gravity="top|start"
            android:letterSpacing="-0.01"
            android:paddingEnd="@dimen/two_dp"
            android:paddingStart="0dp"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="@dimen/twenty_two_sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/fromPricePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_medium_ttf"
            android:gravity="top|start"
            android:letterSpacing="-0.01"
            android:textColor="@color/red_color"
            android:textSize="@dimen/twenty_two_sp"
            android:paddingStart="@dimen/four_dp" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_medium_ttf"
            android:gravity="top|start"
            android:letterSpacing="-0.01"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_two_sp"
            android:paddingStart="@dimen/two_dp"/>

    </LinearLayout>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvSaveText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actualPriceLayout"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:gravity="top|start"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        android:textSize="@dimen/twelve_sp"
        android:visibility="gone"
        app:WTextView_font="medium" />

    <LinearLayout
        android:id="@+id/promotionalImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end|center_vertical"
        android:orientation="horizontal" />

</RelativeLayout>
