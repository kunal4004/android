<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@null"
                app:titleEnabled="false">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clinumbersprogress_0"/>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:id="@+id/linStepIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical">

            <View xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/black_desc_opacity"/>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/mNestedScrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/llNestedDeoBank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linRootView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bank_spacing_width"
                        android:layout_marginRight="@dimen/bank_spacing_width"
                        android:layout_marginTop="@dimen/default_margin"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="44dp">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:id="@+id/textACreditLimit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imgInfo"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/imgInfo"
                                android:layout_toStartOf="@+id/imgInfo"
                                android:gravity="center|start"
                                android:letterSpacing="0.09"
                                android:lineSpacingExtra="1.3dp"
                                android:maxLines="2"
                                android:text="@string/cli_credit_limit_amount"
                                android:textAllCaps="true"
                                android:textColor="@color/black_desc_opacity"
                                android:textSize="14sp"
                                app:WTextView_font="medium"/>

                            <ImageView
                                android:id="@+id/imgInfo"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/icon_info"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llCurrencyContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:orientation="horizontal"
                            android:paddingBottom="9dp">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView style="@style/editCurrencyStyle"/>

                            <za.co.woolworths.financial.services.android.ui.views.WEditTextView
                                android:id="@+id/textAmount"
                                style="@style/editCurrencyValue"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bank_spacing_width"
                        android:layout_marginRight="@dimen/bank_spacing_width"
                        android:layout_marginTop="@dimen/bank_spacing_width"
                        android:orientation="vertical">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/textApplySolvency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imgInfo"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/imgInfo"
                            android:layout_toStartOf="@+id/imgInfo"
                            android:gravity="center|start"
                            android:letterSpacing="0.08"
                            android:lineSpacingExtra="4dp"
                            android:text="@string/cli_solvency_agreement"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="14sp"
                            app:WTextView_font="medium"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_margin"
                            android:orientation="horizontal">

                            <TextView style="@style/account_logged_out_bullet_gray"/>

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                style="@style/account_logged_out_list_bullet_gray"
                                android:text="@string/cli_text_with_bullet_1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView style="@style/account_logged_out_bullet_gray"/>

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                style="@style/account_logged_out_list_bullet_gray"
                                android:text="@string/cli_text_with_bullet_2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView style="@style/account_logged_out_bullet_gray"/>

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                style="@style/account_logged_out_list_bullet_gray"
                                android:text="@string/cli_text_with_bullet_3"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView style="@style/account_logged_out_bullet_gray"/>

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                style="@style/account_logged_out_list_bullet_gray"
                                android:text="@string/cli_text_with_bullet_4"/>
                        </LinearLayout>


                        <RadioGroup
                            android:id="@+id/radApplySolvency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <za.co.woolworths.financial.services.android.ui.views.WRadioButton
                                android:id="@+id/radioYesSolvency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:button="@null"
                                android:checked="false"
                                android:drawableLeft="@drawable/cli_radio_selector"
                                android:drawablePadding="10dp"
                                android:gravity="right|center"
                                android:letterSpacing="0.2"
                                android:text="@string/cli_yes"
                                android:textAllCaps="true"
                                android:textSize="12sp"

                                />

                            <za.co.woolworths.financial.services.android.ui.views.WRadioButton
                                android:id="@+id/radioNoSolvency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="36dp"
                                android:background="@android:color/transparent"
                                android:button="@null"
                                android:drawableLeft="@drawable/cli_radio_selector"
                                android:drawablePadding="10dp"
                                android:gravity="right|center"
                                android:letterSpacing="0.2"
                                android:text="@string/cli_no"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                app:WTextView_font="medium_bold"/>
                        </RadioGroup>

                        <include layout="@layout/horizontal_divider"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/bank_spacing_width"
                        android:layout_marginRight="@dimen/bank_spacing_width"
                        android:layout_marginTop="@dimen/bank_spacing_width"
                        android:orientation="vertical">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/textProceedToSolvency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/imgInfo"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="5dp"
                            android:gravity="center|start"
                            android:letterSpacing="0.09"
                            android:lineSpacingExtra="4dp"
                            android:text="@string/cli_proceed_to_permission"
                            android:textAllCaps="true"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:WTextView_font="medium"/>

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/textConfidentialCredit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imgInfo"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/imgInfo"
                            android:layout_toStartOf="@+id/imgInfo"
                            android:gravity="center|start"
                            android:lineSpacingExtra="4dp"
                            android:text="@string/cli_solvency_agreement"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="15sp"
                            app:WTextView_font="myriadpro_regular"/>


                        <RadioGroup
                            android:id="@+id/radConfidentialCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <za.co.woolworths.financial.services.android.ui.views.WRadioButton
                                android:id="@+id/radioYesConfidentialCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:button="@null"
                                android:checked="false"
                                android:drawableLeft="@drawable/cli_radio_selector"
                                android:drawablePadding="10dp"
                                android:gravity="right|center"
                                android:letterSpacing="0.2"
                                android:text="@string/cli_yes"
                                android:textAllCaps="true"
                                android:textSize="12sp"/>

                            <za.co.woolworths.financial.services.android.ui.views.WRadioButton
                                android:id="@+id/radioNoConfidentialCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="36dp"
                                android:background="@android:color/transparent"
                                android:button="@null"
                                android:checked="false"
                                android:drawableLeft="@drawable/cli_radio_selector"
                                android:drawablePadding="10dp"
                                android:gravity="right|center"
                                android:letterSpacing="0.2"
                                android:text="@string/cli_no"
                                android:textAllCaps="true"
                                android:textSize="12sp"/>
                        </RadioGroup>

                        <include layout="@layout/horizontal_divider"/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:fastScrollEnabled="false"/>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/textConfirmInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bank_spacing_width"
                        android:layout_marginRight="@dimen/bank_spacing_width"
                        android:layout_marginTop="@dimen/bank_spacing_width"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="5dp"
                        android:text="@string/cli_confirm_information"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:WTextView_font="medium_bold"/>

                    <include layout="@layout/cli_button_progress"/>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/error_handler"/>

</FrameLayout>