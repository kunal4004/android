<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/imBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bank_spacing_width"
            android:layout_marginRight="@dimen/bank_spacing_width"
            android:src="@drawable/back_white"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarText"
            android:letterSpacing="0.1"
            app:WTextView_font="medium_bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:text="@string/enter_barcode"
            />
        </android.support.v7.widget.Toolbar>


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textInfo"
        android:paddingRight="@dimen/bank_spacing_width"
        android:paddingLeft="@dimen/bank_spacing_width"
        android:letterSpacing="0.15"
        app:WTextView_font="medium"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="120dp"
        android:textSize="12sp"
        android:lineSpacingExtra="1.6dp"
        android:textColor="@color/white"
        android:text="@string/enter_barcode_desc"
        />

</FrameLayout>