<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:letterSpacing="0.1"
            android:text="@string/enter_barcode"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:WTextView_font="medium_bold" />
    </android.support.v7.widget.Toolbar>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:lineSpacingExtra="1.6dp"
        android:paddingLeft="@dimen/bank_spacing_width"
        android:paddingRight="@dimen/bank_spacing_width"
        android:text="@string/enter_barcode_desc"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:WTextView_font="medium" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/barcode" />


    <za.co.woolworths.financial.services.android.ui.views.WLoanEditTextView
        android:id="@+id/editBarcodeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="@dimen/bank_spacing_width"
        android:layout_marginRight="@dimen/bank_spacing_width"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:digits="0123456789"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:letterSpacing="0.4"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="@color/recent_search_bg"
        android:textCursorDrawable="@drawable/colorcursor"
        android:textSize="20sp"
        app:WEditTextView_font="medium">

        <requestFocus />

    </za.co.woolworths.financial.services.android.ui.views.WLoanEditTextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/bank_spacing_width"
        android:layout_marginRight="@dimen/bank_spacing_width"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/recent_search_bg" />

    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/btnManual"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/bank_spacing_width"
        android:layout_marginLeft="@dimen/bank_spacing_width"
        android:layout_marginRight="@dimen/bank_spacing_width"
        android:layout_marginTop="64dp"
        android:background="@drawable/barcode_btn_border"
        android:letterSpacing="0.1"
        android:text="@string/confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:WButton_font="medium" />

</LinearLayout>