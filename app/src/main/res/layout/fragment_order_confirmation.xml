<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twelve_dp"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/OrderDetailsActivityStyle"
            app:theme="@style/OrderDetailsActivityStyle"
            app:layout_scrollFlags="scroll|enterAlways">


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/helpTextView"
                style="@style/toolbar_menu_text_style"
                android:layout_alignParentRight="true"
                android:text="@string/dash_help"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:textColor="@drawable/refine_toolbar_menu_text_color" />

            <TextView
                android:id="@+id/orderIdText"
                style="@style/appToolbarStyle"
                android:layout_gravity="center|center_vertical" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:src="@drawable/close_24"
                android:visibility="visible" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fourty_dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/nineteen_dp">

            <include
                android:id="@+id/deliveryCollectionDetailsConstraintLayout"
                layout="@layout/delivering_to_collection_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/nineteen_dp" />

            <include
                android:id="@+id/dashDeliveryConstraintLayout"
                layout="@layout/delivering_to_dashing_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nineteen_dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/otherOrderDetailsConstraintLayout"
                layout="@layout/other_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/dashOrderDetailsLayout"
                layout="@layout/dash_order_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/otherOrderDetailsConstraintLayout" />
            <include
                android:id="@+id/cncOrderDetailsLayout"
                layout="@layout/dash_order_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/otherOrderDetailsConstraintLayout" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>