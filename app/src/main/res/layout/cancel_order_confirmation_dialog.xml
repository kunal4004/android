<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:contentDescription="@string/cancel_order_popup_layout">

    <include
        android:id="@+id/incSwipeCloseIndicator"
        layout="@layout/popup_close_header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/chat_with_us_title_style"
        android:layout_marginTop="@dimen/fourty_dp"
        android:contentDescription="@string/cancel_order_popup_confirmation_message"
        android:text="@string/cancel_order"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_two_sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/incSwipeCloseIndicator" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/my_orders_textview_style_2"
        android:layout_marginTop="@dimen/eight_dp"
        android:contentDescription="@string/cancel_order_popup_confirmation_message"
        android:text="@string/please_select_a_reason_for_cancellation"
        android:textColor="@color/color_444444"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <RadioGroup
        android:id="@+id/cancelReasons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/subTitle">

        <RadioButton
            android:id="@+id/radioBtnNeedItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/twelve_dp"
            android:button="@drawable/shopping_list_item_selector"
            android:checked="false"
            android:contentDescription="@string/cd_ccd_radiobtnmyself"
            android:fontFamily="@font/myriad_pro_regular"
            android:paddingStart="@dimen/sixteen_dp"
            android:text="@string/i_don_t_need_the_item_s_anymore"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fifteen_sp" />

        <RadioButton
            android:id="@+id/radioBtnForgotSomething"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/twelve_dp"
            android:button="@drawable/shopping_list_item_selector"
            android:contentDescription="@string/cd_ccd_radiobtnanotherperson"
            android:fontFamily="@font/myriad_pro_regular"
            android:paddingStart="@dimen/sixteen_dp"
            android:text="@string/i_forgot_to_add_something_to_my_order"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fifteen_sp" />

        <RadioButton
            android:id="@+id/radioBtnNeedPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/twelve_dp"
            android:button="@drawable/shopping_list_item_selector"
            android:contentDescription="@string/cd_ccd_radiobtnanotherperson"
            android:fontFamily="@font/myriad_pro_regular"
            android:paddingStart="@dimen/sixteen_dp"
            android:text="@string/i_need_to_place_this_order_for_a_different_time"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fifteen_sp" />

        <RadioButton
            android:id="@+id/radioBtnOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/twelve_dp"
            android:button="@drawable/shopping_list_item_selector"
            android:contentDescription="@string/cd_ccd_radiobtnanotherperson"
            android:fontFamily="@font/myriad_pro_regular"
            android:paddingStart="@dimen/sixteen_dp"
            android:text="@string/other"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fifteen_sp" />
    </RadioGroup>


    <TextView
        android:id="@+id/confirmCancelOrder"
        style="@style/call_to_action_text_style"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/twenty_two_dp"
        android:background="@color/color_A9A9A9"
        android:contentDescription="@string/cancel_order_popup_button_cancel"
        android:text="@string/cancel_order"
        app:layout_constraintBottom_toBottomOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/cancelReasons" />

    <TextView
        android:id="@+id/cancel"
        style="@style/dialog_action_text_style_gray_medium"
        android:layout_marginTop="@dimen/twenty_two_dp"
        android:contentDescription="@string/cancel_order_popup_no_thanks_link"
        android:text="@string/dismiss"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/confirmCancelOrder" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />


</androidx.constraintlayout.widget.ConstraintLayout>