<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="@dimen/six_dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_two_dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/five_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/border_rightside_only"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ellipsize="end"
                    android:fontFamily="@font/futura_semi_bold"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/offerings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/four_dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/futura_medium"
                    android:letterSpacing="0.08"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_medium"
                    android:gravity="center|top"
                    android:text="@string/km"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_eight_dp"
            android:paddingTop="@dimen/eleven_dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/storeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="@dimen/two_sp"
                android:maxLines="2"
                android:paddingRight="@dimen/valid_date_guideline_begin_42dp"
                android:textColor="@color/black"
                android:textSize="@dimen/eleven_sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timeing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:fontFamily="@font/opensans_regular"
                android:paddingBottom="@dimen/twenty_four_dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/eleven_sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>