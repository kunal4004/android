<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/email_height_50"
        android:background="@color/white"
        android:orientation="horizontal">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/sortProducts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/path_3"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="SORT BY"
            android:textColor="@color/black_50"
            android:textSize="12sp"
            app:WTextView_font="medium"
            android:letterSpacing="0.15"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#e4e4e4" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/refineProducts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/path_3"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="REFINE"
            android:textColor="@color/black_50"
            android:textSize="12sp"
            app:WTextView_font="medium"
            android:letterSpacing="0.15"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>