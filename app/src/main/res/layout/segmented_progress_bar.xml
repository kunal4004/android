<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:background="@drawable/bg_segmneted_progress_bar"
        android:id="@+id/btn_first_section"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/eight_dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_second_section"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_second_section"
        android:layout_width="0dp"
        android:layout_height="@dimen/eight_dp"
        android:layout_marginStart="@dimen/one_dp"
        android:background="@drawable/bg_segmneted_progress_bar_selected"
        app:layout_constraintEnd_toStartOf="@+id/btn_third_section"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_first_section"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_third_section"
        android:layout_width="0dp"
        android:layout_height="@dimen/eight_dp"
        android:layout_marginStart="@dimen/one_dp"
        android:background="@drawable/bg_segmneted_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/btn_fourth_section"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_second_section"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fourth_section"
        android:layout_width="0dp"
        android:layout_height="@dimen/eight_dp"
        android:layout_marginStart="@dimen/one_dp"
        android:background="@drawable/bg_segmneted_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/btn_fifth_section"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_third_section"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fifth_section"
        android:layout_width="0dp"
        android:layout_height="@dimen/eight_dp"
        android:layout_marginStart="@dimen/one_dp"
        android:background="@drawable/bg_segmneted_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_fourth_section"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>