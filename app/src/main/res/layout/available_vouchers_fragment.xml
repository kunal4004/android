<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/topLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/one_dp"
        android:background="@color/light_gray_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/errorMessage"
        style="@style/futura_semi_bold_white_12_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_red"
        android:gravity="center"
        android:minHeight="@dimen/sixty_dp"
        android:paddingLeft="@dimen/thirty_two_dp"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingRight="@dimen/thirty_two_dp"
        android:paddingBottom="@dimen/sixteen_dp"
        android:textAllCaps="true"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLine" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/one_dp"
        android:background="@color/light_gray_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/redeemVoucher"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        />

    <TextView
        android:id="@+id/redeemVoucher"
        style="@style/futura_semi_bold_black_12_text_style"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:enabled="false"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="@string/redeem"
        android:textAllCaps="true"
        android:textColor="@drawable/refine_toolbar_menu_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/progressTitle"
        style="@style/futura_semi_bold_black"
        android:layout_marginTop="@dimen/thirty_dp"
        android:gravity="center"
        android:text="@string/applying_your_vouchers"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar" />

    <TextView
        android:id="@+id/description"
        style="@style/body_text_style"
        android:layout_marginTop="@dimen/twelve_dp"
        android:gravity="center"
        android:paddingBottom="@dimen/fifty_dp"
        android:text="@string/processing_your_request_desc"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressTitle" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="progress_bar,progressTitle,description" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/dataLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="scrollableView,redeemVoucher,topLine,bottomLine" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollableView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/errorMessage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:paddingTop="@dimen/sixteen_dp">

            <TextView
                android:id="@+id/title"
                style="@style/myriad_pro_regular_black_15_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/available_vouchers_title"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:lineSpacingMultiplier="1.3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subTitle"
                style="@style/myriad_pro_semi_bold_black_15_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:gravity="center"
                android:paddingLeft="@dimen/thirty_two_dp"
                android:paddingRight="@dimen/thirty_two_dp"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/available_vouchers_sub_title"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvVoucherList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/thirty_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/progress_bar"
        layout="@layout/circle_progress_layout"
        android:layout_width="@dimen/eighty_dp"
        android:layout_height="@dimen/eighty_dp"
        android:layout_marginTop="@dimen/eighty_dp"
        app:layout_constraintBottom_toTopOf="@+id/progressTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>