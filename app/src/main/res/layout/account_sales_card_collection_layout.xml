<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/cardCollectionTitleTextView"
        style="@style/account_sales_card_title_benefit_style"
        android:paddingTop="24dp"
        android:paddingBottom="0dp"
        android:text="@string/card_collection_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardCollectionDescriptionTextView"
        style="@style/account_sales_card_benefit_description_style"
        android:text="@string/storeCard_card_collection_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCollectionTitleTextView" />

    <LinearLayout
        android:id="@+id/cardCollectionItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCollectionDescriptionTextView" />

    <View
        android:id="@+id/view3"
        style="@style/account_sales_card_benefits_bottom_margin_style"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/light_gray_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCollectionItemLinearLayout" />


    <View
        style="@style/account_sales_card_benefits_bottom_margin_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/light_gray_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

</androidx.constraintlayout.widget.ConstraintLayout>