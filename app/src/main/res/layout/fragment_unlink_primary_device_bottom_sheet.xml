<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <include
        android:id="@+id/incSwipeCloseIndicator"
        layout="@layout/popup_close_header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fourty_dp"
        app:layout_constraintBottom_toTopOf="@+id/unlinkDeviceTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/choosePrimaryDeviceContinue"
        style="@style/add_card_button_style.black__background"
        android:layout_marginBottom="@dimen/two_dp"
        android:background="@color/black"
        android:enabled="true"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/unlink_device_continue"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintBottom_toTopOf="@+id/unlinkDeviceCancel"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        tools:ignore="UnusedAttribute" />

    <Button
        android:id="@+id/unlinkDeviceCancel"
        style="@style/add_card_button_style"
        android:layout_marginBottom="@dimen/eight_dp"
        android:background="@color/white"
        android:enabled="true"
        android:fontFamily="@font/futura_medium"
        android:text="@string/cancel"
        android:textAllCaps="true"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/unlinkDeviceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:lineSpacingMultiplier="1.40"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingEnd="@dimen/fifteen_dp"
        android:text="@string/unlink_device_title"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/pmaExpiredDescriptionTextView"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline" />

    <TextView
        android:id="@+id/pmaExpiredDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fourty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/eight_dp"
        android:paddingStart="@dimen/twenty_dp"
        android:paddingEnd="@dimen/twenty_dp"
        android:text="@string/unlink_device_desc"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/choosePrimaryDeviceContinue"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>