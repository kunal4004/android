<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_box"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/close"
            android:layout_gravity="end"
            android:background="@drawable/close_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@color/violet"
            android:gravity="center"
            android:letterSpacing="0.075"
            android:text="@string/text_new"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone"
            app:WTextView_font="medium_bold" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:letterSpacing="0.14"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:WTextView_font="bold" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/black_50"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/actionButton"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:letterSpacing="0.14"
            android:text="SCAN your first PRODUCT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="14sp"
            app:WTextView_font="bold" />

    </LinearLayout>

</RelativeLayout>