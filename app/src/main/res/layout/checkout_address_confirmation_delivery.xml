<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/whereWeDeliveringTitle"
        style="@style/futura_semi_bold_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/two_dp"
        android:paddingBottom="@dimen/two_dp"
        android:text="@string/where_should_we_deliver"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saveAddressRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eighteen_dp"
        android:background="@color/white"
        android:scrollbars="vertical"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/addressListPartition"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/whereWeDeliveringTitle" />

    <View
        android:id="@+id/addressListPartition"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/sign_in_register_button_border"
        app:layout_constraintTop_toBottomOf="@+id/saveAddressRecyclerView" />

    <ImageView
        android:id="@+id/plusImgAddAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/hundred_dp"
        android:minWidth="@dimen/twenty_four_dp"
        android:minHeight="@dimen/twenty_four_dp"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/addressListPartition"
        app:srcCompat="@drawable/add_black" />
    <TextView
        android:id="@+id/addNewAddressTextView"
        style="@style/opensens_semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/hundred_dp"
        android:minHeight="@dimen/twenty_four_dp"
        android:text="@string/add_a_new_address"
        android:textColor="@color/black"
        android:textSize="@dimen/thirteen_sp"
        app:layout_constraintStart_toEndOf="@+id/plusImgAddAddress"
        app:layout_constraintTop_toBottomOf="@+id/addressListPartition" />

    <TextView
        android:id="@+id/addNewAddressErrorMsg"
        style="@style/opensens_regular"
        android:layout_marginTop="@dimen/ten_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/add_new_address_error_msg"
        android:textColor="@color/input_error_color_code"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/plusImgAddAddress" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_six_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/twenty_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
