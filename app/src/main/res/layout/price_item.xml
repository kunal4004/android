<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fromPriceLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="end"
        android:text="From"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvWasPrice"
        app:layout_constraintEnd_toStartOf="@+id/tvWasPrice"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvWasPrice"
        style="@style/style_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center|end"
        android:text="1300"
        android:textColor="@color/was_price_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrice"
        style="@style/style_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="end"
        android:text="100"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWasPrice" />


    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvWasPrice"
        app:layout_constraintEnd_toEndOf="@+id/tvWasPrice"
        app:layout_constraintStart_toStartOf="@+id/tvWasPrice"
        app:layout_constraintTop_toTopOf="@+id/tvWasPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>