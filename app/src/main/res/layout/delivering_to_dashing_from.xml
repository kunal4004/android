<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/optionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="38dp"
        android:background="@drawable/icon_dash_delivery_scooter"
        app:layout_constraintBottom_toTopOf="@id/optionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/optionTitle"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/dashing_to"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/optionImage" />

    <TextView
        android:id="@+id/optionLocationTitle"
        style="@style/futura_semi_bold_black"
        android:layout_marginTop="@dimen/eight_dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/optionTitle"
        tools:text="@string/hint_street_address_dash" />

    <View
        android:id="@+id/separator"
        style="@style/bottom_line"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/optionLocationTitle" />


    <LinearLayout
        android:id="@+id/foodDeliveryLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/twenty_two_dp"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/separator">

        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/food_items_semicolon"
            android:textColor="@color/gray"
            android:textSize="@dimen/fourteen_sp" />

        <TextView
            android:id="@+id/dashFoodDeliveryDateTimeTextView"
            style="@style/myriad_pro_regular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="end"
            android:textColor="@color/gray"
            android:textSize="@dimen/twelve_sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dashDeliveryLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/foodDeliveryLinearLayout">


        <ImageView
            android:id="@+id/optionImageConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:background="@drawable/ic_dash_confirmed_icon" />

        <View
            android:id="@+id/packaging_separator"
            style="@style/bottom_line"
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/optionImagePackaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dash_packaging_icon" />

        <View
            android:id="@+id/packaging_enroute"
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_E5E5E5" />

        <ImageView
            android:id="@+id/optionImageEnroute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dash_enroute" />

        <View
            android:id="@+id/packaging_delivered"
            style="@style/bottom_line"
            android:layout_height="2dp"
            android:layout_width="75dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/optionImageDelivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dash_delivered_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dashStatusLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/dashDeliveryLinearLayout">

        <TextView
            android:id="@+id/dash_confirmed_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:gravity="center_vertical"
            android:text="Confirmed"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="@dimen/eight_sp" />

        <TextView
            android:id="@+id/dash_pacakging_textView"
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_toRightOf="@+id/dash_confirmed_textView"
            android:text="Packaging"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="@dimen/eight_sp" />

        <TextView
            android:id="@+id/dash_enroute_textView"
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_toRightOf="@+id/dash_pacakging_textView"
            android:text="En-route"
            android:textAllCaps="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/eight_sp" />

        <TextView
            android:id="@+id/dash_delivered_textView"
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_toRightOf="@+id/dash_enroute_textView"
            android:text="Delivered"
            android:textAllCaps="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/eight_sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/confirmCancelOrder"
        style="@style/call_to_action_text_style"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:background="@color/black"
        android:contentDescription="@string/continue_browsing"
        android:text="@string/continue_browsing"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/dashStatusLinearLayout" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>