<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/sixteen_dp"
    android:paddingRight="@dimen/sixteen_dp">


    <TextView
        android:id="@+id/tvName"
        style="@style/myriad_pro_semi_bold_black_15_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Amelia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSkinProfile"
        style="@style/futura_medium_black_12_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.5"
        android:text="@string/view_skin_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVerifiedBuyer"
        style="@style/myriad_pro_semi_bold_49BB77_15_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_verified_buyer"
        android:drawablePadding="@dimen/eight_dp"
        android:text="@string/verified_buyer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvVerifiedStaffMember"
        style="@style/myriad_pro_semi_bold_777777_15_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_verified_buyer"
        android:drawablePadding="@dimen/eight_dp"
        android:text="@string/verified_staff_member"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerifiedBuyer"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="@dimen/nine_dp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:background="@color/layout_background_gray"
        app:layout_constraintTop_toBottomOf="@+id/tvVerifiedStaffMember" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/pdpRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nineteen_dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/myriad_pro_regular_black_15_text_style"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nineteen_dp"
        android:alpha="0.5"
        android:gravity="center_vertical"
        android:text="@string/rating_details"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/tvReviewHeading"
        style="@style/myriad_pro_semi_bold_black_15_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:text="Perfect for my skin!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />
    <TextView
        android:id="@+id/tvCustomerReview"
        style="@style/myriad_pro_regular_black_15_text_style"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/seven_dp"
        android:text="My skin feels more hydrated and no longer itching. This product is gentle on my sensitive skin labore et dolore magna aliqua."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewHeading"
        android:maxLines="3"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tvReviewPostedOn"
        style="@style/myriad_pro_regular_black_13_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:text="Review originally posted on brandsite.com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomerReview"
        android:maxLines="3"
        android:ellipsize="end"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@color/layout_background_gray"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewPostedOn" />

</androidx.constraintlayout.widget.ConstraintLayout>