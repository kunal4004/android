<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/accountPaymentOptionsRootStyle"
    android:paddingTop="@dimen/_15sdp"
    android:paddingBottom="@dimen/_15sdp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/viewPaymentOptionImageShimmerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/viewPaymentOptionTextShimmerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/viewPaymentOptionImageView"
            style="@style/accountPaymentOptionIconImageViewStyle"
            android:layout_width="@dimen/icon_dimens"
            android:layout_height="@dimen/icon_dimens"
            android:contentDescription="@string/label_payment_options"
            app:layout_constraintBottom_toTopOf="@+id/paymentOptionTextView"
            app:srcCompat="@drawable/icon_money"
            app:tint="@color/white" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/viewPaymentOptionTextShimmerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPaymentOptionImageShimmerLayout">

        <TextView
            android:id="@+id/paymentOptionTextView"
            style="@style/landingTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/label_payment_options" />
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>