<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/WRewardsVoucherDetails"
        app:theme="@style/WRewardsVoucherDetails"
        app:title="">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/termsCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/terms_and_conditions_margin"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/view_terms_conditions"
            android:textAllCaps="true"
            android:textColor="#b3ffffff"
            android:textSize="12sp"
            app:WTextView_font="medium"
            tools:ignore="UnusedAttribute" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <za.co.woolworths.financial.services.android.ui.views.card_swipe.CardStackView
            android:id="@+id/swipeStack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="32dp"
            android:paddingBottom="10dp"
            app:scaleDiff="0.02"
            app:stackFrom="top"
            app:swipeDirection="freedom_no_bottom"
            app:swipeEnabled="true"
            app:swipeThreshold="0.75"
            app:topOverlay="@layout/overlay_top"
            app:translationDiff="16"
            app:visibleCount="3" />
    </RelativeLayout>

</LinearLayout>