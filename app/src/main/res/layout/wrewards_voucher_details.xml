<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#cc000000"
              android:orientation="vertical"

    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/WRewardsVoucherDetails"
        app:theme="@style/WRewardsVoucherDetails"
        app:title="">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <za.co.woolworths.financial.services.android.ui.views.SwipeStack
            android:id="@+id/swipeStack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/termsAndCondtions"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:stack_rotation="0"
            app:stack_size="3"
            app:stack_spacing="-10dp"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/termsCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:gravity="center"
            android:text="@string/view_terms_conditions"
            android:textAllCaps="true"
            android:textColor="#b3ffffff"
            android:textSize="12sp"
            app:WTextView_font="myriadpro_regular"
            />
    </RelativeLayout>

</LinearLayout>