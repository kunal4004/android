<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
    >

    <data>

        <import type="android.view.View"/>
    </data>

    <za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout
        android:id="@+id/slideUpPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="0dp"
        app:umanoParallaxOffset="0dp"
        app:umanoScrollableView="@+id/scrollProduct"
        sothree:umanoDragView="@+id/detailsView"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoOverlay="false"
        sothree:umanoShadowHeight="0dp"
        tools:context="za.co.woolworths.financial.services.android.ui.activities.CartActivity">

        <LinearLayout
            android:id="@+id/activity_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:popupTheme="@style/Cart"
                app:theme="@style/Cart">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/btnEditCart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:letterSpacing="0.2"
                        android:paddingEnd="@dimen/sixteen_dp"
                        android:paddingStart="@dimen/sixteen_dp"
                        android:text="@string/edit"
                        android:textAllCaps="true"
                        android:textColor="@color/black_tv_color_toolbar"
                        android:textSize="12sp"
                        app:WTextView_font="medium"/>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/toolbarText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:letterSpacing="0.2"
                        android:text="@string/bottom_title_cart"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:WTextView_font="medium_bold"/>

                    <ProgressBar
                        android:id="@+id/pbRemoveAllItem"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:indeterminateTint="@color/black"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/btnCloseCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:src="@drawable/close_24"/>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/btnClearCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:letterSpacing="0.2"
                        android:text="@string/remove_all"
                        android:textAllCaps="true"
                        android:textColor="@color/black_tv_color_toolbar"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:WTextView_font="medium"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1a000000"/>

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout>
</layout>