<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/app_feature_list_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/fifteen_dp"
        android:gravity="center|start"
        android:paddingHorizontal="@dimen/fifteen_dp"
        android:paddingVertical="@dimen/twenty_five_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15sp"
        android:layout_marginStart="@dimen/ten_dp"
        app:WTextView_font="myriadpro_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5dp"
        android:layout_marginHorizontal="@dimen/twenty_five_dp"
        android:background="@color/color_e1e1e1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_feature_list_title_text" />
</androidx.constraintlayout.widget.ConstraintLayout>