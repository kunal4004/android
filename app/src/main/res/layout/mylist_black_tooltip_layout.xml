<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.daasuu.bl.BubbleLayout
        android:id="@+id/bubbleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        app:bl_arrowDirection="top"
        app:bl_arrowHeight="@dimen/ten_dp"
        app:bl_arrowWidth="@dimen/twenty_dp"
        app:bl_bubbleColor="@color/color_222222"
        app:bl_cornersRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deliveryCollectionTitle"
                    style="@style/futura_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_light"
                    android:letterSpacing="0.05"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:text="@string/title_mylist_dash_tooltip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/closeWhiteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/placeholder"
                    android:padding="@dimen/two_dp"
                    android:src="@drawable/close_white_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/btnDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_dp"
                android:layout_marginTop="@dimen/thirteen_dp"
                android:background="@color/color_666666" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/changeButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/twenty_dp"
                app:layout_constraintTop_toBottomOf="@+id/btnDivider">

                <TextView
                    android:id="@+id/changeText"
                    style="@style/opensens_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="@string/change_delivery_method_mylist_tooltip"
                    android:textColor="@color/color_D8D8D8"
                    android:textSize="@dimen/twelve_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/changeLocationButton"
                    style="@style/futura_semi_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/twenty_four_dp"
                    android:background="@drawable/rounded_grid_border_text_view"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:paddingHorizontal="@dimen/six_dp"
                    android:text="@string/change_label"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/twelve_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </com.daasuu.bl.BubbleLayout>
</androidx.constraintlayout.widget.ConstraintLayout>