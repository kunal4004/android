<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_chat_there"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/_150sdp"
        app:layout_constraintWidth_min="@dimen/_60sdp">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_8sdp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/_8sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_8sdp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thereName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-2sp"
            android:paddingEnd="@dimen/_8sdp"
            android:text="test "
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:fontFamily="@font/myriad_pro_regular"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toTopOf="@id/guidelineTop" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thereMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:paddingEnd="@dimen/_8sdp"
            android:text="Text hfhdf hdffhddfhry hjh gjjguu hyguyguy hg"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/_12ssp"
            app:fontFamily="@font/myriad_pro_regular"
            app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"

            app:layout_constraintTop_toBottomOf="@+id/thereName" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>