<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_no_loc"
        android:layout_width="@dimen/seventy_two_dp"
        android:layout_height="@dimen/seventy_two_dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_no_loc_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_no_loc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:textSize="@dimen/text_size_20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="normal"
        android:text="@string/no_location_title"
        app:layout_constraintBottom_toTopOf="@+id/txt_no_loc_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_no_loc" />

    <TextView
        android:fontFamily="@font/myriad_pro_regular"
        android:textSize="@dimen/fifteen_sp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:textColor="@color/color_444444"
        android:id="@+id/txt_no_loc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:text="@string/no_location_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_no_loc_title" />

    <Button
        android:id="@+id/btn_no_loc_change_location"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        android:text="@string/change_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>