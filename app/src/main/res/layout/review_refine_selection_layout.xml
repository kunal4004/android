<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:background="@drawable/refine_item_background">

        <CheckBox
            android:id="@+id/cbRefineSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:button="@drawable/refine_multi_selector"
            android:clickable="false" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvRefineOption"
            style="@style/refinements_textview_style_with_margin_left"
            android:layout_toRightOf="@+id/cbRefineSelector"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginEnd="@dimen/five_dp"
            />

    </RelativeLayout>
</LinearLayout>