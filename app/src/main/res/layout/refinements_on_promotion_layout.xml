<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:contentDescription="@string/plp_promotionLayout"
        android:background="@drawable/refine_item_background">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/refinements_textview_style_with_margin_left"
            android:layout_alignParentLeft="true"
            android:textAllCaps="true"
            android:textColor="@color/promo_text_color"
            app:WTextView_font="medium_bold"
            android:letterSpacing="0.065"
            android:layout_marginLeft="0dp"
            android:textSize="@dimen/twelve_sp"
            android:contentDescription="@string/plp_textViewOnPromotion"
            android:text="On Promotion" />

        <Switch
            android:id="@+id/promotionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/plp_buttonEnablePromotiont"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>