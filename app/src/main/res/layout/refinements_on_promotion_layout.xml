<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:background="@drawable/refine_item_background">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/saveText"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="5sp"
            app:WTextView_font="medium_bold"
            android:layout_margin="2dp"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/refinements_textview_style_with_margin_left"
            android:layout_toRightOf="@+id/saveText"
            android:text="On Promotion" />

        <Switch
            android:id="@+id/promotionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>