<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sign_in_register_button_border"
        android:nestedScrollingEnabled="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/continueToPaymentButtonBackgroundView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/checkoutTimeSlotSelectionLayout"
                layout="@layout/checkout_delivery_time_slot_selection_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/checkoutHowWouldYouDeliveredLayout"
                layout="@layout/checkout_how_would_you_delivered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/checkoutTimeSlotSelectionLayout" />

            <include
                android:id="@+id/nativeCheckoutFoodSubstitutionLayout"
                layout="@layout/layout_native_checkout_delivery_food_substitution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/checkoutHowWouldYouDeliveredLayout" />

            <include
                android:id="@+id/layoutDeliveryInstructions"
                layout="@layout/layout_native_checkout_delivery_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/nativeCheckoutFoodSubstitutionLayout" />

            <include
                android:id="@+id/layoutCheckoutDeliveryOrderSummary"
                layout="@layout/layout_native_checkout_delivery_order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutDeliveryInstructions" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/continueToPaymentButtonBackgroundView"
        android:layout_width="match_parent"
        app:layout_constrainedHeight="true"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderTotalTitle" />

    <TextView
        android:id="@+id/txtOrderTotalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:text="@string/native_checkout_order_total_title"
        android:fontFamily="@font/futura_semi_bold"
        android:textSize="@dimen/twelve_sp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toTopOf="@id/txtContinueToPayment"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="R 690.0"
        android:fontFamily="@font/futura_semi_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/txtOrderTotalTitle"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderTotalTitle"
        android:layout_margin="@dimen/twenty_four_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtContinueToPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@color/black"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:minHeight="@dimen/fifty_dp"
        android:text="@string/native_checkout_continue_to_payment"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>