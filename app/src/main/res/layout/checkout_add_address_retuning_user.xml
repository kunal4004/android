<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sign_in_register_button_border"
    android:nestedScrollingEnabled="true"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/checkoutDeliveryDetailsLayout"
            layout="@layout/layout_delivering_to_details"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <include
            android:id="@+id/checkoutTimeSlotSelectionLayout"
            android:visibility="gone"
            layout="@layout/checkout_delivery_time_slot_selection_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@id/checkoutDeliveryDetailsLayout" />

        <include
            android:id="@+id/checkoutHowWouldYouDeliveredLayout"
            layout="@layout/checkout_how_would_you_delivered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ten_dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/checkoutTimeSlotSelectionLayout" />

        <include
            android:id="@+id/nativeCheckoutFoodSubstitutionLayout"
            layout="@layout/layout_native_checkout_delivery_food_substitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@+id/checkoutHowWouldYouDeliveredLayout" />

        <include
            android:id="@+id/layoutDeliveryInstructions"
            layout="@layout/layout_native_checkout_delivery_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@+id/nativeCheckoutFoodSubstitutionLayout" />

        <ProgressBar
            android:id="@+id/loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateTint="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>