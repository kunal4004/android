<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relPopContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8c000000"
                android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/relContainerRootMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/bank_spacing_width"
            android:paddingRight="@dimen/bank_spacing_width">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:gravity="center|start"
                android:letterSpacing="0.07"
                android:text="@string/uploading_your_documents"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:WTextView_font="medium_bold"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:text="@string/uploading_your_documents_desc"
                android:textColor="@color/black_50"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginBottom="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:background="@color/description_color"/>

            <LinearLayout
                style="@style/upload_document_container"
                >

                <ImageView
                    style="@style/upload_document_image"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/upload_document_title"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/uploading_clear_scan_photo"/>

            </LinearLayout>

            <LinearLayout
                style="@style/upload_document_container"
                >

                <ImageView
                    style="@style/upload_document_image"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/upload_document_title"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/uploading_name_address"/>

            </LinearLayout>

            <LinearLayout
                style="@style/upload_document_container"
                >

                <ImageView
                    style="@style/upload_document_image"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/upload_document_title"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/uploading_statement_period"/>

            </LinearLayout>

            <LinearLayout
                style="@style/upload_document_container"
                >

                <ImageView
                    style="@style/upload_document_image"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/upload_document_title"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/uploading_older_month"/>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginBottom="@dimen/twenty_eight_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@color/description_color"/>

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/btnUploadDocuments"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="27dp"
                android:background="@color/white"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="OK"
                android:textSize="12sp"
                app:WButton_font="medium_bold"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>