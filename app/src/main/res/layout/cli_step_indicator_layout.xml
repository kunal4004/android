<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/incomeIndicatorRelativeLayout"
                style="@style/cli_step_indicator_circle">

                <TextView
                    android:id="@+id/incomeIndicatorTextView"
                    style="@style/cli_step_indicator_number_textview"
                    android:text="1"
                    tools:ignore="HardcodedText" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View style="@style/cli_step_indicator_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/expenseIndicatorRelativeLayout"
                style="@style/cli_step_indicator_circle">

                <TextView
                    android:id="@+id/expenseIndicatorTextView"
                    style="@style/cli_step_indicator_number_textview"
                    android:text="2" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View style="@style/cli_step_indicator_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/offerIndicatorRelativeLayout"
                style="@style/cli_step_indicator_circle">

                <TextView
                    android:id="@+id/otherIndicatorTextView"
                    style="@style/cli_step_indicator_number_textview"
                    android:text="3" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View style="@style/cli_step_indicator_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/completeIndicatorRelativeLayout"
                style="@style/cli_step_indicator_circle">

                <TextView
                    android:id="@+id/completeIndicatorTextView"
                    style="@style/cli_step_indicator_number_textview"
                    android:text="4"
                    tools:ignore="HardcodedText" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/incomeTitleTextView"
            style="@style/cli_steps_title_style"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:text="@string/cli_step_indicator_income" />

        <TextView
            android:id="@+id/expenseTitleTextView"
            style="@style/cli_steps_title_style"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/cli_step_indicator_expense" />

        <TextView
            android:id="@+id/offerTitleTextView"
            style="@style/cli_steps_title_style"
            android:gravity="center_horizontal"
            android:text="@string/cli_step_indicator_offer" />

        <TextView
            android:id="@+id/completeTitleTextView"
            style="@style/cli_steps_title_style"
            android:gravity="end"
            android:text="@string/cli_step_indicator_complete" />
    </LinearLayout>

</LinearLayout>
