<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/selectDeliveryTimeSlotTitle"
        style="@style/futura_semi_bold_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eighteen_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_weight="@integer/point_five"
        android:padding="@dimen/six_dp"
        android:text="@string/delivery_timeslot_title_food_items"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectDeliveryTimeSlotSubTitle"
        style="@style/myriad_pro_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_weight="@integer/point_five"
        android:padding="@dimen/two_dp"
        android:text="@string/select_your_preferred_delivery_time"
        android:textColor="@color/checkout_delivering_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectDeliveryTimeSlotTitle" />

    <include
        android:id="@+id/gridLayout"
        layout="@layout/checkout_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selectDeliveryTimeSlotSubTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>