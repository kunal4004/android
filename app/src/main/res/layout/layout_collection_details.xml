<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collectionDetailsConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/collectionDetailsTitleShimmerFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twenty_four_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvCollectionDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_semi_bold"
                    android:text="@string/confirm_store_header_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_sp"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/collectionDetailsTextShimmerFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fourteen_dp"
                android:layout_marginEnd="@dimen/eighteen_dp"
                android:background="@drawable/bg_select_store"
                android:paddingStart="@dimen/fourteen_dp"
                android:paddingTop="@dimen/fifteen_dp"
                android:paddingEnd="@dimen/thirty_dp"
                android:paddingBottom="@dimen/sixteen_dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetailsTitleShimmerFrameLayout">

            <TextView
                android:id="@+id/tvCollectionDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriad_pro_regular"
                android:text="@string/collection_details_text"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp" />

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>