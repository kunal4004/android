<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/action_sheet_background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        >

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="1.4dp"
            android:paddingBottom="65dp"
            android:text="@string/app_label"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/actionButton"
            style="@style/blackButtonStyle"
            android:visibility="invisible"
            android:text="@string/retry"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            />

        <View
            android:id="@+id/vHorizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/recent_search_bg"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionButton" />


        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnGotIt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.8"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingTop="@dimen/bank_spacing_width"
            android:text="@string/cli_got_it"
            android:textColor="@color/permanent_card_block_desc_color"
            android:textSize="12sp"
            app:WButton_font="medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vHorizontalDivider" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/thirty_two_dp"
            android:layout_marginEnd="@dimen/thirty_two_dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.29"
            android:paddingTop="@dimen/fifty_dp"
            android:paddingBottom="@dimen/sixteen_dp"
            android:text="@string/app_label"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp"
            app:WTextView_font="medium_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageIcon" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/fifty_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_end_session" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>