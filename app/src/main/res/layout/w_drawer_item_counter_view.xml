<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="62dp">

    <ImageView
        android:id="@id/drawer_item_selected"
        android:layout_width="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        android:src="@color/rewards"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:id="@id/drawer_item_logo"
        tools:ignore="ContentDescription" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="0dp"
        android:layout_weight="1"
        app:WTextView_font="medium"
        android:textSize="@dimen/text_small"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:id="@id/drawer_item_title" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="24dp"
        android:layout_marginRight="16dp"
        app:WTextView_font="medium_bold"
        android:layout_gravity="center"
        android:background="@drawable/drawer_counter"
        android:textSize="@dimen/text_small"
        android:gravity="center"
        android:layout_height="24dp"
        android:text="5"
        android:textColor="@color/drawer_color"
        android:id="@+id/drawer_item_counter"
        tools:ignore="HardcodedText" />

</LinearLayout>