<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/relTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:paddingTop="17dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imBackIcon"
            android:layout_toStartOf="@+id/imCloseIcon"
            android:ellipsize="end"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:maxLines="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:WTextView_font="medium_bold"/>

        <ImageView
            android:id="@+id/imClosePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/close_24"/>
    </RelativeLayout>
    <include layout="@layout/divider"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPickerList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
</LinearLayout>