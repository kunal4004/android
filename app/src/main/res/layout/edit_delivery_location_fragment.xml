<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/thirty_dp"
    android:paddingBottom="@dimen/thirty_two_dp">


    <RelativeLayout
        android:id="@+id/delivery"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/fourty_dp"
        android:background="@drawable/onde_dp_black_border_bg"
        app:layout_constraintEnd_toStartOf="@id/clickAndCollect"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/title">


        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/delivery"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/fifteen_sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clickAndCollect"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/onde_dp_black_border_bg"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/delivery"
        app:layout_constraintTop_toTopOf="@id/delivery">

        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/click_collect"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/fifteen_sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selectProvince"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@drawable/input_box_inactive_bg"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/subTitle">

        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Select a Province"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/sixteen_sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_dropdown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selectSuburb"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@drawable/input_box_inactive_bg"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/selectProvince">

        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Select a Suburb"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/sixteen_sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_dropdown" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        style="@style/dialog_title_text_style"
        android:text="@string/please_select_an_option"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="Select your collection store:"
        android:textColor="@color/gray"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/delivery" />

    <TextView
        android:id="@+id/newFeature"
        style="@style/futura_semi_bold"
        android:layout_width="@dimen/thirty_two_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:background="#4A9521"
        android:gravity="center"
        android:text="@string/text_new"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="@+id/clickAndCollect"
        app:layout_constraintRight_toRightOf="@+id/clickAndCollect"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/activateCardButton"
        style="@style/call_to_action_text_style"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>