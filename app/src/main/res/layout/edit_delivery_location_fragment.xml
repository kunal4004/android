<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/thirty_dp">


    <ProgressBar
        android:id="@+id/progressSetSuburb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:elevation="@dimen/two_dp"
        android:indeterminateTint="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/delivery"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/fourty_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:background="@drawable/onde_dp_black_border_bg"
        app:layout_constraintEnd_toStartOf="@id/clickAndCollect"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">


        <TextView
            android:id="@+id/txtDelivery"
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/delivery"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/fifteen_sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clickAndCollect"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:background="@drawable/onde_dp_black_border_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delivery"
        app:layout_constraintTop_toTopOf="@id/delivery">

        <TextView
            android:id="@+id/txtclickAndCollect"
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/click_collect"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/fifteen_sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selectProvince"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@drawable/input_box_active_bg"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:clickable="true"
        android:state_active="true"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        android:focusable="true">

        <AutoCompleteTextView
            android:id="@+id/tvSelectedProvince"
            style="@style/myriad_pro_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_toStartOf="@+id/progressGetProvinces"
            android:background="@color/white"
            android:hint="Select a Province"
            android:focusable="false"
            android:textColorHint="@color/black40"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/sixteen_sp" />

        <ProgressBar
            android:id="@+id/progressGetProvinces"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/black"
            android:focusable="false"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dropdownGetProvinces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:background="@drawable/icon_dropdown" />
    </RelativeLayout>

    <TextView
        android:id="@+id/noStoresForProvinceMsg"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/eight_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/no_stores_for_province_message"
        android:textColor="@color/input_error_color_code"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/selectProvince" />

    <RelativeLayout
        android:id="@+id/selectSuburb"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@drawable/input_box_active_bg"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/noStoresForProvinceMsg"
        android:focusable="true">

        <AutoCompleteTextView
            android:id="@+id/tvSelectedSuburb"
            style="@style/myriad_pro_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_toStartOf="@+id/progressGetSuburb"
            android:background="@color/white"
            android:hint="@string/select_a_suburb"
            android:textColor="@color/offer_title"
            android:textColorHint="@color/black40"
            android:focusable="false"
            android:textSize="@dimen/sixteen_sp" />

        <ProgressBar
            android:id="@+id/progressGetSuburb"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/black"
            android:focusable="false"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dropdownGetSuburb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:background="@drawable/icon_dropdown" />
    </RelativeLayout>

    <TextView
        android:id="@+id/storeClosedMsg"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/eight_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/store_closed_message"
        android:textColor="@color/input_error_color_code"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/selectSuburb" />

    <LinearLayout
        android:id="@+id/deliveryDateLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/twenty_four_dp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/foodDeliveryDateMessage">

        <RelativeLayout
            android:id="@+id/earliestDateTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dp">

            <TextView
                android:id="@+id/earliestDateTitle"
                style="@style/myriad_pro_regular_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/earliest_delivery_date"
                android:textSize="@dimen/thirteen_sp" />

            <TextView
                android:id="@+id/earliestDateValue"
                style="@style/myriad_pro_semi_bold_black_15_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/thirteen_sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:id="@+id/foodItemsDeliveryDateLayout"
            >

            <TextView
                android:id="@+id/foodItemsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/myriad_pro_regular_black"
                android:layout_alignParentStart="true"
                android:text="@string/food_items"
                android:textSize="@dimen/thirteen_sp" />

            <TextView
                android:id="@+id/foodItemsDeliveryDate"
                style="@style/myriad_pro_semi_bold_black_15_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/thirteen_sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:id="@+id/otherItemsDeliveryDateLayout"
            >

            <TextView
                android:id="@+id/otherItemsLabel"
                style="@style/myriad_pro_regular_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/fashion_beauty_home"
                android:textSize="@dimen/thirteen_sp" />

            <TextView
                android:id="@+id/otherItemsDeliveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/myriad_pro_semi_bold_black_15_text_style"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/thirteen_sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/foodDeliveryDateMessage"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/fourteen_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/store_closed_message"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/storeClosedMsg" />

    <TextView
        android:id="@+id/otherDeliveryDateMessage"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/fourteen_dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/store_closed_message"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/foodDeliveryDateMessage" />

    <TextView
        android:id="@+id/title"
        style="@style/dialog_title_text_style"
        android:text="@string/select_an_option"
        android:gravity="start"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="@string/select_your_collection_store"
        android:textColor="@color/gray"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/delivery" />

    <TextView
        android:id="@+id/newFeature"
        style="@style/futura_semi_bold"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/five_dp"
        android:paddingRight="@dimen/five_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:background="#4A9521"
        android:gravity="center"
        android:text="@string/food_only"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="@+id/clickAndCollect"
        app:layout_constraintRight_toRightOf="@+id/clickAndCollect"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/confirmLocation"
        style="@style/call_to_action_text_style"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:enabled="false"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <include
        android:id="@+id/maxItemsInfoMessageLayout"
        android:visibility="gone"
        layout="@layout/click_collect_items_limited_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        app:layout_constraintBottom_toTopOf="@id/confirmLocation"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>