<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/optInBpiButton"
            android:layout_marginTop="@dimen/thirty_two_dp"
            android:layout_marginBottom="@dimen/thirty_two_dp"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <WebView
                    android:id="@+id/bpiMoreInfoWebView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/bpiCheckBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>


                <CheckBox
                    android:id="@+id/bpiCheckBox"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:button="@drawable/refine_multi_selector"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/bpiCheckBoxDescriptionTextView"
                    app:layout_constraintTop_toBottomOf="@id/bpiMoreInfoWebView"
                    app:layout_constraintBottom_toBottomOf="@id/bpiCheckBoxDescriptionTextView"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/bpiCheckBoxDescriptionTextView"
                    style="@style/opensans_regular_14_black"
                    android:textColor="@color/description_color"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/ten_dp"
                    android:text="@string/bpi_checkbox_text"
                    android:layout_marginStart="@dimen/fifteen_sp"
                    app:layout_constraintStart_toEndOf="@id/bpiCheckBox"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintTop_toBottomOf="@id/bpiMoreInfoWebView"
                    app:layout_constraintTop_toTopOf="@id/bpiCheckBox"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@id/left_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@id/right_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/optInBpiButton"
            style="?android:attr/borderlessButtonStyle"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/thirty_two_dp"
            android:layout_marginEnd="@dimen/thirty_two_dp"
            android:layout_marginBottom="@dimen/thirty_two_dp"
            android:background="@drawable/black_button_drawable_state"
            android:fontFamily="@font/futura_semi_bold"
            android:letterSpacing="0.13"
            android:textSize="@dimen/thirteen_sp"
            android:text="@string/bpi_opt_in_text"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>