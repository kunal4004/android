<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bpiNotCoveredTextView"
        style="@style/badge_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bpi_not_covered"
        android:textColor="@color/sem_per_black"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/balanceProtectionInsuranceArrowImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/balanceProtectionInsuranceArrowImageView"
        style="@style/accountOptionsNextImageViewStyle"
        android:src="@drawable/ic_caret_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bpiTagTextView"
        style="@style/badge_style"
        android:text="@string/bpi_covered"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>