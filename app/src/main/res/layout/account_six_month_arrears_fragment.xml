<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:contentDescription="@string/account_in_arrears_layout"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_gravity="top"
        android:contentDescription="@string/account_six_month_arrear_toolbar"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/navigateBackImageButton"
            style="@style/selectableImageButtonRippleStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_filter_state"
            android:padding="4dp"
            app:srcCompat="@drawable/back24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/toolbarTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/futura_semi_bold_ttf"
            android:letterSpacing="0.2"
            android:text="@string/placeholder"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop" />
    </androidx.appcompat.widget.Toolbar>

    <include
        android:id="@+id/includeAccountDetailHeaderView"
        layout="@layout/account_detail_header_fragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDividerView" />

    <View
        android:id="@+id/toolbarDividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarContainer"
        android:background="@color/light_gray_background"/>

    <TextView
        android:id="@+id/accountInArrearsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center"
        android:text="@string/payment_options_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/includeAccountDetailHeaderView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <TextView
        android:id="@+id/arrearsDescTextView"
        style="@style/opensans_regular_13_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eleven_dp"
        android:layout_marginStart="@dimen/five_dp"
        android:layout_marginEnd="@dimen/five_dp"
        android:lineSpacingExtra="@dimen/two_dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/account_arrears_cc_description"
        android:textColor="@color/permanent_card_block_desc_color"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/accountInArrearsTextView" />

    <Button
        android:id="@+id/callTheCallCenterButton"
        style="@style/blackButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/thirty_two_dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:text="@string/call_the_call_centre"
        android:textAllCaps="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline"
        app:layout_constraintStart_toStartOf="@+id/startGuideline" />

    <Button
        android:id="@+id/viewTreatmentPlansButton"
        style="@style/blackButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:text="@string/view_payment_plans_button_label"
        android:textAllCaps="true"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintBottom_toTopOf="@+id/callTheCallCenterUnderlinedButton"/>


    <Button
        android:id="@+id/callTheCallCenterUnderlinedButton"
        style="@style/whiteButtonBackgroundStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:fontFamily="@font/futura_medium_ttf"
        android:text="@string/call_the_call_centre"
        android:textAllCaps="true"
        android:textColor="@color/permanent_card_block_desc_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline"
        app:layout_constraintStart_toStartOf="@+id/startGuideline" />

</androidx.constraintlayout.widget.ConstraintLayout>