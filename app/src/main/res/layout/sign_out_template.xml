<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clSignOutTemplate"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@color/orders_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlDeliveryLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/ten_dp"
        android:background="@drawable/white_bg_pressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/truckIcon"
            android:layout_width="@dimen/thirty_two_dp"
            android:layout_height="@dimen/thirty_two_dp"
            android:layout_margin="@dimen/five_dp"
            android:src="@drawable/ic_delivery_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDeliveringEmptyTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:fontFamily="@font/myriad_pro_regular"
            android:gravity="top"
            android:text="@string/standard_delivery"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintBottom_toTopOf="@+id/tvDeliveryEmptyLocation"
            app:layout_constraintStart_toEndOf="@id/truckIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvDeliveryEmptyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriad_pro_semi_bold"
            android:gravity="center"
            android:text="@string/cart_default_location"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvDeliveringEmptyTo"
            app:layout_constraintTop_toBottomOf="@+id/tvDeliveringEmptyTo" />

        <ImageView
            android:id="@+id/rightArrowDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:src="@drawable/ic_caret_black"
            app:layout_constraintBottom_toBottomOf="@id/tvDeliveringEmptyTo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDeliveryEmptyLocation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imEmptyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.4"
        android:contentDescription="@string/placeholder"
        android:paddingStart="@dimen/fifty_dp"
        android:paddingEnd="@dimen/fifty_dp"
        app:layout_constraintBottom_toTopOf="@+id/txtEmptyStateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlDeliveryLocationLayout"
        app:srcCompat="@drawable/emptylists" />


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/txtEmptyStateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifty_dp"
        android:layout_marginEnd="@dimen/fifty_dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="2sp"
        android:text="@string/shop_sign_out_order_title"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:WTextView_font="medium_bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEmptyStateDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/txtEmptyStateDesc"
        style="@style/TableLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmptyStateTitle"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/shop_sign_out_order_desc"
        android:textColor="#80000000"
        android:textSize="@dimen/fifteen_sp"
        app:WTextView_font="myriadpro_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlDeliveryLocationLayout" />

    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/btnGoToProduct"
        style="@style/whiteButtonStyle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtEmptyStateDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/seventy_dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/seventy_dp"
        android:letterSpacing="0.15"
        android:text="@string/go_to_products"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:WButton_font="medium_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmptyStateDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>