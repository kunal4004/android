<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.mypreferences.SelectPrimaryDeviceFragment">

    <TextView
        android:id="@+id/removeDeviceTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:text="@string/remove_device_title"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/removeDeviceDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:lineSpacingExtra="@dimen/eight_sp"
        android:text="@string/remove_device_desc"
        android:textColor="@color/permanent_card_block_desc_color"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removeDeviceTitle" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectPrimaryDeviceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:paddingBottom="@dimen/fifteen_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/twenty_six_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/removeDeviceDescription"
        app:layout_constraintBottom_toTopOf="@id/changePrimaryDeviceButton"/>

    <Button
        android:id="@+id/changePrimaryDeviceButton"
        style="@style/add_card_button_style.black__background"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/thirty_two_dp"
        android:layout_marginRight="@dimen/thirty_two_dp"
        android:background="@drawable/submit_button_background"
        android:enabled="false"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/unlink_device_change_to_primary"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectPrimaryDeviceRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>