<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true"
        tools:context="za.co.woolworths.financial.services.android.ui.fragments.product.sub_category.SubCategoryFragment">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.sub_category.SubCategoryFragment"/>

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.sub_category.SubCategoryViewModel"/>


    </data>

    <FrameLayout
        android:id="@+id/fragment_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/search_store_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/productSearchList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scrollbars="none"/>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/mProgressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:indeterminateTint="@color/black"
            />

        <include
            android:id="@+id/incNoConnectionHandler"
            layout="@layout/no_connection_handler"/>

    </FrameLayout>

</layout>