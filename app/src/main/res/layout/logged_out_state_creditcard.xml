<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/apply_credit_card_layout"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_background"
        android:orientation="vertical">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/account_logged_out_benefit"
            android:paddingTop="@dimen/default_margin" />
        <include layout="@layout/account_horizontal_line" />

        <LinearLayout style="@style/account_logged_out_container">

            <ImageView
                style="@style/account_logged_out_icon"
                android:background="@drawable/shopanywhere" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_title"
                android:text="@string/shop_anywhere" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_detail"
                android:text="@string/shop_any_where_description" />

        </LinearLayout>
        <include layout="@layout/account_horizontal_line" />

        <LinearLayout style="@style/account_logged_out_container">

            <ImageView
                style="@style/account_logged_out_icon"
                android:background="@drawable/autorewards" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_title"
                android:text="@string/get_more_back_at_woolies" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_detail"
                android:text="@string/get_more_description" />

        </LinearLayout>
        <include layout="@layout/account_horizontal_line" />

        <LinearLayout style="@style/account_logged_out_container">

            <ImageView
                style="@style/account_logged_out_icon"
                android:background="@drawable/ic_calendar"
                android:contentDescription="@string/app_name" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_title"
                android:text="@string/cc_cash_when_you_need_it" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_detail"
                android:text="@string/cc_cash_when_you_need_it_description" />

        </LinearLayout>
        <include layout="@layout/account_horizontal_line" />

        <LinearLayout style="@style/account_logged_out_container">

            <ImageView
                style="@style/account_logged_out_icon"
                android:background="@drawable/icfuel"
                android:contentDescription="@string/app_name" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_title"
                android:text="@string/pay_for_fuel" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_detail"
                android:text="@string/pay_fuel_description" />

        </LinearLayout>
        <include layout="@layout/account_horizontal_line" />
        <LinearLayout style="@style/account_logged_out_container">

            <ImageView
                style="@style/account_logged_out_icon"
                android:background="@drawable/iccard"
                android:contentDescription="@string/app_name" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_title"
                android:text="@string/plus_for_black_credit_card_only" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/cc_plus_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/cc_plus_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="@dimen/bank_spacing_width"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/cc_plus_3" />
            </LinearLayout>


        </LinearLayout>


        <include layout="@layout/account_horizontal_line" />


        <LinearLayout
            style="@style/account_logged_out_container"
            android:background="@color/default_background">


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_card_title_3"
                android:text="@string/cc_to_qualify" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/points_to_qualify_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/points_to_qualify_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bank_spacing_width"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/points_to_qualify_3" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/account_horizontal_line" />

        <LinearLayout
            style="@style/account_logged_out_container"
            android:background="@color/default_background">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_reward_bold"
                android:text="@string/collect_credit_card_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />


                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/collect_credit_card_desc_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/points_bring_following_while_collecting_2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView style="@style/account_logged_out_bullet" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_list_bullet"
                    android:text="@string/points_bring_following_while_collecting_3" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp" />

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/applynow"
            style="@style/apply_now_btn"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/black"
            android:text="@string/apply_now" />

    </LinearLayout>

</RelativeLayout>