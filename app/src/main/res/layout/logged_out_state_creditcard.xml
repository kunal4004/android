<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_background"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/account_logged_out_benefit"
                android:paddingTop="@dimen/default_margin" />

            <include layout="@layout/account_horizontal_line" />

            <LinearLayout style="@style/account_logged_out_container">

                <ImageView
                    style="@style/account_logged_out_icon"
                    android:background="@drawable/tastemagazine" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_title"
                    android:text="@string/free_taste_magazines" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_detail"
                    android:text="@string/free_taste_magazine" />

            </LinearLayout>

            <include layout="@layout/account_horizontal_line" />

            <LinearLayout style="@style/account_logged_out_container">

                <ImageView
                    style="@style/account_logged_out_icon"
                    android:background="@drawable/freecoffee" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_title"
                    android:text="@string/free_coffee" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_detail"
                    android:text="@string/free_coffee_description" />

            </LinearLayout>

            <include layout="@layout/account_horizontal_line" />

            <LinearLayout style="@style/account_logged_out_container">

                <ImageView
                    style="@style/account_logged_out_icon"
                    android:background="@drawable/freeonlinedelivery" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_title"
                    android:text="@string/free_online_delivery" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_detail"
                    android:text="@string/free_delivery_description" />

            </LinearLayout>

            <include layout="@layout/account_horizontal_line" />

            <LinearLayout style="@style/account_logged_out_container">

                <ImageView
                    style="@style/account_logged_out_icon"
                    android:background="@drawable/shopanywhere" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_title"
                    android:text="@string/shop_anywhere" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_detail"
                    android:text="@string/shop_any_where_description" />

            </LinearLayout>

            <include layout="@layout/account_horizontal_line" />

            <LinearLayout
                style="@style/account_logged_out_container"
                android:background="@color/default_background">


                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_card_title_3"
                    android:text="@string/cc_to_qualify" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView style="@style/account_logged_out_bullet" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/account_logged_out_list_bullet"
                        android:text="@string/points_to_qualify_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView style="@style/account_logged_out_bullet" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/account_logged_out_list_bullet"
                        android:text="@string/points_to_qualify_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/bank_spacing_width"
                    android:orientation="horizontal">

                    <TextView style="@style/account_logged_out_bullet" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/account_logged_out_list_bullet"
                        android:text="@string/points_to_qualify_3" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/account_horizontal_line" />

            <LinearLayout
                style="@style/account_logged_out_container"
                android:background="@color/default_background">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/account_logged_out_reward_bold"
                    android:text="@string/collect_credit_card_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView style="@style/account_logged_out_bullet" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/account_logged_out_list_bullet"
                        android:text="@string/collect_credit_card_desc_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView style="@style/account_logged_out_bullet" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/account_logged_out_list_bullet"
                        android:text="@string/collect_credit_card_desc_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42dp"
                    android:orientation="horizontal">

                    <TextView style="@style/account_logged_out_bullet" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/account_logged_out_list_bullet"
                        android:text="@string/collect_credit_card_desc_3" />
                </LinearLayout>
            </LinearLayout>

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/applynow"
                style="@style/blackButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/apply_now"

                 />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>