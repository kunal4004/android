<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relFAQRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_border"
    android:padding="16dp"
>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_toLeftOf="@id/imgNextRow"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="3dp"
        app:WTextView_font="myriadpro_regular" />

    <ImageView
        android:id="@+id/imgNextRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_caret_black" />
</RelativeLayout>