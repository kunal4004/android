<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relFAQRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_border"
    android:paddingBottom="18dp"
    android:gravity="start|center">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/bank_spacing_width"
        android:layout_toStartOf="@+id/imgNextRow"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:WTextView_font="myriadpro_regular"
      />

    <ImageView
        android:id="@+id/imgNextRow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_caret_black"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentEnd="true" />
</RelativeLayout>