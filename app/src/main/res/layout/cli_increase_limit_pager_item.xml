<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cli_info_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/w_credi_card"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/cli_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/eleven_dp"
        android:layout_marginTop="@dimen/fifty_two_dp"
        android:letterSpacing="0.04"
        android:text="@string/credit_bureau"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cli_info_image"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/cli_info_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:paddingEnd="@dimen/thirty_two_dp"
        android:paddingStart="@dimen/thirty_two_dp"
        android:text="@string/credit_bureau_desc"
        android:textColor="@color/black_50"
        android:textSize="@dimen/fifteen_sp"
        app:WTextView_font="myriadpro_regular"
        app:layout_constraintTop_toBottomOf="@+id/cli_info_title"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/cli_ifo_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/fourty_nine_dp"
        android:drawableLeft="@drawable/tick_cli_active"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:letterSpacing="0.15"
        android:text="@string/cli_info_watch_video"
        android:textColor="@color/black"
        android:textSize="@dimen/twelve_sp"
        app:WTextView_font="medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cli_info_desc"/>

</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>