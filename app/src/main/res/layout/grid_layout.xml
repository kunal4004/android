<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/default_background"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:orientation="vertical">

        <include
            android:id="@+id/sortAndRefineLayout"
            layout="@layout/sort_and_refine_selection_layout" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/incConfirmButtonLayout"
            android:layout_below="@+id/sortAndRefineLayout"
            android:layout_alignParentStart="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="false"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/five_dp"
                android:scrollbars="vertical"
                android:smoothScrollbar="true" />

            <include
                android:id="@+id/incCenteredProgress"
                layout="@layout/progress_layout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <include
            android:id="@+id/incConfirmButtonLayout"
            layout="@layout/confirm_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/recent_search_bg" />

    </RelativeLayout>

    <include
        android:id="@+id/incNoConnectionHandler"
        layout="@layout/no_connection_handler" />

</RelativeLayout>