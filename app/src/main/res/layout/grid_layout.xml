<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPLP"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plpBackIcon"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:src="@drawable/back24"/>

            <ImageView
                android:id="@+id/toolbarPLPIcon"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_alignTop="@id/toolbarPLPAddress"
                android:layout_alignBottom="@id/toolbarPLPAddress"
                android:layout_toStartOf="@id/toolbarPLPAddress"
                android:src="@drawable/ic_delivery_circle" />

            <TextView
                android:id="@+id/toolbarPLPAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/five_dp"
                android:fontFamily="@font/myriad_pro_regular"
                android:gravity="center"
                android:minHeight="@dimen/twenty_dp"
                android:text="@string/standard_delivery"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp" />

            <ImageView
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_toEndOf="@id/toolbarPLPAddress"
                android:src="@drawable/vector_drawable_down_arrow" />

            <TextView
                android:id="@+id/toolbarPLPTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/toolbarPLPIcon"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="@font/futura_semi_bold"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp" />

            <ImageView
                android:id="@+id/plpSearchIcon"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/plp_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarPLP"
        android:layout_marginTop="@dimen/one_dp"
        android:background="@color/default_background"
        android:orientation="vertical">

        <include
            android:id="@+id/sortAndRefineLayout"
            layout="@layout/sort_and_refine_selection_layout" />

        <include
            android:id="@+id/vtoTryItOnBanner"
            layout="@layout/try_it_on_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sortAndRefineLayout"
            android:visibility="gone" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/incConfirmButtonLayout"
            android:layout_below="@+id/vtoTryItOnBanner"
            android:layout_alignParentStart="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="false"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/five_dp"
                android:scrollbars="vertical"
                android:smoothScrollbar="true" />

            <include
                android:id="@+id/incCenteredProgress"
                layout="@layout/progress_layout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <include
            android:id="@+id/incConfirmButtonLayout"
            layout="@layout/confirm_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/recent_search_bg" />

    </RelativeLayout>

    <include
        android:id="@+id/chanel_layout"
        layout="@layout/fragment_brand_landing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_error_blp"
        layout="@layout/blp_error_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/incNoConnectionHandler"
        layout="@layout/no_connection_handler" />

</RelativeLayout>