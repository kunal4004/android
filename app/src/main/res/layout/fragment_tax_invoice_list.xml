<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/thirty_two_dp"
    android:paddingRight="@dimen/thirty_two_dp"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.shop.TaxInvoiceLIstFragment">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        style="@style/my_orders_textview_style_1"
        android:layout_marginTop="34dp"
        android:letterSpacing="0.1"
        android:text="@string/tax_invoices" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/taxInvoiceList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/thirteen_dp"
        android:clipToPadding="false" />

</LinearLayout>
