<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cardText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="@string/my_card"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/manageCardText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:text="@string/manage_my_card_title"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/accountOptionsManageCardViewPager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_29sdp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardText" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountOptionsManageCardViewPager">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@android:color/transparent"
            android:clipToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@android:color/transparent"
            app:tabTextColor="@android:color/transparent" />

        <View
            style="@style/accountOptionsDivider"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />

        <RelativeLayout
            android:id="@+id/viewTreatmentPlanLinearLayout"
            style="@style/accountOptionItemsStyle">

            <ImageView
                android:id="@+id/viewTreatmentPlanLogoImageView"
                style="@style/accountOptionsImageviewStyle"
                android:src="@drawable/icon_limit" />

            <TextView
                android:id="@+id/viewTreatmentPlanTextView"
                style="@style/accountOptionsLabelStyle"
                android:text="@string/view_treatment_plan_caption" />

            <ImageView
                android:id="@+id/viewTreatmentPlanNext"
                style="@style/accountOptionsNextImageViewStyle"
                android:src="@drawable/ic_caret_black" />

        </RelativeLayout>

        <View style="@style/accountOptionsDivider" />

        <RelativeLayout
            android:id="@+id/replacementCardLinearLayout"
            style="@style/accountOptionItemsStyle">

            <ImageView
                android:id="@+id/replacementCardImageView"
                style="@style/accountOptionsImageviewStyle"
                android:src="@drawable/icon_limit" />

            <TextView
                android:id="@+id/replacementCardTextView"
                style="@style/accountOptionsLabelStyle"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/replacementCardNext"
                android:layout_toEndOf="@+id/replacementCardImageView"
                android:text="@string/view_treatment_plan_caption" />

            <ImageView
                android:id="@+id/replacementCardNext"
                style="@style/accountOptionsNextImageViewStyle"
                android:src="@drawable/ic_caret_black" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>