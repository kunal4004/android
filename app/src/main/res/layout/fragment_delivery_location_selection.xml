<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/default_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/selectionContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/currentLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iconTick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_delivery_truck"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iconCaretRight"
                    android:layout_toRightOf="@+id/iconTick"
                    android:orientation="vertical">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tvCurrentLocationTitle"
                        style="@style/style_delivery_location_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/set_your_delivery_location"/>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/tvCurrentLocationDescription"
                        style="@style/style_delivery_location_item_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iconCaretRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/ic_caret_black"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutPreviousSelectedLocations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/style_cart_header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:text="@string/previously_selected_locations"
                    android:textAllCaps="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/deliveryLocationHistoryList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <include layout="@layout/no_connection_handler"/>

</RelativeLayout>