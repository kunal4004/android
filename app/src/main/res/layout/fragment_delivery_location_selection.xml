<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/currentLocationLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iconTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/tick_cli_active" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iconCaretRight"
                android:layout_toRightOf="@+id/iconTick"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvCurrentLocationTitle"
                    style="@style/style_delivery_location_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Woodstock, Western Cape" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvCurrentLocationDescription"
                    style="@style/style_delivery_location_item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Western Cape" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iconCaretRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_caret_black" />

        </RelativeLayout>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/style_cart_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:paddingBottom="14dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:text="@string/previously_selected_locations"
            android:textAllCaps="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deliveryLocationHistoryList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>