<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartCountPDPLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/five_dp"
        android:background="@drawable/round_corner_white_background">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cartCountImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/six_dp"
            android:elevation="@dimen/two_dp"
            app:layout_constraintBottom_toBottomOf="@+id/cartCountTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_cart_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cartCountTextView"
            style="@style/chatTimeDisplayStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_five_dp"
            android:minWidth="@dimen/twenty_five_dp"
            android:layout_marginEnd="@dimen/four_dp"
            android:background="@drawable/round_corner_black_bg"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/five_dp"
            tools:text="18"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cartCountImage"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>