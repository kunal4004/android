<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vehiclesDetailsTitle"
        style="@style/futura_semi_bold_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/two_dp"
        android:paddingBottom="@dimen/two_dp"
        android:text="@string/vehicle_details_title"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@color/white"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehiclesDetailsTitle">

        <LinearLayout
            android:id="@+id/vehicleTypeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myVehicleText"
                style="@style/open_sans_regular_black_with_rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight_dp"
                android:background="@drawable/checkout_delivering_title_round_button_pressed"
                android:paddingStart="@dimen/sixteen_dp"
                android:paddingTop="@dimen/six_dp"
                android:paddingEnd="@dimen/sixteen_dp"
                android:paddingBottom="@dimen/six_dp"
                android:text="@string/my_vehicle_text"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/taxiText"
                style="@style/open_sans_regular_black_with_rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight_dp"
                android:paddingStart="@dimen/sixteen_dp"
                android:paddingTop="@dimen/six_dp"
                android:paddingEnd="@dimen/sixteen_dp"
                android:paddingBottom="@dimen/six_dp"
                android:text="@string/e_hailing_text"
                android:textColor="@color/checkout_delivering_title"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/taxiDescription"
        style="@style/myriad_pro_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:layout_marginRight="@dimen/fifty_dp"
        android:lineSpacingExtra="@dimen/five_dp"
        android:paddingBottom="@dimen/fourty_five_dp"
        android:text="@string/e_hailing_description"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/fifteen_sp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/scrollView" />

    <LinearLayout
        android:id="@+id/vehicleDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/scrollView">

        <TextView
            android:id="@+id/vehicleColourPlaceHolder"
            style="@style/open_sans_regular_black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:contentDescription="@string/cd_ccd_labelstreetaddress"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:text="@string/vehicle_colour"
            android:textSize="@dimen/fourteen_sp" />

        <EditText
            android:id="@+id/vehicleColourEditText"
            style="@style/checkout_edittext_style"
            android:hint="@string/optional_hint"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:maxLength="@integer/twenty" />

        <TextView
            android:id="@+id/vehicleColourErrorMsg"
            style="@style/opensens_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:lineSpacingMultiplier="1.40"
            android:text="@string/address_nickname_error_msg"
            android:textColor="@color/input_error_color_code"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/vehicleModelPlaceHolder"
            style="@style/open_sans_regular_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:contentDescription="@string/cd_ccd_labelstreetaddress"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:text="@string/vehicle_model"
            android:textSize="@dimen/fourteen_sp" />

        <EditText
            android:id="@+id/vehicleModelEditText"
            style="@style/checkout_edittext_style"
            android:layout_width="match_parent"
            android:maxLength="@integer/twenty" />

        <TextView
            android:id="@+id/vehicleModelErrorMsg"
            style="@style/opensens_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:lineSpacingMultiplier="1.40"
            android:text="@string/address_nickname_error_msg"
            android:textColor="@color/input_error_color_code"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/vehicleRegistrationPlaceHolder"
            style="@style/open_sans_regular_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:contentDescription="@string/cd_ccd_labelstreetaddress"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:text="@string/vehicle_registration"
            android:textSize="@dimen/fourteen_sp" />

        <EditText
            android:id="@+id/vehicleRegistrationEditText"
            style="@style/checkout_edittext_style"
            android:layout_width="match_parent"
            android:hint="@string/optional_hint"
            android:imeOptions="actionDone"
            android:maxLength="@integer/twenty" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>