<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/includeAccountDetailHeaderView"
            layout="@layout/account_detail_header_fragment"
            android:visibility="visible" />

        <include
            android:id="@+id/creditCardActivationView"
            layout="@layout/account_activate_credit_card_layout"
            android:visibility="gone" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/creditCardActivationPlaceHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:shimmer_duration="800">

            <include layout="@layout/account_activate_credit_card_plcae_holder_layout" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <LinearLayout
            android:id="@+id/llIncreaseLimitContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="@dimen/twenty_four_dp"
            android:paddingEnd="@dimen/ten_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/twenty_dp">

                <ImageView
                    android:id="@+id/logoIncreaseLimit"
                    style="@style/style_loan_logo_img"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:alpha="0.3"
                    android:src="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvIncreaseLimit"
                    style="@style/style_loan_title"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@+id/logoIncreaseLimit"
                    android:fontFamily="@font/futura_semi_bold_ttf"
                    android:gravity="start"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvApplyNowIncreaseLimit"
                        style="@style/tag_badge_style" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressCreditLimit"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvIncreaseLimitDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/thirty_one_dp"
                android:layout_marginBottom="@dimen/twenty_four_dp"
                android:fontFamily="@font/myriad_pro_regular_otf"
                android:text="@string/increase_limit_desc"
                android:textColor="@color/offer_active_desc"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llCommonLayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/horizontal_divider_bold_style" />

                <RelativeLayout
                    android:id="@+id/relIncreaseMyLimit"
                    style="@style/card_item_click_no_pad_style"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imLogoIncreaseLimit"
                        style="@style/style_loan_logo_img"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/cli" />

                    <TextView
                        style="@style/style_loan_title"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@+id/imLogoIncreaseLimit"
                        android:text="@string/increase_my_limit" />

                    <ImageView
                        style="@style/style_loan_img"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_caret_black" />

                </RelativeLayout>

                <View style="@style/horizontal_divider_bold_style" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/common_account_detail" />
        <View
            android:id="@+id/accbottomSpaceView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@color/light_gray_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPaymentOptions" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>