<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linkedLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/recent_search_bg">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:text="@string/linked_cards"
            app:WTextView_font="medium"
            style="@style/accountCardsTitle" />

        <RelativeLayout
            android:id="@+id/linkedStoreCard"
            style="@style/accountsCardStyle">

            <ImageView
                android:id="@+id/imgStoreCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small_2" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/sectionCardLight"
                android:layout_marginLeft="@dimen/acc_thirteen_sp"
                android:layout_toRightOf="@+id/imgStoreCard"
                android:text="@string/store_card"
                app:WTextView_font="medium" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/sc_available_funds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_off"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linkedCrediCard"
            style="@style/accountsCardStyle">

            <ImageView
                android:id="@+id/imgCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small_3" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/sectionCardLight"
                android:layout_toRightOf="@+id/imgCreditCard"
                android:text="@string/credit_card"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/cc_available_funds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_off"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linkedPersonalLoan"
            style="@style/accountsCardStyle">

            <ImageView
                android:id="@+id/imgPersonalLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/sectionCardLight"
                android:layout_toRightOf="@+id/imgPersonalLoan"
                android:text="@string/personal_loan"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/pl_available_funds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black_off"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium_bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>