<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sendOTPTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/link_device_sending_otp"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/twenty_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sendOTPSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:lineSpacingExtra="@dimen/five_dp"
        android:paddingEnd="@dimen/thirty_two_dp"
        android:text="@string/link_device_sending_otp_desc"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/sendOTPTitle" />

    <ProgressBar
        android:id="@+id/linkDeviceProgressBarCircular"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:layout_gravity="center"
        android:indeterminateBehavior="repeat"
        android:indeterminateTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sendOTPProcessingReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/link_device_sending_otp_processing"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/twenty_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linkDeviceProgressBarCircular" />

    <TextView
        android:id="@+id/sendOTPProcessingReqDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:lineSpacingExtra="@dimen/five_dp"
        android:text="@string/link_device_sending_otp_processing_desc"
        android:textAlignment="center"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendOTPProcessingReq" />

</androidx.constraintlayout.widget.ConstraintLayout>