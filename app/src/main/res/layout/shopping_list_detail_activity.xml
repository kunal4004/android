<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/OrderDetailsActivityStyle"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/appbar_background">

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/editShoppingListItemTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/btnBack"
                    android:fontFamily="@font/futura_medium_ttf"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:paddingStart="@dimen/four_dp"
                    android:paddingEnd="@dimen/four_dp"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/editButtonGuideline"
                    app:layout_constraintStart_toEndOf="@+id/btnBack"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/selectDeselectAllTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/futura_medium_ttf"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:paddingStart="@dimen/four_dp"
                    android:paddingEnd="@dimen/four_dp"
                    android:text="@string/select"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/shoppingListTitleTextView"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/shoppingListTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@+id/selectDeselectAllTextView"
                    android:layout_toEndOf="@+id/editShoppingListItemTextView"
                    android:ellipsize="end"
                    android:fontFamily="@font/futura_semi_bold_ttf"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/toolbar_layout"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/selectButtonGuideline"
                    app:layout_constraintStart_toStartOf="@+id/editButtonGuideline"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UnusedAttribute" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/editButtonGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".22"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintWidth_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/selectButtonGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".70"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/flShoppingListDetailFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

</androidx.constraintlayout.widget.ConstraintLayout>