<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end">


    <ImageView
        android:id="@+id/onlineIndicatorImageView"
        android:layout_width="@dimen/eight_dp"
        android:layout_height="@dimen/eight_dp"
        android:src="@drawable/nb_badge_bg"
        android:layout_gravity="start|top"
        android:layout_marginStart="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:visibility="visible" />

    <za.co.woolworths.financial.services.android.ui.views.NotificationBadge
        android:id="@+id/badge"
        android:layout_width="@dimen/twenty_six_dp"
        android:layout_height="@dimen/twenty_six_dp"
        android:layout_gravity="start|top"
        android:visibility="gone"
        android:layout_marginStart="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:elevation="@dimen/seven_dp"
        app:nbMaxTextLength="2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatBubbleFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:src="@drawable/ic_chat_icon"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        app:backgroundTint="@color/black"
        tools:showIn="@layout/my_accounts_fragment" />

</FrameLayout>
