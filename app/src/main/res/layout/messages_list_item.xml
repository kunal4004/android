<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef"
    >

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe"
        android:layout_marginTop="1dp"
        >


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:tag="Bottom2">

            <ImageView
                android:id="@+id/msgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/delete_24"
                android:padding="15dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#efefef"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_shadow"
                android:id="@+id/cardLayout"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/relContainer"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:padding="16dp"
                    >

                    <ImageView
                        android:id="@+id/messagingwlogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/messagingwlogo"
                        />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/msgTitle"
                        android:layout_alignTop="@+id/messagingwlogo"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/date"
                        android:layout_toRightOf="@+id/messagingwlogo"
                        android:gravity="center_vertical"
                        android:text="WRewards Savings"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        app:WTextView_font="medium_bold" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/messagingwlogo"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/messagingwlogo"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical"
                        android:text="Today"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        app:WTextView_font="myriadpro_regular"
                        />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/bodyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="8dp"
                        android:text="With Wrewards you can save up to 20% instantly on thousands of items through out the store, from food to clothing to homeware to beauty and more. "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:WTextView_font="myriadpro_regular"
                        android:layout_below="@+id/msgTitle"
                        android:layout_toEndOf="@+id/messagingwlogo" />
                </RelativeLayout>


            </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/transparentview"
                    android:visibility="gone"
                    android:background="@color/recent_search_bg"
                    />
            </FrameLayout>
        </LinearLayout>


    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>