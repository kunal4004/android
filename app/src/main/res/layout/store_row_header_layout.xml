<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storeSelectorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eight_dp"
        android:background="@color/color_F5F5F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoresStock"
        style="@style/futura_medium_666666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:maxLines="1"
        android:textSize="@dimen/ten_sp"
        android:letterSpacing="@dimen/point_one"
        app:layout_constraintTop_toBottomOf="@+id/viewSeparator"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/these_stores_stock"
        android:text="@string/these_stores_stock"
        />

    <TextView
        android:id="@+id/tvStoreHeader"
        style="@style/futura_semi_bold_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvStoresStock" />


</androidx.constraintlayout.widget.ConstraintLayout>