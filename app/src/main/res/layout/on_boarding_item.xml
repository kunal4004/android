<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <ImageView
            android:id="@+id/onBoadingImage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_above="@+id/fragment_wonboarding_one_description_layer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/walkthrough_welcome">
        </ImageView>

        <LinearLayout
            android:id="@+id/fragment_wonboarding_one_description_layer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/onBoardingTitle"
                style="@style/TitleWSemiBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:text="WELCOME"
                app:WTextView_font="medium_bold"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/onBoardingDescription"
                style="@style/CaptionLightGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="16dp"
                android:text="@string/onboarding_desc_screen_1"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
