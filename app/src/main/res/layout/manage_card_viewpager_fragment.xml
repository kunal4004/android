<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/cardItemViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/dotIndicatorRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dotAtPosition0Img"
            style="@style/dotIndicatorStyle"
            android:layout_centerInParent="true"
            android:contentDescription="@string/page_dot_indicator_for_active_temp_store_card_on_overlay" />

        <ImageView
            android:id="@+id/dotAtPosition1Img"
            style="@style/dotIndicatorStyle"
            android:layout_toEndOf="@+id/dotAtPosition0Img"
            android:contentDescription="@string/page_dot_indicator_for_primary_store_card_on_overlay" />

    </RelativeLayout>

    <View
        android:id="@+id/bottomSpacing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp" />

</androidx.appcompat.widget.LinearLayoutCompat>