<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/infoLinearLayoutCompat"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C2C2D"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/join_reward_default_header" />

    <TextView
        android:id="@+id/tvReasonToJoinTitle"
        style="@style/RewardTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:letterSpacing="0.0"
        android:lineSpacingExtra="3dp"
        android:text="@string/all_reason_to_join_title"
        android:textSize="18sp"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tvReasonToJoinDesc"
        style="@style/WRewardsIsOurWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="32dp"
        android:text="@string/all_reason_to_join_desc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
