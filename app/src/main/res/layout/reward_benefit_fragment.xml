<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/BenefitSubTitleTextViewStyle"
            android:layout_marginTop="43dp"
            android:letterSpacing="0.25"
            android:lineSpacingExtra="6dp"
            android:text="@string/benefits_best_saving_title"
            android:textAllCaps="true"
            tools:targetApi="lollipop" />

        <TextView
            style="@style/BenefitSubTitleTextViewStyle"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:text="@string/benefits_best_saving_sub_title" />

        <TextView
            style="@style/BenefitSubDescTextViewStyle"
            android:text="@string/benefits_best_saving_sub_desc" />

        <TextView
            style="@style/BenefitSubTitleTextViewStyle"
            android:text="@string/benefits_extra_savings_sub_title" />

        <TextView
            style="@style/BenefitSubDescTextViewStyle"
            android:text="@string/benefits_extra_savings_sub_desc" />

        <TextView
            style="@style/BenefitSubTitleTextViewStyle"
            android:text="@string/benefits_exclusive_voucher_sub_title" />

        <TextView
            style="@style/BenefitSubDescTextViewStyle"
            android:text="@string/benefits_exclusive_voucher_sub_desc" />

        <TextView
            style="@style/BenefitLinkTextViewStyle"
            android:text="@string/benefits_term_and_condition_link" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>
</ScrollView>