<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/orderTotalLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/order_total_"
            android:textSize="@dimen/twenty_sp"
            android:layout_marginTop="@dimen/five_dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/orderTotalTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/orderTotalLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>

    <LinearLayout
        android:id="@+id/yourCartLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/separator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/your_cart"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/yourCartTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/yourCartSeparator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/yourCartLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>

    <LinearLayout
        android:id="@+id/discountsLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/yourCartSeparator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/discounts"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/discountsTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/discountsSeparator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/discountsLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>

    <LinearLayout
        android:id="@+id/companyDiscountLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/discountsSeparator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/company_discount"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/companyDiscountTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/companyDiscountSeparator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/companyDiscountLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>

    <LinearLayout
        android:id="@+id/wRewardsVouchersLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/companyDiscountSeparator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/your_wrewards_vouchers"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/wRewardsVouchersTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/wRewardsVouchersSeparator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/wRewardsVouchersLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>


    <LinearLayout
        android:id="@+id/totalDiscountLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/wRewardsVouchersSeparator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/total_discount"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/totalDiscountTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/totalDiscountSeparator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/totalDiscountLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>

    <LinearLayout
        android:id="@+id/deliveryFeeLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/totalDiscountSeparator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/delivery_fee"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/deliveryFeeTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <View
        android:id="@+id/deliveryFeeSeparator"
        style="@style/bottom_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/deliveryFeeLinearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"/>

    <LinearLayout
        android:id="@+id/missedRewardsLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/deliveryFeeSeparator">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/missed_wrewards_savings"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/gray"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/missedRewardsTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:drawablePadding="@dimen/ten_dp"
            android:layout_weight="0.3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/icon_info"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/twenty_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>