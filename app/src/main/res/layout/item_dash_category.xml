<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten_dp">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="@dimen/fourty_eight_dp"
        android:layout_height="@dimen/fourty_eight_dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:maxWidth="@dimen/seventy_dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintEnd_toEndOf="@id/imgCategory"
        app:layout_constraintStart_toStartOf="@id/imgCategory"
        app:layout_constraintTop_toBottomOf="@id/imgCategory"
        tools:text="On Promotion" />

</androidx.constraintlayout.widget.ConstraintLayout>