<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/imQuickShopAddToCartIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/plp_buttonAddToCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quick_shop_add_to_cart_button_state" />

    <TextView
        android:id="@+id/fromPriceLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center|start|bottom"
        android:text="from"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/priceGuideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/plp_textViewPrice"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center|start|bottom"
        android:maxLines="1"
        android:minLines="1"
        android:text="R 99.99 (R 99.99/kg)"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="9sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/priceGuideline"
        app:layout_constraintEnd_toStartOf="@+id/imQuickShopAddToCartIcon"
        app:layout_constraintStart_toEndOf="@+id/fromPriceLabelTextView"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/priceGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>