<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixteen_dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/sixteen_dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fourty_dp"
            android:fontFamily="@font/futura_semi_bold"
            android:text="@string/shop_liquor_in_our_app"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_two_sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten_dp"
            android:fontFamily="@font/myriad_pro_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/setSuburb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/black"
            android:textAllCaps="true"
            android:fontFamily="@font/futura_semi_bold"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:minHeight="@dimen/fourty_dp"
            android:padding="@dimen/fifteen_dp"
            android:text="@string/select_suburb"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/close"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/eight_dp"
        android:background="@drawable/ic_closecircle" />

</FrameLayout>