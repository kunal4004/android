<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:letterSpacing="0.1"
            android:text="Store card"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:WTextView_font="medium_bold" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fl_box_view"
        android:layout_marginBottom="37dp"
        android:gravity="bottom|center"
        android:visibility="visible">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:lineSpacingExtra="1.6dp"
            android:paddingLeft="@dimen/bank_spacing_width"
            android:paddingRight="@dimen/bank_spacing_width"
            android:text="@string/set_info_detail"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:WTextView_font="medium" />

        <ProgressBar
            android:id="@+id/ppBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <!--we need to keep scanner view locates in center-->
    <FrameLayout
        android:id="@+id/fl_box_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/appicon"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relBtnManual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_box_view"
        android:gravity="bottom">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnManual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/bank_spacing_width"
            android:layout_marginLeft="@dimen/bank_spacing_width"
            android:layout_marginRight="@dimen/bank_spacing_width"
            android:background="@drawable/barcode_btn_border"
            android:letterSpacing="0.1"
            android:text="@string/set_manually_enter_barcode"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:WButton_font="medium" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_photo"
            style="@style/style_qr_box_view_button"
            android:drawableTop="@drawable/appbar_background"
            android:text="@string/app_name"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/btn_light"
            style="@style/style_qr_box_view_button"
            android:button="@null"
            android:drawableTop="@drawable/rectangle"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/btn_produce"
            style="@style/style_qr_box_view_button"
            android:drawableTop="@drawable/rectangle"
            android:text="@string/app_name" />
    </LinearLayout>
</RelativeLayout>