<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/spaceView"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imTBBarcodeScanner"
        android:background="@color/recent_search_bg" />

    <ImageView
        android:id="@+id/imBurgerButtonPressed"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_drawer_menu"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imTBBarcodeScanner"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/barcode"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTBProductSearch"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/imTBBarcodeScanner"
        android:layout_alignTop="@+id/imBurgerButtonPressed"
        android:layout_toEndOf="@+id/imBurgerButtonPressed" />

