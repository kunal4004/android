<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        style="@style/dialog_title_text_style"
        android:layout_marginTop="@dimen/twenty_eight_dp"
        android:gravity="start"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/cc_activation_security_check_title"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        style="@style/body_text_style"
        android:layout_marginTop="@dimen/twelve_dp"
        android:gravity="start"
        android:text="@string/cc_activation_security_check_description"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <RelativeLayout
        android:id="@+id/inEnvelope"
        style="@style/clickable_card_item_layout_style"
        android:layout_height="@dimen/eighty_dp"
        android:layout_marginTop="@dimen/fourty_dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/description">

        <ImageView
            android:id="@+id/logoEnvelope"
            style="@style/card_item_start_icon_style"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:alpha="1"
            app:srcCompat="@drawable/ic_envelope" />

        <TextView
            style="@style/card_item_regular_text_style"
            android:layout_toEndOf="@+id/logoEnvelope"
            android:text="@string/cc_activation_security_check_1"
            android:textColor="@color/account_amount_color" />

        <CheckBox
            android:id="@+id/inEnvelopeCheck"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@drawable/refine_multi_selector"
            android:clickable="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/correctDetails"
        style="@style/clickable_card_item_layout_style"
        android:layout_height="@dimen/eighty_dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/inEnvelope">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A000000" />

        <ImageView
            android:id="@+id/logoCard"
            style="@style/card_item_start_icon_style"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:alpha="1"
            app:srcCompat="@drawable/ic_card" />

        <TextView
            style="@style/card_item_regular_text_style"
            android:layout_toEndOf="@+id/logoCard"
            android:text="@string/cc_activation_security_check_2"
            android:textColor="@color/account_amount_color" />

        <CheckBox
            android:id="@+id/correctDetailsCheck"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@drawable/refine_multi_selector"
            android:clickable="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pinSealInTact"
        style="@style/clickable_card_item_layout_style"
        android:layout_height="@dimen/eighty_dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/correctDetails">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A000000" />

        <ImageView
            android:id="@+id/logoPinSeal"
            style="@style/card_item_start_icon_style"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:alpha="1"
            app:srcCompat="@drawable/ic_lock" />

        <TextView
            style="@style/card_item_regular_text_style"
            android:layout_toEndOf="@+id/logoPinSeal"
            android:text="@string/cc_activation_security_check_3"
            android:textColor="@color/account_amount_color" />

        <CheckBox
            android:id="@+id/pinSealInTactCheck"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@drawable/refine_multi_selector"
            android:clickable="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activateCardButton"
        style="@style/call_to_action_text_style"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:text="@string/cc_activation_security_check_action"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/callCallCenter"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <TextView
        android:id="@+id/callCallCenter"
        style="@style/link_text_style"
        android:layout_marginBottom="@dimen/thirty_two_dp"
        android:text="@string/cc_activation_security_check_contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>