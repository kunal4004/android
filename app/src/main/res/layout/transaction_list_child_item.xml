<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:contentDescription="@string/transactions_layout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transactionDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:text="03 / 07 / 2016"
        android:textColor="@color/transaction_date_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transactionDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:text="Purchase - Foods"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/transactionAmount"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/transactionDate" />

    <TextView
        android:id="@+id/transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:text="R 50.00"
        android:textColor="@color/black_off"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/transactionDate" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/beginGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <View
        android:id="@+id/bottomSeparator"
        android:layout_width="0dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/transactionDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/recent_search_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>