<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:contentDescription="@string/transactions_layout">

    <TextView
        android:id="@+id/transactionDate"
        style="@style/futura_medium_black_12_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:letterSpacing="0.1"
        android:text="@string/transaction_date_value"
        android:textColor="@color/transaction_date_color"
        app:layout_constraintEnd_toStartOf="@+id/transactionAmount"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transactionDescription"
        style="@style/futura_medium_black_12_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Purchase - Foods"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/transactionAmount"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/transactionDate"/>

    <TextView
        android:id="@+id/transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:text="R 50.00"
        android:textColor="@color/black_off"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/transactionDate" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/beginGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/seventeen_dp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/transactionDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/recent_search_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>