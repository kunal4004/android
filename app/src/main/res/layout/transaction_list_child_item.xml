<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:contentDescription="@string/transactions_layout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionDate"
                android:layout_toLeftOf="@+id/transactionAmount"
                android:textColor="#66030303"
                android:textSize="12sp"
                app:WTextView_font="myriadpro_regular"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                />
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transactionAmount"
                android:textColor="@color/black_off"
                android:textSize="15sp"
                app:WTextView_font="medium_bold"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transactionDescription"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />

    </LinearLayout>

</LinearLayout>