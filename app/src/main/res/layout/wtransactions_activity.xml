<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/wtransactions_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="?attr/actionBarSize"
                app:elevation="0dp">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/toolbarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="transactions"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:WTextView_font="medium_bold"/>
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <View
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black_desc_opacity"/>

        <ExpandableListView
            android:id="@+id/transactionListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:groupIndicator="@null"/>

        <include layout="@layout/empty_state_template"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbTransaction"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminateTint="@color/black"
        android:visibility="gone"/>

    <include layout="@layout/no_connection_handler"/>

    <za.co.woolworths.financial.services.android.ui.views.FloatingActionButtonExpandable
        android:id="@+id/chatIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/sixteen_dp"
        app:fab_content="@string/chat_button_text"
        app:fab_duration="@integer/chat_button_animation_duration"
        app:fab_icon="@drawable/icon_next_active"
        app:fab_padding="@dimen/fourteen_dp"
        app:fab_padding_text_icon="@dimen/twenty_four_dp"
        app:fab_text_size="@dimen/fourteen_sp" />
</FrameLayout>