<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stores_details_background"
        android:minHeight="95dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/storeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@+id/distanceTextView"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:letterSpacing="0.02"
                android:paddingEnd="10dp"
                android:text="@string/placeholder"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/futura_medium_ttf"
                android:letterSpacing="0.01"
                android:textColor="#ABABAB"
                android:textSize="15sp"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>

        <TextView
            android:id="@+id/offeringsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/futura_medium_ttf"
            android:letterSpacing="0.08"
            android:lineSpacingExtra="2dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stores_details_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_directions" />

                <TextView
                    android:id="@+id/storeAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_width"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/imgcaret1"
                    android:layout_toEndOf="@+id/imgDirection"
                    android:fontFamily="@font/myriad_pro_regular_otf"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgcaret1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_caret_black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stores_details_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_call24" />

                <TextView
                    android:id="@+id/storeNumberTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/default_width"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/imgcaret2"
                    android:layout_toEndOf="@+id/imgCall"
                    android:fontFamily="@font/myriad_pro_regular_otf"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgcaret2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_caret_black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/storeTimingView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="16dp"
                android:paddingBottom="19dp">

                <ImageView
                    android:id="@+id/imgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_time24" />

                <LinearLayout
                    android:id="@+id/timeingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_width"
                    android:layout_toEndOf="@+id/imgTime"
                    android:orientation="vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relBrandLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/store_details_background_border_on_top"
                android:paddingLeft="@dimen/default_margin"
                android:paddingTop="10dp"
                android:paddingRight="@dimen/default_margin"
                android:paddingBottom="19dp">

                <ImageView
                    android:id="@+id/imgW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_maps_w" />

                <LinearLayout
                    android:id="@+id/brandsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BrandsLabel"
                    android:layout_toEndOf="@+id/imgW"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/default_width"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_semi_bold_otf"
                        android:paddingStart="@dimen/default_width"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/BrandsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imgW"
                    android:fontFamily="@font/myriad_pro_semi_bold_otf"
                    android:paddingStart="@dimen/default_width"
                    android:paddingTop="3dp"
                    android:text="@string/brands"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>