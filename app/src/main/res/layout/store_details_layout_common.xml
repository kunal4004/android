<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stores_details_background"
        android:minHeight="95dp"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/distance"
                android:paddingRight="10dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:WTextView_font="medium_bold" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ABABAB"
                android:textSize="15dp"
                app:WTextView_font="medium" />
        </RelativeLayout>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/offerings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAllCaps="true"
            android:textColor="#ABABAB"
            android:textSize="18dp"
            app:WTextView_font="medium"


            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/direction"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@drawable/stores_details_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_directions" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/storeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imgcaret1"
                    android:layout_toRightOf="@+id/imgDirection"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:WTextView_font="myriadpro_regular" />

                <ImageView
                    android:id="@+id/imgcaret1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_caret_black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@drawable/stores_details_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_call24" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/storeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imgcaret2"
                    android:layout_toRightOf="@+id/imgCall"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:WTextView_font="myriadpro_regular" />

                <ImageView
                    android:id="@+id/imgcaret2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_caret_black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stores_details_background"
                android:paddingBottom="19dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_time24" />

                <LinearLayout
                    android:id="@+id/timeingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgTime"
                    android:orientation="vertical"></LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="19dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_maps_w" />

                <LinearLayout
                    android:id="@+id/brandsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgW"
                    android:orientation="vertical">
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="@string/brands"
                        app:WTextView_font="myriadpro_semibold"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>