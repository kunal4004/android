<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/detailsView"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoOverlay="false"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoParallaxOffset="100dp"
        sothree:umanoScrollableView="@+id/scrollProduct"
        sothree:umanoShadowHeight="20dp">

        <LinearLayout
            android:id="@+id/linProductList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/activity_product_list"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

            <include layout="@layout/product_view_detail"/>

        </LinearLayout>
    </za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout>

    <include layout="@layout/no_connection_handler"/>

</FrameLayout>