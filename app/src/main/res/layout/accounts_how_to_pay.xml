<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_sp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/twenty_four_dp">

        <ImageView
            android:id="@+id/howToPayLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wrewardshero" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/contact_us_item_header_textview"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:text="@string/ways_to_pay_your_account"
            android:textColor="@color/black_50" />

        <LinearLayout style="@style/layout_with_top_border">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/black_circle_with_number"
                android:text="1" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/contact_us_item_header_textview"
                android:text="@string/how_to_pay_1" />
        </LinearLayout>

        <LinearLayout style="@style/layout_with_top_border">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/black_circle_with_number"
                android:text="2" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/contact_us_item_header_textview"
                android:text="@string/how_to_pay_2" />
        </LinearLayout>

        <LinearLayout style="@style/layout_with_top_border">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/black_circle_with_number"
                android:text="3" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/contact_us_item_header_textview"
                android:text="@string/how_to_pay_3" />
        </LinearLayout>

        <LinearLayout style="@style/layout_with_top_border">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/black_circle_with_number"
                android:text="4" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/contact_us_item_header_textview"
                android:text="@string/how_to_pay_4" />
        </LinearLayout>

    </LinearLayout>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:letterSpacing="0.15"
        android:paddingLeft="@dimen/twenty_four_dp"
        android:paddingRight="@dimen/twenty_four_dp"
        android:text="@string/how_to_pay_bank_details"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:WTextView_font="bold" />

    <LinearLayout
        android:id="@+id/bankDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" />
</LinearLayout>