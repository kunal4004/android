<!--        android:textColor="#222222"-->
<!--        android:textSize="12sp"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/star2" />-->
    <TextView
        android:id="@+id/star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend" />

    <ImageView
        android:id="@+id/star5_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star5"
        app:layout_constraintTop_toBottomOf="@+id/recommend" />

    <SeekBar
        android:id="@+id/star5_2"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="#000000"
        android:progressDrawable="@color/grey_background_color"
        android:progress="50"
        app:layout_constraintStart_toEndOf="@+id/star5_1"
        app:layout_constraintTop_toBottomOf="@+id/recommend" />

    <TextView
        android:id="@+id/star5_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="86"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/star5_2"
        app:layout_constraintTop_toBottomOf="@+id/recommend" />

    <TextView
        android:id="@+id/star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <ImageView
        android:id="@+id/star4_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star4"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <SeekBar
        android:id="@+id/star4_2"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:progress="20"
        android:layout_marginStart="15dp"
        android:progressDrawable="@color/grey_background_color"
        android:layout_marginTop="25dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/star4_1"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <TextView
        android:id="@+id/star4_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="58"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/star4_2"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <TextView
        android:id="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <ImageView
        android:id="@+id/star3_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star3"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <SeekBar
        android:id="@+id/star3_2"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:progress="10"
        android:progressDrawable="@color/grey_background_color"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/star3_1"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <TextView
        android:id="@+id/star3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="16"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/star3_2"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <TextView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:lineHeight="20dp"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <ImageView
        android:id="@+id/star2_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star2"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <SeekBar
        android:id="@+id/star2_2"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:layout_marginStart="15dp"
        android:progress="15"
        android:progressDrawable="@color/grey_background_color"
        android:layout_marginTop="25dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/star2_1"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <TextView
        android:id="@+id/star2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/star2_2"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <TextView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <ImageView
        android:id="@+id/star1_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star1"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <SeekBar
        android:id="@+id/star1_2"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:progress="5"
        android:progressDrawable="@color/grey_background_color"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/star1_1"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <TextView
        android:id="@+id/star1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/star1_2"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/futura_bold"
        android:text="CLOSE"
        android:paddingBottom="@dimen/sixteen_dp"
        android:textColor="#222222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/star1" />

</androidx.constraintlayout.widget.ConstraintLayout>