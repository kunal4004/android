<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF">

    <View
        android:id="@+id/close_top"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/six_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@color/bpi_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="0"
        android:text="Ratings Details"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_top" />

    <include
        android:id="@+id/pdpratings"
        layout="@layout/pdp_rating_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_details" />

    <TextView
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:text="96% Would recommend this product to a friend "
        android:textAlignment="center"
        android:textColor="@color/card_details_value_color"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdpratings" />

    <View
        android:background="#1A000000"
        android:id="@+id/view_1"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp">
    </View>

    <TextView
        android:id="@+id/star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1" />

    <ImageView
        android:id="@+id/star5_1"
        android:layout_width="@dimen/sixteen_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star5"
        app:layout_constraintTop_toBottomOf="@+id/view_1" />

    <ProgressBar
        android:id="@+id/star5_2"
        android:layout_width="@dimen/two_hundred_and_fifty_dp"
        android:layout_height="@dimen/five_dp"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="50"
        app:layout_constraintStart_toEndOf="@+id/star5_1"
        app:layout_constraintTop_toBottomOf="@+id/view_1" />

    <TextView
        android:id="@+id/star5_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="86"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@+id/star5_2"
        app:layout_constraintTop_toBottomOf="@+id/view_1" />

    <TextView
        android:id="@+id/star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="4"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <ImageView
        android:id="@+id/star4_1"
        android:layout_width="@dimen/sixteen_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star4"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <ProgressBar
        android:id="@+id/star4_2"
        android:layout_width="@dimen/two_hundred_and_fifty_dp"
        android:layout_height="@dimen/five_dp"
        android:progress="20"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="@dimen/twenty_five_dp"
        app:layout_constraintStart_toEndOf="@+id/star4_1"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <TextView
        android:id="@+id/star4_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="58"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@+id/star4_2"
        app:layout_constraintTop_toBottomOf="@+id/star5" />

    <TextView
        android:id="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <ImageView
        android:id="@+id/star3_1"
        android:layout_width="@dimen/sixteen_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star3"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <ProgressBar
        android:id="@+id/star3_2"
        android:layout_width="@dimen/two_hundred_and_fifty_dp"
        android:layout_height="@dimen/five_dp"
        android:progress="10"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        app:layout_constraintStart_toEndOf="@+id/star3_1"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <TextView
        android:id="@+id/star3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="16"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@+id/star3_2"
        app:layout_constraintTop_toBottomOf="@+id/star4" />

    <TextView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:lineHeight="@dimen/twenty_dp"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <ImageView
        android:id="@+id/star2_1"
        android:layout_width="@dimen/sixteen_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star2"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <ProgressBar
        android:id="@+id/star2_2"
        android:layout_width="@dimen/two_hundred_and_fifty_dp"
        android:layout_height="@dimen/five_dp"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:progress="15"
        android:max="100"

        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="@dimen/twenty_five_dp"
        app:layout_constraintStart_toEndOf="@+id/star2_1"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <TextView
        android:id="@+id/star2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="8"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@+id/star2_2"
        app:layout_constraintTop_toBottomOf="@+id/star3" />

    <TextView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/futura_bold"
        android:letterSpacing="1"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <ImageView
        android:id="@+id/star1_1"
        android:layout_width="@dimen/sixteen_dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/rating_bar_bg"
        app:layout_constraintStart_toEndOf="@+id/star1"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <ProgressBar
        android:id="@+id/star1_2"
        android:layout_width="@dimen/two_hundred_and_fifty_dp"
        android:layout_height="@dimen/five_dp"
        android:progress="5"
        android:max="100"

        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        app:layout_constraintStart_toEndOf="@+id/star1_1"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <TextView
        android:id="@+id/star1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:letterSpacing="0"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/no_active_card_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@+id/star1_2"
        app:layout_constraintTop_toBottomOf="@+id/star2" />

    <View
        android:background="#1A000000"
        android:id="@+id/view_2"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star1_3"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/futura_bold"
        android:text="CLOSE"
        android:paddingBottom="@dimen/sixteen_dp"
        android:textColor="@color/no_active_card_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_2" />

</androidx.constraintlayout.widget.ConstraintLayout>