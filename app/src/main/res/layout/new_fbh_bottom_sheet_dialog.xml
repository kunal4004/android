<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/twenty_four_dp"
    android:paddingBottom="@dimen/twenty_five_dp">

    <include
        android:id="@+id/incSwipeCloseIndicator"
        layout="@layout/popup_close_header_bar"
        android:layout_width="@dimen/fourty_dp"
        android:layout_height="@dimen/four_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bagIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incSwipeCloseIndicator"
        android:layout_marginTop="@dimen/sixty_dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_new_fbh_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incSwipeCloseIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/newFBHCNCTitle"
        style="@style/absa_page_title_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/fourty_dp"
        android:text="@string/new_fbh_cnc_text"
        app:layout_constraintTop_toBottomOf="@+id/bagIcon" />

    <View
        android:id="@+id/separator"
        style="@style/bottom_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/newFBHCNCTitle"
        android:layout_marginTop="@dimen/twenty_four_dp"
        app:layout_constraintTop_toBottomOf="@+id/newFBHCNCTitle"/>


    <ImageView
        android:id="@+id/calenderIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/calenderText"
        app:layout_constraintTop_toTopOf="@+id/calenderTextDetail"
        app:layout_constraintStart_toStartOf="parent" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/calenderText"
        style="@style/calender_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/three_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintStart_toEndOf="@+id/calenderIcon"
        android:text="@string/quick" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/calenderTextDetail"
        style="@style/calender_details_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="@dimen/three_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calenderText"
        app:layout_constraintStart_toEndOf="@+id/calenderIcon"
        android:text="@string/calender_detail" />


    <ImageView
        android:id="@+id/alarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/alarmTitle"
        app:layout_constraintTop_toTopOf="@+id/alarmTextDetail"
        app:layout_constraintStart_toStartOf="parent" />


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/alarmTitle"
        style="@style/calender_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintTop_toBottomOf="@+id/calenderTextDetail"
        app:layout_constraintStart_toEndOf="@+id/alarmIcon"
        android:text="@string/convenient" />


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/alarmTextDetail"
        style="@style/calender_details_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="@dimen/three_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTitle"
        app:layout_constraintStart_toEndOf="@+id/alarmIcon"
        android:text="@string/alarm_text" />

    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/gotItButton"
        style="@style/blackButtonStyle"
        android:layout_marginTop="@dimen/thirty_five_dp"
        android:layout_marginBottom="@dimen/twenty_five_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/alarmTextDetail"
        android:text="@string/got_it" />

</androidx.constraintlayout.widget.ConstraintLayout>