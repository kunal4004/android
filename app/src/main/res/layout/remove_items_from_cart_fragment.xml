<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/twenty_four_dp"
    android:paddingTop="@dimen/sixteen_dp"
    android:paddingRight="@dimen/twenty_four_dp"
    android:paddingBottom="@dimen/twenty_four_dp">

    <ProgressBar
        android:id="@+id/progressRemoveItems"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:elevation="@dimen/two_dp"
        android:indeterminateTint="@color/black"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/myriad_pro_regular_black_15_text_style"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:gravity="center_horizontal"
        android:text="@string/remove_items_dialog_desc"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/removeItems"
        style="@style/call_to_action_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_above="@+id/cancel"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:text="@string/remove_these_items_continue" />

    <TextView
        android:id="@+id/cancel"
        style="@style/dialog_action_text_style_gray_medium"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cancel"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/title"
        style="@style/dialog_title_text_style"
        android:layout_width="wrap_content"
        android:layout_below="@+id/incSwipeCloseIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:text="@string/remove_items_dialog_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvItemsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/removeItems"
        android:layout_below="@+id/subTitle"
        android:clipToPadding="true"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"
        android:scrollbars="vertical" />

    <include
        android:id="@+id/incSwipeCloseIndicator"
        layout="@layout/popup_close_header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sixteen_dp" />
</RelativeLayout>