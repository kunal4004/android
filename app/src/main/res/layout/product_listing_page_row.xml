<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/mainImgLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/white_smoke"
        android:contentDescription="@string/plp_productImageLayout"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="5:7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/productVariantTextView"
        style="@style/futura_semi_bold_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transperant_options_button"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1"
        android:padding="@dimen/five_dp"
        android:textSize="@dimen/eleven_sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/marginTextView"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline" />

    <TextView
        android:id="@+id/marginTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:textSize="@dimen/six_dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainImgLayout"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline" />

    <TextView
        android:id="@+id/brandName"
        style="@style/futura_semi_bold_black"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.09"
        android:maxLines="2"
        android:text="@string/brands"
        android:textAllCaps="true"
        android:textSize="@dimen/eleven_sp"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/brandMarginTopView" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:contentDescription="@string/plp_textViewProductName"
        android:ellipsize="end"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="top|start"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="1.29"
        android:text="Original Free Range Venison DroÃ«wors Nibbles 25g"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/brandName"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:numStars="5"
        style="@style/StarRating"
        android:isIndicator="true"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <TextView
        android:id="@+id/txt_rating_count"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight_dp"
        style="@style/reviewCount"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="@+id/rating_bar"
        app:layout_constraintStart_toEndOf="@+id/rating_bar"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintTop_toTopOf="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName"/>

    <TextView
        android:id="@+id/onlinePromotionalTextView1"
        style="@style/futura_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/labelPromotionOne"
        android:ellipsize="end"
        android:gravity="top|start"
        android:maxLines="1"
        android:paddingTop="@dimen/five_dp"
        android:textAllCaps="true"
        android:textColor="@color/two_line_promo_text_color_plp"
        android:textSize="@dimen/eleven_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/txt_rating_count" />

    <TextView
        android:id="@+id/onlinePromotionalTextView2"
        style="@style/futura_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:contentDescription="@string/labelPromotionTwo"
        android:ellipsize="end"
        android:gravity="top|start"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/two_line_promo_text_color_plp"
        android:textSize="@dimen/eleven_sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/onlinePromotionalTextView1" />

    <TextView
        android:id="@+id/brandNameFakeView"
        style="@style/futura_semi_bold_black_12_text_style"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textAllCaps="true"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/onlinePromotionalTextView2" />

    <TextView
        android:id="@+id/tvSaveText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_dp"
        android:layout_marginBottom="@dimen/one_dp"
        android:fontFamily="@font/futura_medium"
        android:includeFontPadding="false"
        android:textColor="@color/promo_text_color"
        android:textSize="@dimen/ten_sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/includeProductListingPriceLayout"
        app:layout_constraintEnd_toStartOf="@+id/endMarginGuideline"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toBottomOf="@+id/brandNameFakeView"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="brandNameFakeView,tvSaveText" />

    <View
        android:id="@+id/horizontalProductSeparator"
        android:layout_width="0dp"
        android:layout_height="@dimen/one_dp"
        android:background="@color/recent_search_bg"
        app:layout_constraintBottom_toBottomOf="@id/mainImgLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/brandMarginTopView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/eight_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalProductSeparator" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startMarginGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/sixteen_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/promotionalImageGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twelve_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endMarginGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/sixteen_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/promotionalImageTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/twelve_dp" />

    <include
        android:id="@+id/includeProductListingPriceLayout"
        layout="@layout/product_listing_price_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/five_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline" />

    <include
        android:id="@+id/productListingPromotionalImage"
        layout="@layout/product_listing_promotional_images"
        app:layout_constraintStart_toStartOf="@+id/startMarginGuideline"
        app:layout_constraintTop_toTopOf="@+id/promotionalImageTopGuideline" />
</androidx.constraintlayout.widget.ConstraintLayout>
