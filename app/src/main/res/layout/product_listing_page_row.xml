<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="345dp"
    android:background="@drawable/card_shadow">

    <ImageView
        android:id="@+id/imProductImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingTop="44dp"
        android:paddingEnd="17dp"
        android:paddingBottom="34dp"
        android:scaleType="centerInside"
        app:layout_collapseMode="parallax"
        app:layout_constraintBottom_toTopOf="@+id/imageGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imageGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />


    <ImageView
        android:id="@+id/imNewImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imSave"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imNewImage" />

    <ImageView
        android:id="@+id/imReward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imSave"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imVitality"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imReward"
        tools:ignore="ContentDescription" />


    <View
        android:id="@+id/horizontalProductSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/horizontal_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageGuideLine" />


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:alpha="0.9"
        android:ellipsize="end"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:gravity="top|start"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="1.6dp"
        android:maxLines="3"
        android:minLines="3"
        android:text="Original Free Range Venison DroÃ«wors Nibbles 25g"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalProductSeparator"
        tools:ignore="HardcodedText"
        tools:targetApi="lollipop" />


    <TextView
        android:id="@+id/tvSaveText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="19dp"
        android:ellipsize="end"
        android:fontFamily="@font/futura_medium_ttf"
        android:gravity="bottom|start"
        android:letterSpacing="0.08"
        android:lines="2"
        android:maxLines="2"
        android:text="BUY 6 AND SAVE 10% ONLINE ONLY"
        android:textColor="@color/promo_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName"
        tools:ignore="HardcodedText,UnusedAttribute" />


    <ImageView
        android:id="@+id/imQuickShopAddToCartIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:contentDescription="@string/app_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSaveText"
        app:srcCompat="@drawable/quick_shop_add_to_cart_button_state" />


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap"
        app:layout_constraintBottom_toBottomOf="@+id/imQuickShopAddToCartIcon"
        app:layout_constraintEnd_toStartOf="@+id/imQuickShopAddToCartIcon"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_alignSelf="flex_end">

            <TextView
                android:id="@+id/tvWasPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="bottom|start"
                android:paddingStart="0dp"
                android:paddingEnd="2dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute"
                tools:text="R 99.99 (R 99.99/kg)" />

            <View
                android:id="@+id/fromPriceStrikeThrough"
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_gravity="center"
                android:background="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvWasPrice"
                app:layout_constraintStart_toStartOf="@+id/tvWasPrice"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/futura_semi_bold_ttf"
            android:gravity="bottom|start"
            android:text="R 99.99 (R 99.99/kg)"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:layout_alignSelf="flex_start"
            tools:ignore="HardcodedText,UnusedAttribute" />

    </com.google.android.flexbox.FlexboxLayout>

    <View
        android:id="@+id/bottomSpace"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imQuickShopAddToCartIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
