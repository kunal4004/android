<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start|center"
    android:orientation="horizontal"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cli_step">
    <za.co.woolworths.financial.services.android.ui.views.StepIndicator
        android:id="@+id/step_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:siTextColor="@android:color/transparent"
        app:siBackgroundColor="@color/recent_search_bg"
        app:siDefaultBackground="1"
        app:siStepColor="@color/black" />
</LinearLayout>