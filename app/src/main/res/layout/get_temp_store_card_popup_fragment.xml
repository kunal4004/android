<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:scrollbars="vertical"
        android:paddingBottom="@dimen/twenty_four_dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imTempCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourty_dp"
                android:contentDescription="@string/placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/store_card_temp" />

            <TextView
                android:id="@+id/title"
                style="@style/dialog_title_text_style"
                android:layout_marginTop="@dimen/twenty_eight_dp"
                android:gravity="start"
                android:lineSpacingMultiplier="1.40"
                android:text="@string/get_temp_sc_title"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/imTempCard" />

            <TextView
                android:id="@+id/description"
                style="@style/body_text_style"
                android:layout_marginTop="@dimen/twelve_dp"
                android:gravity="start"
                android:text="@string/get_temp_sc_description"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/getTempStoreCardButton"
            style="@style/call_to_action_text_style"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginBottom="@dimen/twenty_four_dp"
            android:background="@color/black"
            android:text="@string/get_temp_sc_action"
            app:layout_constraintBottom_toTopOf="@+id/howItWorks"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/left_guideline2" />

        <TextView
            android:id="@+id/howItWorks"
            style="@style/link_text_style"
            android:layout_marginBottom="@dimen/thirty_two_dp"
            android:text="@string/get_temp_sc_link_how_to_pay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline2"
            app:layout_constraintStart_toStartOf="@+id/left_guideline2" />

        <ProgressBar
            android:id="@+id/getTempStoreCardProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/bank_spacing_width"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline2"
            app:layout_constraintStart_toStartOf="@+id/left_guideline2"
            app:layout_constraintTop_toBottomOf="@+id/howItWorks" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:indeterminateTint="@color/white"
            android:padding="@dimen/four_dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/getTempStoreCardButton"
            app:layout_constraintEnd_toEndOf="@+id/getTempStoreCardButton"
            app:layout_constraintStart_toStartOf="@+id/getTempStoreCardButton"
            app:layout_constraintTop_toTopOf="@+id/getTempStoreCardButton"
            tools:ignore="UnusedAttribute" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>