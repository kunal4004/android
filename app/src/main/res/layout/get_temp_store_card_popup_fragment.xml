<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imTempCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:contentDescription="@string/placeholder"
        app:layout_constraintDimensionRatio="H,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_optimizationLevel="ratio"
        app:srcCompat="@drawable/store_card_temp" />

    <TextView
        android:id="@+id/title"
        style="@style/dialog_title_text_style"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:gravity="start"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/get_temp_sc_title"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/imTempCard" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twelve_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="start"
        android:lineSpacingMultiplier="@integer/one_point_five"
        android:text="@string/get_temp_sc_description"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/description1TextView"
        style="@style/body_text_style"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:fontFamily="@font/myriad_pro_semi_bold"
        android:gravity="start"
        android:textSize="@dimen/sixteen_sp"
        android:text="@string/get_temp_sc_description1"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <TextView
        android:id="@+id/getTempStoreCardButton"
        style="@style/call_to_action_text_style"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/thirty_three_dp"
        android:background="@color/black"
        android:text="@string/get_temp_sc_action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <ProgressBar
        android:id="@+id/getTempStoreCardProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:indeterminateTint="@color/white"
        android:padding="@dimen/four_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/getTempStoreCardButton"
        app:layout_constraintEnd_toEndOf="@+id/getTempStoreCardButton"
        app:layout_constraintStart_toStartOf="@+id/getTempStoreCardButton"
        app:layout_constraintTop_toTopOf="@+id/getTempStoreCardButton"
        tools:ignore="UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>