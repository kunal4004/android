<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
        android:id="@+id/imProductView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/woolworth_logo_icon"/>

    <RelativeLayout
        android:id="@+id/productOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?attr/actionBarSize">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/productfade"/>

    </RelativeLayout>
</RelativeLayout>