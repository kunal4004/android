<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/fifty_dp">

    <TextView
        android:id="@+id/description"
        style="@style/myriad_pro_regular"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_toStartOf="@+id/unit"
        android:lineSpacingMultiplier="0.94"
        android:maxLines="2"
        android:text="@string/absa_biometric_desc"
        android:textColor="@color/black_50"
        android:textSize="@dimen/sixteen_sp" />

    <TextView
        android:id="@+id/unit"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sixteen_sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/swatch_border_color" />
</RelativeLayout>