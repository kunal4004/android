<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/collectionDetailsNestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/whoIsCollectingDetailsLayout"
                layout="@layout/checkout_new_user_recipient_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/savedCollectionPersonsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eighteen_dp"
                android:background="@color/white"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@+id/collectingPartition"
                app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                app:layout_constraintStart_toEndOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/whoIsCollectingDetailsLayout" />

            <View
                android:id="@+id/collectingPartition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/six_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:background="@color/color_D8D8D8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/savedCollectionPersonsRecyclerView" />

            <include
                android:id="@+id/vehiclesDetailsLayout"
                layout="@layout/vehicle_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                app:layout_constraintTop_toBottomOf="@+id/collectingPartition" />

            <View
                android:id="@+id/vehicleDetailsPartition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/six_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:background="@color/color_D8D8D8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vehiclesDetailsLayout" />

            <Button
                android:id="@+id/confirmDetails"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@drawable/order_add_to_cart_button_bg"
                android:fontFamily="@font/futura_semi_bold"
                android:letterSpacing="0.2"
                android:text="@string/confirm_details"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/vehicleDetailsPartition" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/twenty_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/twenty_dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>