<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/drawer_color"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.WOnboardingOneFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/walkthrough1"
            android:layout_above="@+id/fragment_wonboarding_one_description_layer"
            android:background="@android:color/transparent">
        </ImageView>

        <LinearLayout
            android:id="@+id/fragment_wonboarding_one_description_layer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/fragment_wonboarding_one_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WELCOME"
                app:WTextView_font="medium_bold"
                android:gravity="center_horizontal"
                style="@style/TitleWSemiBoldWhite"
                android:paddingTop="32dp"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/fragment_wonboarding_one_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The new Woolies app gives you easy access to fashion trends, recipes, store locators and more."
                android:gravity="center_horizontal"
                style="@style/CaptionLightGrey"
                app:WTextView_font="myriadpro_regular"
                android:lineSpacingExtra="1.3sp"
                android:paddingTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
