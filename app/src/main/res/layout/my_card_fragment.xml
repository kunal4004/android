<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardNestedScrollView"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:paddingBottom="@dimen/twenty_four_dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@color/grey_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imStoreCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:contentDescription="@string/image_card"
                android:paddingBottom="@dimen/seventeen_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/w_store_card" />

            <TextView
                android:id="@+id/cardStatus"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/textview_rounded_corner"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="1.1sp"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp"
                android:textAllCaps="true"
                android:textColor="@color/active_card_color"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/imStoreCard"
                app:layout_constraintTop_toTopOf="@+id/imStoreCard"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/tvCardNumberHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="****  ****  ****  4012"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imStoreCard"
                app:layout_constraintEnd_toEndOf="@+id/imStoreCard"
                app:layout_constraintStart_toStartOf="@+id/imStoreCard"
                app:layout_constraintTop_toBottomOf="@+id/cardStatus"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/tvCardHolderHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="26dp"
                android:elevation="2dp"
                android:fontFamily="@font/futura_semi_bold"
                android:letterSpacing="0.12"
                android:shadowColor="#B3000000"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="Thuli Sandile"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintBottom_toBottomOf="@+id/imStoreCard"
                app:layout_constraintEnd_toEndOf="@+id/imStoreCard"
                app:layout_constraintStart_toStartOf="@+id/imStoreCard"
                app:layout_constraintTop_toBottomOf="@+id/tvCardNumberHeader"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/cardDetailsView"
            style="@style/card_items_header_layout_style"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardLayout">

            <TextView
                style="@style/card_items_header_text_style"
                android:layout_alignParentStart="true"
                android:text="@string/card_details" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardNumberLayout"
            style="@style/card_item_layout_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardDetailsView">

            <TextView
                style="@style/card_item_regular_text_style"
                android:layout_alignParentStart="true"
                android:text="@string/card_number_title" />

            <TextView
                android:id="@+id/textViewCardNumber"
                style="@style/card_item_semi_bold_text_style"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardHolderLayout"
            style="@style/card_item_layout_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNumberLayout">

            <TextView
                android:id="@+id/tvCardHolder"
                style="@style/card_item_regular_text_style"
                android:layout_alignParentStart="true"
                android:text="@string/card_holder_title" />

            <TextView
                android:id="@+id/textViewCardHolderName"
                style="@style/card_item_semi_bold_text_style"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/text_cardHolderName"
                android:textAllCaps="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expireDetailsLayout"
            style="@style/card_item_layout_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardHolderLayout">

            <TextView
                android:id="@+id/tvExpires"
                style="@style/card_item_regular_text_style"
                android:layout_alignParentStart="true"
                android:text="@string/temp_card_expires" />

            <TextView
                android:id="@+id/cardExpireDate"
                style="@style/card_item_semi_bold_text_style"
                android:layout_marginRight="@dimen/sixteen_sp"
                android:layout_toStartOf="@+id/expireInfo"
                android:text="12 June 2019" />

            <ImageView
                android:id="@+id/expireInfo"
                style="@style/card_item_end_icon_style"
                android:alpha="0.3"
                android:src="@drawable/icon_info" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/manageView"
            style="@style/card_items_header_layout_style"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:contentDescription="@string/label_manage_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expireDetailsLayout">

            <TextView
                style="@style/card_items_header_text_style"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/label_manage_card_details"
                android:text="@string/manage" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/temporaryCardFreezeRelativeLayout"
            style="@style/clickable_card_item_layout_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageView">

            <ImageView
                android:id="@+id/temporaryCardFreezeImageView"
                style="@style/card_item_start_icon_style"
                android:layout_width="wrap_content"
                android:alpha="0.8"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_freeze_grey" />

            <TextView
                style="@style/card_item_semi_bold_text_style"
                android:layout_toEndOf="@+id/temporaryCardFreezeImageView"
                android:text="@string/temporary_card_freeze_title" />

            <FrameLayout
                android:id="@+id/temporaryFreezeCardSwitcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ProgressBar
                    android:id="@+id/temporaryFreezeCardProgressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:indeterminateTintMode="src_in"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone" />

                <Switch
                    android:id="@+id/temporaryCardFreezeSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/SwitchTheme"
                    android:thumb="@drawable/customswitchselector"
                    android:track="@drawable/custom_track" />

            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blockCard"
            style="@style/clickable_card_item_layout_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temporaryCardFreezeRelativeLayout">

            <ImageView
                android:id="@+id/logoBlockCard"
                style="@style/card_item_start_icon_style"
                android:layout_width="@dimen/twenty_four_dp"
                android:layout_height="@dimen/twenty_four_dp"
                app:srcCompat="@drawable/icon_card" />

            <TextView
                style="@style/card_item_semi_bold_text_style"
                android:layout_toEndOf="@+id/logoBlockCard"
                android:text="@string/block_and_replace_card_title" />

            <ImageView style="@style/card_item_end_icon_style" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payWithCard"
            style="@style/clickable_card_item_layout_style"
            android:layout_marginTop="@dimen/sixteen_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blockCard">

            <ImageView
                android:id="@+id/logoPayWithCard"
                style="@style/card_item_start_icon_style"
                android:layout_width="@dimen/twenty_four_dp"
                android:layout_height="@dimen/twenty_four_dp"
                app:srcCompat="@drawable/icon_card" />

            <TextView
                style="@style/card_item_semi_bold_text_style"
                android:layout_toEndOf="@+id/logoPayWithCard"
                android:text="@string/pay_with_card" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center|end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/payWithCardNextArrow"
                    style="@style/style_loan_img" />

                <ProgressBar
                    android:id="@+id/payWithCardTokenProgressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/bank_spacing_width"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/howItWorks"
            style="@style/clickable_card_item_layout_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payWithCard">

            <ImageView
                android:id="@+id/logoHowItWorks"
                style="@style/card_item_start_icon_style"
                app:srcCompat="@drawable/ic_how_to_pay" />

            <TextView
                style="@style/card_item_semi_bold_text_style"
                android:layout_toEndOf="@+id/logoHowItWorks"
                android:text="@string/how_it_works" />

            <ImageView style="@style/card_item_end_icon_style" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/virtualCardViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="howItWorks,payWithCard,expireDetailsLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>