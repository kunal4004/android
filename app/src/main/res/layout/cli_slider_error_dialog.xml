<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relContainerRootMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <include
        android:id="@+id/incSwipeCloseIndicator"
        layout="@layout/popup_close_header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/bank_spacing_width"
        android:paddingRight="@dimen/bank_spacing_width">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bank_spacing_width"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/futura_semi_bold_ttf"
            android:gravity="center"
            android:letterSpacing="0.07"
            android:text="@string/loan_withdrawal_popup_error"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/loan_request_high_desc"
            android:textColor="@color/description_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="@dimen/bank_spacing_width"
            android:background="@color/description_color" />

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/okButtonTapped"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="OK"
            android:textSize="12sp"
            app:WButton_font="medium_bold"
            tools:targetApi="lollipop" />

    </LinearLayout>
</LinearLayout>