<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:fillViewport="true"
    android:paddingTop="?attr/actionBarSize"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/white"
            android:minHeight="68dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="20dp"
            android:paddingEnd="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="center_vertical"
                android:letterSpacing="0"
                android:text="@string/call_us_contact_us"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/localCallerPhoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/myriad_pro_regular_otf"
                android:gravity="center_vertical"
                android:text="@string/txt_call_center_opening_hours"
                android:textColor="@color/color_444444"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/callCenterOperationHoursTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/myriad_pro_regular_otf"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1dp"
                android:text="@string/fs_call_center_opening_hours"
                android:textColor="@color/color_444444"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/recent_search_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/callUsLinearLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />


        <RelativeLayout
            android:id="@+id/contactUsFaxNumberRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="70dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone">

            <View
                android:id="@+id/contactUsFaxNumberHorizontalView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/recent_search_bg" />

            <ImageView
                android:id="@+id/faxImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_fax"
                android:contentDescription="@string/fs_local_caller_number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/img2"
                android:layout_toEndOf="@+id/faxImg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:text="@string/fax"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/faxNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/myriad_pro_regular_otf"
                    android:gravity="center_vertical"
                    android:text="@string/fs_local_caller_number"
                    android:textColor="@color/color_444444"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="center_vertical"
                android:letterSpacing="0"
                android:paddingStart="16dp"
                android:paddingTop="17dp"
                android:text="@string/email_us"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/recent_search_bg" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactFinancialServicesEmailLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>