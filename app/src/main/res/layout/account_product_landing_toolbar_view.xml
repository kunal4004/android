<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accountProductLandingToolbarView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">

    <View
        android:id="@+id/storeCardBottomView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontalDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/dark_divider"
        android:elevation="@dimen/_1sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/toolbarTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:letterSpacing="0.2"
        android:text="@string/title_how_to_pay"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeCardBottomView" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/infoIconImageView"
        android:layout_width="@dimen/icon_dimens"
        android:layout_height="@dimen/icon_dimens"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_end"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeCardBottomView"
        app:srcCompat="@drawable/info_white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/navigateBackImageButton"
        style="@style/selectableImageButtonRippleStyle"
        android:layout_width="@dimen/icon_dimens"
        android:layout_height="@dimen/icon_dimens"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_start"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeCardBottomView"
        app:srcCompat="@drawable/back_white" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/closeIconImageButton"
        style="@style/closeIconStyle"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeCardBottomView" />

    <TextView
        android:id="@+id/accountInArrearsTextView"
        style="@style/accountInArrearsTextViewStyle"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="@string/account_in_arrears"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeCardBottomView" />

</androidx.constraintlayout.widget.ConstraintLayout>