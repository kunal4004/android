<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSearchProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbShopperChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingStart="@dimen/ten_dp"
            android:text="@string/let_my_shooper_choose_for_me"
            android:button="@drawable/shopping_list_item_selector"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <RadioButton
            android:id="@+id/rbOwnSubstitute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:checked="false"
            android:paddingStart="@dimen/ten_dp"
            android:button="@drawable/shopping_list_item_selector"
            android:text="@string/choose_substitute"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvSearchProduct"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/fourty_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/fourty_three_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:background="@drawable/bg_search_corner_4"
        android:drawableStart="@drawable/ic_search"
        android:drawableEnd="@drawable/close_cross_icon"
        android:drawablePadding="@dimen/twelve_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="center_vertical"
        android:hint="@string/search_alternative_product"
        android:padding="@dimen/twelve_dp"
        android:textColor="@color/black"
        android:textColorHint="@color/product_search_hint"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/txtCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fourty_three_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:fontFamily="@font/futura_light"
        android:text="@string/cancel"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tvSearchProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>