<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/whoIsCollectingConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvWhoIsCollectingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_semi_bold"
                    android:padding="@dimen/twenty_four_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/who_is_collecting_header_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_sp"/>

            <TextView
                android:id="@+id/tvWhoIsCollectingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriad_pro_regular"
                android:text="@string/who_is_collecting_label"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp" android:layout_marginStart="@dimen/fourteen_dp"
                android:layout_marginEnd="@dimen/eighteen_dp"
                android:background="@drawable/bg_select_store"
                android:paddingStart="@dimen/fourteen_dp"
                android:paddingTop="@dimen/fifteen_dp"
                android:paddingEnd="@dimen/thirty_dp"
                android:paddingBottom="@dimen/sixteen_dp"
                app:layout_constraintTop_toBottomOf="@id/tvWhoIsCollectingTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>