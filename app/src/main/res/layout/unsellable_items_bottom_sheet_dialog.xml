<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/twelve_dp"
    android:paddingBottom="@dimen/sixteen_dp">

    <include
        android:id="@+id/incSwipeCloseIndicator"
        layout="@layout/popup_close_header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/unsellable_title"
        style="@style/dialog_title_text_style"
        android:layout_width="wrap_content"
        android:layout_below="@+id/incSwipeCloseIndicator"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:paddingHorizontal="@dimen/twelve_dp"
        android:text="@string/remove_items_standard_dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incSwipeCloseIndicator" />

    <TextView
        android:id="@+id/unsellable_subTitle"
        style="@style/opensans_regular_13_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingHorizontal="@dimen/thirty_six_dp"
        android:text="@string/unsellable_subtitle"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/thirteen_sp"
        app:layout_constraintTop_toBottomOf="@+id/unsellable_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:paddingHorizontal="@dimen/twelve_dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutSaveListOption"
        app:layout_constraintHeight_max="@dimen/three_twenty_dp"
        app:layout_constraintTop_toBottomOf="@+id/unsellable_subTitle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvItemsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:paddingVertical="@dimen/sixteen_dp"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSaveListOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/eight_dp"
        android:layout_marginStart="@dimen/twelve_dp"
        app:layout_constraintTop_toBottomOf="@+id/itemListLayout">

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/saveToListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/saveToListCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/refine_multi_selector"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/removeItems"
        style="@style/call_to_action_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginHorizontal="@dimen/twelve_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:text="@string/continueLabel"
        app:layout_constraintBottom_toTopOf="@+id/cancel_btn"
        app:layout_constraintTop_toBottomOf="@+id/layoutSaveListOption" />

    <TextView
        android:id="@+id/cancel_btn"
        style="@style/dialog_action_text_style_gray_medium"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="@string/cancel"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removeItems" />

    <ProgressBar
        android:id="@+id/progressRemoveItems"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:elevation="@dimen/two_dp"
        android:indeterminateTint="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>