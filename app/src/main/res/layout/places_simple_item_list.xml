<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/fourty_dp">

    <TextView
        android:id="@+id/primaryTextView"
        style="@style/opensens_semi_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fourty_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/fourty_dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/two_sp"
        android:text="28 East Lake Island Drive"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SecondaryTextView"
        style="@style/opensens_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fourty_dp"
        android:layout_marginTop="@dimen/two_dp"
        android:layout_marginEnd="@dimen/fourty_dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/two_sp"
        android:text="Marina da Gama, Cape Town, South Africa"
        android:textColor="@color/checkout_delivering_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintTop_toBottomOf="@+id/primaryTextView" />

    <View
        android:id="@+id/dividerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@+id/SecondaryTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
