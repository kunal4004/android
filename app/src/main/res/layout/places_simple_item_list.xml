<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recyclerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/fourty_eight_dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/primaryTextViewShimmerFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_five_dp"
            android:layout_marginTop="@dimen/six_dp"
            android:layout_marginEnd="@dimen/twenty_five_dp"
            android:background="@color/shimmer_view_background">

            <TextView
                android:id="@+id/primaryTextView"
                style="@style/futura_semi_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/SecondaryTextViewShimmerFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/two_dp"
            android:layout_marginEnd="@dimen/twenty_five_dp"
            android:background="@color/shimmer_view_background"
            app:layout_constraintTop_toBottomOf="@+id/primaryTextViewShimmerFrameLayout">

            <TextView
                android:id="@+id/SecondaryTextView"
                style="@style/futura_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textSize="@dimen/twelve_sp" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/dividerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginStart="@dimen/twelve_dp"
        android:layout_marginEnd="@dimen/twelve_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@+id/recyclerLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
