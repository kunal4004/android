<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/bpi_overview_detail_content" />
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llHowToClaim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:background="@color/default_background"
        android:paddingTop="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnHowToClaim"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:background="@color/black"
            android:letterSpacing="0.2"
            android:text="@string/bpi_how_to_claim"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/thirteen_sp"
            app:WButton_font="medium_bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
