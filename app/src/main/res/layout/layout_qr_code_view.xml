<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/black_50"
        android:minHeight="?attr/actionBarSize">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:letterSpacing="0.17"
            android:text="Store card"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:WTextView_font="medium_bold"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fl_box_view"
        android:gravity="bottom|center"
        android:visibility="visible">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:letterSpacing="0.17"
            android:lineSpacingExtra="5sp"
            android:paddingLeft="@dimen/bank_spacing_width"
            android:paddingRight="@dimen/bank_spacing_width"
            android:text="@string/set_info_detail"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:WTextView_font="medium"/>

        <ProgressBar
            android:id="@+id/ppBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>


    <!--we need to keep scanner view locates in center-->
    <FrameLayout
        android:id="@+id/fl_box_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="59dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_scan_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="2dip"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relBtnManual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_box_view"
        android:layout_marginTop="80dp">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnManual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="@dimen/bank_spacing_width"
            android:layout_marginRight="@dimen/bank_spacing_width"
            android:layout_marginTop="19dp"
            android:background="@drawable/barcode_btn_bg"
            android:letterSpacing="0.12"
            android:text="@string/set_manually_enter_barcode"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:WButton_font="medium"/>

    </RelativeLayout>

</RelativeLayout>