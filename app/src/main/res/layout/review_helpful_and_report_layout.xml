<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvHelpful"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/was_this_review_helpful"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableRight="@drawable/verified_staff_member"
        android:drawablePadding="@dimen/nine_dp"/>

    <TextView
        android:id="@+id/tvLikes"
        style="@style/myriad_pro_regular_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintStart_toEndOf="@+id/tvHelpful"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/five_dp"/>

    <TextView
        android:id="@+id/tvReport"
        style="@style/futura_medium_black_12_text_style"
        android:alpha="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>