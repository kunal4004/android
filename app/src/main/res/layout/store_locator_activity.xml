<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIconTint="@color/black"
        app:tabIconTintMode="multiply"
        app:tabIndicatorColor="@color/green"
        app:tabIndicatorHeight="@dimen/two_dp"
        app:tabInlineLabel="true"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/selected_store_locator_tab_title"
        app:tabTextAppearance="@style/TabLayoutDefaultStyle"
        app:tabTextColor="@color/normal_store_locator_tab_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabs">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpStoreLocator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:requiresFadingEdge="none" />

        <TextView
            android:id="@+id/tvStoreContactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/stock_finder_map_header_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:gravity="center"
            android:paddingStart="@dimen/twenty_five_dp"
            android:paddingTop="@dimen/eight_dp"
            android:paddingEnd="@dimen/twenty_five_dp"
            android:paddingBottom="@dimen/ten_dp"
            android:text="@string/npc_participating_store_outside_geofence"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="@dimen/sixteen_sp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

