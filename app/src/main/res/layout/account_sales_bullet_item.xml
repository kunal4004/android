<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/bulletTitleTextView"
        style="@style/bullets_text_style"
        android:text="@string/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bulletImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bulletImageView"
        style="@style/rounded_bullets_style"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/bulletTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bulletTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>