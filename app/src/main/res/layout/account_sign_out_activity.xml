<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/store_card_background"
    android:orientation="vertical">

    <include
        layout="@layout/account_sales_card_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/storeCardTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@integer/my_account_apply_now_bottom_sheet_slider_peek_height"
        app:layout_constraintHeight_percent="@integer/my_account_apply_now_bottom_sheet_slider_peek_height" />

    <TextView
        android:id="@+id/storeCardTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:letterSpacing="0.073"
        android:lineSpacingExtra="0.24dp"
        android:text="@string/store_card"
        android:textColor="@color/white"
        android:textSize="@dimen/apply_now_card_type_title_size_32"
        app:layout_constraintBottom_toTopOf="@+id/storeCardDescriptionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_50"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/storeCardApplyNowButton"
        style="@style/apply_now_btn"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/semi_transparent"
        android:text="@string/apply_now"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/viewApplicationStatusTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/storeCardDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:alpha="0.7"
        android:fontFamily="@font/futura_medium_ttf"
        android:text="@string/store_card_desc"
        android:textColor="@color/white"
        android:textSize="@dimen/apply_now_card_type_desc_size_18"
        app:layout_constraintBottom_toTopOf="@+id/storeCardApplyNowButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewApplicationStatusTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:text="@string/view_application_status"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bottomGuide"
        app:layout_constraintEnd_toEndOf="@+id/storeCardApplyNowButton"
        app:layout_constraintStart_toStartOf="@+id/storeCardApplyNowButton" />


</androidx.constraintlayout.widget.ConstraintLayout>