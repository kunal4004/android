<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/storeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        android:scrollbars="none"
        android:visibility="visible"
        />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/flStockFinderMapHeader"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/stock_finder_map_header_bg"
        android:gravity="center"
        android:text="@string/find_in_store_info"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:WTextView_font="myriadpro_regular"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvNoResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/no_result_found"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"
        app:WTextView_font="medium_bold"/>

</RelativeLayout>

