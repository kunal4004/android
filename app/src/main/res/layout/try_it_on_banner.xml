<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vtoTryItOnBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/ten_dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tryItOnDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/try_it_on_banner_txt"
        android:textColor="@color/vto_description_text_color"
        android:textSize="@dimen/text_size_15sp"
        android:lineSpacingExtra="1.dp"
        android:lineSpacingMultiplier="1.10"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:layout_marginStart="@dimen/ten_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_vto_info" />

</androidx.constraintlayout.widget.ConstraintLayout>