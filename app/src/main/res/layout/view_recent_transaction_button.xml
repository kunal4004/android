<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/accountPaymentOptionsRootStyle"
    android:paddingTop="@dimen/_15sdp"
    android:paddingBottom="@dimen/_15sdp">

    <ImageView
        android:id="@+id/viewTransactionImageView"
        style="@style/accountPaymentOptionIconImageViewStyle"
        android:contentDescription="@string/recent_transactions_image_icon"
        app:layout_constraintBottom_toTopOf="@+id/viewTransactionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transactions_white" />

    <TextView
        android:id="@+id/viewTransactionTextView"
        style="@style/accountPaymentOptionIconTextViewStyle"
        android:contentDescription="@string/recent_transactions_text"
        android:text="@string/label_recent_transactions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTransactionImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>