<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutReturningUserCollectionFragment">

    <ScrollView
        android:id="@+id/checkoutReturningCollectionScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sign_in_register_button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/checkoutCollectingFromLayout"
                layout="@layout/layout_delivering_to_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/checkoutCollectingTimeDetailsLayout"
                layout="@layout/layout_collection_time_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkoutCollectingFromLayout" />

            <include
                android:id="@+id/layoutCollectionInstructions"
                layout="@layout/layout_native_checkout_delivery_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/checkoutCollectingTimeDetailsLayout" />

            <include
                android:id="@+id/layoutDriverTip"
                layout="@layout/layout_native_checkout_driver_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/layoutCollectionInstructions" />

            <include
                android:id="@+id/layoutCheckoutDeliveryOrderSummary"
                layout="@layout/layout_native_checkout_delivery_order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutDriverTip" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/continueToPaymentButtonBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderTotalCollectionShimmerFrameLayout" />

    <View
        android:id="@+id/viewHorizontalSeparator1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/color_12000000"
        android:translationZ="@dimen/ninety_dp"
        app:layout_constraintTop_toTopOf="@id/txtOrderTotalCollectionShimmerFrameLayout" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/txtOrderTotalCollectionShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintBottom_toTopOf="@id/continuePaymentTxtCollectionShimmerFrameLayout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtOrderTotalTitleCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/futura_semi_bold"
            android:letterSpacing="0.1"
            android:padding="@dimen/twenty_four_dp"
            android:text="@string/native_checkout_order_total_title"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/orderTotalValueCollectionShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderTotalCollectionShimmerFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderTotalCollectionShimmerFrameLayout">

        <TextView
            android:id="@+id/txtOrderTotalValueCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/futura_semi_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            tools:text="R 690.0" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/continuePaymentTxtCollectionShimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        android:minHeight="@dimen/fifty_dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtContinueToPaymentCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/futura_semi_bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:minHeight="@dimen/fifty_dp"
            android:text="@string/native_checkout_continue_to_payment"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>