<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_F3F3F3"
    android:layout_height="match_parent"
    tools:context="za.co.woolworths.financial.services.android.checkout.view.CheckoutActivity">

    <ScrollView
        android:id="@+id/deliverySummaryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/continueToPaymentButtonBackgroundView"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/checkoutCollectingFromLayout"
                layout="@layout/layout_fulfilment_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                android:id="@+id/checkoutTimeSlotSelectionLayout"
                layout="@layout/checkout_delivery_time_slot_selection_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/checkoutCollectingFromLayout" />

            <include
                android:id="@+id/checkoutCollectingTimeDetailsLayout"
                layout="@layout/layout_collection_time_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkoutTimeSlotSelectionLayout" />

            <include
                android:id="@+id/nativeCheckoutFoodSubstitutionLayout"
                layout="@layout/layout_native_checkout_delivery_food_substitution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@+id/checkoutCollectingTimeDetailsLayout" />

            <include
                android:id="@+id/ageConfirmationLayout"
                layout="@layout/layout_native_checkout_age_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nativeCheckoutFoodSubstitutionLayout"
                tools:visibility="visible" />

            <include
                android:id="@+id/layoutDeliveryInstructions"
                layout="@layout/layout_native_checkout_delivery_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@+id/ageConfirmationLayout" />

            <include
                android:id="@+id/layoutDriverTip"
                layout="@layout/layout_native_checkout_driver_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/layoutDeliveryInstructions" />

            <include
                android:id="@+id/layoutCheckoutDeliveryOrderSummary"
                layout="@layout/layout_native_checkout_delivery_order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/eight_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutDriverTip" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/continueToPaymentButtonBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/continuePaymentTxtShimmerFrameLayout" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/continuePaymentTxtShimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/fifty_dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_margin="@dimen/twenty_four_dp"
            android:id="@+id/txtContinueToPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/futura_semi_bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:minHeight="@dimen/fifty_dp"
            android:text="@string/native_checkout_continue_to_payment"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>