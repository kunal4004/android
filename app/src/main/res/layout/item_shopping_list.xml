<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:background="@color/delete_red_bg"
        android:gravity="center"
        android:tag="Bottom2">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/close_white"
            android:drawablePadding="@dimen/four_dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.15"
            android:text="@string/delete"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp"
            app:WTextView_font="medium_bold" />
    </RelativeLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/listItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvListName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:gravity="center|start"
            android:lineSpacingMultiplier="1.67"
            android:text="@string/app_label"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            app:WTextView_font="myriadpro_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imListNextIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/twenty_four_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_caret_black" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvListCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="item"
            android:textColor="#999999"
            android:textSize="@dimen/fourteen_sp"
            app:WTextView_font="myriadpro_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imListNextIcon"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>