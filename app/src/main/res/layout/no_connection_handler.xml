<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_red"
            android:minHeight="?attr/actionBarSize">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/toolbarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="@string/no_connection"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:WTextView_font="medium_bold"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/no_connection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recent_search_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgNoConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:alpha="0.4"
            android:src="@drawable/icon_something_went_wrong"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/txtConnectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgNoConnection"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/bank_spacing_width"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="2sp"
            android:text="@string/no_connection_desc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:WTextView_font="medium_bold"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/txtWWDescription"
            style="@style/TableLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtConnectionTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:gravity="center"
            android:text="@string/no_connection_desc_1"
            android:textColor="@color/semi_transparent_black"
            app:WTextView_font="myriadpro_regular"/>

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnRetry"
            style="@style/whiteButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtWWDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="@dimen/bank_spacing_width"
            android:layout_marginRight="@dimen/bank_spacing_width"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.15"
            android:text="@string/retry"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:WButton_font="medium_bold"/>

    </RelativeLayout>

</LinearLayout>