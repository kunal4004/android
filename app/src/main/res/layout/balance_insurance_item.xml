<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
    >

    <LinearLayout
        android:id="@+id/llTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/iconBalanceInsurance"
        android:orientation="vertical">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvTitle"
            style="@style/style_loan_item"
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_alignTop="@+id/logoViewStatement"
            android:layout_toEndOf="@+id/logoViewStatement"
            android:text="@string/view_statements"/>


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvDescription"
            style="@style/style_loan_desc"
            android:layout_height="wrap_content"
            android:text="description"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iconBalanceInsurance"
        style="@style/style_loan_img"
        />

</RelativeLayout>