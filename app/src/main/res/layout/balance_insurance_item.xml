<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <View
        android:id="@+id/vEmptySpace"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/recent_search_bg"/>

    <RelativeLayout
        android:id="@+id/rlBalanceInsurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="14dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/iconBalanceInsurance"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvTitle"
                style="@style/style_loan_item"
                android:layout_width="match_parent"
                android:layout_alignTop="@+id/logoViewStatement"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/logoViewStatement"
                android:text="@string/view_statements"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvDescription"
                style="@style/style_loan_desc"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iconBalanceInsurance"
            style="@style/style_loan_img"
            android:contentDescription="@string/acc_my_detail"
            />

    </RelativeLayout>

    <View
        android:id="@+id/vBottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/outside_border"
        android:visibility="gone"/>
</LinearLayout>