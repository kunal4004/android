<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/startVerticalGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_begin="12dp"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/endVerticalGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_end="12dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/thirtyTwoDpVerticalMarginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_end="16dp"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/thirtyTwoDpVerticalMarginStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_begin="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_begin="42dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/voucherGreenHeader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/green"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/validFromText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium_ttf"
                android:text="@string/valid_from"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="@+id/startVerticalGuideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/validFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintStart_toEndOf="@+id/validFromText"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/validUntil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintEnd_toStartOf="@+id/endVerticalGuideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/validUntilText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium_ttf"
                android:text="@string/valid_until"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintEnd_toStartOf="@+id/validUntil"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/voucherValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="1dp"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/voucher_off_price_text_size"
                app:layout_constraintEnd_toStartOf="@+id/voucherOffText"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/voucherOffText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/voucherValue"
                android:fontFamily="@font/futura_semi_bold_ttf"
                android:gravity="bottom"
                android:text="@string/off_instantly"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="@dimen/voucher_off_text_size"
                app:layout_constraintBaseline_toBaselineOf="@+id/voucherValue"
                app:layout_constraintBottom_toBottomOf="@+id/voucherValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/voucherValue"
                tools:ignore="UnusedAttribute" />

            <View
                android:id="@+id/voucherHorizontalView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#0a000000"
                app:layout_constraintEnd_toStartOf="@+id/thirtyTwoDpVerticalMarginEnd"
                app:layout_constraintStart_toStartOf="@+id/thirtyTwoDpVerticalMarginStart"
                app:layout_constraintTop_toBottomOf="@+id/voucherValue" />

            <TextView
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/futura_medium_ttf"
                android:gravity="center"
                android:textSize="@dimen/voucher_description_text_size"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/thirtyTwoDpVerticalMarginEnd"
                app:layout_constraintStart_toStartOf="@+id/thirtyTwoDpVerticalMarginStart"
                app:layout_constraintTop_toBottomOf="@+id/voucherHorizontalView"
                tools:ignore="UnusedAttribute" />


            <ImageView
                android:id="@+id/barcode"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/thirtyTwoDpVerticalMarginEnd"
                app:layout_constraintStart_toStartOf="@+id/thirtyTwoDpVerticalMarginStart"
                app:layout_constraintTop_toBottomOf="@+id/message" />


            <TextView
                android:id="@+id/voucherNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/futura_medium_ttf"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/voucher_barcode_text_size"
                app:layout_constraintEnd_toStartOf="@+id/thirtyTwoDpVerticalMarginEnd"
                app:layout_constraintStart_toStartOf="@+id/thirtyTwoDpVerticalMarginStart"
                app:layout_constraintTop_toBottomOf="@+id/barcode" />

            <View
                android:id="@+id/voucherNumberSeparatorView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#0a000000"
                app:layout_constraintTop_toBottomOf="@+id/voucherNumber" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/myriad_pro_regular_otf"
                android:letterSpacing="-0.01"
                android:text="@string/minimum_spend"
                android:textColor="#4d000000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/thirtyTwoDpVerticalMarginStart"
                app:layout_constraintTop_toBottomOf="@+id/voucherNumberSeparatorView" />


            <TextView
                android:id="@+id/minSpend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/myriad_pro_regular_otf"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/thirtyTwoDpVerticalMarginEnd"
                app:layout_constraintTop_toBottomOf="@+id/voucherNumberSeparatorView" />


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/minSpend" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vouchertearoff"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />
    </LinearLayout>
</androidx.cardview.widget.CardView>