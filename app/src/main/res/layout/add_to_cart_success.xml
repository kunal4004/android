<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlAddToCartRoot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_two_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:background="@color/black">


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_toEndOf="@+id/mWoolworthsProgressBar"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:text="@string/added_to"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            app:WTextView_font="myriadpro_regular"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/tvView"
            android:layout_toEndOf="@+id/tvAddToCart"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:text="@string/bottom_title_cart"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="visible"
            app:WTextView_font="medium_bold"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/tvAddToCart"
            android:layout_alignBottom="@+id/tvAddToCart"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:text="@string/view"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="visible"
            app:WTextView_font="medium_bold"/>

    </RelativeLayout>
</LinearLayout>