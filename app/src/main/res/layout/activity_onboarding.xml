<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_onboarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/drawer_color"
    tools:context="za.co.woolworths.financial.services.android.ui.activities.OnboardingActivity">
    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/skip"
        android:letterSpacing="0.08"
        android:textColor="@color/white"
        android:id="@+id/txtSkip"
        app:WTextView_font="medium"
        android:padding="8dp"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/drawer_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/place_autocomplete_prediction_primary_text">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/dotimg0"
                    android:src="@drawable/page_indicator_selected" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/dotimg1"
                    android:src="@drawable/page_indicator_default" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/dotimg2"
                    android:src="@drawable/page_indicator_default" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/dotimg3"
                    android:src="@drawable/page_indicator_default" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onboardingActionButtonsLayer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:padding="0dp"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/white">

            <Button
                android:id="@+id/btnOnboardingLogin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="SIGN IN"
                android:paddingLeft="-2dp"
                android:paddingRight="-2dp"
                android:layout_weight="1"
                android:background="@color/white"/>

            <View android:layout_height="fill_parent"
                android:layout_width="2px"
                android:background="#90909090"/>

            <Button
                android:id="@+id/btnOnboardingRegister"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="REGISTER"
                android:paddingLeft="-2dp"
                android:paddingRight="-2dp"
                android:layout_weight="1"
                android:background="@color/white"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
