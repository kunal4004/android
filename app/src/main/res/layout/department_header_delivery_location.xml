<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orders_bg"
    android:paddingBottom="@dimen/sixteen_dp">

    <RelativeLayout
        android:id="@+id/locationSelectedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_pressed"
        android:paddingStart="@dimen/twenty_four_dp"
        android:paddingTop="@dimen/twenty_six_dp"
        android:paddingEnd="@dimen/twenty_four_dp"
        android:paddingBottom="@dimen/twenty_six_dp">

        <ImageView
            android:id="@+id/deliverLocationIcon"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delivery_truck" />

        <ImageView
            android:id="@+id/iconCaretRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_caret_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/iconCaretRight"
            android:layout_toRightOf="@+id/deliverLocationIcon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvDeliveringTo"
                style="@style/style_cart_delivery_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:text="@string/delivery_or_collection" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvDeliveryLocation"
                style="@style/style_cart_delivery_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="16dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>