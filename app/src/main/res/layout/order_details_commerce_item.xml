<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:background="@color/bg_light_overlay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="@dimen/twenty_four_dp"
        android:paddingRight="@dimen/twenty_four_dp">

        <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
            android:id="@+id/imProductImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/placeholder"
            fresco:fadeDuration="10"
            fresco:failureImage="@drawable/woolworth_logo_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemName"
            style="@style/opensans_regular_12_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_toStartOf="@+id/price"
            android:layout_toEndOf="@+id/imProductImage"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/price"
            style="@style/my_orders_textview_style_order_history" />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/promotion_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_light_overlay" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/promotion_note_style"
            android:text="@string/promotion_note" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>