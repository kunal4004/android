<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollLoggedOutLoggedIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpJoinRewardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="@android:color/transparent"
                android:clipToPadding="true"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@android:color/transparent"
                app:tabTextColor="@android:color/transparent" />

            <Button
                android:id="@+id/applyForWRewards"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/join_reward_selector_bg"
                android:fontFamily="@font/futura_semi_bold"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:minHeight="48dp"
                android:text="@string/apply_for_wrewards"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/tvRewardLinkAccount"
                style="@style/SignInRegisterLinkStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="26dp"
                android:autoLink="all"
                android:gravity="center"
                android:linksClickable="true"
                android:text="@string/link_reward_account"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@+id/applyForWRewards" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>