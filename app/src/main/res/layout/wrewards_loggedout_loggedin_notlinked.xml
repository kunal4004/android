<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:scrollbars="none"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/wrewardshero"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="64dp"
        android:background="@color/green"
        />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wRewards_tag_line"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#e6000000"
        android:textSize="17.5sp"
        app:WTextView_font="medium"
        android:lineSpacingExtra="4sp"
        android:layout_marginBottom="48dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutLoginLogout"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"

        >

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/wRewars_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/register_button_bg"
            android:gravity="center"
            android:text="@string/log_in"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:letterSpacing="0.2"
            app:WButton_font="medium_bold"
            />

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/wRewars_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/register_button_bg"
            android:gravity="center"
            android:text="@string/register"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:letterSpacing="0.2"
            app:WButton_font="medium_bold"
            />
    </LinearLayout>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/wRewars_linkaccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/register_button_bg"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/link_account"
        android:letterSpacing="0.2"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:WTextView_font="medium_bold"

        />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/applyForWRewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/green"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/apply_for_wrewards"
        android:letterSpacing="0.2"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:WTextView_font="medium_bold"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_bg"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        >

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="64dp"
            android:text="@string/get_more"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:WTextView_font="medium_bold"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/wrewards_three_levels"
            android:lineSpacingExtra="4sp"
            android:textColor="#80000000"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"
            android:layout_marginTop="50dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutValuedMember"
            android:minHeight="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/valuedMemberArrow"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_caret_black"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/valuedMemberArrow"
                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/textValuedmember"
                >
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/valued"
                    app:WTextView_font="bold"
                    android:textSize="25sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:textColor="@color/green"
                    />
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member"
                    app:WTextView_font="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/swipe_and_save_instantly"
                app:WTextView_font="medium"
                android:textSize="12sp"
                android:textColor="#80000000"
                android:textAllCaps="true"
                android:letterSpacing="0.02"
                android:layout_marginTop="7dp"
                />
            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLoyalMember"
            android:minHeight="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loyalMemberArrow"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_caret_black"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/loyalMemberArrow"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/textloyalmember"
                    >
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loyal"
                        app:WTextView_font="bold"
                        android:textSize="25sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:textColor="@color/green"
                        />
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/member"
                        app:WTextView_font="bold"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/spend_between_10000_29000annually"
                    app:WTextView_font="medium"
                    android:textSize="12sp"
                    android:textColor="#80000000"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="7dp"
                    />
            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutVipMember"
            android:minHeight="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vipMemberArrow"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_caret_black"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/vipMemberArrow"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/textvipmember"
                    >
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vip"
                        app:WTextView_font="bold"
                        android:textSize="25sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:textColor="@color/green"
                        />
                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/member"
                        app:WTextView_font="bold"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/spend_30000"
                    app:WTextView_font="medium"
                    android:textSize="12sp"
                    android:textColor="#80000000"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="7dp"
                    />
            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a000000"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>