<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ccRootSizeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:letterSpacing="0.15"
            android:paddingBottom="@dimen/thirty_one_dp"
            android:paddingTop="@dimen/thirty_one_dp"
            android:text="@string/size"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve_sp"
            app:WTextView_font="myriadpro_semibold"/>


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:gravity="center|start"
            android:letterSpacing="0.15"
            android:minHeight="@dimen/twenty_eight_dp"
            android:paddingBottom="@dimen/thirty_one_dp"
            android:paddingTop="@dimen/thirty_one_dp"
            android:text="@string/size"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve_sp"
            app:WTextView_font="myriadpro_regular"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/recent_search_bg"
        />

</LinearLayout>