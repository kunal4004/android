<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">


    <View
        android:id="@+id/vSpaceView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rclEStatement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/fifty_eight_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        app:layout_constraintBottom_toTopOf="@+id/llEmailStatement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vSpaceView"/>


    <LinearLayout
        android:id="@+id/llEmailStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/relNextButton"
            style="@style/blackButtonStyle"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_marginStart="@dimen/eight_dp"
            android:background="@drawable/button_disable_color"
            android:gravity="center"
            android:paddingEnd="@dimen/eight_dp"
            android:paddingStart="@dimen/eight_dp">

            <ProgressBar
                android:id="@+id/mWoolworthsProgressBar"
                style="@style/progress_button_style"/>

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/btnEmailStatement"
                style="@style/blackButtonStyle"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/email_statement"
                android:textColor="@color/text_color_selector"
                app:WButton_font="medium_bold"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>