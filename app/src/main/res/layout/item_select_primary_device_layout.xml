<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectPrimaryDeviceConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fifteen_dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/deviceCheckbox"
        android:layout_width="@dimen/thirty_dp"
        android:layout_height="@dimen/thirty_dp"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceNameTextView" />

    <TextView
        android:id="@+id/deviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriad_pro_regular"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingTop="@dimen/twenty_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintStart_toEndOf="@id/deviceCheckbox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Matt's iPhone" />

    <TextView
        android:id="@+id/deviceSubtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriad_pro_regular"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingTop="@dimen/ten_dp"
        android:textColor="@color/black_50"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@id/deviceCheckbox"
        app:layout_constraintTop_toBottomOf="@id/deviceNameTextView"
        tools:text="Linked 12/01/2021" />

    <TextView
        android:id="@+id/deviceLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriad_pro_regular"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingTop="@dimen/three_dp"
        android:textColor="@color/black_50"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toEndOf="@id/deviceCheckbox"
        app:layout_constraintTop_toBottomOf="@id/deviceSubtitleTextView"
        tools:text="Linked 12/01/2021" />

    <ImageView
        android:id="@+id/deviceDeleteImageView"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_margin="@dimen/twenty_four_dp"
        android:src="@drawable/ic_delete_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/deviceNameTextView" />

    <View
        android:id="@+id/devicesTitleSeparator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_separator_light_grey"
        app:layout_constraintTop_toBottomOf="@id/deviceLocationTextView"
        app:layout_goneMarginTop="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>