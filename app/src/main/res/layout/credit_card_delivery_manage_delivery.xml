<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/editAddressTitle"
                style="@style/futura_semi_bold_black"
                android:contentDescription="@string/cd_ccd_labeladdressdateandtime"
                android:letterSpacing="0.1"
                android:text="@string/address_date_time"
                android:textAllCaps="true"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintLeft_toLeftOf="@id/left_guideline"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toTopOf="@id/top_guideline" />

            <TextView
                android:id="@+id/editAddress"
                style="@style/futura_medium_black"
                android:contentDescription="@string/cd_ccd_btnedit"
                android:letterSpacing="0.1"
                android:text="@string/edit"
                android:textColor="@color/offer_title_50"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toTopOf="@id/top_guideline" />

            <TextView
                android:id="@+id/deliveryDate"
                style="@style/opensans_regular_13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:contentDescription="@string/cd_ccd_txtdayanddate"
                android:lineSpacingMultiplier="1.33"
                android:textColor="@color/offer_title"
                app:layout_constraintLeft_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/editAddressTitle" />

            <TextView
                android:id="@+id/deliveryTime"
                style="@style/opensans_regular_13_black"
                android:contentDescription="@string/cd_ccd_txttimeslot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.33"
                android:textColor="@color/offer_title"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toTopOf="@id/deliveryDate" />

            <TextView
                android:id="@+id/deliveryAddress"
                style="@style/opensans_regular_13_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:contentDescription="@string/cd_ccd_txtdeliveryaddress"
                android:lineSpacingMultiplier="1.33"
                android:textColor="@color/offer_title"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/deliveryDate" />

            <TextView
                android:id="@+id/editRecipientTitle"
                style="@style/futura_semi_bold_black"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:contentDescription="@string/cd_ccd_labelrecipient"
                android:letterSpacing="0.1"
                android:text="@string/recipient"
                android:textAllCaps="true"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintLeft_toLeftOf="@id/left_guideline"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@id/divider1" />

            <TextView
                android:id="@+id/editRecipient"
                style="@style/futura_medium_black"
                android:contentDescription="@string/cd_ccd_btneditrecipient"
                android:letterSpacing="0.1"
                android:text="@string/edit"
                android:textColor="@color/offer_title_50"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toTopOf="@id/editRecipientTitle" />

            <TextView
                android:id="@+id/nameTitle"
                style="@style/futura_medium"
                android:layout_marginTop="@dimen/twenty_dp"
                android:contentDescription="@string/cd_ccd_labelname"
                android:letterSpacing="0.08"
                android:text="@string/name"
                android:textAllCaps="true"
                android:textColor="@color/offer_title_70"
                android:textSize="@dimen/fifteen_sp"
                app:layout_constraintLeft_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/editRecipientTitle" />

            <TextView
                android:id="@+id/name"
                style="@style/opensans_regular_13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cd_ccd_txtvalue"
                android:textColor="@color/offer_title"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toTopOf="@id/nameTitle" />

            <TextView
                android:id="@+id/bookingReferenceTitle"
                style="@style/futura_semi_bold_black"
                android:layout_marginTop="@dimen/twenty_dp"
                android:contentDescription="@string/cd_ccd_labelbookingref"
                android:letterSpacing="0.1"
                android:text="@string/booking_reference"
                android:textAllCaps="true"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintLeft_toLeftOf="@id/left_guideline"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@id/space1" />

            <TextView
                android:id="@+id/bookingReference"
                style="@style/opensans_regular_13_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:contentDescription="@string/cd_ccd_txtbookingref"
                android:lineSpacingMultiplier="1.33"
                android:textAllCaps="true"
                android:textColor="@color/offer_title"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/bookingReferenceTitle" />

            <TextView
                android:id="@+id/createdDateTitle"
                style="@style/futura_semi_bold_black"
                android:layout_marginTop="@dimen/thirty_dp"
                android:contentDescription="@string/cd_ccd_labelcreated"
                android:letterSpacing="0.1"
                android:text="@string/created"
                android:textAllCaps="true"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintLeft_toLeftOf="@id/left_guideline"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

            <TextView
                android:id="@+id/createdDate"
                style="@style/opensans_regular_13_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:contentDescription="@string/cd_ccd_txtcreatedvalue"
                android:lineSpacingMultiplier="1.33"
                android:textColor="@color/offer_title"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/createdDateTitle" />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:background="@color/color_separator_light_grey"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/deliveryAddress" />

            <View
                android:id="@+id/space1"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@color/grey_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameTitle" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:background="@color/color_separator_light_grey"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/bookingReference" />

            <View
                android:id="@+id/space2"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@color/grey_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createdDate" />

            <View
                android:id="@+id/space3"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixteen_dp"
                android:background="@color/grey_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cancelDelivery" />

            <RelativeLayout
                android:id="@+id/cancelDelivery"
                style="@style/card_item_click_no_pad_style"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:contentDescription="@string/cd_ccd_btncanceldelivery"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/space2">

                <ImageView
                    android:id="@+id/imLogoIncreaseLimit"
                    style="@style/style_loan_logo_img"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delivery_truck" />

                <ImageView
                    android:id="@+id/imgFindOutMoreArrow"
                    style="@style/style_loan_img"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_caret_black" />

                <TextView
                    android:id="@+id/tvIncreaseMyLimit"
                    style="@style/style_loan_title"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imLogoIncreaseLimit"
                    android:text="@string/cancel_delivery" />

            </RelativeLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>