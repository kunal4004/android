<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/editAddressTitle"
        style="@style/futura_semi_bold_black"
        android:letterSpacing="0.1"
        android:text="@string/address_date_time"
        android:textAllCaps="true"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/top_guideline" />

    <TextView
        android:id="@+id/editAddress"
        style="@style/futura_medium_black"
        android:letterSpacing="0.1"
        android:text="@string/edit"
        android:textColor="@color/offer_title_50"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/top_guideline" />

    <TextView
        android:id="@+id/deliveryDate"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/twenty_dp"
        android:lineSpacingMultiplier="1.33"
        android:text="Tuesday 30 April, 2019"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintLeft_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/editAddressTitle" />

    <TextView
        android:id="@+id/deliveryTime"
        style="@style/myriad_pro_regular"
        android:lineSpacingMultiplier="1.33"
        android:text="12pm - 2pm"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/deliveryDate" />

    <TextView
        android:id="@+id/deliveryAddress"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/twenty_dp"
        android:lineSpacingMultiplier="1.33"
        android:text="MakeReign, 201, Salt Circle 17 Kent Street, Woodstock, Cape Town, Western Cape, 7925"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/deliveryDate" />

    <TextView
        android:id="@+id/editRecipientTitle"
        style="@style/futura_semi_bold_black"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:letterSpacing="0.1"
        android:text="@string/recipient"
        android:textAllCaps="true"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <TextView
        android:id="@+id/editRecipient"
        style="@style/futura_medium_black"
        android:letterSpacing="0.1"
        android:text="@string/edit"
        android:textColor="@color/offer_title_50"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/editRecipientTitle" />

    <TextView
        android:id="@+id/nameTitle"
        style="@style/futura_medium"
        android:layout_marginTop="@dimen/twenty_dp"
        android:letterSpacing="0.08"
        android:text="Name"
        android:textAllCaps="true"
        android:textColor="@color/offer_title_70"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintLeft_toRightOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/editRecipientTitle" />

    <TextView
        android:id="@+id/name"
        style="@style/myriad_pro_regular"
        android:text="Thuli Sandile"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toTopOf="@id/nameTitle" />

    <TextView
        android:id="@+id/bookingReferenceTitle"
        style="@style/futura_semi_bold_black"
        android:layout_marginTop="@dimen/twenty_dp"
        android:letterSpacing="0.1"
        android:text="@string/recipient"
        android:textAllCaps="true"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/space1" />

    <TextView
        android:id="@+id/bookingReference"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:lineSpacingMultiplier="1.33"
        android:text="NBGH67589"
        android:textAllCaps="true"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/bookingReferenceTitle" />

    <TextView
        android:id="@+id/createdDateTitle"
        style="@style/futura_semi_bold_black"
        android:layout_marginTop="@dimen/thirty_dp"
        android:letterSpacing="0.1"
        android:text="@string/created"
        android:textAllCaps="true"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <TextView
        android:id="@+id/createdDate"
        style="@style/myriad_pro_regular"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:lineSpacingMultiplier="1.33"
        android:text="12 April 2019"
        android:textAllCaps="true"
        android:textColor="@color/offer_title"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/createdDateTitle" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:background="#1A000000"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/deliveryAddress" />

    <View
        android:id="@+id/space1"
        android:layout_width="0dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/grey_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTitle" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:background="#1A000000"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/bookingReference" />

    <View
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/grey_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createdDate" />

    <RelativeLayout
        android:id="@+id/cancelDelivery"
        style="@style/card_item_click_no_pad_style"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/space2">

        <ImageView
            android:id="@+id/imLogoIncreaseLimit"
            style="@style/style_loan_logo_img"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delivery_truck" />

        <ImageView
            android:id="@+id/imgFindOutMoreArrow"
            style="@style/style_loan_img"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_caret_black" />

        <TextView
            android:id="@+id/tvIncreaseMyLimit"
            style="@style/style_loan_title"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imLogoIncreaseLimit"
            android:text="@string/cancel_order" />

    </RelativeLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />


</androidx.constraintlayout.widget.ConstraintLayout>