<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:contentDescription="@string/rlt_BlockReason"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvBlockCardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:letterSpacing="0.1"
        android:text="@string/block_card_title"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/tvBlockCardDescription"
        style="@style/opensans_regular_13_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:letterSpacing="0.014"
        android:lineSpacingExtra="1.1sp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/block_card_desc"
        android:textColor="@color/npc_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBlockCardTitle"
        tools:ignore="UnusedAttribute" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rclBlockCardReason"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="32dp"
        android:divider="@drawable/radio_button_divider_color"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/btnBlockCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBlockCardDescription" />


    <Button
        android:id="@+id/btnBlockCard"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/button_blockCard"
        android:layout_marginBottom="24dp"
        android:background="@drawable/black_button_drawable_state"
        android:enabled="false"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:letterSpacing="0.18"
        android:lineSpacingMultiplier="1.08"
        android:text="@string/block_card_title"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnBlockCard"
        app:layout_constraintEnd_toEndOf="@+id/btnBlockCard"
        app:layout_constraintStart_toStartOf="@+id/btnBlockCard"
        app:layout_constraintTop_toTopOf="@+id/btnBlockCard" />

</androidx.constraintlayout.widget.ConstraintLayout>