<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/purple"
    android:visibility="gone"
    android:layout_marginTop="?attr/actionBarSize"
    android:id="@+id/scrollLoanWithdrawal"
            android:orientation="vertical"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="32dp">


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/txtWithdrawAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:letterSpacing="0.09"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:lineSpacingExtra="1.2dp"
            android:text="@string/confirm_loan_withdrawal"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:WTextView_font="medium_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:minHeight="92dp"
            >


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/currencyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="R 2.500"
                android:textColor="@color/white"
                android:textSize="45sp"
                app:WEditTextView_font="light"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="78dp"
            android:background="#1affffff"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:padding="16dp"
            >
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Repayment Period"
                android:letterSpacing="0.05"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="36 Months"
                android:textColor="#4dffffff"
                android:textSize="15sp"
                android:id="@+id/textMonths"
                app:WTextView_font="myriadpro_regular"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1affffff"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:padding="16dp"
            >

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:letterSpacing="0.05"
                android:text="Additional Monthly Repayment"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="R105.00"
                android:textColor="#4dffffff"
                android:textSize="15sp"
                android:id="@+id/textAdditionalMonthAmount"
                app:WTextView_font="myriadpro_regular"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1affffff"
            />

        <RelativeLayout android:id="@+id/relConfirmLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="124dp"
            android:letterSpacing="0.08"
            android:background="@color/white"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="CONFIRM"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:id="@+id/btnConfirm" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>