<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/closeIndicator"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_grey_corner" />

        <ImageView
            android:id="@+id/imPermanentlyBlockUserLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/closeIndicator"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/app_label"
            app:srcCompat="@drawable/alerter_ic_notifications" />


        <TextView
            android:id="@+id/tvPermanentBlockCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imPermanentlyBlockUserLogo"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/myriad_pro_semi_bold_otf"
            android:gravity="center"
            android:text="@string/permanent_card_block_title"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />

        <TextView
            android:id="@+id/tvPermanentBlockDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPermanentBlockCardTitle"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:gravity="center"
            android:lineSpacingExtra="1.dp"
            android:text="@string/permanent_card_block_desc"
            android:textColor="@color/account_label_color"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btnBlockPermanentCard"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvPermanentBlockDesc"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/black_button_drawable_state"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:letterSpacing="0.12"
            android:text="@string/yes_block_it"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />


        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBlockPermanentCard"
            android:layout_marginStart="@dimen/thirty_two_dp"
            android:layout_marginEnd="@dimen/thirty_two_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:gravity="center"
            android:letterSpacing="0.12"
            android:paddingTop="@dimen/sixteen_dp"
            android:paddingBottom="@dimen/sixteen_dp"
            android:text="@string/cancel"
            tools:targetApi="lollipop" />

    </RelativeLayout>
</FrameLayout>