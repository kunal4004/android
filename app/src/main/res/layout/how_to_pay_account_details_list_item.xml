<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <View style="@style/horizontal_divider_how_to_pay" />

    <LinearLayout
        style="@style/layout_without_top_border"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/twenty_four_dp"
        android:paddingTop="16dp"
        android:paddingBottom="19dp"
        android:paddingRight="@dimen/twenty_four_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/paymentName"
            style="@style/contact_us_item_header_textview"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_weight="1"
            android:text="Account Holder:"
            android:textColor="@color/black_50" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/paymentvalue"
            style="@style/contact_us_item_header_textview"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_weight="1.1"
            android:gravity="end"
            android:singleLine="false"
            android:text="Woolworths Credit Card" />
    </LinearLayout>
</LinearLayout>