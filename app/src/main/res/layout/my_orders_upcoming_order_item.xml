<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orders_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/sixteen_dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/twenty_four_dp"
            android:paddingRight="@dimen/twenty_four_dp">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/my_orders_textview_style_1"
                android:layout_alignParentLeft="true"
                android:text="123456789" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/my_orders_textview_style_1"
                android:layout_alignParentRight="true"
                android:letterSpacing="0.06"
                android:text="PROCESSING"
                android:textAllCaps="true"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_light_overlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/twenty_four_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/my_orders_textview_style_2"
                    android:layout_alignParentLeft="true"
                    android:text="@string/number_of_items" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/my_orders_textview_style_2"
                    android:layout_alignParentRight="true"
                    android:text="7 Items"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_semibold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/my_orders_textview_style_2"
                    android:layout_alignParentLeft="true"
                    android:text="@string/purchase_date" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/my_orders_textview_style_2"
                    android:layout_alignParentRight="true"
                    android:text="28 Dec 2018"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_semibold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:layout_marginBottom="@dimen/twenty_four_dp"
                android:background="@color/bg_light_overlay" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/my_orders_textview_style_2"
                    android:layout_alignParentLeft="true"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_semibold" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/my_orders_textview_style_3"
                    android:text="R4 100.50" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>