<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/gridTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourty_one_dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/gridTextView"
            style="@style/opensans_semi_bold_12_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/eleven_sp"
            tools:text="Mon" />

        <TextView
            android:id="@+id/gridSubTextView"
            style="@style/opensans_regular_12_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/two_dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            tools:text="18 Mar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>