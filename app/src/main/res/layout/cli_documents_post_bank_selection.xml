<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/default_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_title_text"
                    android:text="ABSA ACCOUNT TYPE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/cli_permission_description_text"
                        android:text="We are able to make it this easy for you by requesting your latest 3 months statement directly from your bank with no cost to you."
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:background="@color/cli_button_border" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/cli_permission_description_text"
                        android:text="@string/cli_eligibility_check_description" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/cli_yes_no_button_background">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/yesForPOIFromBank"
                            style="@style/cli_yes_no_button"
                            android:text="@string/cli_yes" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#19000000" />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/noForPOIFromBank"
                            style="@style/cli_yes_no_button"
                            android:text="@string/cli_no" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/default_background"
                android:orientation="vertical"
                android:id="@+id/accountTypeLayout"
                android:visibility="invisible"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_title_text"
                    android:text="@string/cli_account_type" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkAccount"
                        android:minHeight="70dp">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            style="@style/cli_account_type_selection"
                            android:id="@+id/checkAccountText"
                            android:drawableLeft="@drawable/listview"
                            android:text="Cheque Account"
                            android:textColor="@color/black_overlay" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkAccountCheckBox"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:clickable="false"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cli_button_border" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/savingsAccount"
                        android:minHeight="70dp">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            style="@style/cli_account_type_selection"
                            android:id="@+id/savingsAccountText"
                            android:drawableLeft="@drawable/locate_me"
                            android:text="Savings Account"
                            android:textColor="@color/black" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/savingsAccountCheckBox"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/default_background"
                android:orientation="vertical"
                android:id="@+id/accountNumberLayout"
                android:visibility="invisible"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    style="@style/cli_permission_title_text"
                    android:text="ABSA savings ACCOUNt" />
                <LinearLayout
                    android:id="@+id/llNetMonthlyIncomeLayout"
                    style="@style/editTextLayoutContainerStyle"
                    android:layout_marginTop="1dp"
                    >

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        style="@style/textViewLabelStyle"
                        android:text="@string/enter_account_number"/>

                    <LinearLayout
                        android:id="@+id/llNetMonthlyIncome"
                        style="@style/currencyStyleLayout">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvNetMonthlyIncome"
                            style="@style/editCurrencyStyle"/>

                        <za.co.woolworths.financial.services.android.ui.views.WEditTextView
                            android:id="@+id/etNetMonthlyIncome"
                            style="@style/editCurrencyValue"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/black"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:WTextView_font="medium_bold"
        android:id="@+id/submit"
        android:visibility="gone"
        />
</RelativeLayout>