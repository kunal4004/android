<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="?attr/actionBarSize"
        tools:context="za.co.woolworths.financial.services.android.ui.fragments.ShoppingListItemsFragments">

    <data>

        <import type="android.view.View"/>

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/locationSelectedLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/white_bg_pressed"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/nineteen_dp"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvDeliveryLocation"
                    style="@style/style_cart_delivery_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iconCaretRight"
                    android:drawableLeft="@drawable/mapview"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/set_your_delivery_location"/>

                <ImageView
                    android:id="@+id/iconCaretRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_caret_black"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/default_background"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcvShoppingLists"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingTop="16dp"
                    />

                <ProgressBar
                    android:id="@+id/loadingBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/incConnectionLayout"
                    layout="@layout/no_connection_handler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <include
                    android:id="@+id/incEmptyLayout"
                    layout="@layout/empty_state_template"/>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>

