<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:orientation="vertical">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottomside_only"
                android:gravity="center"
                android:minHeight="80dp"
                android:text="@string/the_benefits"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:WTextView_font="medium_bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottomside_only"
                android:gravity="center_horizontal"
                android:minHeight="260dp"
                android:orientation="vertical"
                android:padding="32dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calender"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:text="@string/cash_when_you_need_it"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:WTextView_font="medium"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="200dp"
                    android:text="@string/points_cash_when_you_need_it"
                    android:textColor="@color/black"
                    android:textSize="17.5sp"
                    app:WTextView_font="myriadpro_regular"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottomside_only"
                android:gravity="center_horizontal"
                android:minHeight="260dp"
                android:orientation="vertical"
                android:padding="32dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/convenient"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:text="@string/funds_within_48_hours"
                    android:textColor="@color/black"
                    android:textSize="17.5sp"
                    app:WTextView_font="medium"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:minHeight="90dp"
                    android:text="@string/funds_within_48_hours_description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:WTextView_font="myriadpro_regular"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottomside_only"
                android:gravity="center_horizontal"
                android:minHeight="260dp"
                android:orientation="vertical"
                android:padding="32dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/money"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:text="@string/easy_access"
                    android:textColor="@color/black"
                    android:textSize="17.5sp"
                    app:WTextView_font="medium"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:minHeight="90dp"
                    android:text="@string/easy_access_description"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:WTextView_font="myriadpro_regular"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottomside_only"
                android:gravity="center_horizontal"
                android:minHeight="260dp"
                android:orientation="vertical"
                android:padding="32dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:text="@string/interest_changed"
                    android:textColor="@color/black"
                    android:textSize="17.5sp"
                    app:WTextView_font="medium"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:minHeight="90dp"
                    android:text="@string/interest_changed_description"
                    android:textColor="@color/black"
                    android:textSize="17.5sp"
                    app:WTextView_font="myriadpro_regular"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:minHeight="166dp"
                android:orientation="vertical"

                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:text="@string/cc_to_qualify"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:WTextView_font="medium_bold"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="@string/personal_loan_points_to_qualify"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:WTextView_font="myriadpro_regular"
                    android:layout_marginLeft="10dp"

                    />



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_alignParentBottom="true"
        android:text="@string/apply_now"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:background="#7a4183"
        />
</RelativeLayout>