<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/optionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_dp"
        app:layout_constraintBottom_toTopOf="@id/optionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/icon_delivery_grey_bg"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/optionTitle"
        style="@style/myriad_pro_regular"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/sixteen_sp"
        android:text="@string/collecting_from"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/optionImage" />
    
    <TextView
        android:id="@+id/optionLocation"
        style="@style/myriad_pro_regular"
        android:gravity="center_horizontal"
        android:textSize="@dimen/twenty_sp"
        android:layout_marginTop="@dimen/five_dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Constantia Main Rd, Constantia\n, Cape Town, 7806"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/optionTitle" />

    <View
        android:id="@+id/separator"
        style="@style/bottom_line"
        android:layout_marginTop="@dimen/eight_dp"
        app:layout_constraintTop_toBottomOf="@+id/optionLocation" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/separator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0.4sp"
            android:text="@string/delivery_colon"
            android:textColor="@color/gray"
            android:textSize="@dimen/fifteen_sp" />

        <TextView
            android:id="@+id/deliveryDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>