<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/financialService"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_us_item_bg"
    android:minHeight="70dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/img1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactUsLandingTextView"
            style="@style/contact_us_item_header_textview"
            android:text="@string/contact_us_financial_services" />

        <TextView
            android:id="@+id/contactUsLandingDescriptionTextView"
            style="@style/contact_us_item_desc_textview"
            android:layout_marginTop="5dp"
            android:text="@string/contact_us_financial_services_desc" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_caret_black"
        tools:ignore="ContentDescription" />

</RelativeLayout>
