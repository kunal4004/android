<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/grey_bg"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/voucher_shadow"
        >

        <LinearLayout
            android:id="@+id/leftpart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/voucherspart_left_part"
            >

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value"
                android:textColor="#40000000"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                app:WTextView_font="medium"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voucherValue"
                android:textColor="@color/green"
                android:textSize="24sp"
                app:WTextView_font="bold"
                android:letterSpacing="-0.02"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/leftpart"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            >

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/voucherMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="14sp"
                app:WTextView_font="medium_bold"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/voucherMessage"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/vouchers_badge"
                        />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/voucherExpireDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#80000000"
                        android:textSize="12sp"
                        app:WTextView_font="myriadpro_regular"

                        />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>