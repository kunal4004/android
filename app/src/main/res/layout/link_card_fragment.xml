<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvInvalidCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:gravity="center|start"
        android:lineSpacingExtra="1.dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/invalid_card_number"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vInputCardNumberBackground"
        tools:text="@string/invalid_card_number" />

    <TextView
        android:id="@+id/tvLinkNewCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center|start"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/link_your_new_card"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/link_your_new_card" />


    <TextView
        android:id="@+id/tvLinkNewCardDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:gravity="center|start"
        android:lineSpacingExtra="1.dp"
        android:lineSpacingMultiplier="1.40"
        android:text="@string/link_new_card_desc"
        android:textColor="@color/permanent_card_block_desc_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLinkNewCardTitle"
        tools:text="@string/link_new_card_desc" />

    <View
        android:id="@+id/vInputCardNumberBackground"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/white_rectangle_grey_border_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLinkNewCardDesc" />

    <View
        android:id="@+id/vCameraBgTapped"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:layout_constraintEnd_toEndOf="@+id/vInputCardNumberBackground"
        app:layout_constraintTop_toTopOf="@+id/vInputCardNumberBackground" />

    <ImageView
        android:id="@+id/imCameraIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_label"
        app:layout_constraintBottom_toBottomOf="@+id/vCameraBgTapped"
        app:layout_constraintEnd_toEndOf="@+id/vCameraBgTapped"
        app:layout_constraintStart_toStartOf="@+id/vCameraBgTapped"
        app:layout_constraintTop_toTopOf="@+id/vCameraBgTapped"
        app:srcCompat="@drawable/icon_camera" />

    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@color/white"
        android:cursorVisible="false"
        android:ems="10"
        android:fontFamily="@font/futura_medium_ttf"
        android:gravity="center|start"
        android:hint="@string/enter_new_card_number"
        android:inputType="number"
        android:maxLength="19"
        android:textColorHint="@color/unavailable"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/vInputCardNumberBackground"
        app:layout_constraintEnd_toStartOf="@+id/vCameraBgTapped"
        app:layout_constraintStart_toStartOf="@+id/vInputCardNumberBackground"
        app:layout_constraintTop_toTopOf="@+id/vInputCardNumberBackground" />


    <ImageView
        android:id="@+id/imNavigateToOTPFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:contentDescription="@string/app_label"
        app:layout_constraintBottom_toBottomOf="@+id/vLinkBottomNavigation"
        app:layout_constraintEnd_toEndOf="@+id/vLinkBottomNavigation"
        app:layout_constraintTop_toTopOf="@+id/vLinkBottomNavigation"
        app:srcCompat="@drawable/next_button_icon" />

    <TextView
        android:id="@+id/tvReplacementCardInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/myriad_pro_regular_otf"
        android:gravity="start|center"
        android:text="@string/replacement_card_how_to"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/cli_twelve_sp"
        app:layout_constraintBottom_toBottomOf="@+id/vLinkBottomNavigation"
        app:layout_constraintEnd_toStartOf="@+id/imNavigateToOTPFragment"
        app:layout_constraintStart_toStartOf="@+id/vLinkBottomNavigation"
        app:layout_constraintTop_toTopOf="@+id/vLinkBottomNavigation"
        tools:text="@string/replacement_card_how_to" />


    <View
        android:id="@+id/vLinkBottomNavigation"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>