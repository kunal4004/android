<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/login_wrapper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/img_w_logo_dark"
                tools:ignore="ContentDescription" />

            <za.co.woolworths.financial.services.android.ui.views.WEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/id_number"
                android:id="@+id/login_id_number"
                app:WEditTextView_font="medium"
                android:maxLength="13"
                android:inputType="number" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <za.co.woolworths.financial.services.android.ui.views.WEditTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/acc_number"
                    android:layout_marginTop="8dp"
                    app:WEditTextView_font="medium"
                    android:id="@+id/login_account_number"
                    android:maxLength="19"
                    android:inputType="number"
                    android:digits="0123456789 "/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/terms_selector"
                    android:src="@drawable/question"
                    android:id="@+id/login_info"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/login_wrapper"
        android:layout_alignParentBottom="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_action_container"
            style="@style/Button.Rewards" >

            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:duplicateParentState="true"
                android:clickable="false"
                android:id="@+id/login_action"
                android:text="@string/log_in"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                style="@style/Button.Rewards"
                android:drawableRight="@drawable/ic_caret"
                android:background="@drawable/transparent_button_selector"/>

            <ProgressBar
                android:id="@+id/login_progressBar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/login_action"
                android:indeterminate="true" />
        </RelativeLayout>


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_terms_and_conditions"
            android:textSize="@dimen/text_micro"
            app:WTextView_font="medium"
            android:background="@drawable/terms_selector"
            app:WTextView_spannable_text="@string/terms" />
    </LinearLayout>
</RelativeLayout>