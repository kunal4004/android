<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gift_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_background"
        android:orientation="vertical"
        android:padding="@dimen/sixteen_dp">

        <ImageView
            android:id="@+id/giftImagePlaceHolder"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:src="@drawable/ic_gift_with_purchase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/freeGiftTitle"
            style="@style/futura_semi_bold_black_12_text_style"
            android:layout_marginLeft="@dimen/twelve_dp"
            android:letterSpacing="0.05"
            android:text="@string/free_gift_with_purchase_title"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/giftImagePlaceHolder"
            app:layout_constraintLeft_toRightOf="@+id/giftImagePlaceHolder"
            app:layout_constraintTop_toTopOf="@+id/giftImagePlaceHolder" />

        <TextView
            android:id="@+id/freeGiftText"
            style="@style/opensens_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twelve_dp"
            android:lineSpacingMultiplier="1.40"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/freeGiftTitle" />

        <TextView
            android:id="@+id/bottom_text"
            style="@style/opensens_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:text="@string/free_gift_with_purchase_availabilty"
            android:textColor="@color/gray"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/freeGiftText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/free_sim">

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="@dimen/one_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:background="@color/color_separator_light_grey"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sim_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/three_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:contentDescription="@string/free_sim_with_purchase"
            android:src="@drawable/ic_sim_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <TextView
            android:id="@+id/free_sim_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/thirty_two_dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/free_sim_with_purchase"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/sim_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sim_card"
            app:layout_constraintTop_toBottomOf="@id/divider3" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/free_sim_with_purchase"
            android:src="@drawable/ic_online_down"
            app:layout_constraintBottom_toBottomOf="@+id/sim_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sim_card" />

        <TextView
            android:id="@+id/free_sim_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/twenty_five_dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/free_sim_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>