<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="true"
        android:focusable="true"
        tools:context="za.co.woolworths.financial.services.android.ui.fragments.account.MyAccountsFragment">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.account.MyAccountsFragment"/>

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.account.MyAccountsViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nest_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/recent_search_bg"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:id="@+id/loggedOutHeaderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:focusableInTouchMode="false"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:nestedScrollingEnabled="false"/>

                        <LinearLayout
                            android:id="@+id/viewPagerCountDots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:orientation="horizontal"/>

                        <LinearLayout
                            android:id="@+id/loginRegisterBtnLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:background="@color/white"
                            android:focusableInTouchMode="false"
                            android:minHeight="48dp"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <za.co.woolworths.financial.services.android.ui.views.WButton
                                android:id="@+id/loginAccount"
                                style="@style/whiteButtonStyle"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:letterSpacing="0.2"
                                android:text="@string/log_in"
                                app:WButton_font="medium_bold"/>

                            <za.co.woolworths.financial.services.android.ui.views.WButton
                                android:id="@+id/registerAccount"
                                style="@style/whiteButtonStyle"
                                android:layout_marginLeft="4dp"
                                android:letterSpacing="0.2"
                                android:text="register"
                                app:WButton_font="medium_bold"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/recent_search_bg"/>
                    </LinearLayout>

                    <include
                        layout="@layout/my_account_fragment_header_logged_in"
                        android:visibility="visible"/>

                    <include
                        layout="@layout/account_linked_layout"
                        android:visibility="visible"/>

                    <include
                        layout="@layout/account_apply_layout"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/parentOptionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/llUnlinkedAccount"
                            style="@style/listStyle"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/stores_details_background"
                            android:visibility="gone"
                            >

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                style="@style/accountsItem"
                                android:drawableLeft="@drawable/ic_call24"
                                android:text="@string/link_your_woolies_card_today"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_caret_black"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/loginUserOptionsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            >

                            <RelativeLayout
                                android:id="@+id/myLists"
                                style="@style/listStyle"
                                android:background="@drawable/stores_details_background">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    style="@style/accountsItem"
                                    android:drawableLeft="@drawable/signout_24_copy"
                                    android:text="@string/my_lists"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_caret_black"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/openMessageActivity"
                                style="@style/listStyle"
                                android:background="@drawable/stores_details_background">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    style="@style/accountsItem"
                                    android:drawableLeft="@drawable/message_24"
                                    android:text="@string/messages"/>

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    android:id="@+id/messageCounter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/message_counter_background"
                                    android:gravity="center"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    app:WTextView_font="medium_bold"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/orderHistory"
                                style="@style/listStyle"
                                android:background="@drawable/stores_details_background">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    style="@style/accountsItem"
                                    android:drawableLeft="@drawable/ic_call24"
                                    android:text="@string/order_history"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_caret_black"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/allUserOptionsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/storeLocator"
                                style="@style/listStyle"
                                android:background="@drawable/stores_details_background">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    style="@style/accountsItem"
                                    android:drawableLeft="@drawable/signout_24_copy"
                                    android:text="@string/store_locator"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_caret_black"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relFAQ"
                                style="@style/listStyle"
                                android:background="@drawable/stores_details_background">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    style="@style/accountsItem"
                                    android:drawableLeft="@drawable/signout_24_copy"
                                    android:text="@string/drawer_faq"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_caret_black"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/contactUs"
                                style="@style/listStyle"
                                android:background="@drawable/stores_details_background">

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    style="@style/accountsItem"
                                    android:drawableLeft="@drawable/ic_call24"
                                    android:text="@string/contact_us"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_caret_black"/>
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rlMyDetails"
                        style="@style/listStyle"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/stores_details_background"
                        android:visibility="visible">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            style="@style/accountsItem"
                            android:drawableLeft="@drawable/signout_24_copy_3"
                            android:text="@string/acc_my_detail"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_caret_black"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/signOutBtn"
                        style="@style/listStyle"
                        android:background="@drawable/stores_details_background"
                        android:visibility="visible">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            style="@style/accountsItem"
                            android:drawableLeft="@drawable/signout_25"
                            android:text="@string/sign_out"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_caret_black"/>
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pbAccount"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/black"
            android:visibility="gone"/>


        <include layout="@layout/no_connection_handler"/>
    </FrameLayout>
</layout>