<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recent_search_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp">
        <!--<include
            layout="@layout/my_account_fragment_header_logged_out"
            />-->

        <LinearLayout
            android:id="@+id/loggedOutHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:visibility="visible">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <LinearLayout
                android:id="@+id/viewPagerCountDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/loginRegisterBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@color/white"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/loginAccount"
                    style="@style/whiteButtonStyle"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:text="@string/log_in"
                    app:WButton_font="medium_bold" />

                <za.co.woolworths.financial.services.android.ui.views.WButton
                    android:id="@+id/registerAccount"
                    style="@style/whiteButtonStyle"
                    android:layout_marginLeft="4dp"
                    android:text="register"
                    app:WButton_font="medium_bold" />
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/my_account_fragment_header_logged_in"
            android:visibility="visible" />

        <include
            layout="@layout/account_linked_layout"
            android:visibility="visible" />

        <include
            layout="@layout/account_apply_layout"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/contactUs"
                style="@style/listStyle"
                android:background="@drawable/stores_details_background">

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_call24" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@+id/imgCall"
                    android:text="@string/contact_us"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_caret_black" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/listStyle"
                android:background="@drawable/stores_details_background"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgSubmitQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/signout_24" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@+id/imgSubmitQuery"
                    android:text="@string/submit_query"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_caret_black" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/listStyle"
                android:background="@drawable/stores_details_background"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgFaq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_maps_w" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@+id/imgFaq"
                    android:text="@string/faqs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:WTextView_font="myriadpro_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_caret_black" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/signOutBtn"
            android:layout_marginTop="@dimen/default_margin"
            style="@style/listStyle"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signout_24" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/imgSignOut"
                android:text="@string/sign_out"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black" />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>
