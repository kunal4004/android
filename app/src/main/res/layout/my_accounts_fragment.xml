<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/white"
            android:scrollbars="none"
            tools:context="za.co.woolworths.financial.services.android.ui.fragments.MyAccountsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:background="#d8d8d8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:minHeight="80dp"
                android:paddingLeft="52dp"
                android:paddingRight="52dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_contact"
                    />

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="#d8d8d8"
                    >

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="MT"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        app:WTextView_font="medium_bold"
                        />
                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_contact"
                    />

            </RelativeLayout>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="MATT THOMPSON"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:WTextView_font="medium_bold"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="3dp"
                android:text="MEMBER SINCE AUGUST 2016"
                android:textAllCaps="true"
                android:textColor="#999999"
                android:textSize="12sp"
                app:WTextView_font="medium"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8d8d8"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:paddingTop="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/linked_cards"
                    android:textColor="#80000000"
                    android:textSize="12sp"
                    app:WTextView_font="medium"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/available_funds"
                    android:textColor="#80000000"
                    android:textSize="12sp"
                    app:WTextView_font="medium"
                    />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="0dp"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:minHeight="100dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        >

                        <ImageView
                            android:id="@+id/imgStoreCard"
                            android:layout_width="50dp"
                            android:layout_height="32dp"
                            android:layout_alignParentLeft="true"
                            android:background="@color/black"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/imgStoreCard"
                            android:text="@string/store_card"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:WTextView_font="medium"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="R12 000.00"
                            android:textColor="@color/black_off"
                            android:textSize="14sp"
                            app:WTextView_font="medium_bold"
                            />
                    </RelativeLayout>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_gravity="bottom"
                        android:progress="60"
                        android:progressDrawable="@drawable/progressbar_store_card"
                        />


                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:elevation="10dp"
                app:cardCornerRadius="0dp"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:minHeight="100dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        >

                        <ImageView
                            android:id="@+id/imgCreditCard"
                            android:layout_width="50dp"
                            android:layout_height="32dp"
                            android:layout_alignParentLeft="true"
                            android:background="@color/black"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/imgCreditCard"
                            android:text="@string/credit_card"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:WTextView_font="medium"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="R12 000.00"
                            android:textColor="@color/black_off"
                            android:textSize="14sp"
                            app:WTextView_font="medium_bold"
                            />
                    </RelativeLayout>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_gravity="bottom"
                        android:progress="80"
                        android:progressDrawable="@drawable/progressbar_credit_card"
                        />


                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:elevation="10dp"
                app:cardCornerRadius="0dp"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:minHeight="100dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        >

                        <ImageView
                            android:id="@+id/imgPersonalLoan"
                            android:layout_width="50dp"
                            android:layout_height="32dp"
                            android:layout_alignParentLeft="true"
                            android:background="@color/black"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/imgPersonalLoan"
                            android:text="@string/personal_loan"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:WTextView_font="medium"
                            />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="R12 000.00"
                            android:textColor="@color/black_off"
                            android:textSize="14sp"
                            app:WTextView_font="medium_bold"
                            />
                    </RelativeLayout>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_gravity="bottom"
                        android:progress="40"
                        android:progressDrawable="@drawable/progressbar_personal_loan"
                        />


                </FrameLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_top_bottm_border"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stores_details_background"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgCall"
                    android:background="@drawable/ic_call24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgCall"
                    android:text="@string/contact_us"
                    android:layout_marginLeft="32dp"
                    android:layout_centerVertical="true"
                    app:WTextView_font="myriadpro_regular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_caret_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stores_details_background"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgSubmitQuery"
                    android:background="@drawable/ic_time24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgSubmitQuery"
                    android:text="@string/submit_query"
                    android:layout_marginLeft="32dp"
                    android:layout_centerVertical="true"
                    app:WTextView_font="myriadpro_regular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_caret_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgFaq"
                    android:background="@drawable/ic_maps_w"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgFaq"
                    android:text="@string/faqs"
                    android:layout_marginLeft="32dp"
                    android:layout_centerVertical="true"
                    app:WTextView_font="myriadpro_regular"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_caret_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>




        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_top_bottm_border"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgSignOut"
                android:background="@drawable/ic_directions"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgSignOut"
                android:text="@string/sign_out"
                android:layout_marginLeft="32dp"
                android:layout_centerVertical="true"
                app:WTextView_font="myriadpro_regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_caret_black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>
