<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvSessionExpiredTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:text="@string/session_expired_title"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSessionExpiredDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSessionExpiredDesc"
        style="@style/opensans_regular_13_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center|top"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="1.3dp"
        android:paddingTop="10dp"
        android:text="@string/session_expired_desc"
        android:textColor="@color/black_desc_opacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSessionExpiredTitle"/>


    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/btnSECancel"
        style="@style/whiteButtonStyle"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_weight="0.5"
        android:text="@string/cancel"
        android:textAllCaps="true"
        app:WButton_font="medium_bold"
        app:layout_constraintEnd_toStartOf="@+id/btnSESignIn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSessionExpiredDesc"
        tools:ignore="MissingConstraints"/>

    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/btnSESignIn"
        style="@style/whiteButtonStyle"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_weight="0.5"
        android:text="@string/session_expired_sign_in"
        android:textAllCaps="true"
        app:WButton_font="medium_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSECancel"
        app:layout_constraintTop_toBottomOf="@+id/tvSessionExpiredDesc"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSECancel"/>
</androidx.constraintlayout.widget.ConstraintLayout>