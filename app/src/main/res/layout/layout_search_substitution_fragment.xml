<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tvSearchProduct"
                android:layout_width="0dp"
                android:layout_height="@dimen/fourty_dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search_corner_4"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="@dimen/twelve_dp"
                android:drawableEnd="@drawable/close_cross_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtCancelSearch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/search_alternative_product"
                android:inputType="text"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"
                android:textColorHint="@color/product_search_hint"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/txtCancelSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:fontFamily="@font/futura_medium"
                android:letterSpacing="0.12"
                android:lineHeight="@dimen/_13sdp"
                android:text="@string/cancel"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvSearchProduct"
                app:layout_constraintTop_toTopOf="@+id/tvSearchProduct" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <View
        android:background="@color/color_D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"/>

    <TextView
        android:id="@+id/txtSubstitutionCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:visibility="gone"
        android:fontFamily="@font/futura_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchToolbar" />
    

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintBottom_toTopOf="@+id/viewSeprator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSubstitutionCount"
        tools:listitem="@layout/shopping_list_commerce_item" />

    <View
        android:id="@+id/viewSeprator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eight_dp"
        android:visibility="gone"
        android:background="@color/shimmer_view_background"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <View
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewSeprator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:enabled="false"
        android:background="@drawable/grey_background_with_corner_5"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="@dimen/five_sp"
        android:text="@string/confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewSeprator" />

</androidx.constraintlayout.widget.ConstraintLayout>