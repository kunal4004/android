

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orders_bg"
    tools:context="za.co.woolworths.financial.services.android.getstream.chat.ChatFragment">

    <include
        android:id="@+id/chatToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/chat_toolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_90sdp"
        app:layout_constraintTop_toBottomOf="@+id/chatToolbarLayout"/>

    <include
        android:id="@+id/sendMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/chat_send_message"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
