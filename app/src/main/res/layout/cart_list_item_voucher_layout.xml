<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlAvailableVouchers"
        style="@style/clickable_card_item_layout_style"
        android:layout_height="@dimen/eighty_dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/space">

        <TextView
            android:id="@+id/viewVouchers"
            style="@style/futura_semi_bold_white_12_text_style"
            android:layout_width="56dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/view_button_drawble_state"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/view"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/availableVouchersCount"
            style="@style/futura_semi_bold_black_12_text_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_toStartOf="@+id/viewVouchers"
            android:letterSpacing=".15"
            android:textAllCaps="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/correctDetails"
        style="@style/clickable_card_item_layout_style"
        android:layout_height="@dimen/eighty_dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/rlAvailableVouchers">

        <TextView
            android:id="@+id/promoCodeAction"
            style="@style/futura_semi_bold_white_12_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/black_background_with_corner_5"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/enter"
            android:paddingLeft="@dimen/five_dp"
            android:paddingRight="@dimen/five_dp"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/promoCodeLabel"
            style="@style/futura_semi_bold_white_12_text_style"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/promoCodeAction"
            android:text="@string/do_you_have_a_promo_code"
            android:textAllCaps="true"
            android:letterSpacing=".15"
            android:textColor="@color/account_amount_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_dp"
            android:background="@color/outside_border" />
    </RelativeLayout>

    <View
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="@dimen/eight_dp"
        android:background="@color/recent_search_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>