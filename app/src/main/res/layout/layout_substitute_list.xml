<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSearchProduct"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/fourty_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:background="@drawable/bg_search_corner_4"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/ten_dp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center_vertical"
        android:hint="@string/search_alternative_product"
        android:padding="@dimen/ten_dp"
        android:textColor="@color/color_9D9D9D"
        android:textColorHint="@color/product_search_hint"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifty_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchProduct"
        app:shimmer_repeat_mode="restart"
        app:shimmer_shape="radial">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_item_cell" />

            <include layout="@layout/shimmer_item_cell" />

            <include layout="@layout/shimmer_item_cell" />

            <include layout="@layout/shimmer_item_cell" />

            <include layout="@layout/shimmer_item_cell" />

            <include layout="@layout/shimmer_item_cell" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchProduct"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/shopping_list_commerce_item" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupEmptySubstituteList"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="emptySubstIcon, emptySubstListTitle, emptySubstListDesc" />

    <ImageView
        android:id="@+id/emptySubstIcon"
        android:layout_width="@dimen/hundred_and_twenty_dp"
        android:layout_height="@dimen/hundred_and_twenty_dp"
        app:layout_constraintBottom_toTopOf="@+id/emptySubstListTitle"
        android:contentDescription="@string/empty_subst_list_title"
        android:src="@drawable/ic_empty_subst_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchProduct"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/emptySubstListTitle"
        style="@style/futura_semi_bold_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:paddingHorizontal="@dimen/twenty_four_dp"
        android:text="@string/empty_subst_list_title"
        android:textAlignment="center"
        android:textSize="@dimen/eighteen_sp"
        app:layout_constraintBottom_toTopOf="@+id/emptySubstListDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emptySubstIcon" />

    <TextView
        android:id="@+id/emptySubstListDesc"
        style="@style/opensans_regular_text_style_14sp_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:paddingHorizontal="@dimen/twenty_four_dp"
        android:text="@string/empty_subst_list_desc"
        android:textAlignment="center"
        android:textSize="@dimen/thirteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emptySubstListTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>