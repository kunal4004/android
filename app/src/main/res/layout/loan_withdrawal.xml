<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:contentDescription="@string/loan_withdrawal_drawn_down_amount_layout"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@color/purple">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loanWithdrawalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topLabelGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="32dp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="80dp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fundGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="32dp" />


        <TextView
            android:id="@+id/txtWithdrawAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_semi_bold_ttf"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="1.3dp"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/please_enter_the_amount"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
            app:layout_constraintStart_toStartOf="@+id/startGuideLine"
            app:layout_constraintTop_toTopOf="@+id/topLabelGuideLine" />


        <View
            android:id="@+id/availableFundView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:background="#10FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/creditLimitView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottomGuideLine"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/creditLimitView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:background="#10FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/availableFundView"
            app:layout_constraintTop_toTopOf="@+id/bottomGuideLine" />

        <TextView
            android:id="@+id/availableFundLabelTextView"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:gravity="start"
            android:text="@string/available_funds_label"
            android:textColor="#99ffffff"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/fundGuideLine"
            app:layout_constraintEnd_toEndOf="@+id/availableFundView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAvailableFunds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:gravity="start"
            android:text="R20 000.00"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/availableFundView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/availableFundView"
            app:layout_constraintTop_toTopOf="@+id/fundGuideLine" />


        <TextView
            android:id="@+id/creditLimitLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/myriad_pro_regular_otf"
            android:gravity="start"
            android:text="@string/credit_limit_label"
            android:textColor="#99ffffff"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/fundGuideLine"
            app:layout_constraintEnd_toEndOf="@+id/creditLimitView"
            app:layout_constraintStart_toStartOf="@+id/tvCreditLimit" />
        
        <za.co.woolworths.financial.services.android.ui.views.WLoanEditTextView
            android:id="@+id/edtWithdrawAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:digits="0123456789., "
            android:gravity="start"
            android:hint=" "
            android:imeOptions="actionNext"
            android:inputType="date"
            android:maxLength="13"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/recent_search_bg"
            android:textCursorDrawable="@drawable/colorcursor"
            android:textSize="45sp"
            app:WEditTextView_font="light"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/seventy_five_dp"
            app:layout_constraintStart_toStartOf="@+id/startGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/txtWithdrawAmount">
            <requestFocus />
        </za.co.woolworths.financial.services.android.ui.views.WLoanEditTextView>

        <TextView
            android:id="@+id/tvCreditLimit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/futura_medium_ttf"
            android:gravity="start"
            android:letterSpacing="0.05"
            tools:text="R30 000.00"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/creditLimitView"
            app:layout_constraintStart_toStartOf="@+id/creditLimitView"
            app:layout_constraintTop_toTopOf="@+id/fundGuideLine" />

        <TextView
            android:id="@+id/currencyType"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/futura_light"
            android:gravity="bottom"
            android:text="R"
            android:textColor="@color/white"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtWithdrawAmount"
            app:layout_constraintEnd_toStartOf="@+id/edtWithdrawAmount"
            app:layout_constraintTop_toTopOf="@+id/edtWithdrawAmount" />

        <ProgressBar
            android:id="@+id/mLoanWithdrawalProgress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/nexImageView"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/currencyType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/currencyType"
            app:srcCompat="@drawable/icon_next_active" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>