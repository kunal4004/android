<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sixteen_dp"
    android:background="@color/white"
    android:padding="@dimen/twenty_five_dp">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/dash_woolies_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:text="@string/dash_details_woolies_app_available"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp"
        android:lineSpacingExtra="@dimen/three_dp"
        app:WTextView_font="medium_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/dash_woolies_app_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/five_dp"
        app:WTextView_font="myriadpro_regular"
        android:paddingBottom="@dimen/fifteen_dp"
        android:text="@string/dash_details_woolies_app_available_desc"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dash_woolies_app_title" />
</androidx.constraintlayout.widget.ConstraintLayout>