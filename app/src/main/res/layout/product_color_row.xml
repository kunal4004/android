<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:id="@+id/linProductContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/linColour"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.5"
            android:gravity="center">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textSelectColour"
                style="@style/colorSizeStyle"
                android:text="medium"
                android:textColor="@color/white"
                app:WTextView_font="medium"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textColour"
                style="@style/colorSizeStyle"
                android:layout_alignParentStart="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/product_colour"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imSelectedColor"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignEnd="@+id/imColorArrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_margin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                fresco:roundedCornerRadius="15dp"/>

            <ImageView
                android:id="@+id/imColorArrow"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/default_margin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/path_3"/>

        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="10dp"
            android:background="@color/divider"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <RelativeLayout
            android:id="@+id/linSize"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.5"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal"
                android:weightSum="1">

            </LinearLayout>

            <ImageView
                android:id="@+id/mColorArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/path_3"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textSelectSize"
                style="@style/colorSizeStyle"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/mColorArrow"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="medium"
                android:textColor="@color/white"
                app:WTextView_font="medium"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/textProductSize"
                style="@style/colorSizeStyle"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/textSelectSize"
                android:layout_alignBottom="@+id/textSelectSize"
                android:layout_toEndOf="@+id/mWoolworthsProgressBar"
                android:layout_weight="0.71"
                android:text="@string/product_size"/>

            <ProgressBar
                android:id="@+id/mWoolworthsProgressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>
</layout>