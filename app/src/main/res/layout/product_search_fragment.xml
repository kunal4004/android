<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="true"
        android:focusable="true"
        tools:context="za.co.woolworths.financial.services.android.ui.fragments.CategoryFragment">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.category.CategoryFragment"/>

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.category.CategoryViewModel"/>
    </data>

    <FrameLayout
        android:id="@+id/fragment_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recent_search_bg">

            <za.co.woolworths.financial.services.android.util.ObservableScrollView
                android:id="@+id/mNestedScrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/llNestedDeoBank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relSearchRowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/fourty_five_dp"
                        android:background="@drawable/card_shadow"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imProductSearch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignBottom="@+id/textProductSearch"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="18dp"
                            android:onClick="@{handlers::navigateToProductSearch}"
                            android:src="@drawable/ic_search"/>

                        <LinearLayout
                            android:id="@+id/llBarcodeScanner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textProductSearch"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/recent_search_bg"/>

                            <ImageView
                                android:id="@+id/imBarcodeScanner"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="18dp"
                                android:onClick="@{handlers::navigateToBarcode}"
                                android:src="@drawable/barcode"/>

                        </LinearLayout>

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/textProductSearch"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/llBarcodeScanner"
                            android:background="@android:color/transparent"
                            android:gravity="start|center"
                            android:hint="@string/product_search_hint"
                            android:inputType="textNoSuggestions"
                            android:maxLines="1"
                            android:onClick="@{handlers::navigateToProductSearch}"
                            android:paddingLeft="50dp"
                            android:paddingRight="@dimen/default_margin"
                            android:textColor="@color/black"
                            android:textColorHint="@color/product_search_hint"
                            android:textSize="16sp"
                            app:WTextView_font="myriadpro_regular"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llCustomViews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>
            </za.co.woolworths.financial.services.android.util.ObservableScrollView>

            <android.support.v7.widget.Toolbar
                android:id="@+id/productToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/appbar_background"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imBurgerButtonPressed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_search"/>

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/textTBProductSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:background="@android:color/transparent"
                        android:gravity="start|center"
                        android:paddingStart="@dimen/recent_search_margin"
                        android:text="@string/product_search_hint"
                        android:textColor="@color/product_search_hint"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:WTextView_font="myriadpro_regular"/>

                    <ImageView
                        android:id="@+id/imTBBarcodeScanner"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/default_margin"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/barcode"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </RelativeLayout>

        <include
            android:id="@+id/incNoConnectionHandler"
            layout="@layout/no_connection_handler"/>

    </FrameLayout>

</layout>