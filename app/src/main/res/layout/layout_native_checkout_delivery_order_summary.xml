<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/twenty_four_dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/txtYourCartShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtOrderSummaryYourCart"
            style="@style/opensans_regular_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/native_checkout_delivery_order_summary_your_cart"
            android:textColor="@color/color_666666" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/yourCartValueShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintBottom_toBottomOf="@id/txtYourCartShimmerFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtYourCartShimmerFrameLayout">

        <TextView
            android:id="@+id/txtOrderSummaryYourCartValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/futura_semi_bold"
            android:text="@string/default_discount_value"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            tools:text="R 72.86" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:id="@+id/viewHorizontalSeparator1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/yourCartValueShimmerFrameLayout" />

    <TextView
        android:id="@+id/txtOrderSummaryDiscount"
        style="@style/opensans_regular_13_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fifteen_dp"
        android:text="@string/native_checkout_delivery_order_summary_discounts"
        android:textColor="@color/color_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator1" />

    <TextView
        android:id="@+id/txtOrderSummaryDiscountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/default_discount_value"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderSummaryDiscount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderSummaryDiscount"
        tools:text="R 72.86" />

    <View
        android:id="@+id/viewHorizontalSeparator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/txtOrderSummaryDiscountValue" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupOrderSummaryDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="txtOrderSummaryDiscount, txtOrderSummaryDiscountValue, viewHorizontalSeparator2" />

    <TextView
        android:id="@+id/txtOrderSummaryCompanyDiscount"
        style="@style/opensans_regular_13_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fifteen_dp"
        android:text="@string/native_checkout_delivery_order_summary_company_discounts"
        android:textColor="@color/color_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator2" />

    <TextView
        android:id="@+id/txtOrderSummaryCompanyDiscountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/default_discount_value"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderSummaryCompanyDiscount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderSummaryCompanyDiscount"
        tools:text="-R 0.0" />

    <View
        android:id="@+id/viewHorizontalSeparator3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/txtOrderSummaryCompanyDiscountValue" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupCompanyDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="txtOrderSummaryCompanyDiscount, txtOrderSummaryCompanyDiscountValue, viewHorizontalSeparator3" />

    <TextView
        android:id="@+id/txtOrderSummaryPromoCodeDiscount"
        style="@style/opensans_regular_13_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fifteen_dp"
        android:text="@string/native_checkout_delivery_order_summary_promo_code"
        android:textColor="@color/color_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator3" />

    <TextView
        android:id="@+id/txtOrderSummaryPromoCodeDiscountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/default_discount_value"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderSummaryPromoCodeDiscount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderSummaryPromoCodeDiscount"
        tools:text="R 72.86" />

    <View
        android:id="@+id/viewHorizontalSeparator4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/txtOrderSummaryPromoCodeDiscountValue" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupPromoCodeDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="txtOrderSummaryPromoCodeDiscount, txtOrderSummaryPromoCodeDiscountValue, viewHorizontalSeparator4" />

    <TextView
        android:id="@+id/txtOrderSummaryWRewardsVouchers"
        style="@style/opensans_regular_13_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fifteen_dp"
        android:text="@string/native_checkout_delivery_order_summary_wrewards_vouchers"
        android:textColor="@color/color_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator4" />

    <TextView
        android:id="@+id/txtOrderSummaryWRewardsVouchersValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/default_discount_value"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderSummaryWRewardsVouchers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderSummaryWRewardsVouchers"
        tools:text="R 72.86" />

    <View
        android:id="@+id/viewHorizontalSeparator5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/txtOrderSummaryWRewardsVouchersValue" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupWRewardsDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="txtOrderSummaryWRewardsVouchers, txtOrderSummaryWRewardsVouchersValue, viewHorizontalSeparator5" />

    <TextView
        android:id="@+id/txtOrderSummaryTotalDiscount"
        style="@style/opensans_regular_13_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fifteen_dp"
        android:text="@string/native_checkout_delivery_order_summary_total_discount"
        android:textColor="@color/color_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator5" />

    <TextView
        android:id="@+id/txtOrderSummaryTotalDiscountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/default_discount_value"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/txtOrderSummaryTotalDiscount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtOrderSummaryTotalDiscount"
        tools:text="R 72.86" />

    <View
        android:id="@+id/viewHorizontalSeparator6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/txtOrderSummaryTotalDiscountValue" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupTotalDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="txtOrderSummaryTotalDiscount, txtOrderSummaryTotalDiscountValue, viewHorizontalSeparator6" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/deliveryFeeTxtShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fifteen_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator6">

        <TextView
            android:id="@+id/txtOrderSummaryDeliveryFee"
            style="@style/opensans_regular_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/native_checkout_delivery_order_summary_fee"
            android:textColor="@color/color_666666" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/deliveryFeeValueShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintBottom_toBottomOf="@id/deliveryFeeTxtShimmerFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/deliveryFeeTxtShimmerFrameLayout">

        <TextView
            android:id="@+id/txtOrderSummaryDeliveryFeeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/futura_semi_bold"
            android:text="@string/native_checkout_delivery_order_summary_fee_value"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:id="@+id/viewHorizontalSeparator7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@color/color_12000000"
        app:layout_constraintTop_toBottomOf="@id/deliveryFeeTxtShimmerFrameLayout" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/txtOrderTotalShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHorizontalSeparator7">

        <TextView
            android:id="@+id/txtOrderTotalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/futura_semi_bold"
            android:letterSpacing="0.1"
            android:text="@string/native_checkout_order_total_title"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/orderTotalValueShimmerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintBottom_toBottomOf="@+id/txtOrderTotalShimmerFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtOrderTotalShimmerFrameLayout">

        <TextView
            android:id="@+id/txtOrderTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/futura_semi_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            android:contentDescription="@string/cd_checkout_order_total_value"
            tools:text="R 690.0" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/summaryNoteShimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@color/shimmer_view_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtOrderTotalShimmerFrameLayout">

        <TextView
            android:id="@+id/txtOrderSummaryNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            style="@style/opensens_regular"
            android:lineHeight="@dimen/twenty_two_dp"
            android:text="@string/native_checkout_delivery_order_summary_note"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/eleven_sp" />
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>