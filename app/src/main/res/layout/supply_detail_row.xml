<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cli_eight_dp"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="start|center"
        android:letterSpacing="0.07"
        android:text="@string/loan_withdrawal_popup_error"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:WTextView_font="medium_bold"/>

    <TextView
        android:id="@+id/description"
        style="@style/opensans_regular_13_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:gravity="start|center"
        android:lineSpacingExtra="4dp"
        android:text="@string/loan_request_high_desc"
        android:textColor="@color/description_color"
      />

    <View style="@style/bottom_line"/>

</LinearLayout>