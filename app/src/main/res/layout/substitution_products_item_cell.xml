<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/optionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:button="@drawable/shopping_list_item_selector"
        android:checked="false"
        android:saveEnabled="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/productIamge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/productIamge" />

    <za.co.woolworths.financial.services.android.ui.views.WrapContentDraweeView
        android:id="@+id/productIamge"
        android:layout_width="80dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/scooter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/optionCheckBox"
        app:layout_constraintTop_toTopOf="parent"
        fresco:fadeDuration="10"
        fresco:failureImage="@drawable/woolworth_logo_icon" />

    <TextView
        android:id="@+id/txtProductTitle"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:gravity="top"
        android:lineSpacingExtra="@dimen/two_sp"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productIamge"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Small Bananas 800g" />



    <TextView
        android:id="@+id/txtPromotionText"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        tools:text="You Saved R5.00"
        android:textSize="@dimen/ten_sp"
        android:lineSpacingExtra="@dimen/one_sp"
        android:textColor="@color/was_price_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productIamge"
        app:layout_constraintTop_toBottomOf="@+id/txtProductTitle" />

    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/four_dp"
        tools:text="R 21.99"
        android:fontFamily="@font/futura_bold"
        android:textSize="@dimen/fourteen_sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="6sp"
        app:layout_constraintBottom_toBottomOf="@+id/productIamge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productIamge"
        app:layout_constraintTop_toBottomOf="@+id/txtPromotionText" />
    
    <View

        app:layout_constraintTop_toBottomOf="@+id/txtProductPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/twenty_three_dp"
        android:background="@color/color_D8D8D8"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

