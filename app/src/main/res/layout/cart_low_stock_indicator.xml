<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_low_stock_indicator">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCartLowStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/eight_sp"
        android:minWidth="@dimen/eighty_dp"
        android:minHeight="@dimen/twenty_dp"
        android:text="@string/low_stock"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/ten_sp"
        app:fontFamily="@font/futura_semi_bold"
        android:paddingStart="@dimen/twelve_dp"
        android:paddingEnd="@dimen/twelve_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>