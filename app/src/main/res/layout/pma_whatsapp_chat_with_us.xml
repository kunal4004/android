<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_white_bg"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/whatsAppIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_whatsapp" />

    <TextView
        android:id="@+id/anyQuestionsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center|start"
        android:text="@string/any_question_label"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/whatsAppIconImageView"
        app:layout_constraintTop_toTopOf="@+id/whatsAppIconImageView" />

    <TextView
        android:id="@+id/chatToUsOnWhatsAppTextView"
        style="@style/pmaWhiteCardDescriptionStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/whatsapp_any_questions_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/anyQuestionsTextView"
        app:layout_constraintTop_toBottomOf="@+id/anyQuestionsTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>