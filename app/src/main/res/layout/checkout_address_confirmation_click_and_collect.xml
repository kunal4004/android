<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/clickNCollectTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/twenty_four_dp"
        android:paddingTop="@dimen/eight_dp"
        android:paddingEnd="@dimen/twenty_four_dp"
        android:paddingBottom="@dimen/eighteen_dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/storesFoundTitle"
            style="@style/futura_semi_bold_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/point_five"
            android:padding="@dimen/six_dp"
            android:textSize="@dimen/twenty_sp" />

        <TextView
            android:id="@+id/changeTextView"
            style="@style/futura_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/change_location_round_black"
            android:gravity="center"
            android:padding="@dimen/six_dp"
            android:text="@string/change_label"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickNCollectTitleLayout">

        <View
            android:id="@+id/searchTopPartition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_dp"
            android:background="@color/sign_in_register_button_border" />

        <EditText
            android:id="@+id/storeInputValue"
            style="@style/opensens_regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginTop="@dimen/one_dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/ten_dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_vertical"
            android:hint="@string/hint_search_for_your_store"
            android:paddingStart="@dimen/twenty_four_dp"
            android:paddingEnd="@dimen/twenty_four_dp"
            android:textColor="@color/black"
            android:textColorHint="@color/search_store_color"
            android:textCursorDrawable="@drawable/cursor_custom_color"
            android:textSize="@dimen/fourteen_sp" />

        <View
            android:id="@+id/searchBottomPartition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/sign_in_register_button_border" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvStoreRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:paddingTop="@dimen/fourteen_dp"
        android:paddingBottom="@dimen/two_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/searchLayout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/twenty_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>