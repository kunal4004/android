<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/store_card_bottom_bar"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:src="@color/black"
                tools:ignore="ContentDescription" />

            <za.co.woolworths.financial.services.android.ui.views.WBalanceView
                android:id="@+id/credit_card_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                app:AmountTextSize="@dimen/text_large"
                app:Font="fonts/WFutura-Medium.ttf"
                app:LabelTextSize="@dimen/text_micro"
                app:OuterCircleColor="@color/gray_circle"
                app:SpentEmptyColor="@color/credit_card"
                app:SpentFullColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/store_card_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:src="@color/gray_circle"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/credit_limit"
                            android:textSize="@dimen/text_micro" />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/credit_card_limit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/accounts_divider_width"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:src="@color/white"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:src="@color/credit_card"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/available_funds"
                            android:textSize="@dimen/text_micro" />

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/credit_card_available_funds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/accounts_divider_width"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@color/white"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/next_payment_date"
                        android:textSize="@dimen/text_micro" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/credit_card_payment_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/accounts_divider_width"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:src="@color/white"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/minimum_payment"
                        android:textSize="@dimen/text_micro" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/credit_card_minimum_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayoutCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/credit_card_selector"
                android:orientation="vertical">
            <za.co.woolworths.financial.services.android.ui.views.WButton
                android:id="@+id/credit_card_transaction_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/credit_card_selector"
                android:text="@string/last_transactions"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_caret_white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/credit_card_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:src="@color/black"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>