<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/no_internet"
    android:visibility="gone"
    android:background="@color/white"
    android:gravity="center">
    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="200dp"
        android:gravity="center"
        android:id="@+id/no_internet_message"
        android:layout_height="wrap_content"
        android:text="@string/err_002"/>
    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/no_internet_retry"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rewards_selector"
        android:text="@string/retry"/>
</LinearLayout>