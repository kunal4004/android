<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TableLayout
        android:id="@+id/deliveryOrCollectionLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginStart="@dimen/thirty_dp"
        android:layout_marginEnd="@dimen/thirty_dp"
        android:background="@drawable/rounded_view_grey_tab_bg"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/deliveryTab"
                style="@style/opensens_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_weight="0.5"
                android:background="@drawable/delivery_round_btn_white"
                android:gravity="center"
                android:paddingTop="@dimen/ten_dp"
                android:paddingBottom="@dimen/ten_dp"
                android:text="@string/delivery"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/fifteen_sp" />

            <TextView
                android:id="@+id/collectionTab"
                style="@style/opensens_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/five_dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingTop="@dimen/ten_dp"
                android:paddingBottom="@dimen/ten_dp"
                android:text="@string/click_collect"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/fifteen_sp" />
        </TableRow>
    </TableLayout>

    <include
        android:id="@+id/addressConfirmationDelivery"
        layout="@layout/checkout_address_confirmation_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hundred_and_four_dp"
        app:layout_constraintTop_toBottomOf="@+id/deliveryOrCollectionLayout" />

    <include
        android:id="@+id/suburbSelectionLayout"
        layout="@layout/suburb_selector_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sixty_three_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:visibility="gone" />

    <include
        android:id="@+id/addressConfirmationClicknCollect"
        layout="@layout/checkout_address_confirmation_click_and_collect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fifty_two_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/btnConfirmLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/twenty_six_dp"
        android:layout_marginEnd="@dimen/twenty_six_dp"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline">

        <View
            android:id="@+id/confirmAddressPartition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:background="@color/sign_in_register_button_border" />

        <LinearLayout
            android:id="@+id/deliveryDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/sixteen_dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmAddressPartition"
            tools:visibility="visible">

            <RelativeLayout
                android:id="@+id/earliestDateTitleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp">

                <TextView
                    android:id="@+id/earliestDateTitle"
                    style="@style/opensens_regular"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/earliest_delivery_date"
                    android:textSize="@dimen/thirteen_sp" />


                <TextView
                    android:id="@+id/earliestDateValue"
                    style="@style/opensens_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/foodItemsDeliveryDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp">

                <TextView
                    android:id="@+id/foodItemsLabel"
                    style="@style/opensens_regular"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/food_items"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/foodItemsDeliveryDate"
                    style="@style/opensens_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/thirteen_sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otherItemsDeliveryDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp">

                <TextView
                    android:id="@+id/otherItemsLabel"
                    style="@style/opensens_regular"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/fashion_beauty_home"
                    android:textSize="@dimen/thirteen_sp" />

                <TextView
                    android:id="@+id/otherItemsDeliveryDate"
                    style="@style/opensens_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp" />
            </RelativeLayout>

        </LinearLayout>

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnAddressConfirmation"
            style="@style/blackButtonStyle"
            android:background="@drawable/black_button_drawable_state"
            android:text="@string/confirm"
            app:WButton_font="medium_bold" />

        <TextView
            android:id="@+id/changeProvinceTextView"
            style="@style/futura_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/twenty_six_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:layout_marginEnd="@dimen/twenty_six_dp"
            android:gravity="center"
            android:letterSpacing="@integer/point_one"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:text="@string/change_province"
            android:textAllCaps="true"
            android:textColor="@color/text_description_color"
            android:textSize="@dimen/twelve_sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/saveAddress" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>