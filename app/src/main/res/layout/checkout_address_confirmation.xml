<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TableLayout
        android:id="@+id/deliveryOrCollectionLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fourty_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:background="@drawable/rounded_view_grey_tab_bg"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/deliveryTab"
                style="@style/myriad_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_weight="0.5"
                android:background="@drawable/delivery_round_btn_white"
                android:gravity="center"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:text="@string/delivery"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/fifteen_sp" />

            <TextView
                android:id="@+id/collectionTab"
                style="@style/myriad_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/five_dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:text="@string/click_collect"
                android:textColor="@color/offer_title"
                android:textSize="@dimen/fifteen_sp" />
        </TableRow>
    </TableLayout>

    <include
        android:id="@+id/addressConfirmationDelivery"
        layout="@layout/checkout_address_confirmation_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_dp"
        app:layout_constraintTop_toBottomOf="@+id/deliveryOrCollectionLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>