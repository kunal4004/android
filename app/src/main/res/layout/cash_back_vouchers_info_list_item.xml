<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/five_dp"
    android:background="@color/white">

    <View
        android:id="@+id/circleView"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginTop="@dimen/six_dp"
        android:background="@drawable/bg_cash_back_vouchers_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/voucherInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/five_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:lineSpacingExtra="@dimen/_4ssp"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toEndOf="@id/circleView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>