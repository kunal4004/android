<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/deliveryOptionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/deliveryOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/icon_basket"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/deliveryOption"
        style="@style/futura_medium"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:textSize="@dimen/twenty_sp"
        android:text="@string/collecting_from"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/suburbName"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/deliveryOptionImage" />

    <TextView
        android:id="@+id/suburbName"
        style="@style/futura_semi_bold"
        android:gravity="center_horizontal"
        android:textSize="@dimen/twenty_sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/address"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/deliveryOption" />

    <TextView
        android:id="@+id/address"
        style="@style/myriad_pro_regular"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sixteen_sp"
        android:layout_marginTop="@dimen/fifteen_sp"
        android:textColor="@color/gray"
        android:text="Constantia Main Rd, Constantia\n, Cape Town, 7806"
        app:layout_constraintBottom_toTopOf="@id/maxItemsInfoMessageLayout"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/suburbName" />

    <include
        android:id="@+id/maxItemsInfoMessageLayout"
        android:layout_marginTop="@dimen/thirty_dp"
        android:visibility="gone"
        layout="@layout/click_collect_items_limited_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>