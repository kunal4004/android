<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/bank_spacing_width"
    android:layout_marginRight="@dimen/bank_spacing_width"
    android:layout_marginTop="@dimen/default_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="44dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textACreditLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgInfo"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imgInfo"
            android:layout_toStartOf="@+id/imgInfo"
            android:gravity="center|start"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="1.3dp"
            android:maxLines="2"
            android:text="@string/cli_credit_limit_amount"
            android:textAllCaps="true"
            android:textColor="@color/black_desc_opacity"
            android:textSize="13sp"
            app:WTextView_font="medium" />

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:alpha="0.3"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_info" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llCurrencyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:orientation="horizontal"
        android:paddingBottom="9dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/editCurrencyStyle" />

        <za.co.woolworths.financial.services.android.ui.views.WEditTextView
            android:id="@+id/textAmount"
            style="@style/editCurrencyValue" />
    </LinearLayout>
</LinearLayout>
