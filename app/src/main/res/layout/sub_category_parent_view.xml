<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_category_header_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/twenty_four_dp"
        android:paddingStart="@dimen/twenty_four_dp"
        android:paddingTop="@dimen/twenty_four_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/carbon_groupText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/exr_margin"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:letterSpacing="0.15"
                android:lineSpacingMultiplier="1.08"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/expandable_title_color"
                android:textSize="@dimen/twelve_sp"
                app:WTextView_font="medium" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBadge"
                android:layout_width="@dimen/thirty_five_dp"
                android:layout_height="@dimen/eighteen_dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/exr_margin"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoadChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="9"
            android:layout_marginEnd="@dimen/exr_margin">

            <ProgressBar
                android:id="@+id/pbLoadChildItem"
                android:layout_width="@dimen/twenty_four_dp"
                android:layout_height="@dimen/twenty_four_dp"
                android:indeterminateTint="@color/black"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/carbon_groupExpandedIndicator"
                android:layout_width="@dimen/twenty_four_dp"
                android:layout_height="@dimen/twenty_four_dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_expand_more_24dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recent_search_bg"/>
</LinearLayout>