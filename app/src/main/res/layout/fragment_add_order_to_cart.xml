<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItemsToCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addToCartLayout" />

    <RelativeLayout
        android:id="@+id/addToCartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/eight_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            style="@style/toolbar_menu_text_style"
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_centerInParent="true"
            android:background="@drawable/order_add_to_cart_button_bg"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:enabled="false"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>