<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_add_to_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/OrderDetailsActivityStyle">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mToolbar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/OrderDetailsActivityStyle"
            app:theme="@style/OrderDetailsActivityStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/appbar_background"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/sixteen_dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back24" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/toolbarText"
                    app:WTextView_font="medium_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:letterSpacing="0.2"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvSelectAllAddToCart"
                    style="@style/toolbar_menu_text_style"
                    android:layout_alignParentRight="true"
                    android:text="@string/select_all"
                    android:textColor="@drawable/refine_toolbar_menu_text_color"
                    android:visibility="gone" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItemsToCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addToCartLayout"
        android:layout_below="@+id/appbar" />

    <RelativeLayout
        android:id="@+id/addToCartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/eight_dp">

        <RelativeLayout
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_centerInParent="true"
            android:background="@drawable/order_add_to_cart_button_bg"
            android:enabled="false">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvAddToCart"
                style="@style/toolbar_menu_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:letterSpacing="0.1"
                android:text="@string/add_to_cart"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateTint="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>