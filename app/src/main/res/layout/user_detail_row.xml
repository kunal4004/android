<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMyDetails"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/stores_details_background"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imMyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/signout_24_copy_3"
        android:visibility="gone"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvMyDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imMyDetails"
        android:lineSpacingExtra="0.4sp"
        android:text="@string/acc_my_detail"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:WTextView_font="myriadpro_regular"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_caret_black"/>
</RelativeLayout>