<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="za.co.woolworths.financial.services.android.ui.activities.vtc.ConfirmStoreActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarConfirmStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ConfirmStoreStyle"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:gravity="bottom"
            app:layout_collapseMode="pin">

            <ImageButton
                android:id="@+id/ivNavigateBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:background="@android:color/transparent"
                android:src="@drawable/back24" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:letterSpacing="0.17"
                android:lineSpacingExtra="@dimen/fourty_dp"
                android:text="@string/participating_stores"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone"
                app:fontFamily="@font/futura_semi_bold_ttf" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideLine"
        android:layout_width="@dimen/one_dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_semi_bold"
        android:text="@string/confirm_store_header_title"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        android:layout_marginTop="@dimen/twenty_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toStartOf="@id/startGuideLine"
        app:layout_constraintTop_toBottomOf="@id/appbarConfirmStore" />

    <TextView
        android:id="@+id/tvHeaderDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:text="@string/confirm_store_header_desc"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toStartOf="@id/startGuideLine"
        app:layout_constraintTop_toBottomOf="@id/tvHeader" />

    <View
        android:id="@+id/horizontalSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/black10"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toStartOf="@id/startGuideLine"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderDesc" />


    <ImageView
        android:id="@+id/iconLocationMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:src="@drawable/ic_location_black"
        app:layout_constraintStart_toStartOf="@id/startGuideLine"
        app:layout_constraintTop_toBottomOf="@id/horizontalSeparator" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="start|center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toEndOf="@id/iconLocationMark"
        app:layout_constraintTop_toTopOf="@id/iconLocationMark"
        tools:text="CAVENDISH" />

    <TextView
        android:id="@+id/tvStoreDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/three_dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="start|center"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintTop_toBottomOf="@id/tvStoreName"
        tools:text="READY IN 1-3 WORKING DAYS." />

    <TextView
        android:id="@+id/tvStoreAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:fontFamily="@font/futura_medium"
        android:gravity="start|center"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintTop_toBottomOf="@id/tvStoreDesc"
        tools:text="Dean Saint Arcade Centre, Dean Street, Newlands, Cape Town, 7700" />

    <TextView
        android:id="@+id/tvConfirmStoreBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:background="@color/black"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:letterSpacing="@integer/point_two"
        app:layout_constrainedWidth="true"
        android:minHeight="@dimen/fifty_dp"
        android:text="@string/confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintEnd_toEndOf="@id/endGuideLine"
        app:layout_constraintStart_toStartOf="@id/startGuideLine"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>