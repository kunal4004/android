<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/grey_bg"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/noSavingsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="31.5dp"
                android:background="@drawable/black_circle"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/month"
                        style="@style/WRewardsInstantSavingsValueStyle"
                        android:text="@string/year" />

                    <TextView
                        android:id="@+id/year"
                        style="@style/WRewardsInstantSavingsValueStyle"
                        android:text="@string/to_date" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#0a000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#0a000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/WRewardsInstantSavingsStyle"
                android:text="@string/wrewards_instant_savings" />

            <TextView
                android:id="@+id/wrewardsInstantSavings"
                style="@style/WRewardsInstantSavingsValueStyle" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/savingSinceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#0a000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/WRewardsInstantSavingsStyle"
                    android:text="@string/savings_since" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/savingSince"
                        android:layout_marginEnd="10dp"
                        style="@style/WRewardsInstantSavingsValueStyle" />

                    <ImageView
                        android:id="@+id/savingSinceInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.3"
                        android:background="@drawable/icon_info" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#0a000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/WRewardsInstantSavingsStyle"
                android:text="@string/wrewards_green_earned" />

            <TextView
                android:id="@+id/wrewardsGreenEarned"
                style="@style/WRewardsInstantSavingsValueStyle" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#0a000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/WRewardsInstantSavingsStyle"
                android:text="@string/quarterly_voucher_earned" />

            <TextView
                android:id="@+id/quarterlyVouchersEarned"
                style="@style/WRewardsInstantSavingsValueStyle" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#0a000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/yearToDateSpendText"
                style="@style/WRewardsInstantSavingsStyle"
                android:text="@string/year_to_date_spend" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearToDateSpend"
                    android:layout_marginEnd="10dp"
                    style="@style/WRewardsInstantSavingsValueStyle" />

                <ImageView
                    android:id="@+id/yearToDateSpendInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.3"
                    android:background="@drawable/icon_info"
                    android:visibility="gone" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>