<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgEmailLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        app:srcCompat="@drawable/incoming_mail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvDocumentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="31dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="8sp"
        android:text="@string/cli_email_sent_document_title"
        android:textAllCaps="true"
        android:textColor="#222222"
        android:textSize="12sp"
        app:WTextView_font="medium"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEmailLogo"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvUserEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="4sp"
        android:text="matt@emailaddress.com"
        android:textColor="#222222"
        android:textSize="16sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDocumentTitle"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="@string/follow_instruction"
        android:textColor="@color/black_50"
        style="@style/opensans_regular_12_text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/information_layout"
        app:layout_constraintTop_toBottomOf="@+id/tvUserEmailAddress"/>

    <za.co.woolworths.financial.services.android.ui.views.WButton
        android:id="@+id/btnBackToMyAccount"
        style="@style/blackButtonStyle"
        android:layout_marginBottom="@dimen/thirty_two_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:background="@drawable/button_disable_color"
        android:gravity="center"
        android:text="@string/process_complete_back_account"
        android:textColor="@color/text_color_selector"
        android:textSize="@dimen/twelve_sp"
        app:WButton_font="medium_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/button_back_to_myaccount"
        />

</androidx.constraintlayout.widget.ConstraintLayout>