<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llCommonFragmentContainer"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_background"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCardDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/llTopFunds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/twenty_nine_dp"
            android:paddingTop="@dimen/fourty_dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/llAvailableFunds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvAvailableFundLabel"
                    style="@style/account_card_style"
                    android:text="@string/available_funds"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/available_funds"
                    style="@style/account_card_amount_style"
                    android:text="R100 000"
                    />

            </LinearLayout>


            <include layout="@layout/vertical_layout"/>

            <LinearLayout
                android:id="@+id/llAmountDue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvMinimumAmountDueLabel"
                    style="@style/account_card_style"
                    android:text="@string/minimum_payment"
                    app:WTextView_font="myriadpro_regular"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/minAmountDue"
                    style="@style/account_card_amount_style"
                    android:text="R100 000"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/horizontal_divider_bold_style"/>

    <RelativeLayout
        android:id="@+id/llNextPaymentDueContainer"
        style="@style/card_item_style">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvNextPaymentDueLabel"
            style="@style/style_loan_label"
            android:text="@string/next_payment_date"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/dueDate"
            style="@style/style_loan_amount"
            android:text="1000"/>
    </RelativeLayout>

    <View style="@style/bottom_line"/>

    <RelativeLayout
        android:id="@+id/llCurrentBalanceContainer"
        style="@style/card_item_style">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvCurrentBalanceLabel"
            style="@style/style_loan_label"
            android:text="@string/current_balance"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/currentBalance"
            style="@style/style_loan_amount"
            android:text="1000"/>

    </RelativeLayout>

    <View style="@style/bottom_line"/>

    <RelativeLayout
        android:id="@+id/llCreditLimitContainer"
        style="@style/card_item_style"
        android:paddingBottom="@dimen/twenty_seven_dp"
        android:paddingTop="@dimen/twenty_eight_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvCreditLimitLabel"
            style="@style/style_loan_label"
            android:text="@string/credit_limit"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/creditLimit"
            style="@style/style_loan_amount"
            android:text="1000"/>

    </RelativeLayout>

    <View style="@style/horizontal_divider_bold_style"/>

    <View
        style="@style/horizontal_divider_bold_style"
        android:layout_marginTop="@dimen/seventeen_dp"/>

    <LinearLayout
        android:id="@+id/llIncreaseLimitContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/ten_dp"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingTop="@dimen/twenty_four_dp">

        <RelativeLayout
            android:id="@+id/relApplyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twenty_dp"
            >

            <ImageView
                android:id="@+id/logoIncreaseLimit"
                style="@style/style_loan_logo_img"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:src="@drawable/icon_info"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvIncreaseLimit"
                style="@style/style_loan_title"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/logoIncreaseLimit"
                android:text="@string/increase_limit"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_semibold"/>

            <LinearLayout
                android:id="@+id/linContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center|end"
                android:orientation="horizontal">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvApplyNowIncreaseLimit"
                    style="@style/style_loan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cli_round_apply_now_tag"
                    android:gravity="center"
                    android:letterSpacing="0.12"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/icon_info"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:WTextView_font="medium"
                    android:visibility="gone"
                    />

                <ProgressBar
                    android:id="@+id/progressCreditLimit"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/bank_spacing_width"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvIncreaseLimitDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twenty_four_dp"
            android:layout_marginEnd="@dimen/thirty_one_dp"
            android:text="@string/increase_limit_desc"
            android:textColor="@color/offer_active_desc"
            android:visibility="gone"
            app:WTextView_font="myriadpro_regular"/>


        <LinearLayout
            android:id="@+id/llCommonLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/horizontal_divider_bold_style"/>

            <RelativeLayout
                android:id="@+id/relIncreaseMyLimit"
                style="@style/card_item_click_no_pad_style"
                android:visibility="visible"
                >

                <ImageView
                    android:id="@+id/imLogoIncreaseLimit"
                    style="@style/style_loan_logo_img"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cli"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvIncreaseMyLimit"
                    style="@style/style_loan_title"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imLogoIncreaseLimit"
                    android:text="@string/increase_my_limit"
                    />

                <ImageView
                    android:id="@+id/imgFindOutMoreArrow"
                    style="@style/style_loan_img"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_caret_black"
                    />

            </RelativeLayout>

            <View style="@style/horizontal_divider_bold_style"/>

            <RelativeLayout
                android:id="@+id/relFindOutMore"
                style="@style/last_card_style"
                android:paddingBottom="2dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imgLogoFindOutMore"
                    style="@style/style_loan_logo_img"
                    android:src="@drawable/icon_info"
                    />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/tvFindOutMore"
                    style="@style/style_loan_title"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imgLogoFindOutMore"
                    android:text="@string/find_out_more"
                    />

                <ImageView
                    android:id="@+id/iconFindOutMore"
                    style="@style/style_loan_img"
                    android:src="@drawable/ic_caret_black"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/horizontal_divider_bold_style"/>

    <RelativeLayout
        android:id="@+id/rlViewTransactions"
        style="@style/card_item_click_style"
        >

        <ImageView
            android:id="@+id/logoViewTransaction"
            style="@style/style_loan_logo_img"
            android:src="@drawable/transactions"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvViewTransaction"
            style="@style/style_loan_title"
            android:layout_alignBottom="@+id/logoViewTransaction"
            android:layout_alignTop="@+id/logoViewTransaction"
            android:layout_toEndOf="@+id/logoViewTransaction"
            android:text="@string/view_transactions"/>


        <ImageView
            android:id="@+id/iconViewTransaction"
            style="@style/style_loan_img"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relBalanceProtection"
        style="@style/card_item_click_style"
        >

        <ImageView
            android:id="@+id/logoProtectionInsurance"
            style="@style/style_loan_logo_img"
            android:src="@drawable/insurance"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvProtectionInsurance"
            style="@style/style_loan_title"
            android:layout_alignTop="@+id/logoProtectionInsurance"
            android:layout_toEndOf="@+id/logoProtectionInsurance"
            android:text="@string/balance_protection_insurance"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relDrawnDownAmount"
        style="@style/card_item_click_style"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/logoDrawnDownAmount"
            style="@style/style_loan_logo_img"
            android:src="@drawable/money"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvDrawnDownAmount"
            style="@style/style_loan_title"
            android:layout_alignTop="@+id/logoDrawnDownAmount"
            android:layout_toEndOf="@+id/logoDrawnDownAmount"
            android:text="@string/instore_withdraw_cash_now"/>

        <ImageView
            android:id="@+id/iconDrawnDownAmount"
            style="@style/style_loan_img"
            android:src="@drawable/ic_caret_black"
            />

    </RelativeLayout>

    <View
        style="@style/horizontal_divider_bold_style"
        android:layout_marginBottom="16.4dp"/>

</LinearLayout>