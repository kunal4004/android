<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/twenty_four_dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/collectionShimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_view_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_F3F3F3"
                android:fontFamily="@font/futura_semi_bold"
                android:minWidth="@dimen/fourty_dp"
                android:minHeight="@dimen/fourty_dp"
                android:padding="@dimen/ten_dp"
                android:src="@drawable/profile_icon"
                android:text="@string/native_checkout_delivering_to_title"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCollectionUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:background="@color/white"
                android:fontFamily="@font/myriad_pro_semi_bold"
                android:text="@string/native_checkout_delivering_to_title"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_sp"
                app:layout_constraintStart_toEndOf="@id/imgUserProfile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCollectionUserPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/myriad_pro_regular"
                android:textColor="@color/color_444444"
                android:textSize="@dimen/fifteen_sp"
                app:layout_constraintStart_toStartOf="@id/tvCollectionUserName"
                app:layout_constraintTop_toBottomOf="@id/tvCollectionUserName" />

            <ImageView
                android:id="@+id/imageViewCaretForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_caret_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

