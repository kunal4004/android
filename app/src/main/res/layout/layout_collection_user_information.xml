<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="@dimen/twenty_four_dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/imgUserProfileShimmerFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cnc_user_image_4"
            android:minWidth="@dimen/fourty_dp"
            android:minHeight="@dimen/fourty_dp"
            android:padding="@dimen/ten_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_F3F3F3"
                android:fontFamily="@font/futura_semi_bold"
                android:src="@drawable/profile_icon"
                android:contentDescription="@string/cd_checkout_user_profile_icon"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_sp" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/tvCollectionUserNameShimmerFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:background="@color/shimmer_view_background"
            app:layout_constraintStart_toEndOf="@id/imgUserProfileShimmerFrameLayout"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvCollectionUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="@string/cd_checkout_user_name"
                style="@style/opensans_semi_bold_13_black_text_style"
                android:text="@string/native_checkout_collecting_from" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/tvCollectionUserPhoneNumberShimmerFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_view_background"
            app:layout_constraintStart_toStartOf="@id/tvCollectionUserNameShimmerFrameLayout"
            app:layout_constraintTop_toBottomOf="@id/tvCollectionUserNameShimmerFrameLayout">

            <TextView
                android:id="@+id/tvCollectionUserPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/opensans_regular_13_black"
                android:textColor="@color/color_444444"
                android:contentDescription="@string/cd_checkout_user_mobile_number"
                tools:text="082 ••• 3209" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/imageViewCaretForwardCollectionShimmerFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_view_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewCaretForwardCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_caret_black" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

