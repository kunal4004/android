<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relProductView"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/viewpager_bg"
    android:orientation="vertical">

    <za.co.woolworths.financial.services.android.ui.views.WViewPager
        android:id="@+id/mProductDetailPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:nestedScrollingEnabled="false"
        app:layout_collapseMode="pin" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imProductView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/rectangle"
        fresco:fadeDuration="10"
        fresco:placeholderImage="@drawable/rectangle"
        fresco:viewAspectRatio="1.33" />
</LinearLayout>