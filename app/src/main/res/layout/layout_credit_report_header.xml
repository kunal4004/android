<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sixteen_dp"
    android:background="@color/white"
    android:padding="@dimen/twenty_five_dp">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/credit_report_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/twenty_four_dp"
        android:lineSpacingExtra="@dimen/three_dp"
        android:text="@string/credit_report_title_details"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/dash_woolies_app_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/thirty_five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:gravity="center"
        android:padding="@dimen/twenty_two_dp"
        android:lineSpacingExtra="@dimen/five_dp"
        android:paddingBottom="@dimen/fifteen_dp"
        android:text="@string/credit_report_desc"
        android:textColor="@color/permanent_card_block_desc_color"
        android:textSize="@dimen/fifteen_sp"
        app:WTextView_font="opensans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/credit_report_title_details" />

</androidx.constraintlayout.widget.ConstraintLayout>
