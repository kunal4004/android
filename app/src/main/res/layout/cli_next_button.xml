<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llNextButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/outside_border"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:visibility="gone"
    >

    <RelativeLayout
        android:id="@+id/relNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/mWoolworthsProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"/>

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnContinue"
            style="@style/blackButtonStyle"
            android:gravity="center"
            android:text="@string/cli_continue"
            app:WButton_font="medium_bold"/>
    </RelativeLayout>

</LinearLayout>