<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.help.tipstricks.TipsAndTricksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/newFeature"
            style="@style/listStyle"
            android:layout_marginTop="16dp"
            android:background="@drawable/stores_details_background">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/accountsItem"
                android:text="@string/new_feature_tutorials" />

            <Switch
                android:id="@+id/featureSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:theme="@style/SwitchTheme" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rewards"
            style="@style/listStyle"
            android:layout_marginTop="16dp"
            android:background="@drawable/stores_details_background">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/accountsItem"
                android:drawableLeft="@drawable/icon_wreward"
                android:text="VOUCHERS" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stores"
            style="@style/listStyle"
            android:background="@drawable/stores_details_background">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/accountsItem"
                android:drawableLeft="@drawable/mapview"
                android:text="Find a Product in-Store" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/barcode"
            style="@style/listStyle"
            android:background="@drawable/stores_details_background">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/accountsItem"
                android:drawableLeft="@drawable/barcode"
                android:text="Barcode Scanner" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delivery"
            style="@style/listStyle"
            android:background="@drawable/stores_details_background">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/accountsItem"
                android:drawableLeft="@drawable/ic_delivery_truck"
                android:text="Delivery Location" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_caret_black" />
        </RelativeLayout>
    </LinearLayout>
</layout>