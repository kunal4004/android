<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/linkDeviceResultIcon"
        android:layout_width="@dimen/eighty_dp"
        android:layout_height="@dimen/eighty_dp"
        android:layout_marginBottom="@dimen/twenty_five_dp"
        android:src="@drawable/ic_success_icon"
        app:layout_constraintBottom_toTopOf="@+id/linkDeviceResultTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/linkDeviceResultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_five_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/twenty_five_dp"
        android:text="@string/link_device_result_success"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toTopOf="@+id/linkDeviceResultSubitle"
        tools:text="Your Device Has \nBeen Successfully Linked." />

    <TextView
        android:id="@+id/linkDeviceResultSubitle"
        style="@style/opensans_regular_14_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/sixteen_dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/thirty_two_dp"
        android:text="@string/link_device_result_skip_desc"
        android:textColor="@color/color_7f7f7f"
        android:lineSpacingExtra="@dimen/six_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/link_device_result_skip_desc" />

    <Button
        android:id="@+id/gotItLinkDeviceConfirmationButton"
        style="@style/blackButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:textSize="@dimen/twelve_sp"
        android:letterSpacing="0.2"
        android:text="@string/got_it"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linkMyDeviceConfirmationButton" />

    <Button
        android:id="@+id/linkMyDeviceConfirmationButton"
        style="@style/whiteButtonBackgroundStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:background="@color/white"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:letterSpacing="0.1"
        android:text="@string/link_my_device"
        android:textAllCaps="true"
        android:textColor="@color/permanent_card_block_desc_color"
        android:textSize="@dimen/twelve_sp"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>