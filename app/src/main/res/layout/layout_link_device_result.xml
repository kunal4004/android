<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/linkDeviceResultIcon"
        android:layout_width="@dimen/eighty_dp"
        android:layout_height="@dimen/eighty_dp"
        android:layout_marginBottom="@dimen/twenty_five_dp"
        android:src="@drawable/ic_success_icon"
        app:layout_constraintBottom_toTopOf="@+id/linkDeviceResultTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/linkDeviceResultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/twenty_five_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:fontFamily="@font/futura_semi_bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/twenty_five_dp"
        android:text="@string/link_device_result_success"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Your Device Has \nBeen Successfully Linked." />

    <TextView
        android:id="@+id/linkDeviceResultSubitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:gravity="center"
        android:paddingHorizontal="@dimen/thirty_two_dp"
        android:text="@string/link_device_result_skip_desc"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linkDeviceResultTitle"
        tools:text="Your Device Has \nBeen Successfully Linked." />

</androidx.constraintlayout.widget.ConstraintLayout>