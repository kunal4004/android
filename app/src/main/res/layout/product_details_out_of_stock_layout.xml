<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outOfStockItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/twenty_four_dp">

    <ImageView
        android:id="@+id/alarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:src="@drawable/ic_alarm_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outOfStock"
        style="@style/opensans_regular_14_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight_dp"
        android:text="@string/item_out_of_stock"
        app:layout_constraintBottom_toBottomOf="@id/alarmIcon"
        app:layout_constraintStart_toEndOf="@id/alarmIcon"
        app:layout_constraintTop_toTopOf="@id/alarmIcon" />

    <TextView
        android:id="@+id/notifyMe"
        style="@style/futura_semi_bold_white_12_text_style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_four_dp"
        android:background="@drawable/black_background_with_corner_5"
        android:gravity="center"
        android:letterSpacing="@integer/point_zero_eight"
        android:paddingStart="@dimen/eight_dp"
        android:paddingEnd="@dimen/eight_dp"
        android:text="@string/notify_me"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/alarmIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/alarmIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>