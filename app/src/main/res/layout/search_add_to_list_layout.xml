<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="@dimen/sixteen_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourty_dp"
        android:background="@drawable/bg_search_corner_4"
        android:clickable="false"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icSearchList"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/textProductSearch"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/ten_dp"
            android:clickable="false"
            android:src="@drawable/ic_search" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textProductSearch"
            style="@style/opensans_regular_12_text_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty_dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:gravity="start|center"
            android:hint="@string/shopping_search_hint"
            android:maxLines="1"
            android:layout_toEndOf="@id/icSearchList"
            android:textColor="@color/searchBarHintColor"
            android:textColorHint="@color/product_search_hint" />

    </RelativeLayout>
</LinearLayout>