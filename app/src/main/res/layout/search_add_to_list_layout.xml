<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/rlShoppingListSearch"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/default_background"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlSelectedYourLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/white_bg_pressed"
        android:clickable="false"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/nineteen_dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/tvDeliveryLocation"
            style="@style/style_cart_delivery_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iconCaretRight"
            android:clickable="false"
            android:drawableLeft="@drawable/mapview"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="@string/set_your_delivery_location"/>

        <ImageView
            android:id="@+id/iconCaretRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_caret_black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:background="@color/white"
        android:clickable="false"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/imProductSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/textProductSearch"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="18dp"
            android:clickable="false"
            android:src="@drawable/ic_search"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/textProductSearch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:gravity="start|center"
            android:hint="@string/shopping_search_hint"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:paddingLeft="@dimen/fifty_dp"
            android:paddingRight="@dimen/default_margin"
            android:textColor="@color/black"
            android:textColorHint="@color/product_search_hint"
            android:textSize="16sp"
            app:WTextView_font="myriadpro_regular"/>

    </RelativeLayout>
</LinearLayout>