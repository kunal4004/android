<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:gravity="center_vertical"
    app:layout_collapseMode="parallax"
    android:background="@drawable/card_shadow"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/imProductSearch"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/default_margin"
        android:src="@drawable/ic_search"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textProductSearch"/>

    <ImageView android:id="@+id/imBarcodeScanner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_paperclip"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/default_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textProductSearch" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textProductSearch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:letterSpacing="0.06"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textColorHint="@color/product_search_hint"
        app:WEditTextView_font="myriadpro_regular"
        android:hint="@string/product_search_hint"
        android:textSize="15sp"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:gravity="start|center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imBarcodeScanner"
        android:layout_toEndOf="@+id/imProductSearch" />

</RelativeLayout>