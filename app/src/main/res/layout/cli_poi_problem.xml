<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:src="@drawable/w_credi_card"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/WTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:gravity="center"
        android:text="@string/poi_income_detail_problem"
        android:textSize="15sp"
        app:WTextView_font="medium_bold"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/WTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:gravity="center"
        android:text="@string/cli_lorem_ipsum"
        android:textSize="15sp"
        app:WTextView_font="medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imPhoneCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:src="@drawable/ic_call24"/>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/poi_problem_phone_no"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:WTextView_font="medium_bold"/>

    </LinearLayout>

    <include layout="@layout/cli_next_button"/>
</LinearLayout>