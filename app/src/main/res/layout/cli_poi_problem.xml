<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="165dp"
                android:layout_marginTop="@dimen/seventy_dp"
                android:contentDescription="@string/placeholder"
                android:src="@drawable/alert_sign"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginEnd="@dimen/thirty_two_dp"
                android:layout_marginStart="@dimen/thirty_two_dp"
                android:layout_marginTop="@dimen/seventy_dp"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:text="@string/poi_income_detail_problem"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:WTextView_font="medium_bold"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/thirty_four_dp"
                android:layout_marginEnd="@dimen/thirty_two_dp"
                android:layout_marginStart="@dimen/thirty_two_dp"
                android:gravity="center"
                android:text="@string/cli_lorem_ipsum"
                android:textColor="@color/black_overlay"
                android:textSize="15sp"
                app:WTextView_font="medium"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:src="@drawable/ic_call24"/>

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/poi_problem_phone_no"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:WTextView_font="medium_bold"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/cli_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</FrameLayout>