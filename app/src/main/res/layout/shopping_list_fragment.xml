<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/default_background"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/locationSelectedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_bg_pressed"
                    android:layout_marginVertical="@dimen/ten_dp">

                    <ImageView
                        android:id="@+id/deliverLocationIcon"
                        android:layout_width="@dimen/twenty_six_dp"
                        android:layout_height="@dimen/twenty_six_dp"
                        android:layout_marginStart="33dp"
                        android:layout_margin="@dimen/five_dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:src="@drawable/ic_delivery_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvDeliveringTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="top"
                        android:lineHeight="@dimen/sixteen_sp"

                        android:text="@string/standard_delivery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvDeliveryLocation"
                        app:layout_constraintStart_toEndOf="@id/deliverLocationIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tvDeliveryLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_semi_bold"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:text="@string/cart_default_location"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/deliverLocationIcon"
                        app:layout_constraintTop_toBottomOf="@+id/tvDeliveringTo" />

                    <ImageView
                        android:id="@+id/rightArrowDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="26dp"
                        android:src="@drawable/ic_caret_black"
                        app:layout_constraintBottom_toBottomOf="@id/tvDeliveringTo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvDeliveryLocation" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rlCreateAList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/twenty_six_dp"
                    android:paddingBottom="@dimen/twenty_six_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/twenty_four_dp"
                        android:text="@string/shop_create_list"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twenty_sp"
                        android:fontFamily="@font/futura_semi_bold"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/twenty_four_dp"
                        app:srcCompat="@drawable/ic_add_circle" />

                </RelativeLayout>

                <View
                    style="@style/horizontal_divider_bold_style"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/default_background">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvShoppingLists"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/sixteen_dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false" />

                    <ProgressBar
                        android:id="@+id/loadingBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:indeterminateTint="@color/black"
                        android:visibility="gone" />


                </RelativeLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/incConnectionLayout"
        layout="@layout/no_connection_handler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/sign_out_template"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>