<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/bank_spacing_width"
    android:layout_marginBottom="@dimen/bank_spacing_width"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_fax"
        android:id="@+id/imgIcon" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textOptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cli_option_one"
        android:letterSpacing="0.04"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dp"
        android:textSize="15sp"
        android:textAllCaps="true"
        app:WTextView_font="medium_bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_marginStart="18dp" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/textOptionDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cli_option_one_desc"
        android:letterSpacing="0.05"
        android:gravity="center|start"
        android:textColor="@color/semi_transparent_black"
        android:lineSpacingExtra="5dp"
        android:textSize="15sp"
        app:WTextView_font="myriadpro_regular"
        android:layout_below="@+id/textOptionTitle"
        android:layout_marginTop="13dp"
        android:layout_alignStart="@+id/textOptionTitle" />
</RelativeLayout>