<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/loggedInHeaderLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:background="@color/white"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:minHeight="80dp"
            android:paddingLeft="52dp"
            android:paddingRight="52dp"
            >
           <FrameLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openMessageActivity"
                android:background="@drawable/messages"
                />

              <za.co.woolworths.financial.services.android.ui.views.WTextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/messageCounter"
                  android:background="@drawable/message_counter_background"
                  android:gravity="center"
                  android:layout_gravity="end"
                  android:textSize="10sp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:textColor="@color/white"
                  android:visibility="gone"
                  app:WTextView_font="medium_bold"
                  />

           </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openShoppingList"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shoppinglist"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/initials"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    app:WTextView_font="medium_bold"
                    />
            </FrameLayout>

        </RelativeLayout>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="34dp"
            android:text="@string/welcome_back"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textColor="#999999"
            android:textSize="12sp"
            app:WTextView_font="medium"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="39dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:WTextView_font="medium_bold"
            />
        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:id="@+id/linkAccountsBtn"
            android:text="LINK ACCOUNTS"
            android:textAllCaps="true"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"
            app:WButton_font="medium"
            android:textSize="13sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>


</LinearLayout>