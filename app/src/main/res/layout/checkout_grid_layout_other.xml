<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <GridView
        android:id="@+id/timingsGridViewOther"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty_six_dp"
        android:layout_marginStart="@dimen/seventy_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/dateGridLayoutOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/timingsGridViewOther">

        <za.co.woolworths.financial.services.android.checkout.view.ExpandableGridViewScrollable
            android:id="@+id/dateGridViewOther"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/two_dp"
            android:isScrollContainer="false"
            android:numColumns="1" />

        <za.co.woolworths.financial.services.android.checkout.view.ExpandableGridViewScrollable
            android:id="@+id/timeSlotsGridViewOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/three_dp"
            android:isScrollContainer="false"
            android:verticalSpacing="@dimen/three_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_dp"
        android:layout_marginEnd="@dimen/fourteen_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/dateGridLayoutOther">

        <ImageButton
            android:id="@+id/previousImgBtnOther"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_margin="@dimen/eight_dp"
            android:background="@drawable/rounded_view_grey_img_button"
            android:padding="@dimen/ten_dp"
            android:src="@drawable/back_arrow" />

        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dp"
            android:text="@string/previous_week_text"
            android:textColor="@color/checkout_delivering_title"
            android:textSize="@dimen/fourteen_sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/myriad_pro_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dp"
            android:text="@string/next_week_text"
            android:textColor="@color/checkout_delivering_title"
            android:textSize="@dimen/fourteen_sp" />

        <ImageButton
            android:id="@+id/nextImgBtnOther"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_margin="@dimen/eight_dp"
            android:background="@drawable/rounded_view_grey_img_button"
            android:padding="@dimen/ten_dp"
            android:src="@drawable/next_arrow" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingBarOther"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>