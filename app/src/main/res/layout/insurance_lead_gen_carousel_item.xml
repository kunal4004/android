<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/insuranceLeadGenCarouselImageview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/bpi_insurance_lead_carousel_slide_1_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/insuranceLeadGenCarouselTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/fourty_dp"
        android:layout_marginEnd="@dimen/fourty_dp"
        android:fontFamily="@font/futura_semi_bold_ttf"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="@dimen/one_point_five_dp"
        android:text="@string/bpi_opt_in_carousel_title_1"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insuranceLeadGenCarouselImageview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insuranceLeadGenCarouselTitleTextView"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/insuranceLeadGenCarouselDescTextView"
            style="@style/opensans_regular_14_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.014"
            android:textColor="@color/description_color"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/six_dp"
            android:text="@string/bpi_opt_in_carousel_desc_1"
           />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>