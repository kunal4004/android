<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/vEmptySpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.3"
        android:background="@color/color_separator_light_grey"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:padding="@dimen/twenty_four_dp">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnSurveySubmit"
            style="@style/blackButtonStyle"
            android:gravity="center"
            android:text="@string/voc_survey_submit"
            android:textColor="@color/white"
            app:WButton_font="medium_bold" />

        <TextView
            android:id="@+id/btnSurveyOptOut"
            style="@style/dialog_action_text_style_gray_medium"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:padding="@dimen/ten_dp"
            android:text="@string/voc_survey_opt_out"
            android:textAllCaps="true" />

    </LinearLayout>

</LinearLayout>