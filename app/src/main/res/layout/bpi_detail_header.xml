<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/bpi_orange"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <ImageView
        android:id="@+id/imBackgroundHeader"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:alpha="0.08"
        android:contentDescription="@string/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_header_balance_protection" />


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:lineSpacingExtra="0.dp"
        android:text="@string/bpi_card_balance_protection_title"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteen_sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintBottom_toTopOf="@+id/tvEffectiveDate"
        app:layout_constraintEnd_toStartOf="@+id/tvCover"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvEffectiveDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:alpha="0.7"
        android:letterSpacing="0.05"
        android:text="Effective date 01/05/2018"
        android:textColor="@color/white"
        android:textSize="@dimen/fourteen_sp"
        app:WTextView_font="medium"
        app:layout_constraintBottom_toTopOf="@+id/bottomView"
        app:layout_constraintStart_toStartOf="parent" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_white_bg"
        android:gravity="center"
        android:letterSpacing="0.083"
        android:text="@string/bpi_covered"
        android:textAllCaps="true"
        android:textColor="@color/bpi_orange"
        android:textSize="@dimen/ten_sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintBottom_toTopOf="@+id/bottomView"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>