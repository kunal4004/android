<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/bpi_orange"
    android:paddingBottom="@dimen/twenty_one_dp"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <ImageView
        android:id="@+id/imBackgroundHeader"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.08"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bg_header_balance_protection"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvEffectiveDate"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:alpha="0.7"
        android:letterSpacing="0.05"
        android:text="Effective date 01/05/2018"
        android:textColor="@color/white"
        android:textSize="@dimen/fourteen_sp"
        app:WTextView_font="medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="@dimen/twenty_four_dp"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/thirty_dp"
        android:background="@drawable/round_white_bg"
        android:letterSpacing="0.083"
        android:text="@string/bpi_covered"
        android:textAllCaps="true"
        android:textColor="@color/bpi_orange"
        android:textSize="@dimen/ten_sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:lineSpacingExtra="0.17dp"
        android:text="@string/bpi_balance_protection_title"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteen_sp"
        app:WTextView_font="medium_bold"
        app:layout_constraintBottom_toTopOf="@+id/tvEffectiveDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>