<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:id="@+id/linColorSize"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_two_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relColorSelector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvColourLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignStart="@+id/imSelectedColor"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:ellipsize="end"
                android:gravity="center|start"
                android:letterSpacing="0.2"
                android:lineSpacingMultiplier="1.08"
                android:singleLine="true"
                android:text="@string/color"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp"
                app:WTextView_font="medium_bold"/>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imSelectedColor"
                android:layout_width="@dimen/twenty_two_dp"
                android:layout_height="19dp"
                android:layout_alignEnd="@+id/imColorArrow"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                fresco:roundedCornerRadius="@dimen/fifteen_dp"/>


            <ImageView
                android:id="@+id/imColorArrow"
                android:layout_width="@dimen/ten_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="3dp"
                android:src="@drawable/path_3"
                />

        </RelativeLayout>

        <View
            android:id="@+id/vwSeparator"
            android:layout_width="1dp"
            android:layout_height="@dimen/twenty_two_dp"
            android:layout_marginStart="@dimen/three_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/recent_search_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imColorArrow"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"/>

        <RelativeLayout
            android:id="@+id/relSizeSelector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/three_dp"
                android:ellipsize="end"
                android:gravity="center|start"
                android:letterSpacing="0.2"
                android:lineSpacingMultiplier="1.08"
                android:singleLine="true"
                android:text="@string/size"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp"
                app:WTextView_font="medium_bold"/>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvSelectedSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/eight_dp"
                android:layout_toStartOf="@+id/imSizeArrow"
                android:ellipsize="end"
                android:gravity="center|end"
                android:letterSpacing="0.2"
                android:lineSpacingMultiplier="1.08"
                android:singleLine="true"
                android:text="@string/select"
                android:textAllCaps="true"
                android:textColor="@color/description_color"
                android:textSize="@dimen/twelve_sp"
                app:WTextView_font="medium"/>

            <ImageView
                android:id="@+id/imSizeArrow"
                android:layout_width="@dimen/ten_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:src="@drawable/path_3"/>

        </RelativeLayout>
    </LinearLayout>

</layout>