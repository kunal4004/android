<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="true"
        android:focusable="true"
        tools:context="za.co.woolworths.financial.services.android.ui.fragments.product.detail.ProductDetailFragment">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.detail.ProductDetailFragment"/>

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.product.detail.ProductDetailViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants">

        <FrameLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="500dp">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/mProductDetailPager"
                                android:layout_width="match_parent"
                                android:layout_height="500dp"/>

                            <LinearLayout
                                android:id="@+id/pager_dots"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="10dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"/>

                        </RelativeLayout>

                        <include
                            layout="@layout/line"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginStart="0dp"
                            android:visibility="visible"/>

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvSubCategoryTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginTop="@dimen/twenty_four_dp"
                            android:ellipsize="end"
                            android:gravity="top|start"
                            android:letterSpacing="0.1"
                            android:text="new arrivals"
                            android:textAllCaps="true"
                            android:textColor="@color/black_desc_opacity"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:WTextView_font="medium"/>

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sixteen_dp"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin"
                            android:gravity="top|start"
                            android:letterSpacing="0"
                            android:text="Navy Blue Polka Dot Cotton Shirt"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:WTextView_font="bold"
                            />

                        <include
                            android:id="@+id/lineBelowProductName"
                            layout="@layout/line"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"/>

                        <RelativeLayout
                            android:id="@+id/relPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/eight_dp"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                                        android:id="@+id/textPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:gravity="top|start"
                                        android:letterSpacing="-0.01"
                                        android:paddingRight="2dp"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        app:WTextView_font="medium_bold"
                                        />

                                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                                        android:id="@+id/textActualPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:gravity="top|start"
                                        android:letterSpacing="-0.01"
                                        android:textAllCaps="true"
                                        android:textColor="@color/red"
                                        android:textSize="20sp"
                                        android:visibility="visible"
                                        app:WTextView_font="medium_bold"
                                        />

                                </LinearLayout>

                                <za.co.woolworths.financial.services.android.ui.views.WTextView
                                    android:id="@+id/tvSaveText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginBottom="@dimen/default_margin"
                                    android:layout_marginEnd="@dimen/default_margin"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:gravity="top|start"
                                    android:letterSpacing="0.1"
                                    android:text="FROM: R 399.00"
                                    android:textAllCaps="true"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    app:WTextView_font="medium"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="@dimen/default_margin"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/imNewImage"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="2dp"
                                    android:contentDescription="@string/app_name"
                                    fresco:viewAspectRatio="1.0"/>

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/imSave"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="2dp"
                                    android:contentDescription="@string/app_name"
                                    fresco:viewAspectRatio="1.0"/>

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/imReward"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="2dp"
                                    android:contentDescription="@string/app_name"
                                    fresco:viewAspectRatio="1.0"/>

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/imVitality"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="2dp"
                                    android:contentDescription="@string/app_name"
                                    fresco:viewAspectRatio="1.0"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <include
                            android:id="@+id/incProductColorTopLine"
                            layout="@layout/line"
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:layout_marginRight="@dimen/default_margin"/>

                        <include
                            android:id="@+id/incProductColor"
                            layout="@layout/product_color_row"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/incColorSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <include
                                android:id="@+id/llColorSize"
                                layout="@layout/color_size_picker"
                                />
                        </LinearLayout>

                        <include
                            android:id="@+id/incProductColorBottomLine"
                            layout="@layout/line"/>

                        <LinearLayout
                            android:id="@+id/llLoadingColorSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="start|bottom"
                            android:orientation="horizontal">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:id="@+id/tvLoadingColorSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="start"
                                android:text="@string/product_loading_color_size"
                                android:textColor="@color/black_desc_opacity"
                                android:textSize="15sp"
                                app:WTextView_font="myriadpro_regular"/>

                            <za.co.woolworths.financial.services.android.ui.views.LoadingDots
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="6dp"
                                app:LoadingDots_dots_color="@color/black_desc_opacity"
                                app:LoadingDots_dots_count="3"
                                app:LoadingDots_dots_size="2dp"
                                app:LoadingDots_dots_space="2dp"
                                app:LoadingDots_jump_height="2dp"
                                app:LoadingDots_loop_start_delay="50"/>

                        </LinearLayout>

                        <include
                            android:id="@+id/loadingColorDivider"
                            layout="@layout/line"/>

                        <za.co.woolworths.financial.services.android.ui.views.WButton
                            android:id="@+id/btnAddShoppingList"
                            style="@style/whiteWButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin"
                            android:text="@string/add_to_shopping_list"/>

                        <za.co.woolworths.financial.services.android.ui.views.WrapContentWebView
                            android:id="@+id/webDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="24dp"
                            android:nestedScrollingEnabled="false">

                        </za.co.woolworths.financial.services.android.ui.views.WrapContentWebView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="start|bottom"
                            android:orientation="horizontal">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:id="@+id/product_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:textColor="@color/black_desc_opacity"
                                android:textSize="15sp"
                                app:WTextView_font="myriadpro_regular"/>

                            <za.co.woolworths.financial.services.android.ui.views.LoadingDots
                                android:id="@+id/product_load_dot"
                                android:layout_width="wrap_content"
                                android:layout_height="5dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="6dp"
                                android:visibility="visible"
                                app:LoadingDots_dots_color="@color/black_desc_opacity"
                                app:LoadingDots_dots_count="-3"
                                app:LoadingDots_dots_size="2dp"
                                app:LoadingDots_dots_space="1dp"
                                app:LoadingDots_jump_height="1dp"
                                app:LoadingDots_loop_start_delay="50"/>

                        </LinearLayout>

                        <include
                            android:id="@+id/ingredientLine"
                            layout="@layout/line"/>

                        <LinearLayout
                            android:id="@+id/linIngredient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp"
                            android:orientation="vertical">

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/default_margin"
                                android:layout_marginStart="@dimen/default_margin"
                                android:gravity="start|top"
                                android:letterSpacing="0.2"
                                android:text="@string/ingredients"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:WTextView_font="medium_bold"/>

                            <za.co.woolworths.financial.services.android.ui.views.WTextView
                                android:id="@+id/ingredientList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/default_margin"
                                android:layout_marginStart="@dimen/default_margin"
                                android:layout_marginTop="17dp"
                                android:gravity="start|top"
                                android:lineSpacingExtra="2dp"
                                android:textColor="@color/black_desc_opacity"
                                android:textSize="15sp"
                                app:WTextView_font="myriadpro_regular"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imClose"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_close_circle"/>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/fifty_two_dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:weightSum="1.0">

                    <LinearLayout
                        android:id="@+id/llStoreFinder"
                        style="@style/blackButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvBtnFinder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/mWoolworthsProgressBar"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:letterSpacing="0.15"
                            android:text="@string/stock_finder_btn_label"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:WTextView_font="medium_bold"/>

                        <ProgressBar
                            android:id="@+id/mButtonProgress"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:duplicateParentState="true"
                            android:indeterminateTint="@color/white"
                            android:visibility="gone"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llAddToCart"
                        style="@style/blackButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <za.co.woolworths.financial.services.android.ui.views.WTextView
                            android:id="@+id/tvAddToCart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/mWoolworthsProgressBar"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:letterSpacing="0.15"
                            android:text="@string/add_to_cart"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:WTextView_font="medium_bold"/>

                        <ProgressBar
                            android:id="@+id/pbAddToCart"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:duplicateParentState="true"
                            android:indeterminateTint="@color/white"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>