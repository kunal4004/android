<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_white_gradient_bg"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <include
            android:id="@+id/incStoreCardHeaderItem"
            layout="@layout/card_payment_option_header_item" />

        <include
            android:id="@+id/incDebitOrCreditCardButton"
            layout="@layout/debit_or_credit_card_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/incByElectronicFundTransferEFTButton"
            layout="@layout/pma_by_electronic_fund_transfer_eft_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/incAtAnyAbsaBranchButton"
            layout="@layout/pma_at_any_absa_branch_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/incAtYourNearestWoolworthsStoreButton"
            layout="@layout/pma_at_your_nearest_woolies_store_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/incPayAtAnyATMButton"
            layout="@layout/pma_pay_at_any_atm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/incWhatsAppAnyQuestions"
            layout="@layout/pma_whatsapp_chat_with_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>