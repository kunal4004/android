<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingHorizontal="@dimen/twenty_four_dp">

    <com.daasuu.bl.BubbleLayout
        android:id="@+id/windowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bl_arrowDirection="top"
        app:bl_arrowHeight="@dimen/ten_dp"
        app:bl_arrowPosition="@dimen/twenty_four_dp"
        app:bl_arrowWidth="@dimen/twelve_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/twenty_four_dp"
                android:paddingTop="@dimen/twenty_four_dp">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/close_24" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/seventy_two_dp"
                    android:layout_height="@dimen/seventy_two_dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    tools:src="@drawable/ic_search" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/thirty_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    app:WTextView_font="medium_bold"
                    tools:text="SHOPPING AT YOUR FINGERTIPS" />

                <za.co.woolworths.financial.services.android.ui.views.WTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/thirty_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:gravity="center"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/fifteen_sp"
                    app:WTextView_font="opensans_regular"
                    tools:text="Weâ€™ve made shopping even easier to access than before." />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thirty_one_dp"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/txtNewFeature"
                        android:layout_width="@dimen/fourty_dp"
                        android:layout_height="@dimen/eighteen_dp"
                        android:layout_alignEnd="@+id/actionButton"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/nine_dp"
                        android:background="@color/violet"
                        android:gravity="center"
                        android:letterSpacing="0.075"
                        android:text="@string/text_new"
                        android:textAllCaps="true"
                        android:elevation="@dimen/ninety_dp"
                        android:textColor="@color/white"
                        android:layout_alignParentTop="true"
                        android:textSize="@dimen/nine_sp"
                        android:visibility="invisible"
                        app:WTextView_font="bold"
                        tools:visibility="visible" />

                    <za.co.woolworths.financial.services.android.ui.views.WTextView
                        android:id="@+id/actionButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/nine_dp"
                        android:letterSpacing="0.14"
                        android:layout_alignParentTop="true"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/twelve_sp"
                        app:WTextView_font="medium_bold"
                        tools:text="SCAN your first PRODUCT" />


                </RelativeLayout>
            </LinearLayout>

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/hideFeatureTutorials"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@drawable/border_top_only"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="@string/Dont_show_these_tips"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp"
                app:WTextView_font="medium" />

        </LinearLayout>
    </com.daasuu.bl.BubbleLayout>
</RelativeLayout>