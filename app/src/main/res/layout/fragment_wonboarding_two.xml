<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/drawer_color"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.WOnboardingOneFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/walkthrough_2"
            android:layout_above="@+id/fragment_wonboarding_two_description_layer"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">
        </ImageView>

        <LinearLayout
            android:id="@+id/fragment_wonboarding_two_description_layer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/fragment_wonboarding_two_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WREWARDS AT A GLANCE"
                android:letterSpacing="0.04"
                android:gravity="center_horizontal"
                app:WTextView_font="medium_bold"
                style="@style/TitleWSemiBoldWhite"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/fragment_wonboarding_two_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_desc_screen_2"
                android:gravity="center_horizontal"
                style="@style/CaptionLightGrey"
                android:paddingTop="16dp"
                app:WTextView_font="myriadpro_regular"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:lineSpacingExtra="4dp"
                />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
