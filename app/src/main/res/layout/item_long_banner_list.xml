<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/fifteen_dp"
    android:layout_gravity="center|top">

    <ImageView
        android:id="@+id/imgLongBannerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLongBannerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:ellipsize="end"
        android:fontFamily="@font/futura_semi_bold"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@id/imgLongBannerItem"
        app:layout_constraintTop_toBottomOf="@id/imgLongBannerItem"
        tools:text="Make it Sizzle" />

    <TextView
        android:id="@+id/tvLongBannerSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:ellipsize="end"
        android:fontFamily="@font/myriad_pro_regular"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/twelve_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@id/tvLongBannerTitle"
        app:layout_constraintTop_toBottomOf="@id/tvLongBannerTitle"
        tools:text="Everything you need for the ultimate Braai." />

</androidx.constraintlayout.widget.ConstraintLayout>