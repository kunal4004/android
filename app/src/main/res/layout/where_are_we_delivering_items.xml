<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titleTVBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTv"
        style="@style/open_sans_regular_black_with_rounded_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/eight_dp"
        android:minWidth="@dimen/fifty_dp"
        android:minHeight="@dimen/thirty_two_dp"
        android:paddingHorizontal="@dimen/sixteen_dp"
        android:paddingVertical="@dimen/four_dp"
        android:textAlignment="center"
        android:textColor="@color/color_222222"
        android:lineSpacingExtra="2sp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/thirteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>