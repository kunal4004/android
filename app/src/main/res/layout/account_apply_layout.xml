<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    tools:context="za.co.woolworths.financial.services.android.ui.fragments.account.MyAccountsFragment">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handlers"
            type="za.co.woolworths.financial.services.android.ui.fragments.account.MyAccountsFragment"/>

        <variable
            name="viewModel"
            type="za.co.woolworths.financial.services.android.ui.fragments.account.MyAccountsViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/recent_search_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/applyStoreCard"
            android:contentDescription="@string/apply_store_card_layout"
            style="@style/accountsCardStyle">

            <ImageView
                android:id="@+id/imgStoreCardApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small_2"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/sectionCardLight"
                android:layout_toRightOf="@+id/imgStoreCardApply"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/store_card"
                android:textSize="@dimen/acc_thirteen_sp"
                android:contentDescription="@string/cd_store_card_text"
                app:WTextView_font="medium" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/applyNowStoreCardTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_caret_black"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:text="@string/apply_now"
                android:textColor="@color/black_off"
                android:textSize="@dimen/acc_thirteen_sp"
                android:contentDescription="@string/cd_store_card_apply_now_text"
                app:WTextView_font="medium_bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/applyCrediCard"
            android:contentDescription="@string/apply_credit_card_layout"
            style="@style/accountsCardStyle">

            <ImageView
                android:id="@+id/imgCreditCardApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small_3"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/sectionCardLight"
                android:layout_toRightOf="@+id/imgCreditCardApply"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/credit_card"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/applyNowCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_caret_black"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:text="@string/apply_now"
                android:textColor="@color/black_off"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/applyPersonalLoan"
            android:contentDescription="@string/apply_personal_loan_layout"
            style="@style/accountsCardStyle">

            <ImageView
                android:id="@+id/imgPersonalLoanApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                style="@style/sectionCardLight"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/imgPersonalLoanApply"
                android:layout_weight="6"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/personal_loan"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/applyNowPersonalLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="4"
                android:drawableRight="@drawable/ic_caret_black"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:text="@string/apply_now"
                android:textColor="@color/black_off"
                android:textSize="@dimen/acc_thirteen_sp"
                app:WTextView_font="medium_bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

</layout>