<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottomside_only"
        android:minHeight="82dp"
        android:orientation="vertical"
        android:padding="16dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/availableFundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available_funds"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/available_funds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/txtTransactions"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:WTextView_font="medium_bold" />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/txtTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_caret_black"
                android:gravity="center_vertical"
                android:text="@string/transactions"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottomside_only"
        android:orientation="vertical"
        android:padding="16dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_limit"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />

        <RelativeLayout
            android:id="@+id/linIncreaseLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="top|right">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/creditLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:gravity="top|left"
                android:text="creditLimit"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:WTextView_font="medium" />


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/txtIncreseLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/linContainer"
                android:letterSpacing="0.04"
                android:text="@string/increase_limit"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium_bold" />

            <LinearLayout
                android:id="@+id/linContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_caret_black" />

                <ProgressBar
                    android:id="@+id/progressCreditLimit"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/bank_spacing_width"
                    android:visibility="gone" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottomside_only"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="16dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/currentBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#4d000000"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:text="@string/current_balance"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottomside_only"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="16dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/dueDate"
            android:text="@string/next_payment_date"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="13/30/2014"
            android:textColor="#4d000000"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottomside_only"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="16dp">

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/minAmountDue"
            android:text="@string/minimum_payment"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:id="@+id/minAmountDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#4d000000"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular" />
    </RelativeLayout>


    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/withdrawCashNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:minHeight="60dp"
        android:text="@string/withdraw_cash_now"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone"
        app:WTextView_font="myriadpro_regular" />

</LinearLayout>