<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="82dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available_funds"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/available_funds"
                android:layout_toLeftOf="@+id/txtTransactions"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:WTextView_font="medium_bold"
                android:layout_alignParentLeft="true"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTransactions"
                android:text="@string/transactions"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_caret_black"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="86dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_limit"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="top|right"
            android:layout_marginTop="12dp"
            android:id="@+id/linIncreaseLimit"
            android:layout_height="wrap_content">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creditLimit"
                android:text="creditLimit"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_gravity="left"
                app:WTextView_font="medium"
                android:gravity="top|left"
                android:layout_centerVertical="true"
                />


            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtIncreseLimit"
                android:text="@string/increase_limit"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_gray"
                android:textSize="14sp"
                app:WTextView_font="medium"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/linContainer" />

            <LinearLayout
                android:id="@+id/linContainer"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/imgArrow"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_caret_black"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content" />

                <WebView
                    android:id="@+id/progressCreditLimit"
                    android:layout_width="60dp"
                    android:visibility="visible"
                    android:scrollbars="none"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imgArrow" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentBalance"
            android:textColor="#4d000000"
            android:textSize="14sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentRight="true"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/current_balance"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/dueDate"
            android:layout_marginRight="10dp"
            android:text="@string/next_payment_date"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentLeft="true"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dueDate"
            android:textColor="#4d000000"
            android:textSize="14sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/minAmountDue"
            android:layout_marginRight="10dp"
            android:text="@string/minimum_payment"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentLeft="true"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minAmountDue"
            android:textColor="#4d000000"
            android:textSize="14sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/withdrawCashNow"
        android:visibility="gone"
        android:background="@color/purple"
        android:minHeight="60dp"
        app:WTextView_font="medium"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/withdraw_cash_now"
        />

</LinearLayout>