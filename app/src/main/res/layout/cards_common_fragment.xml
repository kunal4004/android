<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="82dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available_funds"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txtTransactions"
                android:layout_marginRight="10dp"
                android:text="R 20000.00"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:WTextView_font="medium_bold"
                android:layout_alignParentLeft="true"
                />
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTransactions"
                android:text="@string/transactions"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_caret_black"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="86dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_limit"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txtIncreseLimit"
                android:layout_marginRight="10dp"
                android:text="R 30000.00"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:WTextView_font="medium"
                android:layout_alignParentLeft="true"
                />
            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtIncreseLimit"
                android:text="@string/increase_limit"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:WTextView_font="medium_bold"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_caret_black"
                />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/dueDate"
            android:layout_marginRight="10dp"
            android:text="@string/next_payment_date"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentLeft="true"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dueDate"
            android:text="01/10/15"
            android:textColor="#4d000000"
            android:textSize="14sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/minAmountDue"
            android:layout_marginRight="10dp"
            android:text="@string/minimum_payment"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentLeft="true"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minAmountDue"
            android:text="R 500.00"
            android:textColor="#4d000000"
            android:textSize="14sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottomside_only"
        >
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/currentBalance"
            android:layout_marginRight="10dp"
            android:text="@string/current_balance"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentLeft="true"
            />
        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentBalance"
            android:text="R 7500.00"
            android:textColor="#4d000000"
            android:textSize="14sp"
            app:WTextView_font="myriadpro_regular"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</LinearLayout>