<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/sixteen_dp"
    android:paddingStart="@dimen/twenty_four_dp"
    android:paddingTop="@dimen/sixteen_dp">

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/carbon_groupText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/exr_margin"
        android:layout_weight="1"
        android:ellipsize="end"
        android:textSize="@dimen/twelve_sp"
        android:gravity="center_vertical"
        android:letterSpacing="0.15"
        android:lineSpacingMultiplier="1.08"
        android:singleLine="true"
        android:textAllCaps="true"
        app:WTextView_font="light"/>

    <ImageView
        android:id="@+id/carbon_groupExpandedIndicator"
        android:layout_width="@dimen/exr_iconSize"
        android:layout_height="@dimen/exr_iconSize"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/exr_margin"
        android:tint="@color/black"
        app:srcCompat="@drawable/ic_expand_more_24dp"/>

</LinearLayout>