<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/thirty_two_dp">

    <ImageView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/thirty_two_dp"
        android:layout_marginBottom="@dimen/thirty_two_dp"
        android:background="@drawable/next_button_icon"
        android:contentDescription="@string/cd_ccd_btnnext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/confirmProceedButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/fifty_dp"
        android:background="@drawable/order_add_to_cart_button_bg"
        android:fontFamily="@font/futura_semi_bold"
        android:letterSpacing="0.13"
        android:text="@string/confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomguideline"
        app:layout_constraintEnd_toEndOf="@+id/rightguideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

    <za.co.woolworths.financial.services.android.ui.views.WTextView
        android:id="@+id/clearDetails"
        style="@style/myriad_pro_regular_black"
        android:layout_marginStart="@dimen/thirty_two_dp"
        android:layout_marginBottom="@dimen/fourty_seven_dp"
        android:text="@string/clear_details"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/sixty_dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/confirmProceedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/thirty_two_dp">

            <EditText
                android:id="@+id/recipientName"
                style="@style/credi_card_delivery_edittext_style"
                android:contentDescription="@string/cd_ccd_txtrecipientname"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/recipientNamePlaceHolder" />

            <EditText
                android:id="@+id/cellphoneNumber"
                style="@style/credi_card_delivery_edittext_style"
                android:contentDescription="@string/cd_ccd_txtcellphonenumber"
                android:hint="@string/phone_no_hint"
                android:inputType="number"
                android:maxLength="10"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/cellphoneNumberPlaceHolder" />


            <EditText
                android:id="@+id/alternativeNumber"
                style="@style/credi_card_delivery_edittext_style"
                android:contentDescription="@string/cd_ccd_txtalternatecontactnumberr"
                android:hint="@string/phone_no_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/alternativeNumberPlaceHolder" />

            <EditText
                android:id="@+id/idNumber"
                style="@style/credi_card_delivery_edittext_style"
                android:contentDescription="@string/cd_ccd_txtidnumber"
                android:maxLength="13"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/idNumberPlaceHolder" />

            <RadioGroup
                android:id="@+id/recipientOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/recipientDetailsDesc">

                <RadioButton
                    android:id="@+id/mySelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/shopping_list_item_selector"
                    android:checked="true"
                    android:contentDescription="@string/cd_ccd_radiobtnmyself"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:text="@string/myself"
                    android:textColor="@color/radio_button_color"
                    android:textSize="@dimen/fifteen_sp" />

                <RadioButton
                    android:id="@+id/anotherPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifty_dp"
                    android:button="@drawable/shopping_list_item_selector"
                    android:contentDescription="@string/cd_ccd_radiobtnanotherperson"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:text="@string/another_person"
                    android:textColor="@color/radio_button_color"
                    android:textSize="@dimen/fifteen_sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/recipientNameErrorMsg"
                style="@style/myriad_pro_regular"
                android:layout_marginTop="@dimen/eight_dp"
                android:lineSpacingMultiplier="1.40"
                android:text="@string/recipient_name_error_msg"
                android:textColor="@color/input_error_color_code"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/recipientName" />

            <TextView
                android:id="@+id/cellphoneNumberErrorMsg"
                style="@style/myriad_pro_regular"
                android:layout_marginTop="@dimen/eight_dp"
                android:lineSpacingMultiplier="1.40"
                android:text="@string/cellphone_number_error_msg"
                android:textColor="@color/input_error_color_code"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/cellphoneNumber" />


            <TextView
                android:id="@+id/idNumberErrorMsg"
                style="@style/myriad_pro_regular"
                android:layout_marginTop="@dimen/eight_dp"
                android:lineSpacingMultiplier="1.40"
                android:text="@string/id_number_error_msg"
                android:textColor="@color/input_error_color_code"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/idNumber" />

            <TextView
                android:id="@+id/alternativeNumberErrorMsg"
                style="@style/myriad_pro_regular"
                android:layout_marginTop="@dimen/eight_dp"
                android:lineSpacingMultiplier="1.40"
                android:text="@string/alternate_number_error_msg"
                android:textColor="@color/input_error_color_code"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/alternativeNumber" />

            <TextView
                android:id="@+id/recipientDetailsDesc"
                style="@style/myriad_pro_regular"
                android:layout_marginTop="@dimen/eight_dp"
                android:contentDescription="@string/cd_ccd_lablerecipientdetailsdescription"
                android:lineSpacingMultiplier="1.40"
                android:text="@string/recipient_details_desc"
                android:textColor="#50333333"
                android:textSize="@dimen/fifteen_sp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/recipientDetailsTitle" />

            <TextView
                android:id="@+id/recipientNamePlaceHolder"
                style="@style/myriad_pro_regular_black"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:contentDescription="@string/cd_ccd_labelrecipientname"
                android:text="@string/recipient_name"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/recipientOption" />

            <TextView
                android:id="@+id/recipientDetailsTitle"
                style="@style/futura_semi_bold_black"
                android:contentDescription="@string/cd_ccd_lablerecipientdetailstitle"
                android:letterSpacing="0.1"
                android:text="@string/recipient_details"
                android:textSize="@dimen/twenty_sp"
                app:layout_constraintRight_toRightOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toTopOf="@id/top_guideline" />

            <TextView
                android:id="@+id/cellphoneNumberPlaceHolder"
                style="@style/myriad_pro_regular_black"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:contentDescription="@string/cd_ccd_labelcellphonenumber"
                android:text="@string/cellphone_number"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/idNumberErrorMsg" />

            <TextView
                android:id="@+id/alternativeNumberPlaceHolder"
                style="@style/myriad_pro_regular_black"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:contentDescription="@string/cd_ccd_labelalternatecontactnumber"
                android:text="@string/alternate_contact_numberr"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/cellphoneNumberErrorMsg" />

            <TextView
                android:id="@+id/idNumberPlaceHolder"
                style="@style/myriad_pro_regular_black"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:contentDescription="@string/cd_ccd_labelidnumber"
                android:text="@string/id_number"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/recipientNameErrorMsg" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/idNumberLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="idNumber,idNumberPlaceHolder" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/thirty_two_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/thirty_two_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>