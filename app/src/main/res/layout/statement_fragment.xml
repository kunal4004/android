<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ccRecyclerViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_background">

            <View
                android:id="@+id/vSpaceView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixteen_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout
                android:id="@+id/sliding_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="bottom"
                app:layout_constraintBottom_toTopOf="@+id/llEmailStatement"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vSpaceView"
                sothree:umanoDragView="@+id/detailsView"
                sothree:umanoFadeColor="@android:color/transparent"
                sothree:umanoOverlay="false"
                sothree:umanoPanelHeight="0dp"
                sothree:umanoParallaxOffset="100dp"
                sothree:umanoScrollableView="@+id/scrollProduct"
                sothree:umanoShadowHeight="20dp">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rclEStatement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/fifty_eight_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:background="@color/white"
                    />


                <LinearLayout
                    android:id="@+id/linProductList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green"
                    android:orientation="vertical">

                </LinearLayout>

            </za.co.woolworths.financial.services.android.ui.views.SlidingUpPanelLayout>

            <LinearLayout
                android:id="@+id/llEmailStatement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:id="@+id/relNextButton"
                    style="@style/blackButtonStyle"
                    android:layout_marginBottom="@dimen/eight_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:background="@drawable/button_disable_color"
                    android:gravity="center"
                    android:paddingEnd="@dimen/eight_dp"
                    android:paddingStart="@dimen/eight_dp">

                    <za.co.woolworths.financial.services.android.ui.views.WButton
                        android:id="@+id/btnEmailStatement"
                        style="@style/blackButtonStyle"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="@string/email_statement"
                        android:textColor="@color/text_color_selector"
                        app:WButton_font="medium_bold"/>
                </RelativeLayout>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <include layout="@layout/circular_progress_layout"/>

    </FrameLayout>

    <include layout="@layout/no_result_layout"/>

    <include layout="@layout/no_connection_layout"/>
</FrameLayout>