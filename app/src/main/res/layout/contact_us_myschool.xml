<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        >

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_and_bottom"
            android:gravity="center_vertical"
            android:minHeight="68dp"
            android:paddingLeft="16dp"
            android:paddingTop="20dp"
            android:text="@string/call_us"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:WTextView_font="medium_bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            >

            <ImageView
                android:id="@+id/localCallerImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_call24"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/localCallerImg"
                android:text="@string/txt_local_caller"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableRight="@drawable/ic_caret_black"
                android:gravity="center_vertical"
                android:text="@string/wrewards_local_caller_number"
                android:textColor="#4d000000"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular"
                />
        </RelativeLayout>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_and_bottom"
            android:gravity="center_vertical"
            android:minHeight="68dp"
            android:paddingLeft="16dp"
            android:paddingTop="20dp"
            android:text="@string/txt_call_center_opening_hours"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:WTextView_font="medium_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="122dp"
            android:orientation="horizontal"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_time24"
                />

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:minHeight="72dp"
                android:text="@string/myschool_call_center_opening_hours"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:WTextView_font="myriadpro_regular"
                />
        </LinearLayout>

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_and_bottom"
            android:gravity="center_vertical"
            android:minHeight="68dp"
            android:paddingLeft="16dp"
            android:paddingTop="20dp"
            android:text="@string/email_us"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:WTextView_font="medium_bold"
            />


        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/message_24"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_caret_black"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="@string/txt_myschool_card"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0a000000"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/message_24"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_caret_black"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="@string/txt_general_enquiry"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0a000000"
            />

        <za.co.woolworths.financial.services.android.ui.views.WTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/message_24"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_caret_black"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="@string/txt_complaint"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:WTextView_font="myriadpro_regular"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0a000000"
            />


    </LinearLayout>
</ScrollView>