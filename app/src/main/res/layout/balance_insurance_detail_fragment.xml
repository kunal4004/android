<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/recent_search_bg"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsInsuranceClaim"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <za.co.woolworths.financial.services.android.ui.views.WTextView
                android:id="@+id/tvTitle"
                style="@style/insurance_claim_detail_style"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="@string/apply_loan_info"
                android:textColor="@color/black_50"/>

            <TextView
                android:id="@+id/tvRequiredForm"
                style="@style/insurance_claim_title_style"
                android:fontFamily="@font/myriad_pro_semi_bold_otf"
                android:lineSpacingExtra="0.12sp"
                android:text="@string/required_form"
                android:textSize="12sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/outside_border" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlRequiredForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/outside_border" />

            <TextView
                android:id="@+id/tvAdditionalInfo"
                style="@style/insurance_claim_title_style"
                android:text="@string/you_will_also_need"
                android:lineSpacingExtra="0.12sp"
                android:fontFamily="@font/myriad_pro_semi_bold_otf"
                android:textSize="12sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/outside_border" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlAdditionalSubmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/outside_border" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:background="@color/white">

        <za.co.woolworths.financial.services.android.ui.views.WButton
            android:id="@+id/btnGetDocument"
            style="@style/blackButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:text="@string/get_the_documents"/>

    </LinearLayout>
</FrameLayout>