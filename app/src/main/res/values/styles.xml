<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="drawer_text_color">@android:color/darker_gray</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/WActionBarStyle</item>
        <item name="drawer_background">@color/drawer_color</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:seekBarStyle">@style/SeekBarPLDD</item>
        <item name="borderColor">@color/indicator_border</item>
        <item name="selectedColor">@color/indicator_selected</item>
        <item name="unselectedColor">@color/indicator_unselected</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="WActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
    </style>

    <style name="tierinfostate" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="drawer_text_color">@android:color/darker_gray</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/WActionBarStyle</item>
        <item name="drawer_background">@color/drawer_color</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:seekBarStyle">@style/SeekBarPLDD</item>
    </style>

    <style name="SeekBarPLDD" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">
            @drawable/pldd_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/pldd_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/pldd_scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Button.Rewards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rewards_selector</item>
        <item name="android:textColor">@color/login_font_color</item>
    </style>

     <style name="StoreLocator" parent="Theme.AppCompat.Light.NoActionBar">

         <item name="windowNoTitle">true</item>
         <item name="windowActionBar">false</item>



    </style>
    <style name="StoreDetails" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_closecircle</item>

    </style>
    <style name="StoreSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="searchViewStyle">@style/WSearchViewStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/back24</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="CLI" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="searchViewStyle">@style/WSearchViewStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/back24</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="WSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>

    </style>
    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <style name="ShoppingList" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Messages" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/close_24</item>

    </style>
    <style name="MyAccountCards" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/back_white</item>

    </style>
    <style name="ContactUs" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/back24</item>

    </style>
    <style name="OneAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="WTransaction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/close_24</item>
    </style>
    <style name="popwindow_style">
        <item name="android:windowEnterAnimation">@anim/pop_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_out</item>
    </style>
</resources>
