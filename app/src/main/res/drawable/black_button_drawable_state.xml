<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- rule: please ensure android:state_enabled=false is always first
     to make it happen when button is disabled -->
    <item android:drawable="@drawable/btn_black_disabled" android:state_enabled="false" />
    <item android:drawable="@drawable/btn_black_normal" android:state_pressed="false" /> <!-- pressed -->
    <item android:drawable="@drawable/btn_black_disabled" android:state_pressed="true" /> <!-- focused -->
    <item android:drawable="@drawable/btn_black_normal" android:state_enabled="true" /> <!-- idle state -->
</selector>
